<Window x:Class="SGRRHH.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGRRHH.WPF"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="700" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Panel lateral (Menú) -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo y título -->
                <Border Grid.Row="0" Background="{StaticResource SidebarHeaderBrush}" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🏢 SGRRHH" Style="{StaticResource SidebarTitle}"/>
                        <TextBlock Text="Sistema de Gestión RRHH" Style="{StaticResource SidebarSubtitle}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Usuario actual -->
                <Border Grid.Row="1" Background="{StaticResource SidebarUserBrush}" Padding="15">
                    <StackPanel>
                        <TextBlock Text="👤" FontSize="30" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentUserName}" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextInverseBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding CurrentUserRole}" FontSize="11"
                                   Foreground="{StaticResource SidebarTextMutedBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Menú de navegación -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding MenuItems}" Margin="0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.NavigateToCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Cursor="Hand" Margin="5,2">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                                CornerRadius="{StaticResource SmallRadius}" Padding="15,12">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Icon}" FontSize="18" 
                                                                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                                                                <TextBlock Text="{Binding Title}" FontSize="14" 
                                                                           Foreground="{StaticResource TextInverseBrush}" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                            </DataTrigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarHoverBrush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Opciones de usuario (abajo) -->
                <Border Grid.Row="3" BorderBrush="{StaticResource SidebarUserBrush}" BorderThickness="0,1,0,0" Padding="10">
                    <StackPanel>
                        <Button Content="🔑 Cambiar Contraseña" 
                                Command="{Binding ChangePasswordCommand}"
                                Style="{StaticResource TransparentButton}"
                                Foreground="{StaticResource SidebarTextBrush}"/>
                        <Button Content="🚪 Cerrar Sesión" 
                                Command="{Binding LogoutCommand}"
                                Style="{StaticResource TransparentButton}"
                                Foreground="{StaticResource DangerMutedBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Contenido principal -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Barra superior -->
            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <Grid Margin="25,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Título de la vista -->
                    <TextBlock Grid.Column="0" Text="{Binding CurrentViewTitle}" Style="{StaticResource HeaderTitle}"/>
                    
                    <!-- Fecha/Hora y Versión (centro-derecha) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                                VerticalAlignment="Center" Margin="0,0,20,0">
                        <Border Style="{StaticResource StatTagBlue}" Margin="0,0,10,0" Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📅" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding CurrentDateTime}" FontSize="13" 
                                           Foreground="{StaticResource PrimaryDarkBrush}" VerticalAlignment="Center" FontWeight="Medium"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource StatTagGreen}" Padding="10,6">
                            <TextBlock Text="{Binding AppVersion}" FontSize="12" 
                                       Foreground="{StaticResource SuccessDarkBrush}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Alertas y notificaciones -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="🔔" FontSize="18" Style="{StaticResource TransparentButton}"
                                ToolTip="Notificaciones"/>
                        <TextBlock Text="{Binding PendingAlerts}" FontSize="11" 
                                   Foreground="{StaticResource TextInverseBrush}" Background="{StaticResource DangerBrush}"
                                   Padding="5,2" VerticalAlignment="Top" Margin="-15,0,15,0"
                                   Visibility="{Binding PendingAlerts, Converter={StaticResource IntToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Área de contenido -->
            <Border Grid.Row="1" Margin="25">
                <Grid>
                    <!-- Vista cargada dinámicamente -->
                    <ContentControl Content="{Binding CurrentView}"
                                    Visibility="{Binding CurrentView, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                    
                    <!-- Placeholder para módulos no implementados (solo cuando no hay vista cargada) -->
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="{StaticResource StandardRadius}" Padding="30">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentView}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="🚧" FontSize="50" HorizontalAlignment="Center"/>
                            <TextBlock FontSize="18" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center" Margin="0,15,0,0">
                                <Run Text="Módulo de "/>
                                <Run Text="{Binding CurrentViewTitle}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock Text="En construcción - Próximamente disponible" Style="{StaticResource CaptionText}" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
