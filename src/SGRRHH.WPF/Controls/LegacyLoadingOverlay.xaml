<UserControl x:Class="SGRRHH.WPF.Controls.LegacyLoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <!-- Overlay semi-transparente -->
    <Border Background="#80000000">
        <Border Background="{StaticResource ControlBrush}" 
                BorderThickness="2" BorderBrush="#808080" 
                Padding="25" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                MinWidth="200">
            <!-- Bordes 3D Outset -->
            <Border BorderThickness="1,1,0,0" BorderBrush="White" Margin="-2,-2,0,0">
                <Border BorderThickness="0,0,1,1" BorderBrush="#404040" Padding="20">
                    <StackPanel>
                        <!-- Icono ASCII animado -->
                        <TextBlock x:Name="LoadingIcon" 
                                   Text="[|||]" 
                                   FontFamily="Courier New" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="#000080" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,15"/>
                        
                        <!-- Mensaje -->
                        <TextBlock x:Name="MessageText"
                                   Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Procesando...'}" 
                                   FontFamily="Tahoma" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   Foreground="#000000" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,15"/>
                        
                        <!-- Barra de progreso -->
                        <ProgressBar x:Name="ProgressBarControl"
                                     IsIndeterminate="{Binding IsIndeterminate, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=True}"
                                     Value="{Binding Progress, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Style="{StaticResource LegacyProgressBarStyle}"
                                     Width="180" 
                                     Height="18"/>
                        
                        <!-- Texto de progreso (cuando no es indeterminado) -->
                        <TextBlock x:Name="ProgressTextBlock"
                                   Text="{Binding ProgressText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                   FontFamily="Courier New" 
                                   FontSize="9"
                                   Foreground="#404040" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,0"
                                   Visibility="{Binding ShowProgressText, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <!-- BotÃ³n Cancelar (opcional) -->
                        <Button x:Name="CancelButton"
                                Content="Cancelar"
                                Style="{StaticResource LegacyButtonStyle}"
                                FontFamily="Tahoma"
                                FontSize="9"
                                Padding="15,4"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Center"
                                Visibility="{Binding ShowCancelButton, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"
                                Click="CancelButton_Click"/>
                    </StackPanel>
                </Border>
            </Border>
        </Border>
    </Border>
</UserControl>
