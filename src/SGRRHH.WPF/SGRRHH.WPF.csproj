<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\SGRRHH.Core\SGRRHH.Core.csproj" />
    <ProjectReference Include="..\SGRRHH.Infrastructure\SGRRHH.Infrastructure.csproj" />
    <ProjectReference Include="..\SGRRHH.Updater\SGRRHH.Updater.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <SkipGetTargetFrameworkProperties>true</SkipGetTargetFrameworkProperties>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
    <PackageReference Include="CredentialManagement" Version="1.0.2" />
    <PackageReference Include="ILove_PDF" Version="1.6.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.1" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2592.51" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    
    <!-- Información del producto -->
    <AssemblyName>SGRRHH</AssemblyName>
    <Product>Sistema de Gestión de Recursos Humanos</Product>
    <Company>Forestech</Company>
    <Authors>Forestech</Authors>
    <Copyright>Copyright © 2025 Forestech</Copyright>
    <Version>1.1.14</Version>
    <AssemblyVersion>1.1.14.0</AssemblyVersion>
    <FileVersion>1.1.14.0</FileVersion>
    <Description>Sistema de Gestión de Recursos Humanos - Gestión de empleados, permisos, vacaciones y contratos</Description>
    <PackageProjectUrl>https://forestech.com</PackageProjectUrl>
    <RepositoryUrl>https://forestech.com</RepositoryUrl>
    
    <!-- Configuración de publicación -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishSingleFile>false</PublishSingleFile>
    <SelfContained>false</SelfContained>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    
    <!-- Icono de aplicación -->
    <ApplicationIcon>Resources\app.ico</ApplicationIcon>
  </PropertyGroup>
  
  <!-- Copiar archivo de configuraci�n al output -->
  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="firebase-credentials.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Compilar y copiar SGRRHH.Updater.exe al output -->
  <Target Name="CopyUpdater" AfterTargets="Build">
    <MSBuild Projects="..\SGRRHH.Updater\SGRRHH.Updater.csproj" Properties="Configuration=$(Configuration);RuntimeIdentifier=$(RuntimeIdentifier)" Targets="Build" />
    <PropertyGroup>
      <!-- Detectar la ruta correcta del updater (puede ser net8.0 o win-x64) -->
      <UpdaterPath Condition="'$(RuntimeIdentifier)' != ''">$([MSBuild]::NormalizeDirectory('$(MSBuildProjectDirectory)\..\SGRRHH.Updater\bin\$(Configuration)\net8.0\$(RuntimeIdentifier)'))</UpdaterPath>
      <UpdaterPath Condition="'$(RuntimeIdentifier)' == ''">$([MSBuild]::NormalizeDirectory('$(MSBuildProjectDirectory)\..\SGRRHH.Updater\bin\$(Configuration)\net8.0'))</UpdaterPath>
    </PropertyGroup>
    <ItemGroup>
      <UpdaterFiles Include="$(UpdaterPath)SGRRHH.Updater.exe" Condition="Exists('$(UpdaterPath)SGRRHH.Updater.exe')" />
      <UpdaterFiles Include="$(UpdaterPath)SGRRHH.Updater.dll" Condition="Exists('$(UpdaterPath)SGRRHH.Updater.dll')" />
      <UpdaterFiles Include="$(UpdaterPath)SGRRHH.Updater.runtimeconfig.json" Condition="Exists('$(UpdaterPath)SGRRHH.Updater.runtimeconfig.json')" />
    </ItemGroup>
    <Copy SourceFiles="@(UpdaterFiles)" DestinationFolder="$(OutDir)" SkipUnchangedFiles="true" Condition="'@(UpdaterFiles)' != ''" />
  </Target>

</Project>
