<UserControl x:Class="SGRRHH.WPF.Views.UsuariosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:SGRRHH.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#000080" Padding="8,6" Margin="0,0,0,8">
            <Grid>
                <TextBlock Text="GESTION DE USUARIOS" FontFamily="Tahoma" FontSize="12" 
                           FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <Button Content="Nuevo" 
                        Command="{Binding NuevoUsuarioCommand}"
                        Style="{StaticResource LegacyButtonStyle}"
                        HorizontalAlignment="Right"
                        FontFamily="Tahoma" FontSize="9" Padding="10,3"
                        Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
            </Grid>
        </Border>
        
        <!-- Panel de edición -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#808080" 
                BorderThickness="1"
                Margin="0,0,0,8"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#000080" Padding="6,4">
                    <TextBlock Text="{Binding IsCreating, Converter={StaticResource BoolToTextConverter}, ConverterParameter='NUEVO USUARIO|EDITAR USUARIO'}" 
                               FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Foreground="White"/>
                </Border>
                
                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Fila 1 -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
                        <TextBlock Text="Nombre de Usuario *" FontFamily="Tahoma" FontSize="9" 
                                   Foreground="#404040" Margin="0,0,0,3"/>
                        <TextBox Text="{Binding EditUsername, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource LegacyTextBoxStyle}"
                                 FontFamily="Tahoma" FontSize="9" Height="22"
                                 IsEnabled="{Binding IsCreating}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,8"
                                Visibility="{Binding IsCreating, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Contrasena *" FontFamily="Tahoma" FontSize="9" 
                                   Foreground="#404040" Margin="0,0,0,3"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Style="{StaticResource LegacyPasswordStyle}"
                                     FontFamily="Tahoma" FontSize="9" Height="22"/>
                    </StackPanel>
                    
                    <!-- Fila 2 -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
                        <TextBlock Text="Nombre Completo *" FontFamily="Tahoma" FontSize="9" 
                                   Foreground="#404040" Margin="0,0,0,3"/>
                        <TextBox Text="{Binding EditNombreCompleto, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource LegacyTextBoxStyle}"
                                 FontFamily="Tahoma" FontSize="9" Height="22"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,8">
                        <TextBlock Text="Correo Electronico" FontFamily="Tahoma" FontSize="9" 
                                   Foreground="#404040" Margin="0,0,0,3"/>
                        <TextBox Text="{Binding EditEmail, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource LegacyTextBoxStyle}"
                                 FontFamily="Tahoma" FontSize="9" Height="22"/>
                    </StackPanel>
                    
                    <!-- Fila 3 -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,8">
                        <TextBlock Text="Rol *" FontFamily="Tahoma" FontSize="9" 
                                   Foreground="#404040" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding Roles}" 
                                  SelectedItem="{Binding EditRol}"
                                  FontFamily="Tahoma" FontSize="9" Height="22">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToStringConverter}}" 
                                               FontFamily="Tahoma" FontSize="9"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,8" 
                                Visibility="{Binding IsCreating, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="Estado" FontFamily="Tahoma" FontSize="9" 
                                   Foreground="#404040" Margin="0,0,0,3"/>
                        <CheckBox Content="Activo" IsChecked="{Binding EditActivo}" 
                                  FontFamily="Tahoma" FontSize="9" VerticalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- Fila 4 - Botones -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                                Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                        <controls:LegacyAsyncButton Content="Cancelar" 
                                Command="{Binding CancelarEdicionCommand}" Margin="0,0,8,0"/>
                        <controls:LegacyAsyncButton Content="Guardar" 
                                Command="{Binding GuardarUsuarioCommand}"
                                IsLoading="{Binding IsLoading}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        
        <!-- Lista de usuarios -->
        <Border Grid.Row="2" Background="White" BorderBrush="#808080" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#000080" Padding="6,4">
                    <TextBlock Text="LISTA DE USUARIOS" FontFamily="Tahoma" FontSize="9" 
                               FontWeight="Bold" Foreground="White"/>
                </Border>
                
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Usuarios}"
                          SelectedItem="{Binding SelectedUsuario}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          RowHeaderWidth="0"
                          GridLinesVisibility="All"
                          BorderThickness="0"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#E8E8E8"
                          FontFamily="Tahoma" FontSize="9"
                          ColumnHeaderHeight="22"
                          RowHeight="20">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#C0C0C0"/>
                            <Setter Property="Foreground" Value="#000080"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Tahoma"/>
                            <Setter Property="FontSize" Value="9"/>
                            <Setter Property="Padding" Value="4,2"/>
                            <Setter Property="BorderBrush" Value="#808080"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="4,2"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                        <DataGridTextColumn Header="Usuario" Binding="{Binding Username}" Width="100"/>
                        <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="*"/>
                        <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" Width="100"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                        <DataGridTextColumn Header="Ult. Acceso" Binding="{Binding UltimoAcceso, StringFormat='{}{0:dd/MM/yy HH:mm}'}" Width="100"/>
                        <DataGridTemplateColumn Header="Estado" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" FontFamily="Courier New" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="OK"/>
                                                <Setter Property="Foreground" Value="#008000"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Activo}" Value="False">
                                                        <Setter Property="Text" Value="[X]"/>
                                                        <Setter Property="Foreground" Value="#CC0000"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Botones de acción -->
                <Border Grid.Row="2" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="6">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <controls:LegacyAsyncButton Content="Editar" 
                                Command="{Binding EditarUsuarioCommand}" Margin="0,0,5,0"/>
                        <controls:LegacyAsyncButton Content="Reset Pass" 
                                Command="{Binding ResetPasswordCommand}"
                                IsLoading="{Binding IsLoading}" Margin="0,0,5,0"/>
                        <controls:LegacyAsyncButton Content="{Binding SelectedUsuario.Activo, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Desactivar|Activar', FallbackValue='On/Off'}" 
                                Command="{Binding ToggleActivoCommand}"
                                IsLoading="{Binding IsLoading}" Margin="0,0,5,0"/>
                        <controls:LegacyAsyncButton Content="Eliminar" 
                                Command="{Binding EliminarUsuarioCommand}"
                                IsLoading="{Binding IsLoading}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Loading overlay -->
        <Border Grid.RowSpan="3" 
                Background="#80FFFFFF" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" BorderThickness="2" BorderBrush="#808080" 
                    Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="[...]" FontFamily="Courier New" FontSize="20" FontWeight="Bold"
                               Foreground="#000080" HorizontalAlignment="Center"/>
                    <TextBlock Text="Cargando..." FontFamily="Tahoma" FontSize="10" 
                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
