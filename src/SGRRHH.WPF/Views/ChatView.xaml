<UserControl x:Class="SGRRHH.WPF.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0F0F0F">

    <UserControl.Resources>
        <!-- Estilos modernos minimalistas -->

        <!-- BotÃ³n moderno flat -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#363636"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox moderno -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#2D2D2D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
        </Style>

        <!-- Template para mensaje enviado (mÃ­o) - Estilo Discord/Slack -->
        <DataTemplate x:Key="MyMessageTemplate">
            <Grid Margin="80,4,16,4" HorizontalAlignment="Right">
                <Border Background="#5865F2" CornerRadius="8" Padding="12,8" MaxWidth="500">
                    <StackPanel>
                        <TextBlock Text="{Binding Message}"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   LineHeight="20"/>
                        <TextBlock Text="{Binding CreatedAt, StringFormat='HH:mm'}"
                                   Foreground="#B9BBBE"
                                   FontSize="11"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"
                                   Opacity="0.8"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- Template para mensaje recibido - Estilo Discord/Slack -->
        <DataTemplate x:Key="ReceivedMessageTemplate">
            <Grid Margin="16,4,80,4" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar circular -->
                <Border Grid.Column="0"
                        Width="36" Height="36"
                        CornerRadius="18"
                        Background="#43B581"
                        VerticalAlignment="Top"
                        Margin="0,0,10,0">
                    <TextBlock Text="{Binding SenderName, Converter={StaticResource InitialsConverter}}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="White"/>
                </Border>

                <!-- Mensaje -->
                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <!-- Nombre y hora -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="{Binding SenderName}"
                                   Foreground="#FFFFFF"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CreatedAt, StringFormat='HH:mm'}"
                                   Foreground="#72767D"
                                   FontSize="11"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Contenido del mensaje -->
                    <Border Background="#2B2D31" CornerRadius="8" Padding="12,8" MaxWidth="500">
                        <TextBlock Text="{Binding Message}"
                                   Foreground="#DCDDDE"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   LineHeight="20"/>
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- Template para mensaje de archivo -->
        <DataTemplate x:Key="FileMessageTemplate">
            <Grid Margin="16,4,80,4" HorizontalAlignment="{Binding IsMyMessage, Converter={StaticResource BoolToAlignment}}">
                <Border Background="#2B2D31" CornerRadius="8" Padding="12" MaxWidth="350">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icono del archivo -->
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    Background="#404249"
                                    CornerRadius="8"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Top">
                                <TextBlock Text="{Binding FileName, Converter={StaticResource FileIconConverter}}"
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Info del archivo -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding FileName}"
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}"
                                           Foreground="#72767D"
                                           FontSize="11"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- BotÃ³n descargar -->
                        <Button Content="â¬‡ Descargar"
                                Command="{Binding DataContext.DownloadFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="0,12,0,0"
                                Padding="10,6"
                                HorizontalAlignment="Stretch">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                    <Setter Property="Background" Value="#5865F2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4752C4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Timestamp -->
                        <TextBlock Text="{Binding CreatedAt, StringFormat='HH:mm'}"
                                   Foreground="#72767D"
                                   FontSize="11"
                                   HorizontalAlignment="Right"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- Selector de template -->
        <DataTemplateSelector x:Key="MessageTemplateSelector"/>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo: Lista de conversaciones -->
        <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#2D2D2D" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header con tÃ­tulo -->
                <Border Grid.Row="0" Background="#27282C" Padding="20,16" BorderBrush="#2D2D2D" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="Mensajes" FontSize="20" FontWeight="Bold" Foreground="#FFFFFF"/>
                        <TextBlock Text="Powered by Sendbird âš¡" FontSize="11" Foreground="#72767D" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Buscador -->
                <Border Grid.Row="1" Padding="12" Background="#1E1E1E">
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}"
                             BorderBrush="#2D2D2D">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Border>

                <!-- Lista de conversaciones -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Background="Transparent">
                    <ItemsControl ItemsSource="{Binding Channels}" Padding="0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        Cursor="Hand"
                                        Padding="16,12"
                                        BorderBrush="#2D2D2D"
                                        BorderThickness="0,0,0,1">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.SelectChannelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2B2D31"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="#404249"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Grid Grid.Column="0" Margin="0,0,12,0">
                                            <Border Width="42" Height="42" CornerRadius="21" Background="#5865F2">
                                                <TextBlock Text="{Binding OtherUserInitials}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           FontWeight="Bold" FontSize="16" Foreground="White"/>
                                            </Border>
                                            <!-- Indicador online -->
                                            <Ellipse Width="12" Height="12"
                                                     Fill="#43B581"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Bottom"
                                                     Margin="0,0,-2,-2"
                                                     Visibility="{Binding IsOtherUserOnline, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="0" Opacity="0.5"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Grid>

                                        <!-- Nombre y Ãºltimo mensaje -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"
                                                       Foreground="#FFFFFF"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding LastMessagePreview}"
                                                       FontSize="12"
                                                       Foreground="#72767D"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Badge de no leÃ­dos -->
                                        <Border Grid.Column="2"
                                                Background="#ED4245"
                                                CornerRadius="10"
                                                Padding="6,3"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="{Binding UnreadCount}"
                                                       Foreground="White"
                                                       FontSize="11"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Footer con botÃ³n nueva conversaciÃ³n -->
                <Border Grid.Row="3" Background="#27282C" Padding="12" BorderBrush="#2D2D2D" BorderThickness="0,1,0,0">
                    <Button Content="âž• Nueva conversaciÃ³n"
                            Style="{StaticResource ModernButton}"
                            Background="#5865F2"
                            Command="{Binding NewConversationCommand}"/>
                </Border>
            </Grid>
        </Border>

        <!-- Panel derecho: ConversaciÃ³n activa -->
        <Grid Grid.Column="1" Background="#0F0F0F">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header de conversaciÃ³n -->
            <Border Grid.Row="0"
                    Background="#1E1E1E"
                    Padding="20,12"
                    BorderBrush="#2D2D2D"
                    BorderThickness="0,0,0,1"
                    Visibility="{Binding HasActiveChannel, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar -->
                    <Border Grid.Column="0"
                            Width="40" Height="40"
                            CornerRadius="20"
                            Background="#5865F2"
                            Margin="0,0,12,0">
                        <TextBlock Text="{Binding SelectedChannelInitials}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="Bold" FontSize="16" Foreground="White"/>
                    </Border>

                    <!-- Nombre y estado -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedChannelName}"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="#FFFFFF"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <Ellipse Width="8" Height="8"
                                     Fill="#43B581"
                                     VerticalAlignment="Center"
                                     Visibility="{Binding IsOtherUserOnline, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Ellipse Width="8" Height="8"
                                     Fill="#747F8D"
                                     VerticalAlignment="Center"
                                     Visibility="{Binding IsOtherUserOnline, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding OtherUserStatus}"
                                       FontSize="12"
                                       Foreground="#B9BBBE"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- BotÃ³n de opciones -->
                    <Button Grid.Column="2"
                            Content="â‹®"
                            Style="{StaticResource ModernButton}"
                            FontSize="18"
                            Padding="12,6"
                            ToolTip="Opciones"/>
                </Grid>
            </Border>

            <!-- Estado: Sin conversaciÃ³n seleccionada -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding HasActiveChannel, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <TextBlock Text="ðŸ’¬" FontSize="72" HorizontalAlignment="Center" Opacity="0.3"/>
                <TextBlock Text="Selecciona una conversaciÃ³n"
                           FontSize="18"
                           Foreground="#72767D"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           FontWeight="SemiBold"/>
                <TextBlock Text="o inicia una nueva para comenzar a chatear"
                           FontSize="14"
                           Foreground="#4E5058"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Ãrea de mensajes -->
            <ScrollViewer x:Name="MessagesScrollViewer"
                          Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Background="#0F0F0F"
                          Padding="0,12"
                          Visibility="{Binding HasActiveChannel, Converter={StaticResource BoolToVisibilityConverter}}">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Style.Triggers>
                                            <!-- Prioridad: archivos primero -->
                                            <DataTrigger Binding="{Binding IsFileMessage}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource FileMessageTemplate}"/>
                                            </DataTrigger>
                                            <!-- Luego mensajes normales -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsFileMessage}" Value="False"/>
                                                    <Condition Binding="{Binding IsMyMessage}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="ContentTemplate" Value="{StaticResource MyMessageTemplate}"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsFileMessage}" Value="False"/>
                                                    <Condition Binding="{Binding IsMyMessage}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="ContentTemplate" Value="{StaticResource ReceivedMessageTemplate}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Input de mensaje -->
            <Border Grid.Row="2"
                    Background="#1E1E1E"
                    Padding="20,16"
                    BorderBrush="#2D2D2D"
                    BorderThickness="0,1,0,0"
                    Visibility="{Binding HasActiveChannel, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input -->
                    <Border Grid.Column="0"
                            Background="#27282C"
                            CornerRadius="8"
                            Padding="14,10">
                        <TextBox x:Name="MessageInput"
                                 Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 Foreground="#DCDDDE"
                                 BorderThickness="0"
                                 FontSize="14"
                                 AcceptsReturn="False"
                                 VerticalContentAlignment="Center"
                                 CaretBrush="#DCDDDE">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </Border>

                    <!-- BotÃ³n adjuntar -->
                    <Button Grid.Column="1"
                            Content="ðŸ“Ž"
                            FontSize="20"
                            Padding="12,10"
                            Margin="12,0,0,0"
                            ToolTip="Adjuntar archivo"
                            Command="{Binding AttachFileCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#2B2D31"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#404249"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#4E5058"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- BotÃ³n enviar -->
                    <Button Grid.Column="2"
                            Content="Enviar âž¤"
                            Foreground="White"
                            Padding="20,10"
                            Margin="8,0,0,0"
                            FontWeight="SemiBold"
                            Command="{Binding SendMessageCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#5865F2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4752C4"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#3C45A5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading overlay -->
        <Border Grid.Column="0" Grid.ColumnSpan="2"
                Background="#CC000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="âš¡" FontSize="48" HorizontalAlignment="Center" Foreground="White"/>
                <TextBlock Text="{Binding LoadingMessage}"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
