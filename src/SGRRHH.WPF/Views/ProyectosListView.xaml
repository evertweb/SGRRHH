<UserControl x:Class="SGRRHH.WPF.Views.ProyectosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="White">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        
        <!-- Panel izquierdo: Lista de proyectos -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Filtros -->
            <Border Grid.Row="0" Background="#F5F5F5" Padding="15" CornerRadius="8" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" Height="35" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center" Margin="0,0,10,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="  ðŸ” Buscar proyecto..." Foreground="#9E9E9E" 
                                                                   VerticalAlignment="Center"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <ComboBox Grid.Column="1" Width="140" Height="35" Margin="0,0,10,0"
                              ItemsSource="{Binding Estados}"
                              SelectedValuePath="Valor"
                              DisplayMemberPath="Nombre"
                              SelectedValue="{Binding SelectedEstado}"/>
                    
                    <Button Grid.Column="2" Content="ðŸ” Buscar" Width="90" Height="35"
                            Command="{Binding SearchProyectosCommand}"
                            Background="#1E88E5" Foreground="White" BorderThickness="0"/>
                    
                    <Button Grid.Column="3" Content="âœ–" Width="35" Height="35" Margin="5,0,0,0"
                            Command="{Binding ClearFiltersCommand}"
                            Background="#FFEBEE" Foreground="#E53935" BorderThickness="0"
                            ToolTip="Limpiar filtros"/>
                </Grid>
            </Border>
            
            <!-- DataGrid de proyectos -->
            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Proyectos}"
                      SelectedItem="{Binding SelectedProyecto}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      BorderThickness="1"
                      BorderBrush="#E0E0E0"
                      RowHeight="45">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CÃ³digo" Binding="{Binding Codigo}" Width="90"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="150"/>
                    <DataGridTemplateColumn Header="Estado" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="3" Padding="8,3" HorizontalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Estado}" Value="1">
                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="2">
                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="3">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Activo"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Estado}" Value="1">
                                                        <Setter Property="Text" Value="Suspendido"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="2">
                                                        <Setter Property="Text" Value="Finalizado"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="3">
                                                        <Setter Property="Text" Value="Cancelado"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Barra de acciones -->
            <Border Grid.Row="2" Background="#F5F5F5" Padding="10" Margin="0,15,0,0" CornerRadius="5">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="âž• Nuevo" Width="90" Height="35" Margin="0,0,10,0"
                                Command="{Binding NewProyectoCommand}"
                                Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                        <Button Content="âœï¸ Editar" Width="90" Height="35" Margin="0,0,10,0"
                                Command="{Binding EditProyectoCommand}"
                                Background="#FF9800" Foreground="White" BorderThickness="0"/>
                        <Button Content="ðŸ—‘ï¸ Eliminar" Width="90" Height="35"
                                Command="{Binding DeleteProyectoCommand}"
                                Background="#E53935" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding TotalProyectos, StringFormat={}{0} proyecto(s)}" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#757575"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Panel derecho: Formulario -->
        <Border Grid.Column="1" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" 
                CornerRadius="8" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- TÃ­tulo -->
                <TextBlock Grid.Row="0" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="âž• Nuevo Proyecto"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Text" Value="âœï¸ Editar Proyecto"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <!-- Campos del formulario -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="CÃ³digo *" FontSize="12" Foreground="#757575"/>
                    <TextBox Text="{Binding Codigo, UpdateSourceTrigger=PropertyChanged}" 
                             Height="35" Margin="0,5,0,15" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Text="Nombre *" FontSize="12" Foreground="#757575"/>
                    <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                             Height="35" Margin="0,5,0,15" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Text="Cliente" FontSize="12" Foreground="#757575"/>
                    <TextBox Text="{Binding Cliente, UpdateSourceTrigger=PropertyChanged}" 
                             Height="35" Margin="0,5,0,15" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Text="DescripciÃ³n" FontSize="12" Foreground="#757575"/>
                    <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                             Height="60" Margin="0,5,0,15" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalContentAlignment="Top"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Fecha Inicio" FontSize="12" Foreground="#757575"/>
                            <DatePicker SelectedDate="{Binding FechaInicio}" Height="35" Margin="0,5,0,15"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Fecha Fin" FontSize="12" Foreground="#757575"/>
                            <DatePicker SelectedDate="{Binding FechaFin}" Height="35" Margin="0,5,0,15"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Estado" FontSize="12" Foreground="#757575"/>
                    <ComboBox ItemsSource="{Binding EstadosForm}"
                              SelectedValuePath="Valor"
                              DisplayMemberPath="Nombre"
                              SelectedValue="{Binding Estado}"
                              Height="35" Margin="0,5,0,15"/>
                </StackPanel>
                
                <!-- Botones -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Width="90" Height="35" Margin="0,0,10,0"
                            Command="{Binding CancelEditCommand}"
                            Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                    <Button Content="ðŸ’¾ Guardar" Width="100" Height="35"
                            Command="{Binding SaveProyectoCommand}"
                            Background="#1E88E5" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Loading overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="5"/>
                <TextBlock Text="Cargando..." Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
