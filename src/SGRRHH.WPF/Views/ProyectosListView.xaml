<UserControl x:Class="SGRRHH.WPF.Views.ProyectosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource SurfaceBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        
        <!-- Panel izquierdo: Lista de proyectos -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Filtros -->
            <Border Grid.Row="0" Style="{StaticResource FilterPanel}" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SearchTextBox}" Width="Auto" Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" Width="140" Margin="0,0,10,0"
                              ItemsSource="{Binding Estados}"
                              SelectedValuePath="Valor"
                              DisplayMemberPath="Nombre"
                              SelectedValue="{Binding SelectedEstado}"
                              Style="{StaticResource StandardComboBox}"/>
                    
                    <Button Grid.Column="2" Content="ðŸ” Buscar" Width="90"
                            Command="{Binding SearchProyectosCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                    
                    <Button Grid.Column="3" Content="âœ–" Width="35" Margin="5,0,0,0"
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource DangerOutlineButton}"
                            ToolTip="Limpiar filtros"/>
                </Grid>
            </Border>
            
            <!-- DataGrid de proyectos -->
            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Proyectos}"
                      SelectedItem="{Binding SelectedProyecto}"
                      Style="{StaticResource StandardDataGrid}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderBrush}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CÃ³digo" Binding="{Binding Codigo}" Width="90"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="150"/>
                    <DataGridTemplateColumn Header="Estado" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="3" Padding="8,3" HorizontalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Estado}" Value="1">
                                                    <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="2">
                                                    <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="3">
                                                    <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Activo"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Estado}" Value="1">
                                                        <Setter Property="Text" Value="Suspendido"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="2">
                                                        <Setter Property="Text" Value="Finalizado"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="3">
                                                        <Setter Property="Text" Value="Cancelado"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Barra de acciones -->
            <Border Grid.Row="2" Style="{StaticResource StatusBar}" Margin="0,15,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="âž• Nuevo" Width="90"
                                Command="{Binding NewProyectoCommand}"
                                Style="{StaticResource SuccessButton}" Margin="0,0,10,0"/>
                        <Button Content="âœï¸ Editar" Width="90"
                                Command="{Binding EditProyectoCommand}"
                                Style="{StaticResource WarningButton}" Margin="0,0,10,0"/>
                        <Button Content="ðŸ—‘ï¸ Eliminar" Width="90"
                                Command="{Binding DeleteProyectoCommand}"
                                Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding TotalProyectos, StringFormat={}{0} proyecto(s)}" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Panel derecho: Formulario -->
        <Border Grid.Column="1" Style="{StaticResource CardFlat}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- TÃ­tulo -->
                <TextBlock Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource CardTitle}">
                            <Setter Property="Text" Value="âž• Nuevo Proyecto"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Text" Value="âœï¸ Editar Proyecto"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <!-- Campos del formulario -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="CÃ³digo *" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Codigo, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}" Margin="0,5,0,15"/>
                    
                    <TextBlock Text="Nombre *" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}" Margin="0,5,0,15"/>
                    
                    <TextBlock Text="Cliente" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Cliente, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}" Margin="0,5,0,15"/>
                    
                    <TextBlock Text="DescripciÃ³n" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                             Height="60" Margin="0,5,0,15" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalContentAlignment="Top"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Fecha Inicio" Style="{StaticResource FieldLabel}"/>
                            <DatePicker SelectedDate="{Binding FechaInicio}" Style="{StaticResource StandardDatePicker}" Margin="0,5,0,15"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Fecha Fin" Style="{StaticResource FieldLabel}"/>
                            <DatePicker SelectedDate="{Binding FechaFin}" Style="{StaticResource StandardDatePicker}" Margin="0,5,0,15"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Estado" Style="{StaticResource FieldLabel}"/>
                    <ComboBox ItemsSource="{Binding EstadosForm}"
                              SelectedValuePath="Valor"
                              DisplayMemberPath="Nombre"
                              SelectedValue="{Binding Estado}"
                              Style="{StaticResource StandardComboBox}" Margin="0,5,0,15"/>
                </StackPanel>
                
                <!-- Botones -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Width="90"
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button Content="ðŸ’¾ Guardar" Width="100"
                            Command="{Binding SaveProyectoCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Loading overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="5"/>
                <TextBlock Text="Cargando..." Foreground="{StaticResource TextInverseBrush}" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
