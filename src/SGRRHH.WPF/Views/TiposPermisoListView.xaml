<UserControl x:Class="SGRRHH.WPF.Views.TiposPermisoListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGRRHH.WPF.Views"
             xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
             xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
             xmlns:controls="clr-namespace:SGRRHH.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="5">
        <!-- ============================================ -->
        <!-- PANTALLA DE BIENVENIDA (Home) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#000080" Padding="10,5">
                <TextBlock Text="--- TIPOS DE PERMISO ---" FontFamily="Tahoma" FontSize="12" 
                           FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </Border>
            
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="#808080" Background="White">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="CATALOGO" FontFamily="Courier New" FontSize="36" FontWeight="Bold" 
                               Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Seleccione una opcion:" FontFamily="Tahoma" FontSize="12" 
                               Foreground="#404040" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Nuevo Tipo -->
                        <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" 
                                Margin="0,0,20,0" Cursor="Hand">
                            <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding ShowFormCommand}"/>
                                </Border.InputBindings>
                                <StackPanel Width="160">
                                    <TextBlock Text="[+]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                               Foreground="#008000" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="NUEVO" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="TIPO" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Crear tipo de permiso" FontFamily="Tahoma" FontSize="9"
                                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Border>
                        
                        <!-- Ver Tipos -->
                        <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" Cursor="Hand">
                            <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding ShowListCommand}"/>
                                </Border.InputBindings>
                                <StackPanel Width="160">
                                    <TextBlock Text="[=]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                               Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="VER" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="TIPOS" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Consultar catalogo" FontFamily="Tahoma" FontSize="9"
                                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <Border Grid.Row="2" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="10,5">
                <TextBlock Text="{Binding CurrentDateText, Mode=OneWay}" FontFamily="Tahoma" FontSize="10" 
                           Foreground="#404040" HorizontalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE FORMULARIO (Crear/Editar) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsFormViewVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}" Content="&lt;&lt; Volver"
                    Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Left" 
                    FontFamily="Tahoma" FontSize="10" Padding="10,3" Margin="0,0,0,5"/>
            
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="#808080" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" Background="#000080" Padding="10,5">
                        <TextBlock Text="{Binding FormTitle}" FontFamily="Tahoma" FontSize="12" 
                                   FontWeight="Bold" Foreground="White"/>
                    </Border>
                    
                    <!-- Formulario -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="20" MaxWidth="200"/>
                                <ColumnDefinition Width="Auto" MinWidth="400" MaxWidth="600"/>
                                <ColumnDefinition Width="*" MinWidth="20" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Nombre: *" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Color:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Margin="0,0,0,3"/>
                                        <ComboBox ItemsSource="{Binding ColoresDisponibles}"
                                                  SelectedItem="{Binding Color}"
                                                  FontFamily="Tahoma" FontSize="9" Height="22">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border Width="14" Height="14" Background="{Binding}" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding}" FontFamily="Tahoma" FontSize="8" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                                
                                <TextBlock Text="Descripcion:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Margin="0,12,0,3"/>
                                <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource LegacyTextBoxStyle}"
                                         Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                         FontFamily="Tahoma" FontSize="9" VerticalContentAlignment="Top" Padding="5"/>
                                
                                <StackPanel Margin="0,12,0,0">
                                    <TextBlock Text="Dias por defecto:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding DiasPorDefecto, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Width="60" Height="22" HorizontalAlignment="Left"/>
                                </StackPanel>
                                
                                <Border Background="#E0E0E0" BorderThickness="1" BorderBrush="#808080" Padding="12" Margin="0,15,0,0">
                                    <StackPanel>
                                        <TextBlock Text="[CONFIG] Configuracion:" FontFamily="Courier New" FontSize="9" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <CheckBox Content="Requiere aprobacion" IsChecked="{Binding RequiereAprobacion}"
                                                  FontFamily="Tahoma" FontSize="9" Margin="0,0,0,8"/>
                                        <CheckBox Content="Requiere documento soporte" IsChecked="{Binding RequiereDocumento}"
                                                  FontFamily="Tahoma" FontSize="9" Margin="0,0,0,8"/>
                                        <CheckBox Content="Es compensable" IsChecked="{Binding EsCompensable}"
                                                  FontFamily="Tahoma" FontSize="9" Margin="0,0,0,8"/>
                                        <CheckBox Content="Activo" IsChecked="{Binding Activo}"
                                                  FontFamily="Tahoma" FontSize="9"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                    
                    <!-- Botones -->
                    <Border Grid.Row="2" Background="#C0C0C0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="15,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <controls:LegacyAsyncButton Content="Cancelar" Command="{Binding CancelFormCommand}" Margin="0,0,8,0"/>
                            <controls:LegacyAsyncButton Content="Guardar" Command="{Binding SaveCommand}" IsLoading="{Binding IsLoading}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE LISTA -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsListViewVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}" Content="&lt;&lt; Volver al Menu"
                    Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Left" 
                    FontFamily="Tahoma" FontSize="10" Padding="10,3" Margin="0,0,0,5"/>
            
            <!-- Header -->
            <Border Grid.Row="1" Background="#000080" Padding="10,5" Margin="0,0,0,5">
                <Grid>
                    <TextBlock Text="CATALOGO DE TIPOS DE PERMISO" FontFamily="Tahoma" FontSize="12" 
                               FontWeight="Bold" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Total: " FontFamily="Tahoma" FontSize="10" Foreground="White"/>
                        <TextBlock Text="{Binding TiposPermiso.Count, Mode=OneWay}" FontFamily="Courier New" FontSize="10" 
                                   FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Toolbar -->
            <Border Grid.Row="2" BorderThickness="1" BorderBrush="#808080" Background="White" Margin="0,0,0,5" Padding="10,5">
                <CheckBox Content="Mostrar inactivos" IsChecked="{Binding ShowInactivos}"
                          FontFamily="Tahoma" FontSize="9" VerticalAlignment="Center"/>
            </Border>
            
            <!-- DataGrid -->
            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#808080">
                <DataGrid ItemsSource="{Binding TiposPermiso}"
                          SelectedItem="{Binding SelectedTipoPermiso}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          GridLinesVisibility="All" HeadersVisibility="Column"
                          RowHeight="22" FontFamily="Tahoma" FontSize="10"
                          Background="White" AlternatingRowBackground="#F0F0F0"
                          BorderThickness="0">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#000080"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Tahoma"/>
                            <Setter Property="FontSize" Value="9"/>
                            <Setter Property="Padding" Value="5,3"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#404040"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="5,2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#000080"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <!-- Color -->
                        <DataGridTemplateColumn Header="" Width="30">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="16" Height="16" Background="{Binding Color}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="NOMBRE" Binding="{Binding Nombre}" Width="150"/>
                        <DataGridTextColumn Header="DESCRIPCION" Binding="{Binding Descripcion}" Width="*"/>
                        <DataGridTextColumn Header="DIAS" Binding="{Binding DiasPorDefecto}" Width="45"/>
                        
                        <!-- Requiere AprobaciÃ³n -->
                        <DataGridTemplateColumn Header="APROB" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="Courier New" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="[ ]"/>
                                                <Setter Property="Foreground" Value="#808080"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RequiereAprobacion}" Value="True">
                                                        <Setter Property="Text" Value="[X]"/>
                                                        <Setter Property="Foreground" Value="#008000"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Requiere Documento -->
                        <DataGridTemplateColumn Header="DOC" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="Courier New" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="[ ]"/>
                                                <Setter Property="Foreground" Value="#808080"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RequiereDocumento}" Value="True">
                                                        <Setter Property="Text" Value="[X]"/>
                                                        <Setter Property="Foreground" Value="#008000"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Compensable -->
                        <DataGridTemplateColumn Header="COMP" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="Courier New" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="[ ]"/>
                                                <Setter Property="Foreground" Value="#808080"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EsCompensable}" Value="True">
                                                        <Setter Property="Text" Value="[X]"/>
                                                        <Setter Property="Foreground" Value="#008000"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Estado -->
                        <DataGridTemplateColumn Header="ESTADO" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="Tahoma" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Inactivo"/>
                                                <Setter Property="Foreground" Value="#CC0000"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Activo}" Value="True">
                                                        <Setter Property="Text" Value="Activo"/>
                                                        <Setter Property="Foreground" Value="#008000"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="ACCIONES" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Ed" ToolTip="Editar"
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="9" Padding="5,1" Margin="0,0,3,0"/>
                                        <Button ToolTip="Activar/Desactivar"
                                                Command="{Binding DataContext.ToggleActivarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="9" Padding="5,1">
                                            <Button.Content>
                                                <TextBlock FontFamily="Courier New" FontSize="8" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="[ON]"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Activo}" Value="True">
                                                                    <Setter Property="Text" Value="[OFF]"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <!-- Status bar -->
            <Border Grid.Row="4" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Margin="0,5,0,0" Padding="5,3">
                <TextBlock Text="{Binding TiposPermiso.Count, Mode=OneWay, StringFormat={}{0} tipo(s)}"
                           FontFamily="Tahoma" FontSize="10" HorizontalAlignment="Right"/>
            </Border>
        </Grid>
        
        <!-- Loading overlay -->
        <Border Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#C0C0C0" BorderThickness="2" BorderBrush="#808080" Padding="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="[...] Cargando" FontFamily="Courier New" FontSize="12" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <ProgressBar IsIndeterminate="True" Width="120" Height="16"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
