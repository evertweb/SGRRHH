<UserControl x:Class="SGRRHH.WPF.Views.TiposPermisoListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGRRHH.WPF.Views"
             xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
             xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F5F5F5">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350" x:Name="FormColumn"/>
        </Grid.ColumnDefinitions>
        
        <!-- Lista de tipos de permiso -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="ðŸ“‹ Tipos de Permiso" FontSize="24" FontWeight="Bold" Foreground="#1976D2"/>
                <TextBlock Text="CatÃ¡logo de tipos de permiso configurables" Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Toolbar -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Content="âž• Nuevo Tipo" 
                            Command="{Binding CreateCommand}"
                            Background="#4CAF50" Foreground="White"
                            Padding="20,10" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <CheckBox Grid.Column="2" Content="Mostrar inactivos" 
                              IsChecked="{Binding ShowInactivos}"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Lista -->
            <Border Grid.Row="2" Background="White" CornerRadius="8">
                <Grid>
                    <!-- Loading -->
                    <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="â³ Cargando..." FontSize="16" Foreground="#666"/>
                    </StackPanel>
                    
                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding TiposPermiso}"
                              SelectedItem="{Binding SelectedTipoPermiso}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              RowHeight="50"
                              Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        
                        <DataGrid.Columns>
                            <!-- Color -->
                            <DataGridTemplateColumn Header="" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Width="24" Height="24" CornerRadius="12" 
                                                Background="{Binding Color}" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="180"/>
                            <DataGridTextColumn Header="DescripciÃ³n" Binding="{Binding Descripcion}" Width="*"/>
                            <DataGridTextColumn Header="DÃ­as" Binding="{Binding DiasPorDefecto}" Width="60"/>
                            
                            <!-- Requiere AprobaciÃ³n -->
                            <DataGridTemplateColumn Header="AprobaciÃ³n" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="âŒ"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RequiereAprobacion}" Value="True">
                                                            <Setter Property="Text" Value="âœ…"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Requiere Documento -->
                            <DataGridTemplateColumn Header="Documento" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="âŒ"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RequiereDocumento}" Value="True">
                                                            <Setter Property="Text" Value="ðŸ“Ž"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Compensable -->
                            <DataGridTemplateColumn Header="Compensa" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="âŒ"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EsCompensable}" Value="True">
                                                            <Setter Property="Text" Value="ðŸ”„"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Estado -->
                            <DataGridTemplateColumn Header="Estado" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="8,4" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Activo}" Value="True">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Inactivo"/>
                                                        <Setter Property="Foreground" Value="#D32F2F"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Activo}" Value="True">
                                                                <Setter Property="Text" Value="Activo"/>
                                                                <Setter Property="Foreground" Value="#388E3C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Acciones -->
                            <DataGridTemplateColumn Header="Acciones" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="âœï¸" ToolTip="Editar"
                                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" BorderThickness="0" 
                                                    Padding="8,4" Cursor="Hand" FontSize="14"/>
                                            <Button ToolTip="Activar/Desactivar"
                                                    Command="{Binding DataContext.ToggleActivarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" BorderThickness="0" 
                                                    Padding="8,4" Cursor="Hand" FontSize="14">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Content" Value="ðŸ”´"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Activo}" Value="False">
                                                                <Setter Property="Content" Value="ðŸŸ¢"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Panel de formulario -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20"
                Visibility="{Binding IsFormVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <TextBlock Grid.Row="0" Text="{Binding FormTitle}" 
                           FontSize="18" FontWeight="Bold" Foreground="#1976D2"
                           Margin="0,0,0,20"/>
                
                <!-- Campos -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Nombre -->
                        <StackPanel Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Nombre" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock Text=" *" Foreground="#D32F2F" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="35" Padding="10,8"/>
                        </StackPanel>
                        
                        <!-- DescripciÃ³n -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="DescripciÃ³n" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="70" TextWrapping="Wrap" AcceptsReturn="True"
                                     Padding="10"/>
                        </StackPanel>
                        
                        <!-- Color -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Color" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding ColoresDisponibles}"
                                      SelectedItem="{Binding Color}"
                                      Height="40">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="20" Height="20" CornerRadius="10" 
                                                    Background="{Binding}" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- DÃ­as por defecto -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="DÃ­as por defecto" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding DiasPorDefecto, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="35" Padding="10,8"/>
                        </StackPanel>
                        
                        <!-- Checkboxes -->
                        <Border Background="#F5F5F5" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <CheckBox Content="Requiere aprobaciÃ³n" 
                                          IsChecked="{Binding RequiereAprobacion}"
                                          Margin="0,0,0,10"/>
                                <CheckBox Content="Requiere documento soporte" 
                                          IsChecked="{Binding RequiereDocumento}"
                                          Margin="0,0,0,10"/>
                                <CheckBox Content="Es compensable" 
                                          IsChecked="{Binding EsCompensable}"
                                          Margin="0,0,0,10"/>
                                <CheckBox Content="Activo" 
                                          IsChecked="{Binding Activo}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Botones -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="Cancelar" Command="{Binding CancelFormCommand}"
                            Background="#ECEFF1" Foreground="#333"
                            Padding="20,10" Margin="0,0,10,0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="ðŸ’¾ Guardar" Command="{Binding SaveCommand}"
                            Background="#4CAF50" Foreground="White"
                            Padding="20,10" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Panel vacÃ­o -->
        <Border Grid.Column="1" Background="White" CornerRadius="8"
                Visibility="{Binding IsFormVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“‹" FontSize="50" HorizontalAlignment="Center"/>
                <TextBlock Text="Seleccione un tipo" FontSize="16" Foreground="#666" Margin="0,10,0,0"/>
                <TextBlock Text="o cree uno nuevo" Foreground="#999"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
