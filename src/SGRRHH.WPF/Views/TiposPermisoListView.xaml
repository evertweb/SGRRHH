<UserControl x:Class="SGRRHH.WPF.Views.TiposPermisoListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGRRHH.WPF.Views"
             xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
             xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{StaticResource BackgroundBrush}">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <!-- ============================================ -->
        <!-- PANTALLA DE BIENVENIDA (Home) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Â¡Tipos de Permiso!" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Â¿QuÃ© deseas hacer hoy?" 
                           FontSize="18" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Tarjeta: Nuevo Tipo de Permiso -->
                    <Border Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="16" 
                            Padding="30,25" 
                            Margin="0,0,20,0"
                            Cursor="Hand"
                            BorderThickness="2"
                            BorderBrush="Transparent">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.25" Color="#22C55E"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ShowFormCommand}"/>
                        </Border.InputBindings>
                        <StackPanel Width="180">
                            <Border Background="{StaticResource SuccessLightBrush}" 
                                    CornerRadius="12" 
                                    Width="64" Height="64" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,15">
                                <TextBlock Text="âž•" FontSize="28" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Nuevo Tipo" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="Crear un nuevo tipo de permiso" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Tarjeta: Ver Tipos de Permiso -->
                    <Border Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="16" 
                            Padding="30,25"
                            Cursor="Hand"
                            BorderThickness="2"
                            BorderBrush="Transparent">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.25" Color="#3B82F6"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ShowListCommand}"/>
                        </Border.InputBindings>
                        <StackPanel Width="180">
                            <Border Background="{StaticResource PrimaryLightBrush}" 
                                    CornerRadius="12" 
                                    Width="64" Height="64" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,15">
                                <TextBlock Text="ðŸ“" FontSize="28" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Ver Tipos" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="Consultar y gestionar tipos" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <Border Grid.Row="1" Padding="20,15" Background="{StaticResource SurfaceBrush}">
                <TextBlock HorizontalAlignment="Center" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="13">
                    <Run Text="ðŸ“…"/>
                    <Run Text="{Binding CurrentDateText, Mode=OneWay}"/>
                </TextBlock>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE FORMULARIO (Crear/Editar) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsFormViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}"
                    HorizontalAlignment="Left" Margin="0,0,0,15"
                    Style="{StaticResource SecondaryButton}" Height="36" Padding="15,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â¬…" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Volver al inicio" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Border Grid.Row="1" Style="{StaticResource CardFlat}" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="{Binding FormTitle}" 
                               Style="{StaticResource CardTitle}" FontSize="24" Margin="0,0,0,20"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel MaxWidth="600">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Nombre *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" Margin="0,5,0,15"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Color" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding ColoresDisponibles}"
                                              SelectedItem="{Binding Color}"
                                              Style="{StaticResource StandardComboBox}" Margin="0,5,0,15">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="20" Height="20" CornerRadius="10" 
                                                            Background="{Binding}" Margin="0,0,10,0"/>
                                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="DescripciÃ³n" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="80" Margin="0,5,0,15" TextWrapping="Wrap" AcceptsReturn="True"
                                     VerticalContentAlignment="Top"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="DÃ­as por defecto" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding DiasPorDefecto, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" Width="100" Margin="0,5,0,15"/>
                                </StackPanel>
                            </Grid>
                            
                            <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8" Padding="20" Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="ConfiguraciÃ³n" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                    <CheckBox Content="Requiere aprobaciÃ³n" 
                                              IsChecked="{Binding RequiereAprobacion}"
                                              Margin="0,0,0,10"/>
                                    <CheckBox Content="Requiere documento soporte" 
                                              IsChecked="{Binding RequiereDocumento}"
                                              Margin="0,0,0,10"/>
                                    <CheckBox Content="Es compensable" 
                                              IsChecked="{Binding EsCompensable}"
                                              Margin="0,0,0,10"/>
                                    <CheckBox Content="Activo" 
                                              IsChecked="{Binding Activo}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Cancelar" 
                                Command="{Binding CancelFormCommand}"
                                Style="{StaticResource SecondaryButton}" Padding="25,12" Margin="0,0,10,0"/>
                        <Button Content="ðŸ’¾ Guardar" 
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource SuccessButton}" Padding="25,12"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE LISTA -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsListViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}"
                    HorizontalAlignment="Left" Margin="0,0,0,15"
                    Style="{StaticResource SecondaryButton}" Height="36" Padding="15,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â¬…" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Volver al inicio" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸ“ Lista de Tipos de Permiso" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextInverseBrush}"/>
                    <TextBlock Foreground="{StaticResource TextInverseBrush}" Opacity="0.8" Margin="0,5,0,0">
                        <Run Text="Total:"/>
                        <Run Text="{Binding TiposPermiso.Count, Mode=OneWay}"/>
                        <Run Text="tipo(s)"/>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <!-- Toolbar -->
            <Border Grid.Row="2" Style="{StaticResource FilterPanel}" Margin="0,0,0,15">
                <Grid>
                    <CheckBox Content="Mostrar inactivos" 
                              IsChecked="{Binding ShowInactivos}"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- DataGrid -->
            <DataGrid Grid.Row="3" 
                      ItemsSource="{Binding TiposPermiso}"
                      SelectedItem="{Binding SelectedTipoPermiso}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      Style="{StaticResource StandardDataGrid}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderBrush}">
                
                <DataGrid.Columns>
                    <!-- Color -->
                    <DataGridTemplateColumn Header="" Width="40">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="24" Height="24" CornerRadius="12" 
                                        Background="{Binding Color}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="180"/>
                    <DataGridTextColumn Header="DescripciÃ³n" Binding="{Binding Descripcion}" Width="*"/>
                    <DataGridTextColumn Header="DÃ­as" Binding="{Binding DiasPorDefecto}" Width="60"/>
                    
                    <!-- Requiere AprobaciÃ³n -->
                    <DataGridTemplateColumn Header="AprobaciÃ³n" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="âŒ"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RequiereAprobacion}" Value="True">
                                                    <Setter Property="Text" Value="âœ…"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Requiere Documento -->
                    <DataGridTemplateColumn Header="Documento" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="âŒ"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RequiereDocumento}" Value="True">
                                                    <Setter Property="Text" Value="ðŸ“Ž"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Compensable -->
                    <DataGridTemplateColumn Header="Compensa" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="âŒ"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EsCompensable}" Value="True">
                                                    <Setter Property="Text" Value="ðŸ”„"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Estado -->
                    <DataGridTemplateColumn Header="Estado" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Padding="8,4" HorizontalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Activo}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="11" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Inactivo"/>
                                                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Activo}" Value="True">
                                                        <Setter Property="Text" Value="Activo"/>
                                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Acciones -->
                    <DataGridTemplateColumn Header="Acciones" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="âœï¸" ToolTip="Editar"
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonEdit}"
                                            Padding="10,6" Margin="0,0,5,0"/>
                                    <Button ToolTip="Activar/Desactivar"
                                            Command="{Binding DataContext.ToggleActivarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonWarning}"
                                            Padding="10,6">
                                        <Button.Content>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="ðŸ”´"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Activo}" Value="False">
                                                                <Setter Property="Text" Value="ðŸŸ¢"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Barra de estado -->
            <Border Grid.Row="4" Style="{StaticResource StatusBar}" Margin="0,15,0,0">
                <TextBlock Text="{Binding TiposPermiso.Count, StringFormat={}{0} tipo(s)}" 
                           HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </Border>
        </Grid>
        
        <!-- Loading overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="5"/>
                <TextBlock Text="Cargando..." Foreground="{StaticResource TextInverseBrush}" 
                           Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
