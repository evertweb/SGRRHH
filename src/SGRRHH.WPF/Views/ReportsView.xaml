<UserControl x:Class="SGRRHH.WPF.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{DynamicResource SurfaceBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Reportes y EstadÃ­sticas" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Panel de ConfiguraciÃ³n -->
        <Border Grid.Row="1" VerticalAlignment="Top" Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Tipo de Reporte -->
                    <StackPanel Margin="0,0,20,10">
                        <TextBlock Text="Tipo de Reporte" FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                        <ComboBox Width="250" Height="35" Margin="0,5,0,0"
                                  ItemsSource="{Binding ReportTypes}"
                                  SelectedItem="{Binding SelectedReport}"
                                  DisplayMemberPath="Name"/>
                    </StackPanel>
                    
                    <!-- Rango de Fechas -->
                    <StackPanel Margin="0,0,20,10" 
                                Visibility="{Binding SelectedReport.RequiresDateRange, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="Desde" FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                        <DatePicker Width="120" Height="35" Margin="0,5,0,0"
                                    SelectedDate="{Binding FechaInicio}"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,20,10"
                                Visibility="{Binding SelectedReport.RequiresDateRange, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="Hasta" FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                        <DatePicker Width="120" Height="35" Margin="0,5,0,0"
                                    SelectedDate="{Binding FechaFin}"/>
                    </StackPanel>
                    
                    <!-- SelecciÃ³n de Empleado -->
                    <StackPanel Margin="0,0,20,10"
                                Visibility="{Binding SelectedReport.RequiresEmpleado, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="Empleado" FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                        <ComboBox Width="250" Height="35" Margin="0,5,0,0"
                                  ItemsSource="{Binding Empleados}"
                                  SelectedItem="{Binding SelectedEmpleado}"
                                  DisplayMemberPath="NombreCompleto"/>
                    </StackPanel>
                </WrapPanel>
                
                <!-- BotÃ³n Generar -->
                <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                    <Button Content="Generar Reporte" Width="150" Height="40"
                            Command="{Binding GenerateReportCommand}"
                            Style="{DynamicResource PrimaryButton}"
                            Margin="0,0,0,10"/>
                    
                    <Button Content="ðŸ–¨ï¸ Imprimir" Width="150" Height="40"
                            Click="OnPrintClick"
                            IsEnabled="{Binding HasResults}"
                            Style="{DynamicResource InfoButton}"
                            Margin="0,0,0,10"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Resultados -->
        <Grid Grid.Row="2">
            <DataGrid x:Name="ResultsGrid" ItemsSource="{Binding ReportResults}"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}"
                      RowHeight="35"
                      AlternatingRowBackground="{DynamicResource BackgroundBrush}">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
            
            <!-- Loading Overlay -->
            <Grid Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
            </Grid>
            
            <!-- Mensaje de estado -->
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Bottom" HorizontalAlignment="Left"
                       Margin="5" Foreground="{DynamicResource TextMutedBrush}"/>
        </Grid>
    </Grid>
</UserControl>
