<UserControl x:Class="SGRRHH.WPF.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:SGRRHH.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#000080" Padding="10,5" Margin="0,0,0,5">
            <TextBlock Text="[RPT] REPORTES Y ESTADISTICAS" FontFamily="Courier New" FontSize="12" 
                       FontWeight="Bold" Foreground="White"/>
        </Border>
        
        <!-- Panel de Configuración -->
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="#808080" Background="White" Padding="10" Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Tipo de Reporte -->
                    <StackPanel Margin="0,0,15,5">
                        <TextBlock Text="Tipo de Reporte:" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                        <ComboBox Width="200" Height="22" FontFamily="Tahoma" FontSize="9"
                                  ItemsSource="{Binding ReportTypes}"
                                  SelectedItem="{Binding SelectedReport}"
                                  DisplayMemberPath="Name"/>
                    </StackPanel>
                    
                    <!-- Rango de Fechas -->
                    <StackPanel Margin="0,0,15,5" 
                                Visibility="{Binding SelectedReport.RequiresDateRange, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="Desde:" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                        <DatePicker Width="110" Height="22" FontFamily="Tahoma" FontSize="9"
                                    SelectedDate="{Binding FechaInicio}"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,15,5"
                                Visibility="{Binding SelectedReport.RequiresDateRange, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="Hasta:" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                        <DatePicker Width="110" Height="22" FontFamily="Tahoma" FontSize="9"
                                    SelectedDate="{Binding FechaFin}"/>
                    </StackPanel>
                    
                    <!-- Selección de Empleado -->
                    <StackPanel Margin="0,0,15,5"
                                Visibility="{Binding SelectedReport.RequiresEmpleado, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="Empleado:" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                        <ComboBox Width="200" Height="22" FontFamily="Tahoma" FontSize="9"
                                  ItemsSource="{Binding Empleados}"
                                  SelectedItem="{Binding SelectedEmpleado}"
                                  DisplayMemberPath="NombreCompleto"/>
                    </StackPanel>
                </WrapPanel>
                
                <!-- Botones -->
                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Orientation="Horizontal">
                    <controls:LegacyAsyncButton Content="Generar Reporte" 
                            Command="{Binding GenerateReportCommand}"
                            IsLoading="{Binding IsLoading}" Margin="0,0,5,0"/>
                    
                    <Button Content="Imprimir" Width="80"
                            Click="OnPrintClick"
                            IsEnabled="{Binding HasResults}"
                            Style="{StaticResource LegacyButtonStyle}"
                            FontFamily="Tahoma" FontSize="10" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Resultados -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#808080">
            <Grid>
                <DataGrid x:Name="ResultsGrid" ItemsSource="{Binding ReportResults}"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          RowHeight="22"
                          FontFamily="Tahoma" FontSize="10"
                          Background="White"
                          AlternatingRowBackground="#F0F0F0"
                          BorderThickness="0">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#000080"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Tahoma"/>
                            <Setter Property="FontSize" Value="9"/>
                            <Setter Property="Padding" Value="5,3"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#404040"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="5,2"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="#C0C0C0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#000080"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
                
                <!-- Loading Overlay -->
                <Border Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                    <Border Background="#C0C0C0" BorderThickness="2" BorderBrush="#808080" Padding="20"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="[...] Generando reporte" FontFamily="Courier New" FontSize="12" FontWeight="Bold"
                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <ProgressBar IsIndeterminate="True" Width="150" Height="16"/>
                        </StackPanel>
                    </Border>
                </Border>
            </Grid>
        </Border>
        
        <!-- Status bar -->
        <Border Grid.Row="3" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="5,3" Margin="0,5,0,0">
            <TextBlock Text="{Binding StatusMessage}" FontFamily="Tahoma" FontSize="10" Foreground="#404040"/>
        </Border>
    </Grid>
</UserControl>
