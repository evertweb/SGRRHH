<UserControl x:Class="SGRRHH.WPF.Views.CatalogosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Contenido principal centrado -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="700">
            <!-- TÃ­tulo -->
            <TextBlock Text="[CATALOGOS]" FontFamily="Courier New" FontSize="24" FontWeight="Bold"
                       Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="CATALOGOS DEL SISTEMA" FontFamily="Tahoma" FontSize="14" FontWeight="Bold" 
                       Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock Text="Seleccione que desea administrar:" FontFamily="Tahoma" FontSize="10" 
                       Foreground="#404040" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            
            <!-- Primera fila de opciones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <!-- Departamentos -->
                <Border Background="White" BorderThickness="2" BorderBrush="#808080"
                        Padding="15" Margin="0,0,15,0" Cursor="Hand" Width="140">
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToDepartamentosCommand}"/>
                    </Border.InputBindings>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Background="#000080" Width="45" Height="45" 
                                HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="[D]" FontFamily="Courier New" FontSize="16" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Departamentos" FontFamily="Tahoma" FontSize="9" FontWeight="Bold"
                                   Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="Areas organizacionales" FontFamily="Tahoma" FontSize="8"
                                   Foreground="#808080" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Cargos -->
                <Border Background="White" BorderThickness="2" BorderBrush="#808080"
                        Padding="15" Margin="0,0,15,0" Cursor="Hand" Width="140">
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToCargosCommand}"/>
                    </Border.InputBindings>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Background="#008000" Width="45" Height="45" 
                                HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="[C]" FontFamily="Courier New" FontSize="16" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Cargos" FontFamily="Tahoma" FontSize="9" FontWeight="Bold"
                                   Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="Puestos y funciones" FontFamily="Tahoma" FontSize="8"
                                   Foreground="#808080" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Proyectos -->
                <Border Background="White" BorderThickness="2" BorderBrush="#808080"
                        Padding="15" Cursor="Hand" Width="140">
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToProyectosCommand}"/>
                    </Border.InputBindings>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Background="#CC6600" Width="45" Height="45" 
                                HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="[P]" FontFamily="Courier New" FontSize="16" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Proyectos" FontFamily="Tahoma" FontSize="9" FontWeight="Bold"
                                   Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="Gestion de proyectos" FontFamily="Tahoma" FontSize="8"
                                   Foreground="#808080" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Segunda fila de opciones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Actividades -->
                <Border Background="White" BorderThickness="2" BorderBrush="#808080"
                        Padding="15" Margin="0,0,15,0" Cursor="Hand" Width="140">
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToActividadesCommand}"/>
                    </Border.InputBindings>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Background="#800080" Width="45" Height="45" 
                                HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="[A]" FontFamily="Courier New" FontSize="16" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Actividades" FontFamily="Tahoma" FontSize="9" FontWeight="Bold"
                                   Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="Tipos de actividades" FontFamily="Tahoma" FontSize="8"
                                   Foreground="#808080" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Tipos de Permiso -->
                <Border Background="White" BorderThickness="2" BorderBrush="#808080"
                        Padding="15" Cursor="Hand" Width="140">
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToTiposPermisoCommand}"/>
                    </Border.InputBindings>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Background="#CC0000" Width="45" Height="45" 
                                HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="[T]" FontFamily="Courier New" FontSize="16" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Tipos Permiso" FontFamily="Tahoma" FontSize="9" FontWeight="Bold"
                                   Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="Categorias permisos" FontFamily="Tahoma" FontSize="8"
                                   Foreground="#808080" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
        
        <!-- Footer con fecha actual -->
        <Border Grid.Row="1" Background="#E0E0E0" Padding="10,8" BorderThickness="0,1,0,0" BorderBrush="#808080">
            <TextBlock HorizontalAlignment="Center" FontFamily="Tahoma" FontSize="9" Foreground="#404040"
                       Text="{Binding FechaActual, StringFormat='Fecha: {0:dddd, dd MMMM yyyy}'}"/>
        </Border>
    </Grid>
</UserControl>
