<UserControl x:Class="SGRRHH.WPF.Views.EmpleadosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGRRHH.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#FAFAFA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Panel de solicitudes pendientes (solo visible para Aprobadores/Admin) -->
        <Border Grid.Row="0" Background="#FFF8E1" Padding="15" Margin="0,0,0,10"
                BorderBrush="#FFE082" BorderThickness="1" CornerRadius="8"
                Visibility="{Binding ShowPendientes, Converter={StaticResource BoolToVisibilityConverter}}">
            <Expander IsExpanded="True">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‹" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Solicitudes Pendientes de AprobaciÃ³n" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Foreground="#F57C00"/>
                        <Border Background="#FF8F00" CornerRadius="10" Padding="8,2" Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalPendientes}" FontWeight="Bold" Foreground="White" FontSize="12"/>
                        </Border>
                    </StackPanel>
                </Expander.Header>
                
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MaxHeight="200"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Lista de pendientes -->
                    <DataGrid Grid.Row="0" ItemsSource="{Binding EmpleadosPendientes}"
                              SelectedItem="{Binding SelectedPendiente}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#FFE082"
                              BorderThickness="1" BorderBrush="#FFE082"
                              RowHeight="40" FontSize="12" HeadersVisibility="Column"
                              Background="White" MaxHeight="180"
                              VerticalScrollBarVisibility="Auto">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF8F00"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FFF3E0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="CÃ³digo" Binding="{Binding Codigo}" Width="80"/>
                            <DataGridTextColumn Header="CÃ©dula" Binding="{Binding Cedula}" Width="100"/>
                            <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="*"/>
                            <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento.Nombre}" Width="130"/>
                            <DataGridTextColumn Header="Cargo" Binding="{Binding Cargo.Nombre}" Width="130"/>
                            <DataGridTextColumn Header="Fecha Solicitud" Binding="{Binding FechaSolicitud, StringFormat=dd/MM/yyyy HH:mm}" Width="130"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Botones de aprobaciÃ³n -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="âœ… Aprobar" Command="{Binding AprobarEmpleadoCommand}"
                                Height="35" Padding="20,0" Margin="0,0,10,0"
                                Background="#43A047" Foreground="White" FontWeight="Bold"
                                BorderThickness="0" Cursor="Hand"/>
                        <Button Content="âŒ Rechazar" Command="{Binding RechazarEmpleadoCommand}"
                                Height="35" Padding="20,0"
                                Background="#E53935" Foreground="White" FontWeight="Bold"
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Expander>
        </Border>
        
        <!-- Barra de herramientas superior -->
        <Border Grid.Row="1" Background="White" Padding="15" Margin="0,0,0,10"
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Filtros de bÃºsqueda -->
                <WrapPanel Grid.Column="0" VerticalAlignment="Center">
                    <!-- Campo de bÃºsqueda -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="250" Height="35" Padding="10,8"
                                 VerticalContentAlignment="Center"
                                 FontSize="13">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="ðŸ” Buscar por nombre, cÃ©dula, cÃ³digo..." 
                                                                       Foreground="#9E9E9E" Margin="10,0,0,0"
                                                                       FontSize="13"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding SearchEmpleadosCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Content="Buscar" Command="{Binding SearchEmpleadosCommand}"
                                Width="80" Height="35" Margin="5,0,0,0"
                                Background="#1E88E5" Foreground="White" FontWeight="SemiBold"
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                    
                    <!-- Filtro por departamento -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                        <TextBlock Text="Departamento:" VerticalAlignment="Center" 
                                   Margin="0,0,8,0" Foreground="#616161" FontSize="13"/>
                        <ComboBox ItemsSource="{Binding Departamentos}"
                                  SelectedItem="{Binding SelectedDepartamento}"
                                  DisplayMemberPath="Nombre"
                                  Width="180" Height="35" FontSize="13"/>
                    </StackPanel>
                    
                    <!-- Filtro por estado -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                        <TextBlock Text="Estado:" VerticalAlignment="Center" 
                                   Margin="0,0,8,0" Foreground="#616161" FontSize="13"/>
                        <ComboBox ItemsSource="{Binding Estados}"
                                  SelectedValue="{Binding SelectedEstado}"
                                  SelectedValuePath="Valor"
                                  DisplayMemberPath="Nombre"
                                  Width="160" Height="35" FontSize="13"/>
                    </StackPanel>
                    
                    <!-- BotÃ³n limpiar filtros -->
                    <Button Content="âœ– Limpiar" Command="{Binding ClearFiltersCommand}"
                            Height="35" Padding="15,0"
                            Background="#F5F5F5" Foreground="#616161"
                            BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand" Margin="0,0,0,5"/>
                </WrapPanel>
                
                <!-- BotÃ³n nuevo empleado -->
                <Button Grid.Column="1" Command="{Binding CreateEmpleadoCommand}"
                        Height="40" Padding="20,0"
                        Background="#43A047" Foreground="White" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand" FontSize="14">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âž•" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Nuevo Empleado" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Indicador de carga -->
        <Border Grid.Row="2" Background="#E3F2FD" Padding="10" Margin="0,0,0,10" CornerRadius="5"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="â³" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding StatusMessage}" FontSize="13" Foreground="#1565C0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Lista de empleados -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="0"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <DataGrid ItemsSource="{Binding Empleados}"
                      SelectedItem="{Binding SelectedEmpleado}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F5F5F5"
                      BorderThickness="0"
                      RowHeight="45"
                      FontSize="13"
                      HeadersVisibility="Column">
                
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#37474F"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="BorderBrush" Value="#455A64"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12,0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#212121"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CÃ³digo" Binding="{Binding Codigo}" Width="90"/>
                    <DataGridTextColumn Header="CÃ©dula" Binding="{Binding Cedula}" Width="110"/>
                    <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="*"/>
                    <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento.Nombre}" Width="140"/>
                    <DataGridTextColumn Header="Cargo" Binding="{Binding Cargo.Nombre}" Width="140"/>
                    <DataGridTextColumn Header="Ingreso" Binding="{Binding FechaIngreso, StringFormat=dd/MM/yyyy}" Width="90"/>
                    
                    <DataGridTemplateColumn Header="Estado" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="8,4" CornerRadius="3" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Estado}" Value="PendienteAprobacion">
                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="Activo">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="EnVacaciones">
                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="EnLicencia">
                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="Suspendido">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="Retirado">
                                                    <Setter Property="Background" Value="#ECEFF1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                    <Setter Property="Background" Value="#FFCDD2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="11" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Estado}" Value="PendienteAprobacion">
                                                        <Setter Property="Text" Value="â³ Pendiente"/>
                                                        <Setter Property="Foreground" Value="#EF6C00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Activo">
                                                        <Setter Property="Text" Value="âœ… Activo"/>
                                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="EnVacaciones">
                                                        <Setter Property="Text" Value="ðŸ–ï¸ Vacaciones"/>
                                                        <Setter Property="Foreground" Value="#1565C0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="EnLicencia">
                                                        <Setter Property="Text" Value="ðŸ“‹ Licencia"/>
                                                        <Setter Property="Foreground" Value="#EF6C00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Suspendido">
                                                        <Setter Property="Text" Value="âš ï¸ Suspendido"/>
                                                        <Setter Property="Foreground" Value="#C62828"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Retirado">
                                                        <Setter Property="Text" Value="ðŸšª Retirado"/>
                                                        <Setter Property="Foreground" Value="#546E7A"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                        <Setter Property="Text" Value="âŒ Rechazado"/>
                                                        <Setter Property="Foreground" Value="#C62828"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Columna de acciones -->
                    <DataGridTemplateColumn Header="Acciones" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="ðŸ‘" ToolTip="Ver detalle"
                                            Command="{Binding DataContext.ViewEmpleadoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Width="32" Height="28" Margin="2,0"
                                            Background="#E3F2FD" Foreground="#1E88E5"
                                            BorderThickness="0" Cursor="Hand" FontSize="13"/>
                                    <Button Content="âœï¸" ToolTip="Editar"
                                            Command="{Binding DataContext.EditEmpleadoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Width="32" Height="28" Margin="2,0"
                                            Background="#FFF3E0" Foreground="#F57C00"
                                            BorderThickness="0" Cursor="Hand" FontSize="13"/>
                                    <Button Content="â¸ï¸" ToolTip="Desactivar (puede reactivarse)"
                                            Command="{Binding DataContext.DeactivateEmpleadoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Width="32" Height="28" Margin="2,0"
                                            Background="#FFF8E1" Foreground="#FF8F00"
                                            BorderThickness="0" Cursor="Hand" FontSize="13"/>
                                    <Button Content="âŒ" ToolTip="Eliminar permanentemente"
                                            Command="{Binding DataContext.DeleteEmpleadoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Width="32" Height="28" Margin="2,0"
                                            Background="#FFEBEE" Foreground="#D32F2F"
                                            BorderThickness="0" Cursor="Hand" FontSize="13"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Barra de estado -->
        <Border Grid.Row="4" Background="White" Padding="15,10" Margin="0,10,0,0"
                BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" CornerRadius="8">
            <Grid>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#616161" FontSize="13">
                    <Run Text="Total:"/>
                    <Run Text="{Binding TotalEmpleados, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text="empleado(s)"/>
                    <Run Text=" | Pendientes:"/>
                    <Run Text="{Binding TotalPendientes, Mode=OneWay}" FontWeight="Bold" Foreground="#F57C00"/>
                </TextBlock>
                <TextBlock Text="{Binding StatusMessage}" HorizontalAlignment="Right" 
                           VerticalAlignment="Center" Foreground="#9E9E9E" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
