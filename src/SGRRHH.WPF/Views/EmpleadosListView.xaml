<UserControl x:Class="SGRRHH.WPF.Views.EmpleadosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGRRHH.WPF.Views"
             xmlns:controls="clr-namespace:SGRRHH.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="5">
        <!-- ============================================ -->
        <!-- PANTALLA DE BIENVENIDA (Home) -->
        <!-- ============================================ -->
        <Border Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                BorderThickness="1" BorderBrush="#808080" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#000080" Padding="10,5">
                    <TextBlock Text="--- MODULO DE GESTION DE EMPLEADOS ---" FontFamily="Tahoma" FontSize="12" 
                               FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
                
                <!-- Contenido principal -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="EMPLEADOS" FontFamily="Courier New" FontSize="36" FontWeight="Bold" 
                               Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Seleccione una opcion:" FontFamily="Tahoma" FontSize="12" 
                               Foreground="#404040" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <!-- Opciones como botones grandes -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Opción: Registrar Empleado -->
                        <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" 
                                Margin="0,0,20,0" Cursor="Hand">
                            <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding CreateEmpleadoCommand}"/>
                                </Border.InputBindings>
                                <StackPanel Width="160">
                                    <TextBlock Text="[+]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                               Foreground="#008000" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="REGISTRAR" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="EMPLEADO" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Agregar nuevo" FontFamily="Tahoma" FontSize="9"
                                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Border>
                        
                        <!-- Opción: Ver Empleados -->
                        <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" Cursor="Hand">
                            <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding ShowListCommand}"/>
                                </Border.InputBindings>
                                <StackPanel Width="160">
                                    <TextBlock Text="[=]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                               Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="VER LISTA" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="EMPLEADOS" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Consultar y gestionar" FontFamily="Tahoma" FontSize="9"
                                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Border>
                    </StackPanel>
                </StackPanel>
                
                <!-- Footer -->
                <Border Grid.Row="2" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="10,5">
                    <TextBlock Text="{Binding CurrentDateText}" FontFamily="Tahoma" FontSize="10" 
                               Foreground="#404040" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- ============================================ -->
        <!-- VISTA DE LISTA DE EMPLEADOS -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsListVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Botón volver + Panel pendientes -->
                <RowDefinition Height="Auto"/>  <!-- Barra de filtros -->
                <RowDefinition Height="Auto"/>  <!-- Indicador carga -->
                <RowDefinition Height="*"/>     <!-- DataGrid -->
                <RowDefinition Height="Auto"/>  <!-- Barra de estado -->
            </Grid.RowDefinitions>
            
            <!-- Fila 0: Botón volver y Panel de pendientes -->
            <StackPanel Grid.Row="0">
                <!-- Botón volver al inicio -->
                <Button Command="{Binding ShowHomeCommand}" Content="&lt;&lt; Volver al Menu"
                        Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Left" 
                        FontFamily="Tahoma" FontSize="10" Padding="10,3" Margin="0,0,0,5"/>
                
                <!-- Panel de solicitudes pendientes (solo visible para Aprobadores/Admin) -->
                <Border BorderThickness="1" BorderBrush="#808080" Margin="0,0,0,5"
                        Visibility="{Binding ShowPendientes, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Expander IsExpanded="True" Background="#FFF8DC">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[!] SOLICITUDES PENDIENTES DE APROBACION" FontFamily="Tahoma" 
                                           FontSize="10" FontWeight="Bold" Foreground="#B8860B" VerticalAlignment="Center"/>
                                <Border Background="#FF8C00" Padding="5,1" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding TotalPendientes}" FontFamily="Tahoma" FontSize="10" 
                                               FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </Expander.Header>
                        
                        <Grid Margin="5" Background="#FFF8DC">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MaxHeight="150"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Lista de pendientes -->
                            <DataGrid Grid.Row="0" ItemsSource="{Binding EmpleadosPendientes}"
                                      SelectedItem="{Binding SelectedPendiente}"
                                      AutoGenerateColumns="False" IsReadOnly="True"
                                      GridLinesVisibility="All" HeadersVisibility="Column"
                                      BorderThickness="1" BorderBrush="#808080"
                                      RowHeight="20" FontFamily="Tahoma" FontSize="10"
                                      Background="White" AlternatingRowBackground="#FFFACD"
                                      CanUserAddRows="False" CanUserDeleteRows="False"
                                      SelectionMode="Single" SelectionUnit="FullRow">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#C0C0C0"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Padding" Value="5,3"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="COD" Binding="{Binding Codigo}" Width="60"/>
                                    <DataGridTextColumn Header="CEDULA" Binding="{Binding Cedula}" Width="80"/>
                                    <DataGridTextColumn Header="NOMBRE COMPLETO" Binding="{Binding NombreCompleto}" Width="*"/>
                                    <DataGridTextColumn Header="DEPTO" Binding="{Binding Departamento.Nombre}" Width="100"/>
                                    <DataGridTextColumn Header="CARGO" Binding="{Binding Cargo.Nombre}" Width="100"/>
                                    <DataGridTextColumn Header="FECHA SOL." Binding="{Binding FechaSolicitud, StringFormat=dd/MM/yy}" Width="70"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- Botones de aprobación -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                <controls:LegacyAsyncButton Content="Aprobar" Command="{Binding AprobarEmpleadoCommand}"
                                        IsLoading="{Binding IsLoading}" Margin="0,0,5,0"/>
                                <controls:LegacyAsyncButton Content="Rechazar" Command="{Binding RechazarEmpleadoCommand}"
                                        IsLoading="{Binding IsLoading}"/>
                            </StackPanel>
                        </Grid>
                    </Expander>
                </Border>
            </StackPanel>
        
            <!-- Fila 1: Barra de filtros -->
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="#808080" Margin="0,0,0,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#E0E0E0" Padding="5,2">
                        <TextBlock Text="FILTROS DE BUSQUEDA" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="#404040"/>
                    </Border>
                    
                    <WrapPanel Grid.Row="1" Background="White" Margin="5">
                        <!-- Campo de búsqueda -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                            <TextBlock Text="Buscar:" FontFamily="Tahoma" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource LegacyTextBoxStyle}" Width="180" Height="20" FontSize="10">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Return" Command="{Binding SearchEmpleadosCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <controls:LegacyAsyncButton Content="Buscar" Command="{Binding SearchEmpleadosCommand}"
                                    IsLoading="{Binding IsLoading}" Margin="5,0,0,0"/>
                        </StackPanel>
                        
                        <!-- Filtro por departamento -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                            <TextBlock Text="Depto:" FontFamily="Tahoma" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox ItemsSource="{Binding Departamentos}"
                                      SelectedItem="{Binding SelectedDepartamento}"
                                      DisplayMemberPath="Nombre"
                                      Width="150" Height="20" FontFamily="Tahoma" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Filtro por estado -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                            <TextBlock Text="Estado:" FontFamily="Tahoma" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox ItemsSource="{Binding Estados}"
                                      SelectedValue="{Binding SelectedEstado}"
                                      SelectedValuePath="Valor"
                                      DisplayMemberPath="Nombre"
                                      Width="130" Height="20" FontFamily="Tahoma" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Botón limpiar filtros -->
                        <Button Content="Limpiar" Command="{Binding ClearFiltersCommand}"
                                Style="{StaticResource LegacyButtonStyle}"
                                FontFamily="Tahoma" FontSize="10" Padding="10,2" Margin="0,0,0,5"/>
                    </WrapPanel>
                </Grid>
            </Border>
        
            <!-- Fila 2: Indicador de carga -->
            <Border Grid.Row="2" Background="#FFFACD" BorderThickness="1" BorderBrush="#808080" Padding="5" Margin="0,0,0,5"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="{Binding StatusMessage}" FontFamily="Tahoma" FontSize="10" 
                           Foreground="#808080" FontStyle="Italic" HorizontalAlignment="Center"/>
            </Border>
        
            <!-- Fila 3: DataGrid de empleados -->
            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#808080">
                <DataGrid ItemsSource="{Binding Empleados}"
                          SelectedItem="{Binding SelectedEmpleado}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          GridLinesVisibility="All" HeadersVisibility="Column"
                          BorderThickness="0"
                          RowHeight="22" FontFamily="Tahoma" FontSize="10"
                          Background="White" AlternatingRowBackground="#F0F0F0"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#C0C0C0"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Tahoma"/>
                            <Setter Property="FontSize" Value="10"/>
                            <Setter Property="Padding" Value="5,3"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="5,2"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#000080"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="COD." Binding="{Binding Codigo}" Width="70"/>
                        <DataGridTextColumn Header="CEDULA" Binding="{Binding Cedula}" Width="90"/>
                        <DataGridTextColumn Header="NOMBRE COMPLETO" Binding="{Binding NombreCompleto}" Width="*"/>
                        <DataGridTextColumn Header="DEPARTAMENTO" Binding="{Binding Departamento.Nombre}" Width="120"/>
                        <DataGridTextColumn Header="CARGO" Binding="{Binding Cargo.Nombre}" Width="120"/>
                        <DataGridTextColumn Header="INGRESO" Binding="{Binding FechaIngreso, StringFormat=dd/MM/yyyy}" Width="80"/>
                        
                        <!-- Columna de Estado -->
                        <DataGridTemplateColumn Header="ESTADO" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Padding="3,1" FontFamily="Tahoma" FontSize="9" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Estado}" Value="PendienteAprobacion">
                                                        <Setter Property="Text" Value="PENDIENTE"/>
                                                        <Setter Property="Foreground" Value="#B8860B"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Activo">
                                                        <Setter Property="Text" Value="ACTIVO"/>
                                                        <Setter Property="Foreground" Value="#008000"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="EnVacaciones">
                                                        <Setter Property="Text" Value="VACACIONES"/>
                                                        <Setter Property="Foreground" Value="#000080"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="EnLicencia">
                                                        <Setter Property="Text" Value="LICENCIA"/>
                                                        <Setter Property="Foreground" Value="#FF8C00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Suspendido">
                                                        <Setter Property="Text" Value="SUSPENDIDO"/>
                                                        <Setter Property="Foreground" Value="#800000"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Retirado">
                                                        <Setter Property="Text" Value="RETIRADO"/>
                                                        <Setter Property="Foreground" Value="#808080"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                        <Setter Property="Text" Value="RECHAZADO"/>
                                                        <Setter Property="Foreground" Value="#800000"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Columna de acciones -->
                        <DataGridTemplateColumn Header="ACCIONES" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Ver" 
                                                Command="{Binding DataContext.ViewEmpleadoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="9" Padding="5,1" Margin="1,0"/>
                                        <Button Content="Editar"
                                                Command="{Binding DataContext.EditEmpleadoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="9" Padding="5,1" Margin="1,0"/>
                                        <Button Content="X"
                                                Command="{Binding DataContext.DeactivateEmpleadoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="9" Padding="5,1" Margin="1,0"
                                                ToolTip="Desactivar"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        
            <!-- Fila 4: Barra de estado -->
            <Border Grid.Row="4" BorderThickness="0,1,0,0" BorderBrush="#808080" Background="#C0C0C0" Margin="0,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Estado general -->
                    <Border Grid.Column="0" BorderThickness="1" BorderBrush="#808080" Margin="2" Padding="5,2">
                        <Border BorderThickness="1" BorderBrush="#DFDFDF">
                            <TextBlock FontFamily="Tahoma" FontSize="10" Margin="3,0">
                                <Run Text="Total: "/>
                                <Run Text="{Binding TotalEmpleados, Mode=OneWay}" FontWeight="Bold"/>
                                <Run Text=" empleado(s)"/>
                            </TextBlock>
                        </Border>
                    </Border>
                    
                    <!-- Pendientes -->
                    <Border Grid.Column="1" BorderThickness="1" BorderBrush="#808080" Margin="2" Padding="5,2" Width="140">
                        <Border BorderThickness="1" BorderBrush="#DFDFDF">
                            <TextBlock FontFamily="Tahoma" FontSize="10" Margin="3,0">
                                <Run Text="Pendientes: "/>
                                <Run Text="{Binding TotalPendientes, Mode=OneWay}" FontWeight="Bold" Foreground="#B8860B"/>
                            </TextBlock>
                        </Border>
                    </Border>
                    
                    <!-- Mensaje de estado -->
                    <Border Grid.Column="2" BorderThickness="1" BorderBrush="#808080" Margin="2" Padding="5,2" Width="200">
                        <Border BorderThickness="1" BorderBrush="#DFDFDF">
                            <TextBlock Text="{Binding StatusMessage}" FontFamily="Tahoma" FontSize="10" 
                                       Foreground="#808080" Margin="3,0" TextTrimming="CharacterEllipsis"/>
                        </Border>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
