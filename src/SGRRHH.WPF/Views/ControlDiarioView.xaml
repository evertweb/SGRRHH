<UserControl x:Class="SGRRHH.WPF.Views.ControlDiarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Background="{StaticResource SurfaceBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:CollectionContainsConverter x:Key="CollectionContainsConverter"/>
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>

        <!-- Estilo local para tarjetas de estadÃ­sticas -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header + Stats -->
            <RowDefinition Height="Auto"/> <!-- Filters + Main Actions -->
            <RowDefinition Height="*"/>    <!-- DataGrid Content -->
            <RowDefinition Height="Auto"/> <!-- Footer/Status -->
        </Grid.RowDefinitions>
        
        <!-- 1. HEADER & STATS -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- TÃ­tulo y SubtÃ­tulo -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Control Diario" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="GestiÃ³n y monitoreo de registros de actividad" 
                           FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" 
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Tarjetas de EstadÃ­sticas -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="TOTAL REGISTROS" FontSize="10" FontWeight="Bold" 
                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                        <TextBlock Text="{Binding TotalRegistros}" FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="HORAS MES" FontSize="10" FontWeight="Bold" 
                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                        <TextBlock Text="{Binding HorasMesActual, StringFormat=N1}" FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource SuccessBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- 2. FILTERS & MAIN ACTIONS -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" 
                CornerRadius="8" Padding="16" Margin="0,0,0,16"
                BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Filters -->
                    <ColumnDefinition Width="*"/>    <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/> <!-- Actions -->
                </Grid.ColumnDefinitions>
                
                <!-- Filtros (Izquierda) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Empleado -->
                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="Empleado" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <ComboBox Width="240" Height="36"
                                  ItemsSource="{Binding Empleados, Mode=OneWay}" 
                                  SelectedItem="{Binding SelectedEmpleado}"
                                  DisplayMemberPath="NombreCompleto"
                                  Style="{StaticResource StandardComboBox}"/>
                    </StackPanel>
                    
                    <!-- Mes -->
                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="Mes" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <ComboBox Width="140" Height="36"
                                  ItemsSource="{Binding Meses}" 
                                  SelectedItem="{Binding SelectedMes}"
                                  Style="{StaticResource StandardComboBox}"/>
                    </StackPanel>
                    
                    <!-- AÃ±o -->
                    <StackPanel>
                        <TextBlock Text="AÃ±o" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <ComboBox Width="100" Height="36"
                                  ItemsSource="{Binding Anios}" 
                                  SelectedItem="{Binding SelectedAnio}"
                                  Style="{StaticResource StandardComboBox}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Acciones Principales (Derecha) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButton}" 
                            Height="36" Margin="0,0,12,0" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" Margin="0,0,8,0"/>
                            <TextBlock Text="Actualizar"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ExportCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Height="36" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¥" Margin="0,0,8,0"/>
                            <TextBlock Text="Exportar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 3. DATA GRID SECTION -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                CornerRadius="8" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1"
                ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Toolbar -->
                    <RowDefinition Height="*"/>    <!-- Grid -->
                </Grid.RowDefinitions>
                
                <!-- Toolbar de Tabla -->
                <Border Grid.Row="0" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1"
                        Padding="16,12" Background="{StaticResource BackgroundBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Contador -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Resultados:" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding RegistrosFiltrados.Count, Mode=OneWay, FallbackValue=0}" 
                                       FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                        
                        <!-- Acciones de Registro -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Command="{Binding ViewRegistroCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="32" Margin="0,0,8,0" Padding="12,0"
                                    ToolTip="Ver detalles">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘ï¸" Margin="0,0,6,0" FontSize="11"/>
                                    <TextBlock Text="Ver" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding EditRegistroCommand}"
                                    Style="{StaticResource WarningButton}"
                                    Height="32" Margin="0,0,8,0" Padding="12,0"
                                    ToolTip="Editar registro">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âœï¸" Margin="0,0,6,0" FontSize="11"/>
                                    <TextBlock Text="Editar" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding DeleteRegistroCommand}"
                                    Style="{StaticResource DangerButton}"
                                    Height="32" Padding="12,0"
                                    ToolTip="Eliminar registro">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,6,0" FontSize="11"/>
                                    <TextBlock Text="Eliminar" FontSize="12"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding RegistrosFiltrados, Mode=OneWay}"
                          SelectedItem="{Binding SelectedRegistro}"
                          Style="{StaticResource StandardDataGrid}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          RowHeight="48"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <!-- Checkbox para selecciÃ³n mÃºltiple -->
                        <DataGridTemplateColumn Header="â˜‘" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Command="{Binding DataContext.ToggleRegistroSelectionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                              CommandParameter="{Binding}">
                                        <CheckBox.IsChecked>
                                            <MultiBinding Converter="{StaticResource CollectionContainsConverter}" Mode="OneWay">
                                                <Binding Path="." />
                                                <Binding Path="DataContext.RegistrosSeleccionados" RelativeSource="{RelativeSource AncestorType=DataGrid}" />
                                            </MultiBinding>
                                        </CheckBox.IsChecked>
                                    </CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Fecha -->
                        <DataGridTemplateColumn Header="Fecha" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center" Margin="10,0">
                                        <TextBlock Text="{Binding Fecha, StringFormat=dd/MM/yyyy}" 
                                                   FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Fecha, StringFormat=dddd}" 
                                                   FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Empleado -->
                        <DataGridTextColumn Header="Empleado" Binding="{Binding Empleado.NombreCompleto}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="10,0"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Horario -->
                        <DataGridTemplateColumn Header="Horario" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding HoraEntrada, Converter={StaticResource TimeSpanToStringConverter}}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text=" - " Foreground="{StaticResource TextTertiaryBrush}"/>
                                            <TextBlock Text="{Binding HoraSalida, Converter={StaticResource TimeSpanToStringConverter}}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Horas -->
                        <DataGridTextColumn Header="Horas" Width="80" IsReadOnly="True">
                            <DataGridTextColumn.Binding>
                                <Binding Path="TotalHoras" StringFormat="N1" Mode="OneWay"/>
                            </DataGridTextColumn.Binding>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Actividades -->
                        <DataGridTemplateColumn Header="Actividades" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource PrimaryLightBrush}" CornerRadius="10" Padding="8,2" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding DetallesActividades.Count, StringFormat={}{0} items, FallbackValue='0 items', TargetNullValue='0 items'}"
                                                   FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource PrimaryDarkBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Estado -->
                        <DataGridTemplateColumn Header="Estado" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="10,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Estado}" Value="1">
                                                        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="2">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="11" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Borrador"/>
                                                    <Setter Property="Foreground" Value="{StaticResource WarningDarkBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estado}" Value="1">
                                                            <Setter Property="Text" Value="Completado"/>
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessDarkBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="2">
                                                            <Setter Property="Text" Value="Aprobado"/>
                                                            <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Empty state -->
                <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" 
                        Visibility="{Binding HasNoRegistros, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“­" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="No hay registros encontrados" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Intenta cambiar los filtros de bÃºsqueda" 
                                   FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- 4. FOOTER / STATUS -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Estado:" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
            
            <ProgressBar Grid.Column="1" IsIndeterminate="True" Width="150" Height="4" 
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"/>
        </Grid>
    </Grid>
</UserControl>
