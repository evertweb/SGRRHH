<UserControl x:Class="SGRRHH.WPF.Views.ControlDiarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{StaticResource SurfaceBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Encabezado con selecciÃ³n de empleado y fecha -->
        <Border Grid.Row="0" Background="{StaticResource BorderLightBrush}" Padding="15" CornerRadius="8" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Selector de empleado -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Empleado:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <ComboBox Width="300" Height="35" 
                              ItemsSource="{Binding Empleados}" 
                              SelectedItem="{Binding SelectedEmpleado}"
                              DisplayMemberPath="NombreCompleto"
                              VerticalContentAlignment="Center"/>
                </StackPanel>
                
                <!-- NavegaciÃ³n de fecha -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <Button Content="â—€" Width="35" Height="35" Command="{Binding DiaAnteriorCommand}"
                            Style="{StaticResource PrimaryButton}" Padding="0"/>
                    <DatePicker SelectedDate="{Binding SelectedFecha}" Width="130" Height="35" 
                                Margin="5,0" VerticalContentAlignment="Center"/>
                    <Button Content="â–¶" Width="35" Height="35" Command="{Binding DiaSiguienteCommand}"
                            Style="{StaticResource PrimaryButton}" Padding="0"/>
                    <Button Content="Hoy" Width="60" Height="35" Margin="10,0,0,0"
                            Command="{Binding IrAHoyCommand}"
                            Style="{StaticResource SuccessButton}" Padding="5"/>
                </StackPanel>
                
                <!-- EstadÃ­sticas rÃ¡pidas -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Background="{StaticResource PrimaryLightBrush}" CornerRadius="5" Padding="10,5" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Horas hoy: " FontSize="12"/>
                            <TextBlock Text="{Binding TotalHoras, StringFormat=N1}" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource WarningLightBrush}" CornerRadius="5" Padding="10,5" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mes: " FontSize="12"/>
                            <TextBlock Text="{Binding HorasMesActual, StringFormat=N1}" FontWeight="Bold" FontSize="12"/>
                            <TextBlock Text=" hrs" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Contenido principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Panel izquierdo: Registro y actividades -->
            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Horas de entrada/salida -->
                <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Hora de entrada" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding HoraEntrada, StringFormat=hh\\:mm}" 
                                     Style="{StaticResource StandardTextBox}"
                                     IsEnabled="{Binding CanEdit}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBlock Text="Hora de salida" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding HoraSalida, StringFormat=hh\\:mm}" 
                                     Style="{StaticResource StandardTextBox}"
                                     IsEnabled="{Binding CanEdit}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="10,0">
                            <TextBlock Text="Observaciones" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding Observaciones, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}"
                                     IsEnabled="{Binding CanEdit}"/>
                        </StackPanel>
                        
                        <Button Grid.Column="3" Content="ðŸ’¾ Guardar" Width="100"
                                Command="{Binding SaveRegistroCommand}"
                                Style="{StaticResource PrimaryButton}"
                                VerticalAlignment="Bottom" Margin="10,0,0,0"
                                IsEnabled="{Binding CanEdit}"/>
                    </Grid>
                </Border>
                
                <!-- Agregar actividad -->
                <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,15"
                        IsEnabled="{Binding CanEdit}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
                            <TextBlock Text="Actividad *" Style="{StaticResource FormLabel}"/>
                            <ComboBox ItemsSource="{Binding Actividades}" 
                                      SelectedItem="{Binding SelectedActividad}"
                                      Style="{StaticResource StandardComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Nombre}"/>
                                            <TextBlock Text=" - " Foreground="{StaticResource TextDisabledBrush}"/>
                                            <TextBlock Text="{Binding Categoria}" Foreground="{StaticResource TextDisabledBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0">
                            <TextBlock Style="{StaticResource FormLabel}">
                                <Run Text="Proyecto"/>
                                <Run x:Name="RequiredAsterisk" Text=" *" Foreground="{StaticResource DangerBrush}"/>
                            </TextBlock>
                            <ComboBox ItemsSource="{Binding Proyectos}" 
                                      SelectedItem="{Binding SelectedProyecto}"
                                      DisplayMemberPath="Nombre"
                                      Style="{StaticResource StandardComboBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Grid.Row="0" Margin="10,0">
                            <TextBlock Text="Horas *" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding Horas, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}"
                                     HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="3" Grid.Row="0" Content="âž•" Width="40"
                                Command="{Binding AddActividadCommand}"
                                Style="{StaticResource SuccessButton}"
                                FontSize="16" VerticalAlignment="Bottom" Margin="10,0,0,0"
                                ToolTip="Agregar actividad" Padding="0"/>
                        
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" Margin="0,10,0,0">
                            <TextBlock Text="DescripciÃ³n (opcional)" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding DescripcionActividad, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Lista de actividades del dÃ­a -->
                <Border Grid.Row="2" Style="{StaticResource CardPanel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="ðŸ“‹ Actividades del dÃ­a" FontWeight="SemiBold" FontSize="14" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalHoras, StringFormat=' ({0:N1} horas)'}" 
                                       Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <Button Content="ðŸ—‘ï¸" Width="35" Height="30" Margin="15,0,0,0"
                                    Command="{Binding DeleteActividadCommand}"
                                    Style="{StaticResource DangerOutlineButton}"
                                    ToolTip="Eliminar actividad seleccionada"
                                    IsEnabled="{Binding CanEdit}"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding DetallesActividades}"
                                  SelectedItem="{Binding SelectedDetalle}"
                                  Style="{StaticResource StandardDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Orden}" Width="40"/>
                                <DataGridTextColumn Header="Actividad" Binding="{Binding Actividad.Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Proyecto" Binding="{Binding Proyecto.Nombre}" Width="150"/>
                                <DataGridTextColumn Header="Horas" Binding="{Binding Horas, StringFormat=N1}" Width="70"/>
                                <DataGridTextColumn Header="DescripciÃ³n" Binding="{Binding Descripcion}" Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Panel derecho: Historial y acciones -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Acciones -->
                <Border Grid.Row="0" Background="{StaticResource SuccessLightBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="âš¡ Acciones" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <Button Content="âœ… Completar Registro" Height="40"
                                Command="{Binding CompletarRegistroCommand}"
                                Style="{StaticResource SuccessButton}"
                                IsEnabled="{Binding CanEdit}"/>
                        
                        <TextBlock Text="Una vez completado, el registro no podrÃ¡ modificarse."
                                   FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" TextWrapping="Wrap" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Historial reciente -->
                <Border Grid.Row="1" Style="{StaticResource CardPanel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="ðŸ“… Registros del mes" FontWeight="SemiBold" FontSize="14" 
                                   Margin="0,0,0,10"/>
                        
                        <ListBox Grid.Row="1" ItemsSource="{Binding RegistrosRecientes}"
                                 BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="5" Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Fecha, StringFormat=dd/MM/yyyy ddd}"
                                                       FontSize="12"/>
                                            
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding TotalHoras, StringFormat={}{0:N1}h}"
                                                       FontWeight="SemiBold" Margin="10,0" FontSize="12"/>
                                            
                                            <Border Grid.Column="2" CornerRadius="3" Padding="5,2">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Estado}" Value="1">
                                                                <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Estado}" Value="2">
                                                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="10">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Borrador"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Estado}" Value="1">
                                                                    <Setter Property="Text" Value="Completado"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Estado}" Value="2">
                                                                    <Setter Property="Text" Value="Aprobado"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Barra de estado -->
        <Border Grid.Row="2" Background="{StaticResource BorderLightBrush}" Padding="10" Margin="0,15,0,0" CornerRadius="5">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="100" Height="3" HorizontalAlignment="Right"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
