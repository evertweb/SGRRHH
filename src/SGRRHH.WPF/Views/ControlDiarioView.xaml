<UserControl x:Class="SGRRHH.WPF.Views.ControlDiarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
             xmlns:controls="clr-namespace:SGRRHH.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
            <converters:CollectionContainsConverter x:Key="CollectionContainsConverter"/>
            <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Stats + Filters -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>
        
        <!-- 1. HEADER -->
        <Border Grid.Row="0" Background="#000080" Padding="10,5" Margin="0,0,0,5">
            <TextBlock Text="--- CONTROL DIARIO DE ACTIVIDADES ---" FontFamily="Tahoma" FontSize="12" 
                       FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <!-- 2. STATS + FILTERS -->
        <Grid Grid.Row="1" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Estadísticas (izquierda) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <!-- Total registros -->
                <Border BorderThickness="1" BorderBrush="#808080" Background="White" Padding="10,5" Margin="0,0,5,0">
                    <Border BorderThickness="1" BorderBrush="#DFDFDF">
                        <StackPanel Margin="5,0">
                            <TextBlock Text="TOTAL REGISTROS" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                            <TextBlock Text="{Binding TotalRegistros}" FontFamily="Courier New" FontSize="18" 
                                       FontWeight="Bold" Foreground="#000080"/>
                        </StackPanel>
                    </Border>
                </Border>
                
                <!-- Horas mes -->
                <Border BorderThickness="1" BorderBrush="#808080" Background="White" Padding="10,5">
                    <Border BorderThickness="1" BorderBrush="#DFDFDF">
                        <StackPanel Margin="5,0">
                            <TextBlock Text="HORAS MES" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                            <TextBlock Text="{Binding HorasMesActual, StringFormat=N1}" FontFamily="Courier New" FontSize="18" 
                                       FontWeight="Bold" Foreground="#008000"/>
                        </StackPanel>
                    </Border>
                </Border>
            </StackPanel>
            
            <!-- Filtros (centro/derecha) -->
            <Border Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="#808080" Background="White" 
                    Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#E0E0E0" Padding="5,2" BorderThickness="0,0,0,1" BorderBrush="#808080">
                        <TextBlock Text="FILTROS" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                    </Border>
                    
                    <WrapPanel Grid.Row="1" Margin="10,8">
                        <!-- Empleado -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="Empleado:" FontFamily="Tahoma" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="200" Height="20"
                                      ItemsSource="{Binding Empleados, Mode=OneWay}" 
                                      SelectedItem="{Binding SelectedEmpleado}"
                                      DisplayMemberPath="NombreCompleto"
                                      FontFamily="Tahoma" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Mes -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="Mes:" FontFamily="Tahoma" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="120" Height="20"
                                      ItemsSource="{Binding Meses}" 
                                      SelectedItem="{Binding SelectedMes}"
                                      FontFamily="Tahoma" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Año -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="Año:" FontFamily="Tahoma" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="80" Height="20"
                                      ItemsSource="{Binding Anios}" 
                                      SelectedItem="{Binding SelectedAnio}"
                                      FontFamily="Tahoma" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Botones -->
                        <controls:LegacyAsyncButton Content="Actualizar" Command="{Binding RefreshCommand}"
                                IsLoading="{Binding IsLoading}" Margin="0,0,5,0"/>
                        <controls:LegacyAsyncButton Content="Exportar" Command="{Binding ExportCommand}"
                                IsLoading="{Binding IsLoading}"/>
                    </WrapPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 3. DATA GRID -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#808080">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <Border Grid.Row="0" Background="#E0E0E0" BorderThickness="0,0,0,1" BorderBrush="#808080" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Resultados: " FontFamily="Tahoma" FontSize="10" Foreground="#808080"/>
                            <TextBlock Text="{Binding RegistrosFiltrados.Count, Mode=OneWay, FallbackValue=0}" 
                                       FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <controls:LegacyAsyncButton Content="Ver" Command="{Binding ViewRegistroCommand}"
                                    IsLoading="{Binding IsLoading}" Margin="0,0,3,0"/>
                            <controls:LegacyAsyncButton Content="Editar" Command="{Binding EditRegistroCommand}"
                                    IsLoading="{Binding IsLoading}" Margin="0,0,3,0"/>
                            <controls:LegacyAsyncButton Content="Eliminar" Command="{Binding DeleteRegistroCommand}"
                                    IsLoading="{Binding IsLoading}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding RegistrosFiltrados, Mode=OneWay}"
                          SelectedItem="{Binding SelectedRegistro}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          RowHeight="22"
                          FontFamily="Tahoma"
                          FontSize="10"
                          Background="White"
                          AlternatingRowBackground="#F0F0F0"
                          BorderThickness="0"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#000080"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Tahoma"/>
                            <Setter Property="FontSize" Value="10"/>
                            <Setter Property="Padding" Value="5,3"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#404040"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="5,2"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#000080"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <!-- Checkbox -->
                        <DataGridTemplateColumn Header="[X]" Width="35">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Command="{Binding DataContext.ToggleRegistroSelectionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                              CommandParameter="{Binding}">
                                        <CheckBox.IsChecked>
                                            <MultiBinding Converter="{StaticResource CollectionContainsConverter}" Mode="OneWay">
                                                <Binding Path="." />
                                                <Binding Path="DataContext.RegistrosSeleccionados" RelativeSource="{RelativeSource AncestorType=DataGrid}" />
                                            </MultiBinding>
                                        </CheckBox.IsChecked>
                                    </CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Fecha -->
                        <DataGridTemplateColumn Header="FECHA" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Fecha, StringFormat=dd/MM/yyyy}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Fecha, StringFormat=ddd}" FontSize="9" Foreground="#808080"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Empleado -->
                        <DataGridTextColumn Header="EMPLEADO" Binding="{Binding Empleado.NombreCompleto}" Width="*"/>
                        
                        <!-- Horario -->
                        <DataGridTemplateColumn Header="HORARIO" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center" FontFamily="Courier New">
                                        <Run Text="{Binding HoraEntrada, Converter={StaticResource TimeSpanToStringConverter}}"/>
                                        <Run Text="-"/>
                                        <Run Text="{Binding HoraSalida, Converter={StaticResource TimeSpanToStringConverter}}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Horas -->
                        <DataGridTextColumn Header="HRS" Width="50">
                            <DataGridTextColumn.Binding>
                                <Binding Path="TotalHoras" StringFormat="N1" Mode="OneWay"/>
                            </DataGridTextColumn.Binding>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontFamily" Value="Courier New"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#000080"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Actividades -->
                        <DataGridTemplateColumn Header="ACT" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               FontFamily="Courier New" FontWeight="Bold">
                                        <Run Text="{Binding DetallesActividades.Count, FallbackValue='0', TargetNullValue='0'}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Estado -->
                        <DataGridTemplateColumn Header="ESTADO" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="Tahoma" FontSize="9" FontWeight="Bold" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="BORRADOR"/>
                                                <Setter Property="Foreground" Value="#B8860B"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Estado}" Value="1">
                                                        <Setter Property="Text" Value="COMPLETADO"/>
                                                        <Setter Property="Foreground" Value="#008000"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="2">
                                                        <Setter Property="Text" Value="APROBADO"/>
                                                        <Setter Property="Foreground" Value="#000080"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Empty state -->
                <Border Grid.Row="1" Background="White" 
                        Visibility="{Binding HasNoRegistros, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="[SIN DATOS]" FontFamily="Courier New" FontSize="14" 
                                   FontWeight="Bold" Foreground="#808080" HorizontalAlignment="Center"/>
                        <TextBlock Text="No hay registros encontrados" FontFamily="Tahoma" FontSize="10" 
                                   Foreground="#808080" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock Text="Intente cambiar los filtros de busqueda" FontFamily="Tahoma" FontSize="10" 
                                   Foreground="#808080" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- 4. STATUS BAR -->
        <Border Grid.Row="3" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Margin="0,5,0,0" Padding="5,3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border BorderThickness="1" BorderBrush="#808080" Padding="5,1" Margin="0,0,10,0">
                        <Border BorderThickness="1" BorderBrush="#DFDFDF">
                            <TextBlock FontFamily="Tahoma" FontSize="10" Margin="3,0">
                                <Run Text="Estado: "/>
                                <Run Text="{Binding StatusMessage}"/>
                            </TextBlock>
                        </Border>
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                    <TextBlock Text="Cargando..." FontFamily="Tahoma" FontSize="10" FontStyle="Italic" Foreground="#808080"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
