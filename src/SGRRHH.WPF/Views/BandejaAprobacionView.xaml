<UserControl x:Class="SGRRHH.WPF.Views.BandejaAprobacionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGRRHH.WPF.Views"
             xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
             xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F5F5F5">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350" x:Name="DetailColumn"/>
        </Grid.ColumnDefinitions>
        
        <!-- Lista de permisos pendientes -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="ðŸ“‹ Bandeja de AprobaciÃ³n" FontSize="24" FontWeight="Bold" Foreground="#1976D2"/>
                <TextBlock Text="Permisos pendientes de aprobaciÃ³n" Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Stats y acciones -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Background="#FFF3E0" CornerRadius="8" Padding="20,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding TotalPendientes}" FontSize="28" FontWeight="Bold" Foreground="#F57C00"/>
                        <TextBlock Text=" permisos pendientes" VerticalAlignment="Center" Foreground="#F57C00" Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>
                
                <Button Grid.Column="2" Content="âœ… Aprobar Todos" 
                        Command="{Binding ApproveAllCommand}"
                        Background="#4CAF50" Foreground="White"
                        Padding="20,10" Cursor="Hand"
                        Visibility="{Binding TotalPendientes, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Lista -->
            <Border Grid.Row="2" Background="White" CornerRadius="8">
                <Grid>
                    <!-- Loading -->
                    <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="â³ Cargando..." FontSize="16" Foreground="#666"/>
                    </StackPanel>
                    
                    <!-- Empty state -->
                    <StackPanel Visibility="{Binding TotalPendientes, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="âœ…" FontSize="60" HorizontalAlignment="Center"/>
                        <TextBlock Text="No hay permisos pendientes" FontSize="18" Foreground="#666" Margin="0,10,0,0"/>
                        <TextBlock Text="Todos los permisos han sido procesados" Foreground="#999" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Lista de permisos -->
                    <ListBox ItemsSource="{Binding PermisosPendientes}"
                             SelectedItem="{Binding SelectedPermiso}"
                             BorderThickness="0"
                             Padding="10"
                             Visibility="{Binding TotalPendientes, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA" CornerRadius="8" Padding="15" Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- NÃºmero y Tipo -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding NumeroActa}" FontWeight="Bold" FontSize="14" Foreground="#1976D2"/>
                                            <Border Background="{Binding TipoPermiso.Color}" CornerRadius="10" Padding="8,2" Margin="10,0,0,0">
                                                <TextBlock Text="{Binding TipoPermiso.Nombre}" FontSize="11" Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        
                                        <!-- Empleado -->
                                        <TextBlock Grid.Row="1" Margin="0,8,0,0">
                                            <Run Text="ðŸ‘¤ " FontSize="12"/>
                                            <Run Text="{Binding Empleado.NombreCompleto}" FontWeight="SemiBold"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding Empleado.Cargo.Nombre}" Foreground="#666"/>
                                        </TextBlock>
                                        
                                        <!-- Fechas -->
                                        <TextBlock Grid.Row="2" Margin="0,5,0,0" Foreground="#666">
                                            <Run Text="ðŸ“… "/>
                                            <Run Text="{Binding FechaInicio, StringFormat=dd/MM/yyyy}"/>
                                            <Run Text=" al "/>
                                            <Run Text="{Binding FechaFin, StringFormat=dd/MM/yyyy}"/>
                                            <Run Text=" ("/>
                                            <Run Text="{Binding TotalDias}" FontWeight="SemiBold"/>
                                            <Run Text=" dÃ­as)"/>
                                        </TextBlock>
                                        
                                        <!-- Motivo -->
                                        <TextBlock Grid.Row="3" Text="{Binding Motivo}" 
                                                   TextTrimming="CharacterEllipsis" MaxWidth="350"
                                                   Margin="0,5,0,0" Foreground="#888" FontStyle="Italic"/>
                                        
                                        <!-- Botones -->
                                        <StackPanel Grid.Column="1" Grid.RowSpan="4" 
                                                    VerticalAlignment="Center" Orientation="Vertical">
                                            <Button Content="âœ… Aprobar" 
                                                    Command="{Binding DataContext.SelectForApprovalCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#4CAF50" Foreground="White"
                                                    Padding="15,8" Margin="0,0,0,5" Cursor="Hand"
                                                    Width="100">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Content="âŒ Rechazar" 
                                                    Command="{Binding DataContext.SelectForRejectionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#F44336" Foreground="White"
                                                    Padding="15,8" Cursor="Hand"
                                                    Width="100">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Panel de aprobaciÃ³n/rechazo -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20"
                Visibility="{Binding ShowApprovalPanel, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header del panel -->
                <StackPanel Grid.Row="0">
                    <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,0,5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="âœ… Aprobar Permiso"/>
                                <Setter Property="Foreground" Value="#388E3C"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRejecting}" Value="True">
                                        <Setter Property="Text" Value="âŒ Rechazar Permiso"/>
                                        <Setter Property="Foreground" Value="#D32F2F"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding SelectedPermiso.NumeroActa}" Foreground="#666"/>
                </StackPanel>
                
                <!-- Contenido -->
                <ScrollViewer Grid.Row="1" Margin="0,15,0,15" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Info del permiso -->
                        <Border Background="#F5F5F5" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Resumen del Permiso" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                
                                <TextBlock Margin="0,5,0,0">
                                    <Run Text="Empleado: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding SelectedPermiso.Empleado.NombreCompleto}"/>
                                </TextBlock>
                                
                                <TextBlock Margin="0,5,0,0">
                                    <Run Text="Tipo: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding SelectedPermiso.TipoPermiso.Nombre}"/>
                                </TextBlock>
                                
                                <TextBlock Margin="0,5,0,0">
                                    <Run Text="Fechas: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding SelectedPermiso.FechaInicio, StringFormat=dd/MM/yyyy}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding SelectedPermiso.FechaFin, StringFormat=dd/MM/yyyy}"/>
                                </TextBlock>
                                
                                <TextBlock Margin="0,5,0,0">
                                    <Run Text="DÃ­as: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding SelectedPermiso.TotalDias}"/>
                                </TextBlock>
                                
                                <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">
                                    <Run Text="Motivo: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding SelectedPermiso.Motivo}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <!-- Observaciones (para aprobar) -->
                        <StackPanel Visibility="{Binding IsApproving, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Observaciones (opcional)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ObservacionesAprobacion, UpdateSourceTrigger=PropertyChanged}"
                                     Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                                     Padding="10"/>
                        </StackPanel>
                        
                        <!-- Motivo de rechazo (para rechazar) -->
                        <StackPanel Visibility="{Binding IsRejecting, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Motivo del Rechazo" FontWeight="SemiBold"/>
                                <TextBlock Text=" *" Foreground="#D32F2F" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBox Text="{Binding MotivoRechazo, UpdateSourceTrigger=PropertyChanged}"
                                     Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                                     Padding="10"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Botones -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Command="{Binding CancelActionCommand}"
                            Background="#ECEFF1" Foreground="#333"
                            Padding="20,10" Margin="0,0,10,0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- BotÃ³n Confirmar AprobaciÃ³n -->
                    <Button Content="âœ… Confirmar" 
                            Command="{Binding ConfirmApprovalCommand}"
                            Visibility="{Binding IsApproving, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="#4CAF50" Foreground="White"
                            Padding="20,10" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- BotÃ³n Confirmar Rechazo -->
                    <Button Content="âŒ Rechazar" 
                            Command="{Binding ConfirmRejectionCommand}"
                            Visibility="{Binding IsRejecting, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="#F44336" Foreground="White"
                            Padding="20,10" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Panel vacÃ­o cuando no hay selecciÃ³n -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" 
                Visibility="{Binding ShowApprovalPanel, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“‹" FontSize="50" HorizontalAlignment="Center"/>
                <TextBlock Text="Seleccione un permiso" FontSize="16" Foreground="#666" Margin="0,10,0,0"/>
                <TextBlock Text="para aprobar o rechazar" Foreground="#999"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
