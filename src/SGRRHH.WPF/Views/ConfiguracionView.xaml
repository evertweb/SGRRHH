<UserControl x:Class="SGRRHH.WPF.Views.ConfiguracionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SGRRHH.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{DynamicResource PageBackground}">
    
    <UserControl.Resources>
        <!-- Template para ConfiguracionEmpresaViewModel -->
        <DataTemplate DataType="{x:Type local:ConfiguracionEmpresaViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Datos de la Empresa" Style="{DynamicResource PageTitle}" Margin="0,0,0,20"/>
                    
                    <!-- Grid de campos -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Fila 1 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="Nombre de la Empresa *" Style="{DynamicResource FormLabel}"/>
                            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{DynamicResource StandardTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                            <TextBlock Text="NIT *" Style="{DynamicResource FormLabel}"/>
                            <TextBox Text="{Binding Nit, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{DynamicResource StandardTextBox}"/>
                        </StackPanel>
                        
                        <!-- Fila 2 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="DirecciÃ³n" Style="{DynamicResource FormLabel}"/>
                            <TextBox Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{DynamicResource StandardTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                            <TextBlock Text="Ciudad" Style="{DynamicResource FormLabel}"/>
                            <TextBox Text="{Binding Ciudad, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{DynamicResource StandardTextBox}"/>
                        </StackPanel>
                        
                        <!-- Fila 3 -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="TelÃ©fono" Style="{DynamicResource FormLabel}"/>
                            <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{DynamicResource StandardTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,10">
                            <TextBlock Text="Correo ElectrÃ³nico" Style="{DynamicResource FormLabel}"/>
                            <TextBox Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{DynamicResource StandardTextBox}"/>
                        </StackPanel>
                        
                        <!-- Fila 4 - Representante -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="Nombre Representante Legal" Style="{DynamicResource FormLabel}"/>
                            <TextBox Text="{Binding RepresentanteNombre, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{DynamicResource StandardTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,10">
                            <TextBlock Text="Cargo Representante Legal" Style="{DynamicResource FormLabel}"/>
                            <TextBox Text="{Binding RepresentanteCargo, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{DynamicResource StandardTextBox}"/>
                        </StackPanel>
                        
                        <!-- Fila 5 - Logo -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,10">
                            <TextBlock Text="Logo de la Empresa" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="150" Height="100" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,15,0">
                                    <Image Source="{Binding LogoPath}" Stretch="Uniform"
                                           Visibility="{Binding HayLogo, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <Button Content="ðŸ“ Seleccionar Logo" 
                                            Command="{Binding SeleccionarLogoCommand}"
                                            Style="{DynamicResource SecondaryButton}" Margin="0,0,0,5"/>
                                    <Button Content="ðŸ—‘ï¸ Eliminar Logo" 
                                            Command="{Binding EliminarLogoCommand}"
                                            Style="{DynamicResource DangerButton}"
                                            Visibility="{Binding HayLogo, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Fila 6 - BotÃ³n Guardar -->
                        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="ðŸ’¾ Guardar ConfiguraciÃ³n" 
                                    Command="{Binding GuardarCommand}"
                                    Style="{DynamicResource SuccessButton}"
                                    FontSize="14"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Mensaje -->
                    <TextBlock Text="{Binding Mensaje}" 
                               Foreground="{DynamicResource DangerBrush}" 
                               Margin="0,10,0,0"
                               Visibility="{Binding Mensaje, Converter={StaticResource NullToVisibilityConverter}}"/>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>
        
        <!-- Template para BackupViewModel -->
        <DataTemplate DataType="{x:Type local:BackupViewModel}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- TÃ­tulo -->
                <TextBlock Grid.Row="0" Text="Respaldo de Base de Datos" Style="{DynamicResource PageTitle}" Margin="0,0,0,10"/>
                
                <!-- Botones de acciÃ³n -->
                <WrapPanel Grid.Row="1" Margin="0,0,0,15">
                    <Button Content="ðŸ’¾ Crear Backup" 
                            Command="{Binding CrearBackupCommand}"
                            Style="{DynamicResource SuccessButton}" Margin="0,0,10,5"/>
                    <Button Content="ðŸ“ Guardar Backup en..." 
                            Command="{Binding CrearBackupEnCommand}"
                            Style="{DynamicResource SecondaryButton}" Margin="0,0,10,5"/>
                    <Button Content="ðŸ“‚ Restaurar desde archivo..." 
                            Command="{Binding RestaurarDesdeArchivoCommand}"
                            Style="{DynamicResource SecondaryButton}" Margin="0,0,10,5"/>
                    <Button Content="ðŸ“ Abrir carpeta de backups" 
                            Command="{Binding AbrirCarpetaBackupsCommand}"
                            Style="{DynamicResource SecondaryButton}" Margin="0,0,10,5"/>
                </WrapPanel>
                
                <!-- Lista de backups -->
                <GroupBox Grid.Row="2" Header="Backups disponibles" Padding="10">
                    <DataGrid ItemsSource="{Binding Backups}"
                              SelectedItem="{Binding SelectedBackup}"
                              Style="{DynamicResource StandardDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Archivo" Binding="{Binding NombreArchivo}" Width="*"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding FechaCreacion, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="150"/>
                            <DataGridTextColumn Header="TamaÃ±o" Binding="{Binding TamaÃ±oFormateado}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                
                <!-- Botones para backup seleccionado -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="â™»ï¸ Restaurar seleccionado" 
                            Command="{Binding RestaurarBackupCommand}"
                            Style="{DynamicResource InfoButton}" Margin="0,0,10,0"/>
                    <Button Content="ðŸ—‘ï¸ Eliminar seleccionado" 
                            Command="{Binding EliminarBackupCommand}"
                            Style="{DynamicResource DangerButton}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        
        <!-- Template para AuditLogViewModel -->
        <DataTemplate DataType="{x:Type local:AuditLogViewModel}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- TÃ­tulo -->
                <TextBlock Grid.Row="0" Text="Log de AuditorÃ­a" Style="{DynamicResource PageTitle}" Margin="0,0,0,10"/>
                
                <!-- Filtros -->
                <WrapPanel Grid.Row="1" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                        <TextBlock Text="Desde:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker SelectedDate="{Binding FechaDesde}" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                        <TextBlock Text="Hasta:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker SelectedDate="{Binding FechaHasta}" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                        <TextBlock Text="Entidad:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox ItemsSource="{Binding Entidades}" 
                                  SelectedItem="{Binding FiltroEntidad}"
                                  Width="120"/>
                    </StackPanel>
                    <Button Content="ðŸ” Buscar" 
                            Command="{Binding BuscarCommand}"
                            Style="{DynamicResource PrimaryButton}" Margin="0,0,5,5"/>
                    <Button Content="ðŸ”„ Limpiar" 
                            Command="{Binding LimpiarFiltrosCommand}"
                            Style="{DynamicResource SecondaryButton}" Margin="0,0,0,5"/>
                </WrapPanel>
                
                <!-- Lista de registros -->
                <DataGrid Grid.Row="2"
                          ItemsSource="{Binding Registros}"
                          Style="{DynamicResource StandardDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha/Hora" Binding="{Binding FechaHora, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}" Width="140"/>
                        <DataGridTextColumn Header="Usuario" Binding="{Binding UsuarioNombre}" Width="120"/>
                        <DataGridTextColumn Header="AcciÃ³n" Binding="{Binding Accion}" Width="100"/>
                        <DataGridTextColumn Header="Entidad" Binding="{Binding Entidad}" Width="100"/>
                        <DataGridTextColumn Header="DescripciÃ³n" Binding="{Binding Descripcion}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- BotÃ³n limpiar antiguos -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBlock Text="{Binding Mensaje}" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="ðŸ—‘ï¸ Limpiar registros antiguos (90+ dÃ­as)" 
                            Command="{Binding LimpiarRegistrosAntiguosCommand}"
                            Style="{DynamicResource SecondaryButton}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- Template para SeguridadViewModel -->
        <DataTemplate DataType="{x:Type local:SeguridadViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Seguridad y Windows Hello" Style="{DynamicResource PageTitle}" Margin="0,0,0,20"/>

                    <!-- Estado de Windows Hello -->
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ” Windows Hello" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Estado: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding WindowsHelloStatusMessage}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Text="{Binding DeviceName, StringFormat='Dispositivo actual: {0}'}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="12" Margin="0,0,0,15"/>

                            <!-- Botones de acciÃ³n -->
                            <StackPanel Orientation="Horizontal">
                                <!-- BotÃ³n registrar dispositivo -->
                                <Button Content="âž• Registrar este dispositivo"
                                        Command="{Binding RegisterPasskeyCommand}"
                                        Style="{DynamicResource SuccessButton}"
                                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                        Visibility="{Binding HasThisDevicePasskey, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                        Padding="15,10" FontSize="14"
                                        Margin="0,0,10,0"/>

                                <!-- BotÃ³n Asistente de ConfiguraciÃ³n -->
                                <Button Content="ðŸ§™ Asistente de ConfiguraciÃ³n"
                                        Command="{Binding OpenWizardCommand}"
                                        Style="{DynamicResource PrimaryButton}"
                                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                        Visibility="{Binding HasThisDevicePasskey, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                        Padding="15,10" FontSize="14"/>
                            </StackPanel>

                            <!-- Mensaje de dispositivo ya registrado -->
                            <Border Background="{DynamicResource SuccessLightBrush}" CornerRadius="5" Padding="10"
                                    Visibility="{Binding HasThisDevicePasskey, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="âœ… Este dispositivo ya tiene Windows Hello configurado"
                                           Foreground="{DynamicResource SuccessBrush}"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Lista de dispositivos con passkey -->
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="20"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Dispositivos con Windows Hello" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <DataGrid ItemsSource="{Binding Passkeys}"
                                      SelectedItem="{Binding SelectedPasskey}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      Style="{DynamicResource StandardDataGrid}"
                                      MinHeight="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Dispositivo" Binding="{Binding DeviceName}" Width="*" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Registrado" Binding="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="150" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Ãšltimo uso" Binding="{Binding LastUsedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="150" IsReadOnly="True"/>
                                    <DataGridTemplateColumn Header="Estado" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding IsCurrent, Converter={StaticResource BoolToCurrentDeviceConverter}}"
                                                           Foreground="{DynamicResource SuccessBrush}"
                                                           FontWeight="SemiBold"
                                                           Visibility="{Binding IsCurrent, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Acciones" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="ðŸ—‘ï¸ Eliminar"
                                                        Command="{Binding DataContext.RemovePasskeyCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{DynamicResource DangerButton}"
                                                        Padding="8,4" FontSize="12"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Mensaje si no hay passkeys -->
                            <TextBlock Text="No hay dispositivos registrados con Windows Hello"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0"
                                       Visibility="{Binding Passkeys.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>

                    <!-- Mensaje de resultado -->
                    <Border Background="{Binding HasError, Converter={StaticResource BoolToErrorBackgroundConverter}}"
                            CornerRadius="5" Padding="12" Margin="0,15,0,0"
                            Visibility="{Binding Mensaje, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding Mensaje}"
                                   Foreground="{Binding HasError, Converter={StaticResource BoolToErrorForegroundConverter}}"
                                   TextWrapping="Wrap"
                                   FontSize="13"/>
                    </Border>

                    <!-- Indicador de carga -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="â³ Procesando..." Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Panel lateral de navegaciÃ³n -->
        <Border Grid.Column="0" Background="{DynamicResource SidebarDarkBrush}" Padding="0">
            <StackPanel>
                <TextBlock Text="âš™ï¸ ConfiguraciÃ³n" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Padding="15"/>
                
                <Button Content="ðŸ¢ Empresa" 
                        Command="{Binding NavigateToSectionCommand}"
                        CommandParameter="Empresa"
                        Style="{DynamicResource SidebarMenuButton}"/>
                
                <Button Content="ðŸ’¾ Backup"
                        Command="{Binding NavigateToSectionCommand}"
                        CommandParameter="Backup"
                        Style="{DynamicResource SidebarMenuButton}"/>

                <Button Content="ðŸ“‹ AuditorÃ­a"
                        Command="{Binding NavigateToSectionCommand}"
                        CommandParameter="Auditoria"
                        Style="{DynamicResource SidebarMenuButton}"/>

                <Button Content="ðŸ” Seguridad"
                        Command="{Binding NavigateToSectionCommand}"
                        CommandParameter="Seguridad"
                        Style="{DynamicResource SidebarMenuButton}"/>
            </StackPanel>
        </Border>
        
        <!-- Contenido de la secciÃ³n -->
        <Border Grid.Column="1" Margin="10">
            <ContentPresenter Content="{Binding CurrentSectionView}"/>
        </Border>
    </Grid>
</UserControl>
