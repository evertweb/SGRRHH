<UserControl x:Class="SGRRHH.WPF.Views.ConfiguracionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SGRRHH.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Template para ConfiguracionEmpresaViewModel -->
            <DataTemplate DataType="{x:Type local:ConfiguracionEmpresaViewModel}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border BorderThickness="1" BorderBrush="#808080" Background="White" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Border Grid.Row="0" Background="#000080" Padding="8,5">
                                <TextBlock Text="DATOS DE LA EMPRESA" FontFamily="Tahoma" FontSize="10" 
                                           FontWeight="Bold" Foreground="White"/>
                            </Border>
                            
                            <StackPanel Grid.Row="1" Margin="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                                        <TextBlock Text="Nombre de la Empresa *" FontFamily="Tahoma" FontSize="8" Foreground="#404040" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                                        <TextBlock Text="NIT *" FontFamily="Tahoma" FontSize="8" Foreground="#404040" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding Nit, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                                        <TextBlock Text="Direccion" FontFamily="Tahoma" FontSize="8" Foreground="#404040" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,10">
                                        <TextBlock Text="Ciudad" FontFamily="Tahoma" FontSize="8" Foreground="#404040" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding Ciudad, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,10">
                                        <TextBlock Text="Telefono" FontFamily="Tahoma" FontSize="8" Foreground="#404040" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,10">
                                        <TextBlock Text="Correo Electronico" FontFamily="Tahoma" FontSize="8" Foreground="#404040" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,10">
                                        <TextBlock Text="Nombre Representante Legal" FontFamily="Tahoma" FontSize="8" Foreground="#404040" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding RepresentanteNombre, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,10">
                                        <TextBlock Text="Cargo Representante Legal" FontFamily="Tahoma" FontSize="8" Foreground="#404040" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding RepresentanteCargo, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                                    </StackPanel>
                                    
                                    <!-- Logo -->
                                    <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Margin="0,10,0,10">
                                        <TextBlock Text="Logo de la Empresa" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="120" Height="80" BorderBrush="#808080" BorderThickness="1" Margin="0,0,10,0" Background="White">
                                                <Image Source="{Binding LogoPath}" Stretch="Uniform"
                                                       Visibility="{Binding HayLogo, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </Border>
                                            <StackPanel VerticalAlignment="Center">
                                                <Button Content="Seleccionar Logo" Command="{Binding SeleccionarLogoCommand}"
                                                        Style="{StaticResource LegacyButtonStyle}"
                                                        FontFamily="Tahoma" FontSize="9" Padding="10,4" Margin="0,0,0,5"/>
                                                <Button Content="Eliminar Logo" Command="{Binding EliminarLogoCommand}"
                                                        Style="{StaticResource LegacyButtonStyle}"
                                                        FontFamily="Tahoma" FontSize="9" Padding="10,4"
                                                        Visibility="{Binding HayLogo, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="5" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                        <Button Content="Guardar Configuracion" Command="{Binding GuardarCommand}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Padding="15,5"/>
                                    </StackPanel>
                                </Grid>
                                
                                <TextBlock Text="{Binding Mensaje}" Foreground="#CC0000" FontFamily="Tahoma" FontSize="9"
                                           Margin="0,10,0,0" Visibility="{Binding Mensaje, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </DataTemplate>
            
            <!-- Template para BackupViewModel -->
            <DataTemplate DataType="{x:Type local:BackupViewModel}">
                <Border BorderThickness="1" BorderBrush="#808080" Background="White" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#000080" Padding="8,5">
                            <TextBlock Text="RESPALDO DE BASE DE DATOS" FontFamily="Tahoma" FontSize="10" 
                                       FontWeight="Bold" Foreground="White"/>
                        </Border>
                        
                        <WrapPanel Grid.Row="1" Margin="10,10,10,5">
                            <Button Content="Crear Backup" Command="{Binding CrearBackupCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,4" Margin="0,0,5,5"/>
                            <Button Content="Guardar Backup en..." Command="{Binding CrearBackupEnCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,4" Margin="0,0,5,5"/>
                            <Button Content="Restaurar desde archivo..." Command="{Binding RestaurarDesdeArchivoCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,4" Margin="0,0,5,5"/>
                            <Button Content="Abrir carpeta" Command="{Binding AbrirCarpetaBackupsCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,4" Margin="0,0,0,5"/>
                        </WrapPanel>
                        
                        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#808080" Margin="10,0,10,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#C0C0C0" Padding="5,3" BorderThickness="0,0,0,1" BorderBrush="#808080">
                                    <TextBlock Text="Backups disponibles" FontFamily="Tahoma" FontSize="9" FontWeight="Bold"/>
                                </Border>
                                <DataGrid Grid.Row="1" ItemsSource="{Binding Backups}" SelectedItem="{Binding SelectedBackup}"
                                          AutoGenerateColumns="False" IsReadOnly="True" FontFamily="Tahoma" FontSize="9"
                                          GridLinesVisibility="All" HeadersVisibility="Column" BorderThickness="0"
                                          RowHeight="20" ColumnHeaderHeight="22">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#C0C0C0"/>
                                            <Setter Property="Foreground" Value="#000080"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="4,2"/>
                                            <Setter Property="BorderBrush" Value="#808080"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Archivo" Binding="{Binding NombreArchivo}" Width="*"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding FechaCreacion, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="120"/>
                                        <DataGridTextColumn Header="Tama침o" Binding="{Binding Tama침oFormateado}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                        
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,10,10">
                            <Button Content="Restaurar seleccionado" Command="{Binding RestaurarBackupCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,4" Margin="0,0,5,0"/>
                            <Button Content="Eliminar seleccionado" Command="{Binding EliminarBackupCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,4"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
            
            <!-- Template para AuditLogViewModel -->
            <DataTemplate DataType="{x:Type local:AuditLogViewModel}">
                <Border BorderThickness="1" BorderBrush="#808080" Background="White" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#000080" Padding="8,5">
                            <TextBlock Text="LOG DE AUDITORIA" FontFamily="Tahoma" FontSize="10" 
                                       FontWeight="Bold" Foreground="White"/>
                        </Border>
                        
                        <WrapPanel Grid.Row="1" Margin="10,10,10,5">
                            <TextBlock Text="Desde:" FontFamily="Tahoma" FontSize="9" VerticalAlignment="Center" Margin="0,0,5,5"/>
                            <DatePicker SelectedDate="{Binding FechaDesde}" Width="100" Margin="0,0,10,5"/>
                            <TextBlock Text="Hasta:" FontFamily="Tahoma" FontSize="9" VerticalAlignment="Center" Margin="0,0,5,5"/>
                            <DatePicker SelectedDate="{Binding FechaHasta}" Width="100" Margin="0,0,10,5"/>
                            <TextBlock Text="Entidad:" FontFamily="Tahoma" FontSize="9" VerticalAlignment="Center" Margin="0,0,5,5"/>
                            <ComboBox ItemsSource="{Binding Entidades}" SelectedItem="{Binding FiltroEntidad}" Width="100" Margin="0,0,10,5"/>
                            <Button Content="Buscar" Command="{Binding BuscarCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,3" Margin="0,0,5,5"/>
                            <Button Content="Limpiar" Command="{Binding LimpiarFiltrosCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,3" Margin="0,0,0,5"/>
                        </WrapPanel>
                        
                        <DataGrid Grid.Row="2" ItemsSource="{Binding Registros}" Margin="10,0,10,10"
                                  AutoGenerateColumns="False" IsReadOnly="True" FontFamily="Tahoma" FontSize="9"
                                  GridLinesVisibility="All" HeadersVisibility="Column" BorderThickness="1" BorderBrush="#808080"
                                  RowHeight="20" ColumnHeaderHeight="22">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#C0C0C0"/>
                                    <Setter Property="Foreground" Value="#000080"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="BorderBrush" Value="#808080"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Fecha/Hora" Binding="{Binding FechaHora, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}" Width="120"/>
                                <DataGridTextColumn Header="Usuario" Binding="{Binding UsuarioNombre}" Width="100"/>
                                <DataGridTextColumn Header="Accion" Binding="{Binding Accion}" Width="80"/>
                                <DataGridTextColumn Header="Entidad" Binding="{Binding Entidad}" Width="80"/>
                                <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,10,10">
                            <TextBlock Text="{Binding Mensaje}" Foreground="#808080" FontFamily="Tahoma" FontSize="9" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Button Content="Limpiar registros antiguos (90+ dias)" Command="{Binding LimpiarRegistrosAntiguosCommand}"
                                    Style="{StaticResource LegacyButtonStyle}"
                                    FontFamily="Tahoma" FontSize="9" Padding="10,4"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>

            <!-- Template para SeguridadViewModel -->
            <DataTemplate DataType="{x:Type local:SeguridadViewModel}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <!-- Estado de Windows Hello -->
                        <Border BorderThickness="1" BorderBrush="#808080" Background="White" Margin="0,0,0,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Background="#000080" Padding="8,5">
                                    <TextBlock Text="WINDOWS HELLO" FontFamily="Tahoma" FontSize="10" 
                                               FontWeight="Bold" Foreground="White"/>
                                </Border>
                                
                                <StackPanel Grid.Row="1" Margin="15">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Estado: " FontFamily="Tahoma" FontSize="9" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding WindowsHelloStatusMessage}" FontFamily="Tahoma" FontSize="9"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding DeviceName, StringFormat='Dispositivo actual: {0}'}"
                                               FontFamily="Tahoma" FontSize="8" Foreground="#808080" Margin="0,0,0,12"/>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Registrar dispositivo" Command="{Binding RegisterPasskeyCommand}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="9" Padding="10,4" Margin="0,0,8,0"
                                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                                Visibility="{Binding HasThisDevicePasskey, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                        <Button Content="Asistente Configuracion" Command="{Binding OpenWizardCommand}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="9" Padding="10,4"
                                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                                Visibility="{Binding HasThisDevicePasskey, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                    
                                    <Border Background="#C0FFC0" BorderThickness="1" BorderBrush="#008000" Padding="8" Margin="0,10,0,0"
                                            Visibility="{Binding HasThisDevicePasskey, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="[OK] Este dispositivo ya tiene Windows Hello configurado"
                                                   FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Foreground="#008000"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Lista de dispositivos -->
                        <Border BorderThickness="1" BorderBrush="#808080" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Background="#000080" Padding="8,5">
                                    <TextBlock Text="DISPOSITIVOS CON WINDOWS HELLO" FontFamily="Tahoma" FontSize="10" 
                                               FontWeight="Bold" Foreground="White"/>
                                </Border>
                                
                                <DataGrid Grid.Row="1" ItemsSource="{Binding Passkeys}" SelectedItem="{Binding SelectedPasskey}"
                                          AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                          FontFamily="Tahoma" FontSize="9" GridLinesVisibility="All" HeadersVisibility="Column"
                                          BorderThickness="0" RowHeight="20" ColumnHeaderHeight="22" MinHeight="150">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#C0C0C0"/>
                                            <Setter Property="Foreground" Value="#000080"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="4,2"/>
                                            <Setter Property="BorderBrush" Value="#808080"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Dispositivo" Binding="{Binding DeviceName}" Width="*" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Registrado" Binding="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="110" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Ultimo uso" Binding="{Binding LastUsedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="110" IsReadOnly="True"/>
                                        <DataGridTemplateColumn Header="Acciones" Width="70">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="X" Command="{Binding DataContext.RemovePasskeyCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource LegacyButtonStyle}"
                                                            FontFamily="Courier New" FontSize="9" Padding="5,2"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                        
                        <!-- Mensaje -->
                        <Border Background="#FFFFCC" BorderThickness="1" BorderBrush="#CC6600" Padding="8" Margin="0,10,0,0"
                                Visibility="{Binding Mensaje, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding Mensaje}" FontFamily="Tahoma" FontSize="9" TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Loading -->
                        <TextBlock Text="[...] Procesando..." FontFamily="Courier New" FontSize="10" HorizontalAlignment="Center"
                                   Foreground="#808080" Margin="0,10,0,0"
                                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </ScrollViewer>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Panel lateral de navegaci칩n -->
        <Border Grid.Column="0" Background="#000080" BorderThickness="0,0,1,0" BorderBrush="#404040">
            <StackPanel>
                <Border Padding="10,12">
                    <TextBlock Text="[CONFIGURACION]" FontFamily="Courier New" FontSize="10" 
                               FontWeight="Bold" Foreground="White"/>
                </Border>
                
                <Button Content="Empresa" Command="{Binding NavigateToSectionCommand}" CommandParameter="Empresa"
                        Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Stretch"
                        FontFamily="Tahoma" FontSize="9" Padding="10,6" Margin="5,0,5,3"/>
                
                <Button Content="Backup" Command="{Binding NavigateToSectionCommand}" CommandParameter="Backup"
                        Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Stretch"
                        FontFamily="Tahoma" FontSize="9" Padding="10,6" Margin="5,0,5,3"/>

                <Button Content="Auditoria" Command="{Binding NavigateToSectionCommand}" CommandParameter="Auditoria"
                        Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Stretch"
                        FontFamily="Tahoma" FontSize="9" Padding="10,6" Margin="5,0,5,3"/>

                <Button Content="Seguridad" Command="{Binding NavigateToSectionCommand}" CommandParameter="Seguridad"
                        Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Stretch"
                        FontFamily="Tahoma" FontSize="9" Padding="10,6" Margin="5,0,5,3"/>
            </StackPanel>
        </Border>
        
        <!-- Contenido de la secci칩n -->
        <ContentPresenter Grid.Column="1" Content="{Binding CurrentSectionView}" Margin="5"/>
    </Grid>
</UserControl>
