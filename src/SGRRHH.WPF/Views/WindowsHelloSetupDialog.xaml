                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="âœ“" 
                                   Foreground="{StaticResource SuccessBrush}" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="Ingrese con huella dactilar, rostro o PIN"
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="âœ“" 
