<Window x:Class="SGRRHH.WPF.Views.WindowsHelloSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configurar Windows Hello"
        Height="320" Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#C0C0C0"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border BorderThickness="2" BorderBrush="#808080" Background="#C0C0C0">
        <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Encabezado Legacy -->
                <Border Grid.Row="0" Background="#000080" Padding="5,3"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="[*]" FontFamily="Courier New" FontSize="10" 
                                       Foreground="White" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Configurar Windows Hello" FontFamily="Tahoma" FontSize="11" 
                                       FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Content="X" HorizontalAlignment="Right"
                                Command="{Binding RemindLaterCommand}"
                                FontFamily="Tahoma" FontSize="9" FontWeight="Bold"
                                Width="18" Height="18" Padding="0"
                                Style="{StaticResource LegacyButtonStyle}"/>
                    </Grid>
                </Border>
                
                <!-- Contenido principal -->
                <Border Grid.Row="1" Background="White" Margin="10" Padding="15"
                        BorderThickness="2" BorderBrush="#808080">
                    <Border BorderThickness="2" BorderBrush="#404040" Margin="-2,-2,0,0" Padding="15">
                        <StackPanel>
                            <!-- Pregunta principal -->
                            <TextBlock Text="Desea activar Windows Hello para inicios de sesion mas rapidos y seguros?"
                                       TextWrapping="Wrap" FontFamily="Tahoma" FontSize="10"
                                       Foreground="#000000" Margin="0,0,0,15"/>
                            
                            <!-- Beneficios -->
                            <Border Background="#E0E0E0" Padding="10" Margin="0,0,0,10"
                                    BorderThickness="1" BorderBrush="#808080">
                                <StackPanel>
                                    <TextBlock Text="BENEFICIOS:" FontFamily="Tahoma" FontSize="9" 
                                               FontWeight="Bold" Foreground="#000080" Margin="0,0,0,5"/>
                                    <TextBlock Text="[X] Ingrese con huella, rostro o PIN" FontFamily="Tahoma" FontSize="9" Foreground="#404040"/>
                                    <TextBlock Text="[X] No necesita recordar contrasena" FontFamily="Tahoma" FontSize="9" Foreground="#404040"/>
                                    <TextBlock Text="[X] Mas seguro que contrasenas tradicionales" FontFamily="Tahoma" FontSize="9" Foreground="#404040"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Mensaje de error -->
                            <Border Background="#FFCCCC" BorderThickness="1" BorderBrush="#800000"
                                    Padding="8" Margin="0,0,0,10"
                                    Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding ErrorMessage}" Foreground="#800000" 
                                           FontFamily="Tahoma" FontSize="9" TextWrapping="Wrap"/>
                            </Border>
                            
                            <!-- Indicador de carga -->
                            <TextBlock Text="Configurando Windows Hello..." FontFamily="Tahoma" FontSize="9"
                                       FontStyle="Italic" Foreground="#808080" HorizontalAlignment="Center"
                                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                </Border>
                
                <!-- Botones de acciÃ³n -->
                <Border Grid.Row="2" Background="#E0E0E0" BorderThickness="0,1,0,0" 
                        BorderBrush="#808080" Padding="10,8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Configurar"
                                Command="{Binding ConfigureNowCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                Style="{StaticResource LegacyButtonStyle}"
                                FontFamily="Tahoma" FontSize="10" FontWeight="Bold"
                                Padding="12,4" Margin="0,0,8,0"/>
                        
                        <Button Content="Mas Tarde"
                                Command="{Binding RemindLaterCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                Style="{StaticResource LegacyButtonStyle}"
                                FontFamily="Tahoma" FontSize="10"
                                Padding="12,4" Margin="0,0,8,0"/>
                        
                        <Button Content="No Preguntar"
                                Command="{Binding NeverAskCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                Style="{StaticResource LegacyButtonStyle}"
                                FontFamily="Tahoma" FontSize="10"
                                Padding="12,4"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
