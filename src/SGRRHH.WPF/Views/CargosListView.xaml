<UserControl x:Class="SGRRHH.WPF.Views.CargosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PurpleBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gesti贸n de Cargos" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextInverseBrush}"/>
                    <TextBlock Text="Administre los cargos y puestos de trabajo" FontSize="14" Foreground="{StaticResource TextInverseBrush}" Opacity="0.7" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Command="{Binding NuevoCommand}" 
                        Style="{StaticResource SuccessButton}"
                        Padding="20,10" FontSize="14">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0"/>
                        <TextBlock Text="Nuevo Cargo" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Filtro por departamento -->
        <Border Grid.Row="1" Style="{StaticResource CardFlat}" Padding="15" Margin="0,0,0,15"
                Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filtrar por Departamento:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <ComboBox Width="250" Style="{StaticResource StandardComboBox}"
                          ItemsSource="{Binding Departamentos}"
                          SelectedValue="{Binding FilterDepartamentoId}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Nombre"/>
                <Button Content="Limpiar" Command="{Binding LimpiarFiltroCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="15,8" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Formulario de edici贸n -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="20" Margin="0,0,0,15"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            
            <StackPanel>
                <TextBlock Margin="0,0,0,15">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource SectionTitle}">
                            <Setter Property="Text" Value="Nuevo Cargo"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditingId, Converter={StaticResource NotNullToVisibilityConverter}}" Value="Visible">
                                    <Setter Property="Text" Value="Editar Cargo"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Nombre -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Nombre *" Style="{StaticResource FieldLabelBold}"/>
                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBox}"/>
                    </StackPanel>
                    
                    <!-- Departamento -->
                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <TextBlock Text="Departamento *" Style="{StaticResource FieldLabelBold}"/>
                        <ComboBox Style="{StaticResource StandardComboBox}"
                                  ItemsSource="{Binding Departamentos}"
                                  SelectedValue="{Binding DepartamentoId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Nombre"/>
                    </StackPanel>
                    
                    <!-- Descripci贸n -->
                    <StackPanel Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Descripci贸n" Style="{StaticResource FieldLabelBold}"/>
                        <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBox}"/>
                    </StackPanel>
                    
                    <!-- Nivel -->
                    <StackPanel Grid.Row="2" Grid.Column="2">
                        <TextBlock Text="Nivel Jer谩rquico" Style="{StaticResource FieldLabelBold}"/>
                        <TextBox Text="{Binding Nivel, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBox}"/>
                    </StackPanel>
                </Grid>
                
                <!-- Activo y Botones -->
                <Grid Margin="0,15,0,0">
                    <CheckBox Content="Activo" IsChecked="{Binding Activo}" 
                              FontSize="14" HorizontalAlignment="Left"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancelar" Command="{Binding CancelarCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="20,10" Margin="0,0,10,0"/>
                        <Button Content="Guardar" Command="{Binding GuardarCommand}"
                                Style="{StaticResource SuccessButton}"
                                Padding="20,10"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Lista de cargos -->
        <Border Grid.Row="3" Style="{StaticResource CardNoBorder}" Padding="0">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Encabezado de tabla -->
                <Border Grid.Row="0" Background="{StaticResource BorderLightBrush}" Padding="15">
                    <Grid>
                        <TextBlock Text="Lista de Cargos" Style="{StaticResource CardTitle}"/>
                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="Total: "/>
                            <Run Text="{Binding Cargos.Count, Mode=OneWay}"/>
                            <Run Text=" cargos"/>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Cargos}" 
                          SelectedItem="{Binding SelectedCargo}"
                          Style="{StaticResource StandardDataGrid}">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento.Nombre}" Width="150"/>
                        <DataGridTextColumn Header="Nivel" Binding="{Binding Nivel}" Width="80"/>
                        <DataGridTemplateColumn Header="Estado" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="8,4" CornerRadius="4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Activo}" Value="False">
                                                        <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Activo"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Activo}" Value="False">
                                                            <Setter Property="Text" Value="Inactivo"/>
                                                            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Acciones" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Editar" 
                                                Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Style="{StaticResource PrimaryButton}"
                                                Padding="10,5" Margin="0,0,5,0" 
                                                FontSize="12"/>
                                        <Button Content="Eliminar" 
                                                Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Style="{StaticResource DangerButton}"
                                                Padding="10,5"
                                                FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Loading overlay -->
                <Border Grid.Row="1" Background="#80FFFFFF" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Cargando..." FontSize="16" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- Empty state -->
                <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                        Visibility="{Binding Cargos.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="No hay cargos registrados" FontSize="16" Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Error message -->
        <Border Grid.Row="3" VerticalAlignment="Top" Margin="0,60,0,0" Background="{StaticResource DangerLightBrush}" 
                CornerRadius="4" Padding="15"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NotNullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource DangerDarkBrush}"/>
        </Border>
    </Grid>
</UserControl>
