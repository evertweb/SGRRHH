<UserControl x:Class="SGRRHH.WPF.Views.CargosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#9C27B0" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gesti贸n de Cargos" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Administre los cargos y puestos de trabajo" FontSize="14" Foreground="#B3FFFFFF" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Command="{Binding NuevoCommand}" 
                        Background="#4CAF50" Foreground="White" 
                        Padding="20,10" FontSize="14" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0"/>
                        <TextBlock Text="Nuevo Cargo" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Filtro por departamento -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filtrar por Departamento:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <ComboBox Width="250" Padding="10" FontSize="14"
                          ItemsSource="{Binding Departamentos}"
                          SelectedValue="{Binding FilterDepartamentoId}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Nombre"/>
                <Button Content="Limpiar" Command="{Binding LimpiarFiltroCommand}"
                        Padding="15,8" Margin="10,0,0,0" 
                        Background="#9E9E9E" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>
        
        <!-- Formulario de edici贸n -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#333">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Nuevo Cargo"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditingId, Converter={StaticResource NotNullToVisibilityConverter}}" Value="Visible">
                                    <Setter Property="Text" Value="Editar Cargo"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Nombre -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Nombre *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10" FontSize="14"/>
                    </StackPanel>
                    
                    <!-- Departamento -->
                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <TextBlock Text="Departamento *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Padding="10" FontSize="14"
                                  ItemsSource="{Binding Departamentos}"
                                  SelectedValue="{Binding DepartamentoId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Nombre"/>
                    </StackPanel>
                    
                    <!-- Descripci贸n -->
                    <StackPanel Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Descripci贸n" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10" FontSize="14"/>
                    </StackPanel>
                    
                    <!-- Nivel -->
                    <StackPanel Grid.Row="2" Grid.Column="2">
                        <TextBlock Text="Nivel Jer谩rquico" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Nivel, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10" FontSize="14"/>
                    </StackPanel>
                </Grid>
                
                <!-- Activo y Botones -->
                <Grid Margin="0,15,0,0">
                    <CheckBox Content="Activo" IsChecked="{Binding Activo}" 
                              FontSize="14" HorizontalAlignment="Left"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancelar" Command="{Binding CancelarCommand}"
                                Padding="20,10" Margin="0,0,10,0" Background="#9E9E9E" 
                                Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Guardar" Command="{Binding GuardarCommand}"
                                Padding="20,10" Background="#4CAF50" 
                                Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Lista de cargos -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Encabezado de tabla -->
                <Border Grid.Row="0" Background="#F5F5F5" Padding="15">
                    <Grid>
                        <TextBlock Text="Lista de Cargos" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock HorizontalAlignment="Right" Foreground="#666">
                            <Run Text="Total: "/>
                            <Run Text="{Binding Cargos.Count, Mode=OneWay}"/>
                            <Run Text=" cargos"/>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Cargos}" 
                          SelectedItem="{Binding SelectedCargo}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          GridLinesVisibility="Horizontal" 
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          RowHeight="45"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento.Nombre}" Width="150"/>
                        <DataGridTextColumn Header="Nivel" Binding="{Binding Nivel}" Width="80"/>
                        <DataGridTemplateColumn Header="Estado" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="8,4" CornerRadius="4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Activo}" Value="False">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Activo"/>
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Activo}" Value="False">
                                                            <Setter Property="Text" Value="Inactivo"/>
                                                            <Setter Property="Foreground" Value="#F44336"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Acciones" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Editar" 
                                                Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Background="#2196F3" Foreground="White" 
                                                Padding="10,5" Margin="0,0,5,0" 
                                                BorderThickness="0" Cursor="Hand"
                                                FontSize="12"/>
                                        <Button Content="Eliminar" 
                                                Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Background="#F44336" Foreground="White" 
                                                Padding="10,5"
                                                BorderThickness="0" Cursor="Hand"
                                                FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Loading overlay -->
                <Border Grid.Row="1" Background="#80FFFFFF" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Cargando..." FontSize="16" Foreground="#666"/>
                    </StackPanel>
                </Border>
                
                <!-- Empty state -->
                <Border Grid.Row="1" Background="White"
                        Visibility="{Binding Cargos.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="No hay cargos registrados" FontSize="16" Foreground="#999"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Error message -->
        <Border Grid.Row="3" VerticalAlignment="Top" Margin="0,60,0,0" Background="#FFEBEE" 
                CornerRadius="4" Padding="15"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NotNullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#D32F2F"/>
        </Border>
    </Grid>
</UserControl>
