<UserControl x:Class="SGRRHH.WPF.Views.CargosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:SGRRHH.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="5">
        <!-- ============================================ -->
        <!-- PANTALLA DE BIENVENIDA (Home) -->
        <!-- ============================================ -->
        <Border Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                BorderThickness="1" BorderBrush="#808080" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#000080" Padding="10,5">
                    <TextBlock Text="--- MODULO DE CARGOS ---" FontFamily="Tahoma" FontSize="12" 
                               FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
                
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="CARGOS" FontFamily="Courier New" FontSize="36" FontWeight="Bold" 
                               Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Seleccione una opcion:" FontFamily="Tahoma" FontSize="12" 
                               Foreground="#404040" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Nuevo Cargo (solo visible si tiene permiso) -->
                        <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" 
                                Margin="0,0,20,0" Cursor="Hand"
                                Visibility="{Binding CanCreate, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding ShowFormCommand}"/>
                                </Border.InputBindings>
                                <StackPanel Width="160">
                                    <TextBlock Text="[+]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                               Foreground="#008000" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="NUEVO" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="CARGO" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Crear nuevo puesto" FontFamily="Tahoma" FontSize="9"
                                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Border>
                        
                        <!-- Ver Cargos -->
                        <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" Cursor="Hand">
                            <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding ShowListCommand}"/>
                                </Border.InputBindings>
                                <StackPanel Width="160">
                                    <TextBlock Text="[=]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                               Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="VER LISTA" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="CARGOS" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Consultar y gestionar" FontFamily="Tahoma" FontSize="9"
                                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Border>
                    </StackPanel>
                </StackPanel>
                
                <Border Grid.Row="2" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="10,5">
                    <TextBlock Text="{Binding CurrentDateText}" FontFamily="Tahoma" FontSize="10" 
                               Foreground="#404040" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- ============================================ -->
        <!-- VISTA DE FORMULARIO (Crear) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsFormViewVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}" Content="&lt;&lt; Volver al Menu"
                    Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Left" 
                    FontFamily="Tahoma" FontSize="10" Padding="10,3" Margin="0,0,0,5"/>
            
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="#808080" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#000080" Padding="10,5">
                        <TextBlock Text="NUEVO CARGO" FontFamily="Tahoma" FontSize="12" 
                                   FontWeight="Bold" Foreground="White"/>
                    </Border>
                    
                    <Grid Grid.Row="1" Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Nombre -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Nombre *" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource LegacyTextBoxStyle}" Height="22" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Departamento -->
                        <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Departamento *" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                            <ComboBox ItemsSource="{Binding Departamentos}"
                                      SelectedValue="{Binding DepartamentoId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Nombre"
                                      Height="22" FontFamily="Tahoma" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Descripcion -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,0,10">
                            <TextBlock Text="Descripcion" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource LegacyTextBoxStyle}" Height="22" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Nivel -->
                        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,0,0,10">
                            <TextBlock Text="Nivel Jerarquico" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding Nivel, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource LegacyTextBoxStyle}" Height="22" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Activo y Botones -->
                        <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="0,20,0,0">
                            <CheckBox Content="Activo" IsChecked="{Binding Activo}" 
                                      FontFamily="Tahoma" FontSize="10" HorizontalAlignment="Left"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <controls:LegacyAsyncButton Content="Cancelar" Command="{Binding CancelarCommand}" Margin="0,0,10,0"/>
                                <controls:LegacyAsyncButton Content="Guardar" Command="{Binding GuardarCommand}" IsLoading="{Binding IsLoading}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE LISTA -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsListViewVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}" Content="&lt;&lt; Volver al Menu"
                    Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Left" 
                    FontFamily="Tahoma" FontSize="10" Padding="10,3" Margin="0,0,0,5"/>
            
            <!-- Header -->
            <Border Grid.Row="1" Background="#000080" Padding="10,5" Margin="0,0,0,5">
                <Grid>
                    <TextBlock Text="LISTA DE CARGOS" FontFamily="Tahoma" FontSize="12" 
                               FontWeight="Bold" Foreground="White"/>
                    <TextBlock HorizontalAlignment="Right" FontFamily="Tahoma" FontSize="10" Foreground="#C0C0FF">
                        <Run Text="Total: "/>
                        <Run Text="{Binding Cargos.Count, Mode=OneWay}"/>
                        <Run Text=" registro(s)"/>
                    </TextBlock>
                </Grid>
            </Border>
            
            <!-- Filtro -->
            <Border Grid.Row="2" BorderThickness="1" BorderBrush="#808080" Background="White" Margin="0,0,0,5" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Filtrar por Departamento:" FontFamily="Tahoma" FontSize="10" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Width="200" Height="20"
                              ItemsSource="{Binding Departamentos}"
                              SelectedValue="{Binding FilterDepartamentoId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Nombre"
                              FontFamily="Tahoma" FontSize="10"/>
                    <Button Content="Limpiar" Command="{Binding LimpiarFiltroCommand}"
                            Style="{StaticResource LegacyButtonStyle}"
                            FontFamily="Tahoma" FontSize="10" Padding="10,2" Margin="10,0,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Error message -->
            <Border Grid.Row="3" Margin="0,0,0,5" Background="#FFCCCC" BorderThickness="1" BorderBrush="#800000" Padding="10"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NotNullToVisibilityConverter}}">
                <TextBlock Text="{Binding ErrorMessage}" FontFamily="Tahoma" FontSize="10" Foreground="#800000"/>
            </Border>
            
            <!-- DataGrid -->
            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#808080">
                <Grid>
                    <DataGrid ItemsSource="{Binding Cargos}" 
                              SelectedItem="{Binding SelectedCargo}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              GridLinesVisibility="All" HeadersVisibility="Column"
                              RowHeight="22" FontFamily="Tahoma" FontSize="10"
                              Background="White" AlternatingRowBackground="#F0F0F0"
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              BorderThickness="0">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#000080"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="5,3"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#404040"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="5,2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#000080"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="NOMBRE" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="DEPARTAMENTO" Binding="{Binding Departamento.Nombre}" Width="150"/>
                            <DataGridTextColumn Header="NIVEL" Binding="{Binding Nivel}" Width="60"/>
                            <DataGridTemplateColumn Header="ESTADO" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontFamily="Tahoma" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="ACTIVO"/>
                                                    <Setter Property="Foreground" Value="#008000"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Activo}" Value="False">
                                                            <Setter Property="Text" Value="INACTIVO"/>
                                                            <Setter Property="Foreground" Value="#800000"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="ACCIONES" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Editar"
                                                    Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    Style="{StaticResource LegacyButtonStyle}"
                                                    FontFamily="Tahoma" FontSize="9" Padding="5,1" Margin="0,0,3,0"
                                                    Visibility="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=DataGrid}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <Button Content="X"
                                                    Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    Style="{StaticResource LegacyButtonStyle}"
                                                    FontFamily="Tahoma" FontSize="9" Padding="5,1" ToolTip="Eliminar"
                                                    Visibility="{Binding DataContext.CanDelete, RelativeSource={RelativeSource AncestorType=DataGrid}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Loading -->
                    <Border Background="#80FFFFFF" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Cargando..." FontFamily="Tahoma" FontSize="12" FontStyle="Italic"
                                   Foreground="#808080" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Empty state -->
                    <Border Background="White"
                            Visibility="{Binding Cargos.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="[SIN DATOS]" FontFamily="Courier New" FontSize="14" 
                                       FontWeight="Bold" Foreground="#808080" HorizontalAlignment="Center"/>
                            <TextBlock Text="No hay cargos registrados" FontFamily="Tahoma" FontSize="10" 
                                       Foreground="#808080" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Status bar -->
            <Border Grid.Row="4" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Margin="0,5,0,0" Padding="5,3">
                <TextBlock FontFamily="Tahoma" FontSize="10">
                    <Run Text="Registros: "/>
                    <Run Text="{Binding Cargos.Count, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE EDICIÃ“N -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsEditViewVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Command="{Binding ShowListCommand}" Content="&lt;&lt; Volver a la Lista"
                    Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Left" 
                    FontFamily="Tahoma" FontSize="10" Padding="10,3" Margin="0,0,0,5"/>
            
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="#808080" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#000080" Padding="10,5">
                        <TextBlock Text="EDITAR CARGO" FontFamily="Tahoma" FontSize="12" 
                                   FontWeight="Bold" Foreground="White"/>
                    </Border>
                    
                    <Grid Grid.Row="1" Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Nombre -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Nombre *" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource LegacyTextBoxStyle}" Height="22" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Departamento -->
                        <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Departamento *" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                            <ComboBox ItemsSource="{Binding Departamentos}"
                                      SelectedValue="{Binding DepartamentoId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Nombre"
                                      Height="22" FontFamily="Tahoma" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Descripcion -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,0,10">
                            <TextBlock Text="Descripcion" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource LegacyTextBoxStyle}" Height="22" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Nivel -->
                        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,0,0,10">
                            <TextBlock Text="Nivel Jerarquico" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding Nivel, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource LegacyTextBoxStyle}" Height="22" FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Activo y Botones -->
                        <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="0,20,0,0">
                            <CheckBox Content="Activo" IsChecked="{Binding Activo}" 
                                      FontFamily="Tahoma" FontSize="10" HorizontalAlignment="Left"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <controls:LegacyAsyncButton Content="Cancelar" Command="{Binding CancelarEditCommand}" Margin="0,0,10,0"/>
                                <controls:LegacyAsyncButton Content="Actualizar" Command="{Binding GuardarCommand}" IsLoading="{Binding IsLoading}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
