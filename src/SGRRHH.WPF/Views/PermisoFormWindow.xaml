<Window x:Class="SGRRHH.WPF.Views.PermisoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGRRHH.WPF.Views"
        xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
        xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="650" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource GrayLightBrush}">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
        
        <Style x:Key="FormFieldStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Height" Value="35"/>
        </Style>
        
        <Style x:Key="RequiredIndicatorStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3,0,0,0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="â³" FontSize="40"/>
                <TextBlock Text="Procesando..." Foreground="{StaticResource TextInverseBrush}" FontSize="16" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
        
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="{Binding WindowTitle}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryDarkBrush}"/>
                <TextBlock Text="Complete los datos del permiso" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Formulario -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Empleado -->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Empleado" Style="{StaticResource FormLabelStyle}"/>
                            <TextBlock Text="*" Style="{StaticResource RequiredIndicatorStyle}"/>
                        </StackPanel>
                        <ComboBox ItemsSource="{Binding Empleados}" 
                                  SelectedItem="{Binding SelectedEmpleado}"
                                  DisplayMemberPath="NombreCompleto"
                                  Style="{StaticResource FormFieldStyle}"
                                  IsEditable="True"/>
                    </StackPanel>
                    
                    <!-- Tipo de Permiso -->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tipo de Permiso" Style="{StaticResource FormLabelStyle}"/>
                            <TextBlock Text="*" Style="{StaticResource RequiredIndicatorStyle}"/>
                        </StackPanel>
                        <ComboBox ItemsSource="{Binding TiposPermiso}" 
                                  SelectedItem="{Binding SelectedTipoPermiso}"
                                  Style="{StaticResource FormFieldStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="12" Height="12" CornerRadius="6" 
                                                Background="{Binding Color}" 
                                                Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Nombre}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Info del tipo de permiso -->
                    <Border Background="{StaticResource PrimaryLightBrush}" CornerRadius="5" Padding="10" Margin="0,0,0,15"
                            Visibility="{Binding SelectedTipoPermiso, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedTipoPermiso.Descripcion}" 
                                       TextWrapping="Wrap" Foreground="{StaticResource InfoBrush}" FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="ðŸ“‹ Requiere documento: " FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock FontSize="11" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="No"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RequiereDocumento}" Value="True">
                                                    <Setter Property="Text" Value="SÃ­"/>
                                                    <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="   |   ðŸ”„ Compensable: " FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock FontSize="11" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="No"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EsCompensable}" Value="True">
                                                    <Setter Property="Text" Value="SÃ­"/>
                                                    <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Fechas -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Fecha Inicio" Style="{StaticResource FormLabelStyle}"/>
                                <TextBlock Text="*" Style="{StaticResource RequiredIndicatorStyle}"/>
                            </StackPanel>
                            <DatePicker SelectedDate="{Binding FechaInicio}" Style="{StaticResource FormFieldStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Fecha Fin" Style="{StaticResource FormLabelStyle}"/>
                                <TextBlock Text="*" Style="{StaticResource RequiredIndicatorStyle}"/>
                            </StackPanel>
                            <DatePicker SelectedDate="{Binding FechaFin}" Style="{StaticResource FormFieldStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Total DÃ­as" Style="{StaticResource FormLabelStyle}"/>
                            <Border Background="{StaticResource SuccessLightBrush}" CornerRadius="5" Height="35">
                                <TextBlock Text="{Binding TotalDias}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           FontSize="16" FontWeight="Bold" Foreground="{StaticResource SuccessDarkBrush}"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Motivo -->
                    <StackPanel Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Motivo" Style="{StaticResource FormLabelStyle}"/>
                            <TextBlock Text="*" Style="{StaticResource RequiredIndicatorStyle}"/>
                        </StackPanel>
                        <TextBox Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                 Padding="10" BorderBrush="{StaticResource BorderBrush}"/>
                    </StackPanel>
                    
                    <!-- Observaciones -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Observaciones (opcional)" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Observaciones, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                 Padding="10" BorderBrush="{StaticResource BorderBrush}"/>
                    </StackPanel>
                    
                    <!-- Documento soporte -->
                    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="ðŸ“Ž Documento Soporte" Style="{StaticResource FormLabelStyle}"/>
                                <TextBlock Text="*" Style="{StaticResource RequiredIndicatorStyle}"
                                           Visibility="{Binding RequiereDocumento, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Text="{Binding DocumentoSoportePath}" IsReadOnly="True" 
                                         Style="{StaticResource StandardTextBox}"/>
                                <Button Grid.Column="1" Content="ðŸ“‚ Seleccionar" 
                                        Command="{Binding SelectDocumentCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="10,0,0,0" Padding="15,8"/>
                                <Button Grid.Column="2" Content="âŒ" 
                                        Command="{Binding RemoveDocumentCommand}"
                                        Visibility="{Binding HasDocument, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Style="{StaticResource DangerOutlineButton}"
                                        Margin="5,0,0,0" Padding="10,8"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Fecha de compensaciÃ³n (si aplica) -->
                    <Border Background="{StaticResource WarningLightBrush}" CornerRadius="5" Padding="15" Margin="0,0,0,15"
                            Visibility="{Binding EsCompensable, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”„ Este permiso es compensable" FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Fecha de CompensaciÃ³n" Style="{StaticResource FormLabelStyle}"/>
                                <TextBlock Text="*" Style="{StaticResource RequiredIndicatorStyle}"/>
                            </StackPanel>
                            <DatePicker SelectedDate="{Binding FechaCompensacion}" Style="{StaticResource StandardDatePicker}" Width="200" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Botones -->
            <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Padding="0,20,0,0" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Command="{Binding CancelCommand}" 
                            Style="{StaticResource SecondaryButton}"
                            Width="120" Height="40" Margin="0,0,10,0" FontSize="14"/>
                    <Button Content="ðŸ’¾ Guardar" Command="{Binding SaveCommand}" 
                            Style="{StaticResource SuccessButton}"
                            Width="140" Height="40" FontWeight="SemiBold" FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
