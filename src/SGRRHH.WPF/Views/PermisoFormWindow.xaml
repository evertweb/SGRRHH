<Window x:Class="SGRRHH.WPF.Views.PermisoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGRRHH.WPF.Views"
        xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
        xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="620" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#C0C0C0">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="100">
            <Border Background="#C0C0C0" BorderThickness="2" BorderBrush="#808080" Padding="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="[...] Procesando" FontFamily="Courier New" FontSize="12" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <ProgressBar IsIndeterminate="True" Width="120" Height="16"/>
                </StackPanel>
            </Border>
        </Border>
        
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#000080" Padding="15,10">
                <StackPanel>
                    <TextBlock Text="{Binding WindowTitle}" FontFamily="Tahoma" FontSize="14" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Complete los datos del permiso" FontFamily="Tahoma" FontSize="9" Foreground="#E0E0E0" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Formulario -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <!-- Empleado -->
                    <StackPanel Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                            <TextBlock Text="Empleado:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Text=" *" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="#CC0000"/>
                        </StackPanel>
                        <ComboBox ItemsSource="{Binding Empleados}" 
                                  SelectedItem="{Binding SelectedEmpleado}"
                                  DisplayMemberPath="NombreCompleto"
                                  FontFamily="Tahoma" FontSize="9" Height="22"
                                  IsEditable="True"/>
                    </StackPanel>
                    
                    <!-- Tipo de Permiso -->
                    <StackPanel Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                            <TextBlock Text="Tipo de Permiso:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Text=" *" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="#CC0000"/>
                        </StackPanel>
                        <ComboBox ItemsSource="{Binding TiposPermiso}" 
                                  SelectedItem="{Binding SelectedTipoPermiso}"
                                  FontFamily="Tahoma" FontSize="9" Height="22">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="10" Height="10" Background="{Binding Color}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Nombre}" FontFamily="Tahoma" FontSize="9"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Info del tipo de permiso -->
                    <Border Background="#FFFFCC" BorderThickness="1" BorderBrush="#808080" Padding="10" Margin="0,0,0,12"
                            Visibility="{Binding SelectedTipoPermiso, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedTipoPermiso.Descripcion}" 
                                       TextWrapping="Wrap" FontFamily="Tahoma" FontSize="9" Foreground="#404040"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="[DOC] Requiere documento: " FontFamily="Courier New" FontSize="8" Foreground="#404040"/>
                                <TextBlock FontFamily="Courier New" FontSize="8" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="NO"/>
                                            <Setter Property="Foreground" Value="#808080"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RequiereDocumento}" Value="True">
                                                    <Setter Property="Text" Value="SI"/>
                                                    <Setter Property="Foreground" Value="#CC0000"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="   |   [COMP] Compensable: " FontFamily="Courier New" FontSize="8" Foreground="#404040"/>
                                <TextBlock FontFamily="Courier New" FontSize="8" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="NO"/>
                                            <Setter Property="Foreground" Value="#808080"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EsCompensable}" Value="True">
                                                    <Setter Property="Text" Value="SI"/>
                                                    <Setter Property="Foreground" Value="#CC8800"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Fechas -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                <TextBlock Text="Fecha Inicio:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                                <TextBlock Text=" *" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="#CC0000"/>
                            </StackPanel>
                            <DatePicker SelectedDate="{Binding FechaInicio}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                <TextBlock Text="Fecha Fin:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                                <TextBlock Text=" *" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="#CC0000"/>
                            </StackPanel>
                            <DatePicker SelectedDate="{Binding FechaFin}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Total Dias:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Margin="0,0,0,3"/>
                            <Border Background="White" BorderThickness="2" BorderBrush="#008000" Height="22">
                                <TextBlock Text="{Binding TotalDias}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           FontFamily="Courier New" FontSize="12" FontWeight="Bold" Foreground="#008000"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Motivo -->
                    <StackPanel Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                            <TextBlock Text="Motivo:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Text=" *" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="#CC0000"/>
                        </StackPanel>
                        <TextBox Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource LegacyTextBoxStyle}"
                                 Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                 FontFamily="Tahoma" FontSize="9" VerticalContentAlignment="Top" Padding="5"/>
                    </StackPanel>
                    
                    <!-- Observaciones -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Observaciones (opcional):" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Margin="0,0,0,3"/>
                        <TextBox Text="{Binding Observaciones, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource LegacyTextBoxStyle}"
                                 Height="45" TextWrapping="Wrap" AcceptsReturn="True"
                                 FontFamily="Tahoma" FontSize="9" VerticalContentAlignment="Top" Padding="5"/>
                    </StackPanel>
                    
                    <!-- Documento soporte -->
                    <Border Background="#E0E0E0" BorderThickness="1" BorderBrush="#808080" Padding="10" Margin="0,0,0,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="[DOC] Documento Soporte:" FontFamily="Courier New" FontSize="9" FontWeight="Bold"/>
                                <TextBlock Text=" *" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="#CC0000"
                                           Visibility="{Binding RequiereDocumento, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Text="{Binding DocumentoSoportePath}" IsReadOnly="True" 
                                         Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="8" Height="20"/>
                                <Button Grid.Column="1" Content="Seleccionar..." 
                                        Command="{Binding SelectDocumentCommand}"
                                        Style="{StaticResource LegacyButtonStyle}"
                                        FontFamily="Tahoma" FontSize="9" Padding="8,3" Margin="5,0,0,0"/>
                                <Button Grid.Column="2" Content="X" 
                                        Command="{Binding RemoveDocumentCommand}"
                                        Visibility="{Binding HasDocument, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Style="{StaticResource LegacyButtonStyle}"
                                        FontFamily="Tahoma" FontSize="9" Padding="5,3" Margin="3,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Fecha de compensaciÃ³n (si aplica) -->
                    <Border Background="#FFFFCC" BorderThickness="1" BorderBrush="#CC8800" Padding="10" Margin="0,0,0,10"
                            Visibility="{Binding EsCompensable, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="[!] Este permiso es compensable" FontFamily="Courier New" FontSize="9" FontWeight="Bold" Foreground="#CC8800" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                <TextBlock Text="Fecha de Compensacion:" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                                <TextBlock Text=" *" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="#CC0000"/>
                            </StackPanel>
                            <DatePicker SelectedDate="{Binding FechaCompensacion}" FontFamily="Tahoma" FontSize="9" Height="22" Width="150" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Botones -->
            <Border Grid.Row="2" Background="#C0C0C0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="15,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Command="{Binding CancelCommand}" 
                            Style="{StaticResource LegacyButtonStyle}"
                            FontFamily="Tahoma" FontSize="10" Padding="20,5" Margin="0,0,8,0"/>
                    <Button Content="Guardar" Command="{Binding SaveCommand}" 
                            Style="{StaticResource LegacyButtonStyle}"
                            FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Padding="20,5"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
