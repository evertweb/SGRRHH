<Window x:Class="SGRRHH.WPF.Views.PermisosListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGRRHH.WPF.Views"
        xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
        xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
        mc:Ignorable="d"
        Title="GestiÃ³n de Permisos" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        
        <!-- Estilo para estados de permiso -->
        <Style x:Key="EstadoBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- TÃ­tulo y estadÃ­sticas -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="ðŸ“ GestiÃ³n de Permisos" FontSize="24" FontWeight="Bold" Foreground="#1976D2"/>
                <TextBlock Text="Consulta y gestiÃ³n de solicitudes de permisos" Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- EstadÃ­sticas rÃ¡pidas -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Border Background="#FFF3E0" CornerRadius="8" Padding="15,10" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="{Binding PermisosPendientes}" FontSize="20" FontWeight="Bold" Foreground="#F57C00" HorizontalAlignment="Center"/>
                        <TextBlock Text="Pendientes" FontSize="11" Foreground="#F57C00"/>
                    </StackPanel>
                </Border>
                <Border Background="#E8F5E9" CornerRadius="8" Padding="15,10" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="{Binding PermisosAprobados}" FontSize="20" FontWeight="Bold" Foreground="#388E3C" HorizontalAlignment="Center"/>
                        <TextBlock Text="Aprobados" FontSize="11" Foreground="#388E3C"/>
                    </StackPanel>
                </Border>
                <Border Background="#FFEBEE" CornerRadius="8" Padding="15,10" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="{Binding PermisosRechazados}" FontSize="20" FontWeight="Bold" Foreground="#D32F2F" HorizontalAlignment="Center"/>
                        <TextBlock Text="Rechazados" FontSize="11" Foreground="#D32F2F"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Filtros -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Empleado -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Empleado" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Empleados}" 
                              SelectedItem="{Binding SelectedEmpleado}"
                              DisplayMemberPath="NombreCompleto"
                              Height="35">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="IsEditable" Value="True"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>
                
                <!-- Estado -->
                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="Estado" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Estados}" 
                              SelectedItem="{Binding SelectedEstado}"
                              Height="35">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                    <Setter Property="Text" Value="-- Todos --"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- Fecha Desde -->
                <StackPanel Grid.Column="2" Margin="10,0">
                    <TextBlock Text="Desde" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding FechaDesde}" Height="35"/>
                </StackPanel>
                
                <!-- Fecha Hasta -->
                <StackPanel Grid.Column="3" Margin="10,0">
                    <TextBlock Text="Hasta" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding FechaHasta}" Height="35"/>
                </StackPanel>
                
                <!-- Botones -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="ðŸ” Buscar" Command="{Binding SearchCommand}" 
                            Background="#1976D2" Foreground="White" 
                            Padding="15,8" Margin="5,0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="ðŸ—‘ï¸ Limpiar" Command="{Binding ClearFiltersCommand}" 
                            Background="#757575" Foreground="White" 
                            Padding="15,8" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                
                <!-- BÃºsqueda por texto -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <TextBlock Text="Buscar" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Height="35" Padding="10,8"
                             ToolTip="Buscar por nÃºmero de acta, empleado, tipo o motivo">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- BotÃ³n Nuevo -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="âž• Solicitar Permiso" Command="{Binding CreateCommand}" 
                    Background="#4CAF50" Foreground="White" 
                    Padding="20,10" FontSize="14" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        
        <!-- Lista de permisos -->
        <Border Grid.Row="3" Background="White" CornerRadius="8">
            <Grid>
                <!-- Loading -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="â³ Cargando..." FontSize="16" Foreground="#666"/>
                </StackPanel>
                
                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding Permisos}"
                          SelectedItem="{Binding SelectedPermiso}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          RowHeight="45"
                          Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NÂ° Acta" Binding="{Binding NumeroActa}" Width="110"/>
                        <DataGridTextColumn Header="Empleado" Binding="{Binding Empleado.NombreCompleto}" Width="180"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding TipoPermiso.Nombre}" Width="150"/>
                        <DataGridTextColumn Header="Desde" Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" Width="90"/>
                        <DataGridTextColumn Header="Hasta" Binding="{Binding FechaFin, StringFormat=dd/MM/yyyy}" Width="90"/>
                        <DataGridTextColumn Header="DÃ­as" Binding="{Binding TotalDias}" Width="50"/>
                        
                        <!-- Estado con color -->
                        <DataGridTemplateColumn Header="Estado" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Pendiente">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Aprobado">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Cancelado">
                                                        <Setter Property="Background" Value="#ECEFF1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Estado}" FontSize="11" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Pendiente">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Aprobado">
                                                            <Setter Property="Foreground" Value="#388E3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Cancelado">
                                                            <Setter Property="Foreground" Value="#616161"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Solicitado" Binding="{Binding FechaSolicitud, StringFormat=dd/MM/yyyy}" Width="90"/>
                        
                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="ðŸ‘ï¸" ToolTip="Ver detalle"
                                                Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" 
                                                Padding="8,4" Cursor="Hand" FontSize="14"/>
                                        <Button Content="âœï¸" ToolTip="Editar"
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" 
                                                Padding="8,4" Cursor="Hand" FontSize="14"/>
                                        <Button Content="âŒ" ToolTip="Cancelar"
                                                Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" 
                                                Padding="8,4" Cursor="Hand" FontSize="14"/>
                                        <Button Content="ðŸ—‘ï¸" ToolTip="Eliminar"
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" 
                                                Padding="8,4" Cursor="Hand" FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="4" Background="White" CornerRadius="8" Padding="15" Margin="0,10,0,0">
            <TextBlock>
                <Run Text="Total de registros: "/>
                <Run Text="{Binding TotalPermisos}" FontWeight="Bold"/>
            </TextBlock>
        </Border>
    </Grid>
</Window>
