<UserControl x:Class="SGRRHH.WPF.Views.PermisosListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGRRHH.WPF.Views"
        xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
        xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
        xmlns:controls="clr-namespace:SGRRHH.WPF.Controls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DesignHeight="700" d:DesignWidth="1100"
        Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="5">
        <!-- ============================================ -->
        <!-- PANTALLA DE BIENVENIDA (HOME) -->
        <!-- ============================================ -->
        <Border Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                BorderThickness="1" BorderBrush="#808080" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#000080" Padding="10,5">
                    <TextBlock Text="--- MODULO DE PERMISOS ---" FontFamily="Tahoma" FontSize="12" 
                               FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
                
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="PERMISOS" FontFamily="Courier New" FontSize="36" FontWeight="Bold" 
                               Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Seleccione una opcion:" FontFamily="Tahoma" FontSize="12" 
                               Foreground="#404040" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Solicitar Permiso -->
                        <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" 
                                Margin="0,0,20,0" Cursor="Hand"
                                Visibility="{Binding PuedeCrear, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding CreateCommand}"/>
                                </Border.InputBindings>
                                <StackPanel Width="160">
                                    <TextBlock Text="[+]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                               Foreground="#008000" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="SOLICITAR" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="PERMISO" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Nueva solicitud" FontFamily="Tahoma" FontSize="9"
                                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Border>
                        
                        <!-- Ver Permisos -->
                        <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" Cursor="Hand">
                            <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding ShowListCommand}"/>
                                </Border.InputBindings>
                                <StackPanel Width="160">
                                    <TextBlock Text="[=]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                               Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="VER" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="PERMISOS" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                               Foreground="#000000" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Consultar historial" FontFamily="Tahoma" FontSize="9"
                                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Border>
                    </StackPanel>
                </StackPanel>
                
                <Border Grid.Row="2" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="10,5">
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='dddd, d \de MMMM \de yyyy', ConverterCulture=es-ES}" 
                               FontFamily="Tahoma" FontSize="10" Foreground="#404040" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- ============================================ -->
        <!-- VISTA DE LISTA -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsListVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Botón volver y título -->
            <Grid Grid.Row="0" Margin="0,0,0,5">
                <Button Command="{Binding ShowHomeCommand}" Content="&lt;&lt; Volver al Menu"
                        Style="{StaticResource LegacyButtonStyle}" HorizontalAlignment="Left" 
                        FontFamily="Tahoma" FontSize="10" Padding="10,3"/>
            </Grid>
            
            <!-- Header con estadísticas -->
            <Border Grid.Row="1" Background="#000080" Padding="10,5" Margin="0,0,0,5">
                <Grid>
                    <TextBlock Text="GESTION DE PERMISOS" FontFamily="Tahoma" FontSize="12" 
                               FontWeight="Bold" Foreground="White"/>
                    
                    <!-- Estadísticas rápidas -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Background="#FFCC00" Padding="8,2" Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="PEND: " FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Foreground="#000000"/>
                                <TextBlock Text="{Binding PermisosPendientes}" FontFamily="Courier New" FontSize="10" FontWeight="Bold" Foreground="#000000"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#00CC00" Padding="8,2" Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="APROB: " FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Foreground="#000000"/>
                                <TextBlock Text="{Binding PermisosAprobados}" FontFamily="Courier New" FontSize="10" FontWeight="Bold" Foreground="#000000"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#CC0000" Padding="8,2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="RECH: " FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding PermisosRechazados}" FontFamily="Courier New" FontSize="10" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Panel de filtros -->
            <Border Grid.Row="2" BorderThickness="1" BorderBrush="#808080" Background="White" Margin="0,0,0,5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Empleado -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Empleado:" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                        <ComboBox ItemsSource="{Binding Empleados}" 
                                  SelectedItem="{Binding SelectedEmpleado}"
                                  DisplayMemberPath="NombreCompleto"
                                  Height="20" FontFamily="Tahoma" FontSize="10"/>
                    </StackPanel>
                    
                    <!-- Estado -->
                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Estado:" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                        <ComboBox ItemsSource="{Binding Estados}" 
                                  SelectedItem="{Binding SelectedEstado}"
                                  Height="20" FontFamily="Tahoma" FontSize="10">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                        <Setter Property="Text" Value="-- Todos --"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Fecha Desde -->
                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Desde:" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                        <DatePicker SelectedDate="{Binding FechaDesde}" Height="22" FontFamily="Tahoma" FontSize="10"/>
                    </StackPanel>
                    
                    <!-- Fecha Hasta -->
                    <StackPanel Grid.Column="3" Margin="0,0,10,0">
                        <TextBlock Text="Hasta:" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                        <DatePicker SelectedDate="{Binding FechaHasta}" Height="22" FontFamily="Tahoma" FontSize="10"/>
                    </StackPanel>
                    
                    <!-- Botones -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <controls:LegacyAsyncButton Content="Buscar" Command="{Binding SearchCommand}" 
                                IsLoading="{Binding IsLoading}" Margin="0,0,5,0"/>
                        <controls:LegacyAsyncButton Content="Limpiar" Command="{Binding ClearFiltersCommand}"/>
                    </StackPanel>
                    
                    <!-- Búsqueda por texto -->
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="4" Margin="0,10,0,0">
                        <TextBlock Text="Buscar (N° Acta, empleado, tipo o motivo):" FontFamily="Tahoma" FontSize="10" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource LegacyTextBoxStyle}" Height="20" FontSize="10">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Botón Nuevo -->
            <controls:LegacyAsyncButton Grid.Row="3" Content="Solicitar Permiso" Command="{Binding CreateCommand}" 
                    HorizontalAlignment="Left" Margin="0,0,0,5"/>
            
            <!-- DataGrid -->
            <Border Grid.Row="4" BorderThickness="1" BorderBrush="#808080">
                <Grid>
                    <!-- Loading -->
                    <Border Background="#80FFFFFF" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Cargando..." FontFamily="Tahoma" FontSize="12" FontStyle="Italic"
                                   Foreground="#808080" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding Permisos}"
                              SelectedItem="{Binding SelectedPermiso}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              GridLinesVisibility="All" HeadersVisibility="Column"
                              RowHeight="22" FontFamily="Tahoma" FontSize="10"
                              Background="White" AlternatingRowBackground="#F0F0F0"
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              BorderThickness="0"
                              Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#000080"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="5,3"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#404040"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="5,2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#000080"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="N° ACTA" Binding="{Binding NumeroActa}" Width="90"/>
                            <DataGridTextColumn Header="EMPLEADO" Binding="{Binding Empleado.NombreCompleto}" Width="*"/>
                            <DataGridTextColumn Header="TIPO" Binding="{Binding TipoPermiso.Nombre}" Width="120"/>
                            <DataGridTextColumn Header="DESDE" Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" Width="75"/>
                            <DataGridTextColumn Header="HASTA" Binding="{Binding FechaFin, StringFormat=dd/MM/yyyy}" Width="75"/>
                            <DataGridTextColumn Header="DIAS" Binding="{Binding TotalDias}" Width="45"/>
                            
                            <!-- Estado con color -->
                            <DataGridTemplateColumn Header="ESTADO" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontFamily="Tahoma" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding Estado}"/>
                                                    <Setter Property="Foreground" Value="#808080"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Pendiente">
                                                            <Setter Property="Foreground" Value="#CC8800"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Aprobado">
                                                            <Setter Property="Foreground" Value="#008000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                            <Setter Property="Foreground" Value="#CC0000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Cancelado">
                                                            <Setter Property="Foreground" Value="#808080"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="SOLICIT." Binding="{Binding FechaSolicitud, StringFormat=dd/MM/yyyy}" Width="75"/>
                            
                            <!-- Acciones -->
                            <DataGridTemplateColumn Header="ACCIONES" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Ver" ToolTip="Ver detalle"
                                                    Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource LegacyButtonStyle}"
                                                    FontFamily="Tahoma" FontSize="9" Padding="3,1" Margin="0,0,2,0"/>
                                            <Button Content="Ed" ToolTip="Editar"
                                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource LegacyButtonStyle}"
                                                    FontFamily="Tahoma" FontSize="9" Padding="3,1" Margin="0,0,2,0"/>
                                            <Button Content="Can" ToolTip="Cancelar"
                                                    Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource LegacyButtonStyle}"
                                                    FontFamily="Tahoma" FontSize="9" Padding="3,1" Margin="0,0,2,0"/>
                                            <Button Content="X" ToolTip="Eliminar"
                                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource LegacyButtonStyle}"
                                                    FontFamily="Tahoma" FontSize="9" Padding="3,1"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Status bar -->
            <Border Grid.Row="5" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Margin="0,5,0,0" Padding="5,3">
                <TextBlock FontFamily="Tahoma" FontSize="10">
                    <Run Text="Total de registros: "/>
                    <Run Text="{Binding TotalPermisos, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
            </Border>
        </Grid>
    </Grid>
</UserControl>
