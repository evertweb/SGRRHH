<UserControl x:Class="SGRRHH.WPF.Views.PermisosListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGRRHH.WPF.Views"
        xmlns:vm="clr-namespace:SGRRHH.WPF.ViewModels"
        xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DesignHeight="700" d:DesignWidth="1100"
        Background="{StaticResource PageBackground}">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <!-- ============================================ -->
        <!-- PANTALLA DE BIENVENIDA (HOME) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Contenido principal centrado -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Emoji y tÃ­tulo -->
                <TextBlock Text="ðŸ“" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Â¡GestiÃ³n de Permisos!" FontSize="36" FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Â¿QuÃ© deseas hacer hoy?" FontSize="18" 
                           Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,5,0,40"/>
                
                <!-- Tarjetas de opciones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Tarjeta Solicitar Permiso -->
                    <Button Command="{Binding CreateCommand}" 
                            Visibility="{Binding PuedeCrear, Converter={StaticResource BoolToVisibilityConverter}}"
                            Cursor="Hand" Margin="15,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="CardBorder" Background="White" CornerRadius="15" 
                                        Width="220" Height="180" 
                                        BorderThickness="2" BorderBrush="#E0E0E0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
                                    </Border.Effect>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Border Background="#E8F5E9" CornerRadius="50" Width="70" Height="70" 
                                                    HorizontalAlignment="Center" Margin="0,0,0,15">
                                                <TextBlock Text="âž•" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Solicitar Permiso" FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="#2E7D32" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Nueva solicitud" FontSize="12" 
                                                       Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CardBorder" Property="BorderBrush" Value="#4CAF50"/>
                                        <Setter TargetName="CardBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.25" Color="#4CAF50"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="CardBorder" Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="CardBorder" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <!-- Tarjeta Ver Permisos -->
                    <Button Command="{Binding ShowListCommand}" Cursor="Hand" Margin="15,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="CardBorder" Background="White" CornerRadius="15" 
                                        Width="220" Height="180" 
                                        BorderThickness="2" BorderBrush="#E0E0E0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
                                    </Border.Effect>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Border Background="#E3F2FD" CornerRadius="50" Width="70" Height="70" 
                                                    HorizontalAlignment="Center" Margin="0,0,0,15">
                                                <TextBlock Text="ðŸ“‹" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Ver Permisos" FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="#1565C0" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Consultar historial" FontSize="12" 
                                                       Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CardBorder" Property="BorderBrush" Value="#2196F3"/>
                                        <Setter TargetName="CardBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.25" Color="#2196F3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="CardBorder" Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="CardBorder" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
            
            <!-- Footer con fecha -->
            <Border Grid.Row="1" Background="#F5F5F5" Padding="20,15" Margin="20">
                <Border.CornerRadius>10</Border.CornerRadius>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock HorizontalAlignment="Center" Foreground="{StaticResource TextMutedBrush}" FontSize="13">
                        <Run Text="ðŸ“…"/>
                        <Run Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='dddd, d \de MMMM \de yyyy', ConverterCulture=es-ES}"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE LISTA (EXISTENTE) -->
        <!-- ============================================ -->
        <Grid Margin="20" Visibility="{Binding IsListVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- TÃ­tulo y estadÃ­sticas -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- BotÃ³n Volver -->
            <Button Command="{Binding ShowHomeCommand}" 
                    Style="{StaticResource SecondaryButton}" 
                    Content="â¬… Volver" 
                    VerticalAlignment="Center"
                    Margin="0,0,15,0"/>
            
            <StackPanel Grid.Column="1">
                <TextBlock Text="ðŸ“ GestiÃ³n de Permisos" Style="{StaticResource PageTitle}"/>
                <TextBlock Text="Consulta y gestiÃ³n de solicitudes de permisos" Style="{StaticResource PageSubtitle}"/>
            </StackPanel>
            
            <!-- EstadÃ­sticas rÃ¡pidas -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Border Style="{StaticResource StatCardOrange}" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="{Binding PermisosPendientes}" Style="{StaticResource StatNumber}" Foreground="{StaticResource WarningBrush}"/>
                        <TextBlock Text="Pendientes" Style="{StaticResource StatLabel}" Foreground="{StaticResource WarningBrush}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource StatCardGreen}" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="{Binding PermisosAprobados}" Style="{StaticResource StatNumber}" Foreground="{StaticResource SuccessBrush}"/>
                        <TextBlock Text="Aprobados" Style="{StaticResource StatLabel}" Foreground="{StaticResource SuccessBrush}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource StatCardRed}" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="{Binding PermisosRechazados}" Style="{StaticResource StatNumber}" Foreground="{StaticResource DangerBrush}"/>
                        <TextBlock Text="Rechazados" Style="{StaticResource StatLabel}" Foreground="{StaticResource DangerBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Filtros -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Empleado -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Empleado" Style="{StaticResource FormLabel}"/>
                    <ComboBox ItemsSource="{Binding Empleados}" 
                              SelectedItem="{Binding SelectedEmpleado}"
                              DisplayMemberPath="NombreCompleto"
                              Style="{StaticResource StandardComboBox}"/>
                </StackPanel>
                
                <!-- Estado -->
                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="Estado" Style="{StaticResource FormLabel}"/>
                    <ComboBox ItemsSource="{Binding Estados}" 
                              SelectedItem="{Binding SelectedEstado}"
                              Style="{StaticResource StandardComboBox}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                    <Setter Property="Text" Value="-- Todos --"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- Fecha Desde -->
                <StackPanel Grid.Column="2" Margin="10,0">
                    <TextBlock Text="Desde" Style="{StaticResource FormLabel}"/>
                    <DatePicker SelectedDate="{Binding FechaDesde}" Style="{StaticResource StandardDatePicker}"/>
                </StackPanel>
                
                <!-- Fecha Hasta -->
                <StackPanel Grid.Column="3" Margin="10,0">
                    <TextBlock Text="Hasta" Style="{StaticResource FormLabel}"/>
                    <DatePicker SelectedDate="{Binding FechaHasta}" Style="{StaticResource StandardDatePicker}"/>
                </StackPanel>
                
                <!-- Botones -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="ðŸ” Buscar" Command="{Binding SearchCommand}" 
                            Style="{StaticResource PrimaryButton}" Margin="5,0"/>
                    <Button Content="ðŸ—‘ï¸ Limpiar" Command="{Binding ClearFiltersCommand}" 
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
                
                <!-- BÃºsqueda por texto -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <TextBlock Text="Buscar" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}"
                             ToolTip="Buscar por nÃºmero de acta, empleado, tipo o motivo">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- BotÃ³n Nuevo -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="âž• Solicitar Permiso" Command="{Binding CreateCommand}" 
                    Style="{StaticResource SuccessButton}" FontSize="14"/>
        </StackPanel>
        
        <!-- Lista de permisos -->
        <Border Grid.Row="3" Style="{StaticResource CardPanel}" Padding="0">
            <Grid>
                <!-- Loading -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="â³ Cargando..." FontSize="16" Foreground="{StaticResource TextMutedBrush}"/>
                </StackPanel>
                
                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding Permisos}"
                          SelectedItem="{Binding SelectedPermiso}"
                          Style="{StaticResource StandardDataGrid}"
                          Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NÂ° Acta" Binding="{Binding NumeroActa}" Width="110"/>
                        <DataGridTextColumn Header="Empleado" Binding="{Binding Empleado.NombreCompleto}" Width="180"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding TipoPermiso.Nombre}" Width="150"/>
                        <DataGridTextColumn Header="Desde" Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" Width="90"/>
                        <DataGridTextColumn Header="Hasta" Binding="{Binding FechaFin, StringFormat=dd/MM/yyyy}" Width="90"/>
                        <DataGridTextColumn Header="DÃ­as" Binding="{Binding TotalDias}" Width="50"/>
                        
                        <!-- Estado con color -->
                        <DataGridTemplateColumn Header="Estado" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Pendiente">
                                                        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Aprobado">
                                                        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                        <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Estado}" Value="Cancelado">
                                                        <Setter Property="Background" Value="{StaticResource GrayLightBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Estado}" FontSize="11" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Pendiente">
                                                            <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Aprobado">
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Rechazado">
                                                            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Cancelado">
                                                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Solicitado" Binding="{Binding FechaSolicitud, StringFormat=dd/MM/yyyy}" Width="90"/>
                        
                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="ðŸ‘ï¸" ToolTip="Ver detalle"
                                                Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource IconButton}"/>
                                        <Button Content="âœï¸" ToolTip="Editar"
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource IconButton}"/>
                                        <Button Content="âŒ" ToolTip="Cancelar"
                                                Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource IconButton}"/>
                                        <Button Content="ðŸ—‘ï¸" ToolTip="Eliminar"
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource IconButton}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="4" Style="{StaticResource CardPanel}" Margin="0,10,0,0">
            <TextBlock>
                <Run Text="Total de registros: "/>
                <Run Text="{Binding TotalPermisos}" FontWeight="Bold"/>
            </TextBlock>
        </Border>
        </Grid>
    </Grid>
</UserControl>
