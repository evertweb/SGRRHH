<UserControl x:Class="SGRRHH.WPF.Views.VacacionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:SGRRHH.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <!-- ==================== PANTALLA DE BIENVENIDA ==================== -->
        <Grid Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#000080" Padding="10,5">
                <TextBlock Text="--- MODULO DE VACACIONES ---" FontFamily="Tahoma" FontSize="12" 
                           FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Contenido central -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="VACACIONES" FontFamily="Courier New" FontSize="36" FontWeight="Bold" 
                           Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Seleccione una opcion:" FontFamily="Tahoma" FontSize="12" 
                           Foreground="#404040" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <!-- Tarjetas de acción -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Solicitar Vacaciones -->
                    <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" 
                            Margin="0,0,20,0" Cursor="Hand">
                        <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding SolicitarVacacionesCommand}"/>
                            </Border.InputBindings>
                            <StackPanel Width="160">
                                <TextBlock Text="[+]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                           Foreground="#008000" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="SOLICITAR" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                           Foreground="#000000" HorizontalAlignment="Center"/>
                                <TextBlock Text="VACACIONES" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                           Foreground="#000000" HorizontalAlignment="Center"/>
                                <TextBlock Text="Programar fechas" FontFamily="Tahoma" FontSize="9"
                                           Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Border>
                    
                    <!-- Ver Historial -->
                    <Border BorderThickness="2" BorderBrush="#808080" Background="#E0E0E0" Cursor="Hand">
                        <Border BorderThickness="2" BorderBrush="White" Margin="0,0,2,2" Padding="15">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ShowContentCommand}"/>
                            </Border.InputBindings>
                            <StackPanel Width="160">
                                <TextBlock Text="[=]" FontFamily="Courier New" FontSize="32" FontWeight="Bold" 
                                           Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="VER" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                           Foreground="#000000" HorizontalAlignment="Center"/>
                                <TextBlock Text="HISTORIAL" FontFamily="Tahoma" FontSize="12" FontWeight="Bold"
                                           Foreground="#000000" HorizontalAlignment="Center"/>
                                <TextBlock Text="Consultar vacaciones" FontFamily="Tahoma" FontSize="9"
                                           Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!-- Footer con fecha -->
            <Border Grid.Row="2" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" Padding="10,5">
                <TextBlock Text="{Binding CurrentDateText}" FontFamily="Tahoma" FontSize="10" 
                           Foreground="#404040" HorizontalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!-- ==================== CONTENIDO PRINCIPAL ==================== -->
        <Grid Visibility="{Binding IsContentVisible, Converter={StaticResource BoolToVisibilityConverter}}" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        
            <!-- Panel izquierdo: Selección de empleado y resumen -->
            <Grid Grid.Column="0" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            
                <!-- Selección de empleado -->
                <Border Grid.Row="0" BorderThickness="1" BorderBrush="#808080" Background="White" Margin="0,0,0,5">
                    <StackPanel>
                        <Border Background="#000080" Padding="8,5">
                            <TextBlock Text="SELECCIONAR EMPLEADO" FontFamily="Tahoma" FontSize="10" 
                                       FontWeight="Bold" Foreground="White"/>
                        </Border>
                        <Border Padding="10">
                            <ComboBox ItemsSource="{Binding Empleados}"
                                      SelectedItem="{Binding SelectedEmpleado}"
                                      DisplayMemberPath="NombreCompleto"
                                      FontFamily="Tahoma" FontSize="9" Height="22"/>
                        </Border>
                    </StackPanel>
                </Border>
            
                <!-- Resumen de vacaciones -->
                <Border Grid.Row="1" BorderThickness="1" BorderBrush="#808080" Background="White" Margin="0,0,0,5"
                        Visibility="{Binding ResumenVacaciones, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <Border Background="#000080" Padding="8,5">
                            <TextBlock Text="[i] RESUMEN DE VACACIONES" FontFamily="Courier New" FontSize="10" 
                                       FontWeight="Bold" Foreground="White"/>
                        </Border>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                        
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,5,8">
                                <TextBlock Text="Antiguedad:" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                                <TextBlock FontFamily="Tahoma" FontSize="10" FontWeight="Bold">
                                    <Run Text="{Binding ResumenVacaciones.AntiguedadAnos}"/>
                                    <Run Text=" años"/>
                                </TextBlock>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                                <TextBlock Text="Periodo:" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                                <TextBlock Text="{Binding ResumenVacaciones.PeriodoActual}" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,5,8">
                                <TextBlock Text="Dias Ganados:" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                                <TextBlock Text="{Binding ResumenVacaciones.DiasGanadosPeriodo}" 
                                           FontFamily="Courier New" FontSize="12" FontWeight="Bold" Foreground="#008000"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                                <TextBlock Text="Dias Tomados:" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                                <TextBlock Text="{Binding ResumenVacaciones.DiasTomadosPeriodo}" 
                                           FontFamily="Courier New" FontSize="12" FontWeight="Bold" Foreground="#CC0000"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,5,8">
                                <TextBlock Text="Disponibles:" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                                <TextBlock Text="{Binding ResumenVacaciones.DiasDisponiblesPeriodo}" 
                                           FontFamily="Courier New" FontSize="12" FontWeight="Bold" Foreground="#000080"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
                                <TextBlock Text="Acumulados:" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                                <TextBlock Text="{Binding ResumenVacaciones.DiasAcumuladosAnteriores}" 
                                           FontFamily="Courier New" FontSize="12" FontWeight="Bold" Foreground="#800080"/>
                            </StackPanel>
                        
                            <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#E0FFE0" BorderThickness="2" BorderBrush="#008000" Padding="8" Margin="0,5,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="TOTAL: " FontFamily="Tahoma" FontSize="10" FontWeight="Bold" 
                                               Foreground="#008000" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ResumenVacaciones.TotalDiasDisponibles}" 
                                               FontFamily="Courier New" FontSize="18" FontWeight="Bold" Foreground="#008000"/>
                                    <TextBlock Text=" dias" FontFamily="Tahoma" FontSize="10" 
                                               Foreground="#008000" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            
                <!-- Botones de acción -->
                <Border Grid.Row="2" BorderThickness="1" BorderBrush="#808080" Background="White" VerticalAlignment="Top">
                    <StackPanel>
                        <Border Background="#000080" Padding="8,5">
                            <Grid>
                                <TextBlock Text="ACCIONES" FontFamily="Tahoma" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                <Button Content="&lt;&lt; Inicio" Command="{Binding ShowHomeCommand}"
                                        Style="{StaticResource LegacyButtonStyle}"
                                        FontFamily="Tahoma" FontSize="8" Padding="8,2"
                                        HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                        <Border Padding="10">
                            <StackPanel>
                            <controls:LegacyAsyncButton Content="Nueva Vacacion" Command="{Binding NuevaVacacionCommand}"
                                        Margin="0,0,0,5" HorizontalAlignment="Stretch"/>
                                <controls:LegacyAsyncButton Content="Editar Seleccionada" Command="{Binding EditarVacacionCommand}"
                                        Margin="0,0,0,5" HorizontalAlignment="Stretch"/>
                                <controls:LegacyAsyncButton Content="Marcar Disfrutada" Command="{Binding MarcarDisfrutadaCommand}"
                                        IsLoading="{Binding IsLoading}" Margin="0,0,0,5" HorizontalAlignment="Stretch"/>
                                <controls:LegacyAsyncButton Content="Eliminar" Command="{Binding EliminarVacacionCommand}"
                                        IsLoading="{Binding IsLoading}" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        
            <!-- Panel derecho: Lista de vacaciones y formulario -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            
                <!-- Lista de vacaciones -->
                <Border Grid.Row="0" BorderThickness="1" BorderBrush="#808080" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                    
                        <Border Grid.Row="0" Background="#000080" Padding="8,5">
                            <TextBlock Text="[=] HISTORIAL DE VACACIONES" FontFamily="Courier New" FontSize="10" 
                                       FontWeight="Bold" Foreground="White"/>
                        </Border>
                    
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding Vacaciones}"
                                  SelectedItem="{Binding SelectedVacacion}"
                                  AutoGenerateColumns="False" IsReadOnly="True"
                                  SelectionMode="Single" SelectionUnit="FullRow"
                                  GridLinesVisibility="All" HeadersVisibility="Column"
                                  RowHeight="22" FontFamily="Tahoma" FontSize="10"
                                  Background="White" AlternatingRowBackground="#F0F0F0"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  BorderThickness="0">
                            
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#000080"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontFamily" Value="Tahoma"/>
                                    <Setter Property="FontSize" Value="9"/>
                                    <Setter Property="Padding" Value="5,3"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="#404040"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="5,2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#000080"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="PERIODO" Binding="{Binding PeriodoCorrespondiente}" Width="70"/>
                                <DataGridTextColumn Header="INICIO" Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" Width="80"/>
                                <DataGridTextColumn Header="FIN" Binding="{Binding FechaFin, StringFormat=dd/MM/yyyy}" Width="80"/>
                                <DataGridTextColumn Header="DIAS" Binding="{Binding DiasTomados}" Width="45"/>
                                <DataGridTemplateColumn Header="ESTADO" Width="90">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock FontFamily="Tahoma" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding Estado}"/>
                                                        <Setter Property="Foreground" Value="#808080"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Estado}" Value="Programada">
                                                                <Setter Property="Foreground" Value="#000080"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Estado}" Value="Disfrutada">
                                                                <Setter Property="Foreground" Value="#008000"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Estado}" Value="Cancelada">
                                                                <Setter Property="Foreground" Value="#CC0000"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="OBSERVACIONES" Binding="{Binding Observaciones}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            
                <!-- Formulario de vacación -->
                <Border Grid.Row="1" BorderThickness="1" BorderBrush="#808080" Background="White" Margin="0,5,0,0"
                        Visibility="{Binding IsFormVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <Border Background="#000080" Padding="8,5">
                            <TextBlock FontFamily="Courier New" FontSize="10" FontWeight="Bold" Foreground="White">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}[FORM] {0} Vacacion">
                                        <Binding Path="IsEditing" Converter="{StaticResource BoolToEditTextConverter}"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Border>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                        
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,10">
                                <TextBlock Text="Fecha Inicio: *" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                                <DatePicker SelectedDate="{Binding FormFechaInicio}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,10">
                                <TextBlock Text="Fecha Fin: *" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                                <DatePicker SelectedDate="{Binding FormFechaFin}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,8,10">
                                <TextBlock Text="Periodo: *" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                                <ComboBox ItemsSource="{Binding PeriodosDisponibles}"
                                          SelectedItem="{Binding FormPeriodo}"
                                          FontFamily="Tahoma" FontSize="9" Height="22"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,0,10">
                                <TextBlock Text="Dias Hab.:" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                                <Border Background="#FFFFCC" BorderThickness="2" BorderBrush="#CC8800" Height="22">
                                    <TextBlock Text="{Binding FormDiasCalculados}" 
                                               FontFamily="Courier New" FontSize="12" FontWeight="Bold" Foreground="#CC8800"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,8,10">
                                <TextBlock Text="Observaciones:" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                                <TextBox Text="{Binding FormObservaciones, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource LegacyTextBoxStyle}" FontFamily="Tahoma" FontSize="9" Height="22"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,8,10">
                                <TextBlock Text="Estado:" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Margin="0,0,0,3"/>
                                <ComboBox ItemsSource="{Binding EstadosVacacion}"
                                          SelectedItem="{Binding FormEstado}"
                                          FontFamily="Tahoma" FontSize="9" Height="22"/>
                            </StackPanel>
                        
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                <controls:LegacyAsyncButton Content="Cancelar" Command="{Binding CancelarFormularioCommand}"
                                        Margin="0,0,8,0"/>
                                <controls:LegacyAsyncButton Content="Guardar" Command="{Binding GuardarVacacionCommand}"
                                        IsLoading="{Binding IsLoading}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#C0C0C0" BorderThickness="2" BorderBrush="#808080" Padding="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="[...] Cargando" FontFamily="Courier New" FontSize="12" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <ProgressBar IsIndeterminate="True" Width="120" Height="16"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
