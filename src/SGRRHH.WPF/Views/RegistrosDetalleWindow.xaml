<Window x:Class="SGRRHH.WPF.Views.RegistrosDetalleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
        mc:Ignorable="d"
        Title="{Binding Titulo}"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#C0C0C0">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
            <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#000080" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Titulo}" FontFamily="Tahoma" FontSize="14" FontWeight="Bold" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <Border Background="#4080C0" Padding="8,3" Margin="0,0,10,0">
                            <TextBlock FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Foreground="White">
                                <Run Text="{Binding Registros.Count, Mode=OneWay}"/>
                                <Run Text=" registros"/>
                            </TextBlock>
                        </Border>
                        <Border Background="#4080C0" Padding="8,3">
                            <TextBlock FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Foreground="White">
                                <Run Text="{Binding TotalHoras, StringFormat=N1, Mode=OneWay}"/>
                                <Run Text=" horas"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding ExportToPdfCommand}"
                            Style="{StaticResource LegacyButtonStyle}"
                            Content="Exportar PDF" FontFamily="Tahoma" FontSize="9"
                            Padding="12,5" Margin="0,0,8,0"/>
                    <Button Command="{Binding PrintCommand}"
                            Style="{StaticResource LegacyButtonStyle}"
                            Content="Imprimir" FontFamily="Tahoma" FontSize="9" FontWeight="Bold"
                            Padding="12,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista de registros (sidebar) -->
            <Border Grid.Column="0" BorderThickness="1" BorderBrush="#808080" Background="White"
                    Visibility="{Binding Registros.Count, Mode=OneWay, Converter={StaticResource BoolToVisConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#C0C0C0" Padding="8,5" BorderThickness="0,0,0,1" BorderBrush="#808080">
                        <TextBlock Text="REGISTROS" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" Foreground="#000080"/>
                    </Border>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Registros}" SelectedItem="{Binding SelectedRegistro}"
                             BorderThickness="0" Background="White" FontFamily="Tahoma" FontSize="9">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6,5" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Fecha, StringFormat=dd/MM/yyyy}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Empleado.NombreCompleto}" FontSize="8" Foreground="#808080"/>
                                        <TextBlock FontSize="8" Foreground="#000080" Margin="0,2,0,0">
                                            <Run Text="{Binding TotalHoras, StringFormat=N1, Mode=OneWay}" FontWeight="Bold"/>
                                            <Run Text="h"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#000080"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Detalle del registro seleccionado -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <Border BorderThickness="1" BorderBrush="#808080" Background="White">
                    <StackPanel DataContext="{Binding SelectedRegistro}">
                        <!-- Header del registro -->
                        <Border Background="#000080" Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Fecha, StringFormat='dddd, dd MMMM yyyy'}"
                                               FontFamily="Tahoma" FontSize="12" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="{Binding Empleado.NombreCompleto}"
                                               FontFamily="Tahoma" FontSize="10" Foreground="#C0C0FF" Margin="0,3,0,0"/>
                                </StackPanel>
                                <Border Grid.Column="1" Background="#4080C0" Padding="10,5">
                                    <TextBlock FontFamily="Courier New" FontSize="14" FontWeight="Bold" Foreground="White">
                                        <Run Text="{Binding TotalHoras, StringFormat=N1, Mode=OneWay}"/>
                                        <Run Text=" horas"/>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>

                        <StackPanel Margin="12">
                            <!-- Horario -->
                            <Border Background="#E0E0E0" BorderThickness="1" BorderBrush="#808080" Padding="12" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Hora de Entrada:" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                                        <TextBlock Text="{Binding HoraEntrada, Converter={StaticResource TimeSpanToStringConverter}}" 
                                                   FontFamily="Courier New" FontSize="16" FontWeight="Bold" Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Hora de Salida:" FontFamily="Tahoma" FontSize="8" Foreground="#808080"/>
                                        <TextBlock Text="{Binding HoraSalida, Converter={StaticResource TimeSpanToStringConverter}}" 
                                                   FontFamily="Courier New" FontSize="16" FontWeight="Bold" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Actividades -->
                            <TextBlock Text="ACTIVIDADES REALIZADAS" FontFamily="Tahoma" FontSize="9" FontWeight="Bold" 
                                       Foreground="#000080" Margin="0,0,0,8"/>

                            <ItemsControl ItemsSource="{Binding DetallesActividades}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F8F8" BorderThickness="1" BorderBrush="#808080" 
                                                Padding="10" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0" Margin="0,0,0,6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Actividad.Nombre}"
                                                                   FontFamily="Tahoma" FontSize="10" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding Proyecto.Nombre}"
                                                                   FontFamily="Tahoma" FontSize="8" Foreground="#808080" Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <Border Grid.Column="1" Background="#008000" Padding="8,3">
                                                        <TextBlock FontFamily="Courier New" FontSize="10" FontWeight="Bold" Foreground="White">
                                                            <Run Text="{Binding Horas, StringFormat=N1}"/>
                                                            <Run Text="h"/>
                                                        </TextBlock>
                                                    </Border>
                                                </Grid>

                                                <TextBlock Grid.Row="1" Text="{Binding Descripcion}"
                                                           FontFamily="Tahoma" FontSize="9" TextWrapping="Wrap" Foreground="#404040"/>

                                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0"
                                                            Visibility="{Binding HoraInicio, Converter={StaticResource BoolToVisConverter}}">
                                                    <TextBlock FontFamily="Tahoma" FontSize="8" Foreground="#808080">
                                                        <Run Text="Horario: "/>
                                                        <Run Text="{Binding HoraInicio, StringFormat=HH\\:mm}"/>
                                                        <Run Text=" - "/>
                                                        <Run Text="{Binding HoraFin, StringFormat=HH\\:mm}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Observaciones -->
                            <Border Background="#FFFFCC" BorderThickness="1" BorderBrush="#CC6600" Padding="10" Margin="0,10,0,0"
                                    Visibility="{Binding Observaciones, Converter={StaticResource BoolToVisConverter}}">
                                <StackPanel>
                                    <TextBlock Text="OBSERVACIONES:" FontFamily="Tahoma" FontSize="8" FontWeight="Bold" Foreground="#CC6600" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Observaciones}" FontFamily="Tahoma" FontSize="9" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#E0E0E0" Padding="15,10" BorderThickness="0,1,0,0" BorderBrush="#808080">
            <Button Content="Cerrar" HorizontalAlignment="Right"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource LegacyButtonStyle}"
                    FontFamily="Tahoma" FontSize="9" Padding="20,5"/>
        </Border>
    </Grid>
</Window>
