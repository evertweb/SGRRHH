<Window x:Class="SGRRHH.WPF.Views.RegistrosDetalleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
        mc:Ignorable="d"
        Title="{Binding Titulo}"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Titulo}" FontSize="22" FontWeight="Bold"
                               Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Border Background="#40FFFFFF" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“Š" Margin="0,0,5,0"/>
                                <TextBlock FontWeight="SemiBold" Foreground="White">
                                    <Run Text="{Binding Registros.Count, Mode=OneWay}"/>
                                    <Run Text=" registros"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="#40FFFFFF" CornerRadius="4" Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â±ï¸" Margin="0,0,5,0"/>
                                <TextBlock FontWeight="SemiBold" Foreground="White">
                                    <Run Text="{Binding TotalHoras, StringFormat=N1, Mode=OneWay}"/>
                                    <Run Text=" horas"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding ExportToPdfCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,10,0" Height="36">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“„" Margin="0,0,5,0"/>
                            <TextBlock Text="Exportar PDF"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding PrintCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Height="36">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ–¨ï¸" Margin="0,0,5,0"/>
                            <TextBlock Text="Imprimir"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista de registros (sidebar) -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8" Padding="12" Margin="0,0,12,0"
                    BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1"
                    Visibility="{Binding Registros.Count, Converter={StaticResource BoolToVisConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Registros" FontWeight="Bold" FontSize="14"
                               Margin="0,0,0,12"/>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Registros}"
                             SelectedItem="{Binding SelectedRegistro}"
                             BorderThickness="0" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" Padding="8" Margin="0,0,0,4"
                                        CornerRadius="6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Fecha, StringFormat=dd/MM/yyyy}"
                                                   FontWeight="SemiBold" FontSize="13"/>
                                        <TextBlock Text="{Binding Empleado.NombreCompleto}"
                                                   FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="â±ï¸" FontSize="10" Margin="0,0,3,0"/>
                                            <TextBlock Text="{Binding TotalHoras, StringFormat=N1, Mode=OneWay}"
                                                       FontSize="11" FontWeight="SemiBold"
                                                       Foreground="{StaticResource PrimaryBrush}"/>
                                            <TextBlock Text="h" FontSize="11" Margin="2,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border" Background="Transparent"
                                                    CornerRadius="6" Padding="0" Margin="0,0,0,2">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource PrimaryLightBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource BackgroundBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Detalle del registro seleccionado -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8" Padding="24"
                        BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                    <StackPanel DataContext="{Binding SelectedRegistro}">
                        <!-- Header del registro -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Fecha, StringFormat='dddd, dd MMMM yyyy'}"
                                           FontSize="20" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Empleado.NombreCompleto}"
                                           FontSize="16" Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <Border Grid.Column="1" Background="{StaticResource PrimaryLightBrush}"
                                    CornerRadius="8" Padding="12,8">
                                <TextBlock FontSize="18" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}">
                                    <Run Text="{Binding TotalHoras, StringFormat=N1, Mode=OneWay}"/>
                                    <Run Text=" horas"/>
                                </TextBlock>
                            </Border>
                        </Grid>

                        <!-- Horario -->
                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8"
                                Padding="16" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Hora de Entrada" FontSize="11"
                                               Foreground="{StaticResource TextTertiaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="ðŸ•" FontSize="20"/>
                                        <TextBlock Text="{Binding HoraEntrada, Converter={StaticResource TimeSpanToStringConverter}}" 
                                                   FontSize="20" FontWeight="Bold" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Hora de Salida" FontSize="11"
                                               Foreground="{StaticResource TextTertiaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="ðŸ•”" FontSize="20"/>
                                        <TextBlock Text="{Binding HoraSalida, Converter={StaticResource TimeSpanToStringConverter}}" 
                                                   FontSize="20" FontWeight="Bold" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Actividades -->
                        <TextBlock Text="Actividades Realizadas" FontSize="16" FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <ItemsControl ItemsSource="{Binding DetallesActividades}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundBrush}"
                                            CornerRadius="8" Padding="16" Margin="0,0,0,12"
                                            BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header de la actividad -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Actividad.Nombre}"
                                                               FontSize="15" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Proyecto.Nombre}"
                                                               FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <Border Grid.Column="1" Background="{StaticResource SuccessLightBrush}"
                                                        CornerRadius="6" Padding="10,4">
                                                    <TextBlock FontWeight="Bold" Foreground="{StaticResource SuccessDarkBrush}">
                                                        <Run Text="{Binding Horas, StringFormat=N1}"/>
                                                        <Run Text="h"/>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>

                                            <!-- DescripciÃ³n -->
                                            <TextBlock Grid.Row="1" Text="{Binding Descripcion}"
                                                       TextWrapping="Wrap" FontSize="13"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>

                                            <!-- Horario de la actividad -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0"
                                                        Visibility="{Binding HoraInicio, Converter={StaticResource BoolToVisConverter}}">
                                                <TextBlock Text="ðŸ•" FontSize="11" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="11" Foreground="{StaticResource TextTertiaryBrush}">
                                                    <Run Text="{Binding HoraInicio, StringFormat=HH\\:mm}"/>
                                                    <Run Text=" - "/>
                                                    <Run Text="{Binding HoraFin, StringFormat=HH\\:mm}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Observaciones -->
                        <Border Background="{StaticResource InfoLightBrush}" CornerRadius="8"
                                Padding="16" Margin="0,12,0,0"
                                Visibility="{Binding Observaciones, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“ Observaciones" FontWeight="SemiBold"
                                           Foreground="{StaticResource InfoDarkBrush}" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding Observaciones}" TextWrapping="Wrap"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="24,16"
                BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Button Content="Cerrar" HorizontalAlignment="Right"
                        Command="{Binding CloseCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource SecondaryButton}"
                        Width="120"/>
            </Grid>
        </Border>
    </Grid>
</Window>
