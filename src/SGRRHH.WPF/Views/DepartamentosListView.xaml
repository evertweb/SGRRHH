<UserControl x:Class="SGRRHH.WPF.Views.DepartamentosListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <!-- ============================================ -->
        <!-- PANTALLA DE BIENVENIDA (Home) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Contenido principal centrado -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Emoji y TÃ­tulo -->
                <TextBlock Text="ðŸ¢" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Â¡GestiÃ³n de Departamentos!" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Â¿QuÃ© deseas hacer hoy?" 
                           FontSize="18" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>
                
                <!-- Tarjetas de acciÃ³n -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Tarjeta: Nuevo Departamento -->
                    <Border Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="16" 
                            Padding="30,25" 
                            Margin="0,0,20,0"
                            Cursor="Hand"
                            BorderThickness="2"
                            BorderBrush="Transparent">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.25" Color="#22C55E"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ShowFormCommand}"/>
                        </Border.InputBindings>
                        <StackPanel Width="180">
                            <!-- Icono con fondo verde -->
                            <Border Background="{StaticResource SuccessLightBrush}" 
                                    CornerRadius="12" 
                                    Width="64" Height="64" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,15">
                                <TextBlock Text="âž•" FontSize="28" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Nuevo Departamento" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="Crear un nuevo departamento" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Tarjeta: Ver Departamentos -->
                    <Border Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="16" 
                            Padding="30,25"
                            Cursor="Hand"
                            BorderThickness="2"
                            BorderBrush="Transparent">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.25" Color="#3B82F6"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ShowListCommand}"/>
                        </Border.InputBindings>
                        <StackPanel Width="180">
                            <!-- Icono con fondo azul -->
                            <Border Background="{StaticResource PrimaryLightBrush}" 
                                    CornerRadius="12" 
                                    Width="64" Height="64" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,15">
                                <TextBlock Text="ðŸ¢" FontSize="28" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Ver Departamentos" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="Consultar y gestionar departamentos" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!-- Footer con fecha -->
            <Border Grid.Row="1" Padding="20,15" Background="{StaticResource SurfaceBrush}">
                <TextBlock HorizontalAlignment="Center" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="13">
                    <Run Text="ðŸ“…"/>
                    <Run Text="{Binding CurrentDateText, Mode=OneWay}"/>
                </TextBlock>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE FORMULARIO (Crear) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsFormViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- BotÃ³n volver -->
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}"
                    HorizontalAlignment="Left" Margin="0,0,0,15"
                    Style="{StaticResource SecondaryButton}" Height="36" Padding="15,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â¬…" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Volver al inicio" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Formulario -->
            <Border Grid.Row="1" Style="{StaticResource Card}" Padding="30">
                <StackPanel MaxWidth="600">
                    <TextBlock Text="âž• Nuevo Departamento" 
                               Style="{StaticResource SectionTitle}" 
                               FontSize="24"
                               Margin="0,0,0,25"/>
                    
                    <!-- Nombre -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Nombre *" Style="{StaticResource FieldLabelBold}"/>
                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBox}"
                                 FontSize="14"/>
                    </StackPanel>
                    
                    <!-- DescripciÃ³n -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="DescripciÃ³n" Style="{StaticResource FieldLabelBold}"/>
                        <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBox}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalContentAlignment="Top"
                                 FontSize="14"/>
                    </StackPanel>
                    
                    <!-- Activo -->
                    <CheckBox Content="Activo" IsChecked="{Binding Activo}" 
                              FontSize="14" Margin="0,0,0,25"/>
                    
                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancelar" Command="{Binding CancelarCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="25,12" Margin="0,0,10,0" FontSize="14"/>
                        <Button Content="ðŸ’¾ Guardar" Command="{Binding GuardarCommand}"
                                Style="{StaticResource SuccessButton}"
                                Padding="25,12" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE LISTA -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsListViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- BotÃ³n volver -->
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}"
                    HorizontalAlignment="Left" Margin="0,0,0,15"
                    Style="{StaticResource SecondaryButton}" Height="36" Padding="15,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â¬…" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Volver al inicio" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Header -->
            <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Lista de Departamentos" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextInverseBrush}"/>
                        <TextBlock Foreground="{StaticResource TextInverseBrush}" Opacity="0.8" Margin="0,5,0,0">
                            <Run Text="Total:"/>
                            <Run Text="{Binding Departamentos.Count, Mode=OneWay}"/>
                            <Run Text="departamento(s)"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Lista + mensajes -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Error message -->
                <Border Grid.Row="0" Margin="0,0,0,10" Background="{StaticResource DangerLightBrush}" 
                        CornerRadius="4" Padding="15"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource NotNullToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource DangerDarkBrush}"/>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource CardNoBorder}" Padding="0">
                    <Grid>
                        <!-- DataGrid -->
                        <DataGrid ItemsSource="{Binding Departamentos}" 
                                  SelectedItem="{Binding SelectedDepartamento}"
                                  Style="{StaticResource StandardDataGrid}"
                                  RowHeight="50">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                                <DataGridTextColumn Header="DescripciÃ³n" Binding="{Binding Descripcion}" Width="2*"/>
                                <DataGridTemplateColumn Header="Estado" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Padding="8,4" CornerRadius="4" HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Activo}" Value="False">
                                                                <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Activo"/>
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Activo}" Value="False">
                                                                    <Setter Property="Text" Value="Inactivo"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Acciones" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="âœï¸" ToolTip="Editar"
                                                        Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        Style="{StaticResource IconButtonEdit}"
                                                        Padding="10,6" Margin="0,0,5,0"/>
                                                <Button Content="ðŸ—‘ï¸" ToolTip="Eliminar"
                                                        Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        Style="{StaticResource IconButtonDelete}"
                                                        Padding="10,6"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Loading overlay -->
                        <Border Background="#80FFFFFF" 
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="â³ Cargando..." FontSize="16" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Empty state -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                Visibility="{Binding Departamentos.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="No hay departamentos registrados" FontSize="16" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE EDICIÃ“N (cuando viene de la lista) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsEditViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- BotÃ³n volver a lista -->
            <Button Grid.Row="0" Command="{Binding ShowListCommand}"
                    HorizontalAlignment="Left" Margin="0,0,0,15"
                    Style="{StaticResource SecondaryButton}" Height="36" Padding="15,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â¬…" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Volver a la lista" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Formulario de ediciÃ³n -->
            <Border Grid.Row="1" Style="{StaticResource Card}" Padding="30">
                <StackPanel MaxWidth="600">
                    <TextBlock Text="âœï¸ Editar Departamento" 
                               Style="{StaticResource SectionTitle}" 
                               FontSize="24"
                               Margin="0,0,0,25"/>
                    
                    <!-- Nombre -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Nombre *" Style="{StaticResource FieldLabelBold}"/>
                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBox}"
                                 FontSize="14"/>
                    </StackPanel>
                    
                    <!-- DescripciÃ³n -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="DescripciÃ³n" Style="{StaticResource FieldLabelBold}"/>
                        <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBox}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalContentAlignment="Top"
                                 FontSize="14"/>
                    </StackPanel>
                    
                    <!-- Activo -->
                    <CheckBox Content="Activo" IsChecked="{Binding Activo}" 
                              FontSize="14" Margin="0,0,0,25"/>
                    
                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancelar" Command="{Binding CancelarEditCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="25,12" Margin="0,0,10,0" FontSize="14"/>
                        <Button Content="ðŸ’¾ Actualizar" Command="{Binding GuardarCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Padding="25,12" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
