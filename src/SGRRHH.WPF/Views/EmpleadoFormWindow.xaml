<Window x:Class="SGRRHH.WPF.Views.EmpleadoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Encabezado -->
        <Border Grid.Row="0" Background="{StaticResource SidebarHeaderBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="{Binding WindowTitle}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextInverseBrush}"/>
                <TextBlock Text="Complete la informaciÃ³n del empleado" FontSize="13" Foreground="{StaticResource SidebarTextMutedBrush}" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Contenido principal con scroll -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Panel izquierdo - Foto -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <Border Style="{StaticResource CardFlat}" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Foto del Empleado" FontWeight="SemiBold" FontSize="13" 
                                       Foreground="{StaticResource SidebarHeaderBrush}" Margin="0,0,0,10"/>
                            
                            <!-- Ãrea de foto -->
                            <Border Width="150" Height="180" Background="{StaticResource GrayLightBrush}" 
                                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="5">
                                <Grid>
                                    <!-- Placeholder si no hay foto -->
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                                Visibility="{Binding FotoPath, Converter={StaticResource IsNullOrEmptyToVisibilityConverter}}">
                                        <TextBlock Text="ðŸ‘¤" FontSize="50" HorizontalAlignment="Center" Foreground="{StaticResource GrayBrush}"/>
                                        <TextBlock Text="Sin foto" FontSize="11" Foreground="{StaticResource TextDisabledBrush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Imagen si hay foto -->
                                    <Image Source="{Binding FotoPath}" Stretch="UniformToFill"
                                           Visibility="{Binding FotoPath, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                            
                            <!-- Botones de foto -->
                            <Button Content="ðŸ“· Seleccionar" Command="{Binding SelectFotoCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,10,0,5" Padding="10,8" FontSize="12"/>
                            <Button Content="ðŸ—‘ï¸ Eliminar" Command="{Binding RemoveFotoCommand}"
                                    Style="{StaticResource DangerOutlineButton}"
                                    Padding="10,8" FontSize="12"
                                    Visibility="{Binding FotoPath, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Panel derecho - Formulario -->
                <StackPanel Grid.Column="1">
                    <!-- Datos bÃ¡sicos -->
                    <Border Style="{StaticResource CardFlat}" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ Datos BÃ¡sicos" FontWeight="Bold" FontSize="15" 
                                       Foreground="{StaticResource SidebarHeaderBrush}" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- CÃ³digo -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="CÃ³digo *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding Codigo, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" IsReadOnly="True"
                                             Background="{StaticResource GrayLightBrush}"/>
                                </StackPanel>
                                
                                <!-- CÃ©dula -->
                                <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="CÃ©dula *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding Cedula, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" MaxLength="20"/>
                                </StackPanel>
                                
                                <!-- Tipo de contrato -->
                                <StackPanel Grid.Column="4" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="Tipo de Contrato" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding TiposContrato}"
                                              SelectedValue="{Binding TipoContrato}"
                                              SelectedValuePath="Valor"
                                              DisplayMemberPath="Nombre"
                                              Style="{StaticResource StandardComboBox}"/>
                                </StackPanel>
                                
                                <!-- Nombres -->
                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="Nombres *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding Nombres, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" MaxLength="100"/>
                                </StackPanel>
                                
                                <!-- Apellidos -->
                                <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="Apellidos *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding Apellidos, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" MaxLength="100"/>
                                </StackPanel>
                                
                                <!-- Fecha Ingreso -->
                                <StackPanel Grid.Column="4" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="Fecha Ingreso *" Style="{StaticResource FieldLabel}"/>
                                    <DatePicker SelectedDate="{Binding FechaIngreso}" 
                                                Style="{StaticResource StandardDatePicker}"/>
                                </StackPanel>
                                
                                <!-- Estado -->
                                <StackPanel Grid.Column="0" Grid.Row="2">
                                    <TextBlock Text="Estado" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding EstadosEmpleado}"
                                              SelectedValue="{Binding Estado}"
                                              SelectedValuePath="Valor"
                                              DisplayMemberPath="Nombre"
                                              Style="{StaticResource StandardComboBox}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Datos personales -->
                    <Border Style="{StaticResource CardFlat}" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¤ Datos Personales" FontWeight="Bold" FontSize="15" 
                                       Foreground="{StaticResource SidebarHeaderBrush}" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Fecha Nacimiento -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="Fecha Nacimiento" Style="{StaticResource FieldLabel}"/>
                                    <DatePicker SelectedDate="{Binding FechaNacimiento}" 
                                                Style="{StaticResource StandardDatePicker}"/>
                                </StackPanel>
                                
                                <!-- GÃ©nero -->
                                <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="GÃ©nero" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding Generos}"
                                              SelectedValue="{Binding Genero}"
                                              SelectedValuePath="Valor"
                                              DisplayMemberPath="Nombre"
                                              Style="{StaticResource StandardComboBox}"/>
                                </StackPanel>
                                
                                <!-- Estado Civil -->
                                <StackPanel Grid.Column="4" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="Estado Civil" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding EstadosCiviles}"
                                              SelectedValue="{Binding EstadoCivil}"
                                              SelectedValuePath="Valor"
                                              DisplayMemberPath="Nombre"
                                              Style="{StaticResource StandardComboBox}"/>
                                </StackPanel>
                                
                                <!-- DirecciÃ³n -->
                                <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="DirecciÃ³n" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" MaxLength="300"/>
                                </StackPanel>
                                
                                <!-- Email -->
                                <StackPanel Grid.Column="4" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="Correo ElectrÃ³nico" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" MaxLength="200"/>
                                </StackPanel>
                                
                                <!-- TelÃ©fono -->
                                <StackPanel Grid.Column="0" Grid.Row="2">
                                    <TextBlock Text="TelÃ©fono" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" MaxLength="20"/>
                                </StackPanel>
                                
                                <!-- TelÃ©fono Emergencia -->
                                <StackPanel Grid.Column="2" Grid.Row="2">
                                    <TextBlock Text="Tel. Emergencia" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding TelefonoEmergencia, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" MaxLength="20"/>
                                </StackPanel>
                                
                                <!-- Contacto Emergencia -->
                                <StackPanel Grid.Column="4" Grid.Row="2">
                                    <TextBlock Text="Contacto Emergencia" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding ContactoEmergencia, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}" MaxLength="100"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Datos laborales -->
                    <Border Style="{StaticResource CardFlat}" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ¢ Datos Laborales" FontWeight="Bold" FontSize="15" 
                                       Foreground="{StaticResource SidebarHeaderBrush}" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Departamento -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Departamento" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding Departamentos}"
                                              SelectedItem="{Binding SelectedDepartamento}"
                                              DisplayMemberPath="Nombre"
                                              Style="{StaticResource StandardComboBox}"/>
                                </StackPanel>
                                
                                <!-- Cargo -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Cargo" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding CargosDisponibles}"
                                              SelectedItem="{Binding SelectedCargo}"
                                              DisplayMemberPath="Nombre"
                                              Style="{StaticResource StandardComboBox}"/>
                                </StackPanel>
                                
                                <!-- Supervisor -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Supervisor" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox ItemsSource="{Binding Supervisores}"
                                              SelectedItem="{Binding SelectedSupervisor}"
                                              DisplayMemberPath="NombreCompleto"
                                              Style="{StaticResource StandardComboBox}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Observaciones -->
                    <Border Style="{StaticResource CardFlat}" Padding="20">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Observaciones" FontWeight="Bold" FontSize="15" 
                                       Foreground="{StaticResource SidebarHeaderBrush}" Margin="0,0,0,15"/>
                            <TextBox Text="{Binding Observaciones, UpdateSourceTrigger=PropertyChanged}"
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     Padding="10,8" FontSize="13" MaxLength="1000"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderBrush="{StaticResource BorderBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        
        <!-- Barra de acciones -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="20" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="* Campos obligatorios" FontSize="12" Foreground="{StaticResource TextDisabledBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Width="120" Height="40" Margin="0,0,10,0" FontSize="14"/>
                    <Button Content="ðŸ’¾ Guardar" Command="{Binding SaveCommand}"
                            Style="{StaticResource SuccessButton}"
                            Width="140" Height="40" FontWeight="Bold" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Overlay de carga -->
        <Border Grid.RowSpan="3" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="10" Padding="30"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="â³" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Procesando..." FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
