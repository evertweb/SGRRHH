<Window x:Class="SGRRHH.WPF.Views.EmpleadoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#37474F" Padding="20">
            <StackPanel>
                <TextBlock Text="{Binding WindowTitle}" FontSize="22" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Complete la informaciÃ³n del empleado" FontSize="13" Foreground="#B0BEC5" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Contenido principal con scroll -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Panel izquierdo - Foto -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <Border Background="White" CornerRadius="8" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Foto del Empleado" FontWeight="SemiBold" FontSize="13" 
                                       Foreground="#37474F" Margin="0,0,0,10"/>
                            
                            <!-- Ãrea de foto -->
                            <Border Width="150" Height="180" Background="#F5F5F5" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                                <Grid>
                                    <!-- Placeholder si no hay foto -->
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                                Visibility="{Binding FotoPath, Converter={StaticResource IsNullOrEmptyToVisibilityConverter}}">
                                        <TextBlock Text="ðŸ‘¤" FontSize="50" HorizontalAlignment="Center" Foreground="#BDBDBD"/>
                                        <TextBlock Text="Sin foto" FontSize="11" Foreground="#9E9E9E" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Imagen si hay foto -->
                                    <Image Source="{Binding FotoPath}" Stretch="UniformToFill"
                                           Visibility="{Binding FotoPath, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                            
                            <!-- Botones de foto -->
                            <Button Content="ðŸ“· Seleccionar" Command="{Binding SelectFotoCommand}"
                                    Margin="0,10,0,5" Padding="10,8"
                                    Background="#1E88E5" Foreground="White" 
                                    BorderThickness="0" Cursor="Hand" FontSize="12"/>
                            <Button Content="ðŸ—‘ï¸ Eliminar" Command="{Binding RemoveFotoCommand}"
                                    Padding="10,8"
                                    Background="#FFEBEE" Foreground="#E53935"
                                    BorderThickness="0" Cursor="Hand" FontSize="12"
                                    Visibility="{Binding FotoPath, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Panel derecho - Formulario -->
                <StackPanel Grid.Column="1">
                    <!-- Datos bÃ¡sicos -->
                    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ Datos BÃ¡sicos" FontWeight="Bold" FontSize="15" 
                                       Foreground="#37474F" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- CÃ³digo -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="CÃ³digo *" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Codigo, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" IsReadOnly="True"
                                             Background="#F5F5F5"/>
                                </StackPanel>
                                
                                <!-- CÃ©dula -->
                                <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="CÃ©dula *" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Cedula, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" MaxLength="20"/>
                                </StackPanel>
                                
                                <!-- Tipo de contrato -->
                                <StackPanel Grid.Column="4" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="Tipo de Contrato" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding TiposContrato}"
                                              SelectedValue="{Binding TipoContrato}"
                                              SelectedValuePath="Valor"
                                              DisplayMemberPath="Nombre"
                                              Height="38" FontSize="13"/>
                                </StackPanel>
                                
                                <!-- Nombres -->
                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="Nombres *" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Nombres, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" MaxLength="100"/>
                                </StackPanel>
                                
                                <!-- Apellidos -->
                                <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="Apellidos *" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Apellidos, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" MaxLength="100"/>
                                </StackPanel>
                                
                                <!-- Fecha Ingreso -->
                                <StackPanel Grid.Column="4" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="Fecha Ingreso *" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <DatePicker SelectedDate="{Binding FechaIngreso}" 
                                                Height="38" FontSize="13"/>
                                </StackPanel>
                                
                                <!-- Estado -->
                                <StackPanel Grid.Column="0" Grid.Row="2">
                                    <TextBlock Text="Estado" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding EstadosEmpleado}"
                                              SelectedValue="{Binding Estado}"
                                              SelectedValuePath="Valor"
                                              DisplayMemberPath="Nombre"
                                              Height="38" FontSize="13"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Datos personales -->
                    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¤ Datos Personales" FontWeight="Bold" FontSize="15" 
                                       Foreground="#37474F" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Fecha Nacimiento -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="Fecha Nacimiento" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <DatePicker SelectedDate="{Binding FechaNacimiento}" 
                                                Height="38" FontSize="13"/>
                                </StackPanel>
                                
                                <!-- GÃ©nero -->
                                <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="GÃ©nero" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding Generos}"
                                              SelectedValue="{Binding Genero}"
                                              SelectedValuePath="Valor"
                                              DisplayMemberPath="Nombre"
                                              Height="38" FontSize="13"/>
                                </StackPanel>
                                
                                <!-- Estado Civil -->
                                <StackPanel Grid.Column="4" Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="Estado Civil" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding EstadosCiviles}"
                                              SelectedValue="{Binding EstadoCivil}"
                                              SelectedValuePath="Valor"
                                              DisplayMemberPath="Nombre"
                                              Height="38" FontSize="13"/>
                                </StackPanel>
                                
                                <!-- DirecciÃ³n -->
                                <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="DirecciÃ³n" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" MaxLength="300"/>
                                </StackPanel>
                                
                                <!-- Email -->
                                <StackPanel Grid.Column="4" Grid.Row="1" Margin="0,0,0,15">
                                    <TextBlock Text="Correo ElectrÃ³nico" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" MaxLength="200"/>
                                </StackPanel>
                                
                                <!-- TelÃ©fono -->
                                <StackPanel Grid.Column="0" Grid.Row="2">
                                    <TextBlock Text="TelÃ©fono" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" MaxLength="20"/>
                                </StackPanel>
                                
                                <!-- TelÃ©fono Emergencia -->
                                <StackPanel Grid.Column="2" Grid.Row="2">
                                    <TextBlock Text="Tel. Emergencia" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding TelefonoEmergencia, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" MaxLength="20"/>
                                </StackPanel>
                                
                                <!-- Contacto Emergencia -->
                                <StackPanel Grid.Column="4" Grid.Row="2">
                                    <TextBlock Text="Contacto Emergencia" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding ContactoEmergencia, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="38" Padding="10,8" FontSize="13" MaxLength="100"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Datos laborales -->
                    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ¢ Datos Laborales" FontWeight="Bold" FontSize="15" 
                                       Foreground="#37474F" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Departamento -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Departamento" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding Departamentos}"
                                              SelectedItem="{Binding SelectedDepartamento}"
                                              DisplayMemberPath="Nombre"
                                              Height="38" FontSize="13"/>
                                </StackPanel>
                                
                                <!-- Cargo -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Cargo" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding CargosDisponibles}"
                                              SelectedItem="{Binding SelectedCargo}"
                                              DisplayMemberPath="Nombre"
                                              Height="38" FontSize="13"/>
                                </StackPanel>
                                
                                <!-- Supervisor -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Supervisor" FontSize="12" Foreground="#616161" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding Supervisores}"
                                              SelectedItem="{Binding SelectedSupervisor}"
                                              DisplayMemberPath="NombreCompleto"
                                              Height="38" FontSize="13"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Observaciones -->
                    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Observaciones" FontWeight="Bold" FontSize="15" 
                                       Foreground="#37474F" Margin="0,0,0,15"/>
                            <TextBox Text="{Binding Observaciones, UpdateSourceTrigger=PropertyChanged}"
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     Padding="10,8" FontSize="13" MaxLength="1000"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        
        <!-- Barra de acciones -->
        <Border Grid.Row="2" Background="White" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="* Campos obligatorios" FontSize="12" Foreground="#9E9E9E" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Command="{Binding CancelCommand}"
                            Width="120" Height="40" Margin="0,0,10,0"
                            Background="#F5F5F5" Foreground="#616161"
                            BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand" FontSize="14"/>
                    <Button Content="ðŸ’¾ Guardar" Command="{Binding SaveCommand}"
                            Width="140" Height="40"
                            Background="#43A047" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Overlay de carga -->
        <Border Grid.RowSpan="3" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" CornerRadius="10" Padding="30"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="â³" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Procesando..." FontSize="16" Foreground="#616161" 
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
