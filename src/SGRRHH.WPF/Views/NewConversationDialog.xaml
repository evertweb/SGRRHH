<Window x:Class="SGRRHH.WPF.Views.NewConversationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:SGRRHH.WPF.Converters"
        mc:Ignorable="d"
        Title="Nueva Conversación" Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource ChatSurfaceBrush}"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InitialsConverter x:Key="InitialsConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource ChatSurfaceLightBrush}" Padding="20,16" BorderBrush="{StaticResource ChatBorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Nueva Conversación" FontSize="20" FontWeight="Bold" Foreground="{StaticResource ChatTextBrush}"/>
                <TextBlock Text="Selecciona un usuario para iniciar una conversación" FontSize="12" Foreground="{StaticResource ChatTextMutedBrush}" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Buscador -->
        <Border Grid.Row="1" Padding="16,12" Background="{StaticResource ChatSurfaceBrush}">
            <TextBox x:Name="SearchTextBox"
                     Style="{StaticResource ChatTextBox}"
                     TextChanged="SearchTextBox_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </Border>

        <!-- Lista de usuarios -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Background="{StaticResource ChatBackgroundBrush}">
            <ItemsControl x:Name="UsersListBox" Padding="0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent"
                                Cursor="Hand"
                                Padding="20,14"
                                BorderBrush="{StaticResource ChatBorderBrush}"
                                BorderThickness="0,0,0,1"
                                MouseLeftButtonDown="UserItem_Click"
                                Tag="{Binding}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource ChatHoverBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar con indicador de estado -->
                                <Grid Grid.Column="0" Width="42" Height="42" Margin="0,0,12,0">
                                    <Border Width="42" Height="42"
                                            CornerRadius="21"
                                            Background="{StaticResource ChatAccentBrush}">
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="White"
                                                   Text="{Binding NombreCompleto, Mode=OneWay, Converter={StaticResource InitialsConverter}}"/>
                                    </Border>
                                    <!-- Indicador de estado online -->
                                    <Ellipse Width="14" Height="14"
                                             HorizontalAlignment="Right"
                                             VerticalAlignment="Bottom"
                                             Stroke="{StaticResource ChatSurfaceBrush}"
                                             StrokeThickness="3"
                                             Fill="{Binding StatusColor, Mode=OneWay}"/>
                                </Grid>

                                <!-- Nombre, username y estado -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding NombreCompleto, Mode=OneWay}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource ChatTextBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <!-- Badge online -->
                                        <Border Background="{StaticResource ChatOnlineBrush}" 
                                                CornerRadius="3" 
                                                Padding="6,2" 
                                                Margin="8,0,0,0"
                                                Visibility="{Binding IsOnline, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="EN LÍNEA" 
                                                       FontSize="9" 
                                                       FontWeight="Bold" 
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock FontSize="12"
                                               Foreground="{StaticResource ChatTextMutedBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0">
                                        <Run Text="@"/><Run Text="{Binding Username, Mode=OneWay}"/>
                                        <Run Text=" · "/>
                                        <Run Text="{Binding StatusText, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Flecha -->
                                <TextBlock Grid.Column="2"
                                           Text="➤"
                                           FontSize="16"
                                           Foreground="{StaticResource ChatTextMutedBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer con botón cancelar -->
        <Border Grid.Row="3" Background="{StaticResource ChatSurfaceLightBrush}" Padding="16" BorderBrush="{StaticResource ChatBorderBrush}" BorderThickness="0,1,0,0">
            <Button Content="Cancelar"
                    Style="{StaticResource ChatButton}"
                    Click="CancelButton_Click"
                    HorizontalAlignment="Center"
                    Padding="24,10"/>
        </Border>

        <!-- Loading overlay -->
        <Border Grid.Row="0" Grid.RowSpan="4"
                x:Name="LoadingOverlay"
                Background="#CC000000"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⚡" FontSize="48" HorizontalAlignment="Center" Foreground="White"/>
                <TextBlock Text="Cargando usuarios..."
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
