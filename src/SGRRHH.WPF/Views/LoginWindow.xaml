<Window x:Class="SGRRHH.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="SGRRHH - Iniciar SesiÃ³n"
        Height="858" Width="544" MinHeight="500" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize"
        SizeToContent="Manual">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="44" CornerRadius="8" ResizeBorderThickness="6" UseAeroCaptionButtons="True" GlassFrameThickness="0"/>
    </shell:WindowChrome.WindowChrome>
    
    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10" 
            BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
                <!-- Barra de tÃ­tulo -->
                <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="8,8,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    shell:WindowChrome.IsHitTestVisibleInChrome="True">
                <Grid Margin="15,12" Height="40">
                    <TextBlock Text="SGRRHH" FontSize="18" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Button x:Name="CloseButton" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" FontSize="24" Cursor="Hand"
                            Command="{Binding ExitCommand}"
                            Padding="8,4" Width="44" Height="40">
                        <Button.Content>âœ•</Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF5252"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Contenido -->
            <ScrollViewer Grid.Row="1" Margin="30,20" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="20,10" VerticalAlignment="Top" HorizontalAlignment="Center" MaxWidth="480">
                
                <!-- Logo/TÃ­tulo -->
                <TextBlock Text="ðŸ‘¤" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Iniciar SesiÃ³n" FontSize="28" FontWeight="SemiBold" 
                           Foreground="{StaticResource SidebarHeaderBrush}" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- ============================================ -->
                <!-- SECCIÃ“N: PASSKEY DETECTADA (OPCIÃ“N PRINCIPAL) -->
                <!-- ============================================ -->
                <StackPanel Visibility="{Binding HasDetectedPasskey, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <!-- Mensaje de bienvenida con usuario detectado -->
                    <Border Background="{StaticResource PrimaryLightBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="ðŸ” Passkey detectada" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Bienvenido, " FontSize="14" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding DetectedPasskeyUsername}" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- BotÃ³n principal de Windows Hello -->
                    <Button Command="{Binding LoginWithWindowsHelloCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Padding="20,18" FontSize="18" FontWeight="Bold"
                            Margin="0,0,0,15"
                            Cursor="Hand"
                            Visibility="{Binding ShowEmailLogin, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”“" FontSize="20" Margin="0,0,12,0"/>
                            <TextBlock Text="Iniciar con Windows Hello" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Link para usar email/contraseÃ±a -->
                    <Button Command="{Binding ToggleEmailLoginCommand}"
                            Margin="0,10,0,0"
                            Cursor="Hand"
                            Visibility="{Binding ShowEmailLogin, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="Â¿Problemas? Usar email y contraseÃ±a" FontSize="12" TextDecorations="Underline"/>
                    </Button>
                </StackPanel>

                <!-- ============================================ -->
                <!-- SECCIÃ“N: LOGIN CON EMAIL/CONTRASEÃ‘A -->
                <!-- ============================================ -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <!-- Mostrar si no hay passkey detectada O si el usuario eligiÃ³ email -->
                                <DataTrigger Binding="{Binding HasDetectedPasskey}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ShowEmailLogin}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <!-- BotÃ³n para volver a passkey (solo si hay passkey y estÃ¡ en modo email) -->
                    <Button Command="{Binding UsePasskeyLoginCommand}"
                            Margin="0,0,0,20"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
                                    </Trigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding HasDetectedPasskey}" Value="True"/>
                                            <Condition Binding="{Binding ShowEmailLogin}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â† " FontSize="12"/>
                            <TextBlock Text="Volver a usar Windows Hello" FontSize="12" TextDecorations="Underline"/>
                        </StackPanel>
                    </Button>

                    <!-- Usuario -->
                    <TextBlock Text="Usuario" Foreground="{StaticResource SidebarHeaderBrush}" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Padding="12" FontSize="16" Margin="0,0,0,15"
                             BorderBrush="{StaticResource GrayBrush}" BorderThickness="1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <!-- ContraseÃ±a -->
                    <TextBlock Text="ContraseÃ±a" Foreground="{StaticResource SidebarHeaderBrush}" FontSize="14" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Padding="12" FontSize="16" Margin="0,0,0,15"
                                 BorderBrush="{StaticResource GrayBrush}" BorderThickness="1"
                                 PasswordChanged="PasswordBox_PasswordChanged">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                    
                    <!-- BotÃ³n de Login -->
                    <Button Content="Iniciar SesiÃ³n"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="18,14" FontSize="16" FontWeight="SemiBold"
                            Margin="0,10,0,0"/>

                    <!-- Separador "o" para Windows Hello (solo si estÃ¡ disponible pero no hay passkey detectada) -->
                    <Grid Margin="0,20,0,10">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsWindowsHelloAvailable}" Value="True"/>
                                            <Condition Binding="{Binding HasDetectedPasskey}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Height="1" Background="{StaticResource GrayBrush}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="o" Margin="10,0"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <Border Grid.Column="2" Height="1" Background="{StaticResource GrayBrush}" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- BotÃ³n de Windows Hello (solo si estÃ¡ disponible pero no hay passkey detectada) -->
                    <Button Command="{Binding LoginWithWindowsHelloCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Padding="18,14" FontSize="16" FontWeight="SemiBold"
                            Margin="0,0,0,10"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsWindowsHelloAvailable}" Value="True"/>
                                            <Condition Binding="{Binding HasDetectedPasskey}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Iniciar con Windows Hello" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- Mensaje de error -->
                <Border Background="{StaticResource DangerLightBrush}" CornerRadius="5" Padding="10" Margin="0,15,0,0"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource DangerBrush}" 
                               TextWrapping="Wrap" FontSize="12"/>
                </Border>

                <!-- Mensaje informativo si Windows Hello no estÃ¡ disponible -->
                <Border Background="{StaticResource WarningLightBrush}" CornerRadius="5" Padding="10" Margin="0,10,0,0"
                        Visibility="{Binding IsWindowsHelloAvailable, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Windows Hello no disponible"
                                   Foreground="{StaticResource WarningBrush}"
                                   FontWeight="SemiBold"
                                   FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding WindowsHelloStatusMessage}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Indicador de carga -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                            Margin="0,15,0,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="â³ Verificando credenciales..." Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
