<Window x:Class="SGRRHH.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SGRRHH - Inicio de SesiÃ³n"
        Height="450" Width="600" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{StaticResource ControlBrush}">

    <Border BorderThickness="2" BorderBrush="{StaticResource HighlightBrush}">
        <Border BorderThickness="2" BorderBrush="{StaticResource ShadowBrush}" Margin="0,0,2,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Barra de TÃ­tulo -->
                    <RowDefinition Height="*"/>    <!-- Contenido -->
                    <RowDefinition Height="Auto"/> <!-- Barra de Estado -->
                </Grid.RowDefinitions>

                <!-- 1. BARRA DE TÃTULO CLÃSICA -->
                <Grid Grid.Row="0" Background="{StaticResource TitleBarBrush}" Height="18" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Icono -->
                        <ColumnDefinition Width="*"/>    <!-- Texto -->
                        <ColumnDefinition Width="Auto"/> <!-- Botones -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icono App -->
                    <TextBlock Text="ðŸ–¥ï¸" Grid.Column="0" Foreground="White" Margin="4,0,4,0" VerticalAlignment="Center" FontSize="10"/>

                    <!-- TÃ­tulo -->
                    <TextBlock Grid.Column="1" Text="SISTEMA INTERNO DE GESTIÃ“N DE RRHH FORESTECH DE COLOMBIA - [MODO SEGURO]" 
                               Foreground="White" FontFamily="Tahoma" FontWeight="Bold" FontSize="11" 
                               VerticalAlignment="Center" Margin="2,0"/>

                    <!-- BotÃ³n Cerrar (X) -->
                    <Button Grid.Column="2" 
                            Command="{Binding ExitCommand}"
                            Style="{StaticResource LegacyButtonStyle}" 
                            Width="16" Height="14" Margin="2" Padding="0">
                        <TextBlock Text="r" FontFamily="Marlett" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                    </Button>
                </Grid>

                <!-- 2. AREA DE CONTENIDO -->
                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/> <!-- Izquierda: Logo/Imagen -->
                        <ColumnDefinition Width="*"/>   <!-- Derecha: Formulario -->
                    </Grid.ColumnDefinitions>

                    <!-- Panel Izquierdo: IlustraciÃ³n/Logo -->
                    <Border Grid.Column="0" BorderBrush="{StaticResource ShadowBrush}" BorderThickness="1" Background="{StaticResource WhiteBrush}" Margin="0,0,10,0">
                         <!-- AquÃ­ irÃ­a una imagen pixelada del logo, por ahora un placeholder ascii -->
                        <Viewbox Stretch="Uniform" Margin="10">
                            <TextBlock Text="SGRRHH&#x0a;V.2002" FontFamily="Courier New" FontWeight="Bold" TextAlignment="Center"/>
                        </Viewbox>
                    </Border>

                    <!-- Panel Derecho: Formulario -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Header -->
                            <RowDefinition Height="*"/>    <!-- Form -->
                            <RowDefinition Height="Auto"/> <!-- Botones -->
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Ingrese credenciales para acceder:" 
                                   FontFamily="Tahoma" FontSize="11" Margin="0,0,0,15"/>

                        <!-- FORMULARIO DE ACCESO -->
                        <GroupBox Grid.Row="1" Header="AutenticaciÃ³n de Usuario" BorderBrush="{StaticResource ShadowBrush}" FontFamily="{StaticResource SystemFont}" FontSize="{StaticResource BaseFontSize}" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- MODO: PASSWORD / WINDOWS HELLO -->
                                <!-- LOGICA DE VISIBILIDAD PRESERVADA -->
                                
                                <!-- 1. StackPanel para detectar Passkey (Windows Hello) -->
                                <StackPanel Grid.Row="0" 
                                            Visibility="{Binding HasDetectedPasskey, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                         <TextBlock Text="Usuario detectado:" Margin="0,0,5,0"/>
                                         <TextBlock Text="{Binding DetectedPasskeyUsername}" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <Button Content="Iniciar con Huella/Rostro..." 
                                            Command="{Binding LoginWithWindowsHelloCommand}"
                                            Style="{StaticResource LegacyButtonStyle}"
                                            HorizontalAlignment="Left" Width="180" Height="24" Margin="0,5,0,5"/>

                                    <Button Command="{Binding ToggleEmailLoginCommand}"
                                            Content="Cambiar Usuario..."
                                            Style="{StaticResource LegacyButtonStyle}"
                                            HorizontalAlignment="Left" Width="180" Height="24" Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- 2. StackPanel para Login Normal (Input Manual) -->
                                <StackPanel Grid.Row="1">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasDetectedPasskey}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ShowEmailLogin}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <!-- Inputs Grid -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Usuario:" VerticalAlignment="Center"/>
                                        <TextBox x:Name="UsernameTextBox" Grid.Row="0" Grid.Column="1" 
                                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource LegacyTextBoxStyle}" Height="20"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="ContraseÃ±a:" VerticalAlignment="Center"/>
                                        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1"
                                                     PasswordChanged="PasswordBox_PasswordChanged"
                                                     Style="{StaticResource LegacyPasswordStyle}" Height="20"/>
                                                     
                                        <!-- Opciones Login Normal -->
                                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                            <Button Content="Aceptar" Command="{Binding LoginCommand}" 
                                                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                                    Style="{StaticResource LegacyButtonStyle}" Width="75" Margin="0,0,5,0" IsDefault="True"/>
                                            
                                            <!-- Boton extra para Windows Hello si estÃ¡ disponible pero no hay passkey guardada -->
                                            <Button Content="Usar BiometrÃ­a" 
                                                    Command="{Binding LoginWithWindowsHelloCommand}"
                                                    ToolTip="Windows Hello disponible"
                                                    Style="{StaticResource LegacyButtonStyle}" 
                                                    Visibility="{Binding IsWindowsHelloAvailable, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Margin="5,0"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                     <!-- Boton Volver a Auto-Login -->
                                     <Button Command="{Binding UsePasskeyLoginCommand}"
                                            Content="&lt;&lt; Cancelar"
                                            HorizontalAlignment="Left" Margin="0,15,0,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource LegacyButtonStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding HasDetectedPasskey}" Value="True"/>
                                                                <Condition Binding="{Binding ShowEmailLogin}" Value="True"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                     </Button>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- Mensajes de Estado/Error -->
                        <TextBlock Grid.Row="2" Text="{Binding ErrorMessage}" 
                                   Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Foreground="Red" FontWeight="Bold" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        
                        <TextBlock Grid.Row="2" Text="Conectando al servidor..." 
                                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Foreground="Blue" FontStyle="Italic" Margin="0,5,0,0"/>

                    </Grid>
                </Grid>

                <!-- 3. BARRA DE ESTADO / FOOTER -->
                <Border Grid.Row="2" BorderThickness="1,1,0,0" BorderBrush="{StaticResource ShadowBrush}" Background="{StaticResource ControlBrush}" Padding="2">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="Auto"/>
                         </Grid.ColumnDefinitions>
                         <TextBlock Text="Listo." FontFamily="Tahoma" FontSize="10"/>
                         <TextBlock Grid.Column="1" Text="SGRRHH System | V 1.0.4b" FontFamily="Tahoma" FontSize="10" Margin="10,0"/>
                     </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
