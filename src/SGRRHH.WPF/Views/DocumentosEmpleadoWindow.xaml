<Window x:Class="SGRRHH.WPF.Views.DocumentosEmpleadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Documentos del Empleado" 
        Height="700" Width="1000"
        MinHeight="550" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
    
    <Window.Resources>
        <!-- Estilos locales no duplicados -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Encabezado -->
        <Border Grid.Row="0" Background="{DynamicResource SidebarBackgroundBrush}" Padding="20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="ðŸ“ Documentos del Empleado" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource TextInverseBrush}"/>
                    <TextBlock Text="{Binding Empleado.NombreCompleto}" FontSize="14" Foreground="{DynamicResource SidebarTextMutedBrush}" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ProgresoChecklist}" Foreground="{DynamicResource TextInverseBrush}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="âž• Nuevo Documento" 
                            Command="{Binding NuevoDocumentoCommand}"
                            Style="{DynamicResource SuccessButton}"
                            Visibility="{Binding PuedeGestionar, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Panel izquierdo - Checklist -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="ðŸ“‹ Checklist de Documentos" Style="{StaticResource HeaderTextStyle}"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Checklist}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" Padding="10" CornerRadius="4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TieneDocumento}" Value="True">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding EstaVencido}" Value="True">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Icono de estado -->
                                            <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="â¬œ"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TieneDocumento}" Value="True">
                                                                <Setter Property="Text" Value="âœ…"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding EstaVencido}" Value="True">
                                                                <Setter Property="Text" Value="âš ï¸"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            
                                            <!-- Nombre del tipo -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding NombreTipo}" FontWeight="Medium" TextWrapping="Wrap"/>
                                                <TextBlock FontSize="11" Foreground="{DynamicResource TextMutedBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Opcional"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding EsRequerido}" Value="True">
                                                                    <Setter Property="Text" Value="Requerido"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding EstaVencido}" Value="True">
                                                                    <Setter Property="Text" Value="âš ï¸ Vencido"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <!-- BotÃ³n agregar si no tiene -->
                                            <Button Grid.Column="2" Content="+" 
                                                    Command="{Binding DataContext.NuevoDocumentoTipoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding Tipo}"
                                                    Width="28" Height="28"
                                                    Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource TextInverseBrush}"
                                                    BorderThickness="0" Cursor="Hand"
                                                    Visibility="{Binding DataContext.PuedeGestionar, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TieneDocumento}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Panel derecho - Lista de documentos y formulario -->
            <Grid Grid.Column="1" Margin="5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Lista de documentos -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="ðŸ“„ Documentos Subidos" Style="{StaticResource HeaderTextStyle}"/>
                        
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding Documentos}"
                                  SelectedItem="{Binding SelectedDocumento}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowBackground="White"
                                  AlternatingRowBackground="#F8F9FA">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tipo" Width="150">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="TipoDocumento"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Fecha Subida" Binding="{Binding FechaCreacion, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTextColumn Header="Vencimiento" Binding="{Binding FechaVencimiento, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTemplateColumn Header="Estado" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="âœ…"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding EstaVigente}" Value="False">
                                                                <Setter Property="Text" Value="âš ï¸"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Botones de acciÃ³n -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="ðŸ‘ï¸ Ver" 
                                    Command="{Binding VerDocumentoCommand}"
                                    Style="{DynamicResource PrimaryButton}"
                                    Margin="0,0,5,0"/>
                            <Button Content="âœï¸ Editar" 
                                    Command="{Binding EditarDocumentoCommand}"
                                    Style="{DynamicResource SecondaryButton}"
                                    Margin="0,0,5,0"
                                    Visibility="{Binding PuedeGestionar, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="ðŸ—‘ï¸ Eliminar" 
                                    Command="{Binding EliminarDocumentoCommand}"
                                    Style="{DynamicResource DangerButton}"
                                    Visibility="{Binding PuedeEliminar, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Formulario de documento -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" 
                        Visibility="{Binding IsFormVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                        Margin="5,10,5,5">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderTextStyle}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}ðŸ“ {0} Documento">
                                    <Binding Path="IsEditing" Converter="{StaticResource BoolToEditTextConverter}"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Tipo de documento -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Tipo de Documento *" Style="{StaticResource LabelStyle}"/>
                                <ComboBox ItemsSource="{Binding TiposDocumento}"
                                          SelectedValue="{Binding FormTipoDocumento}"
                                          SelectedValuePath="Tipo"
                                          DisplayMemberPath="Nombre"
                                          Padding="8" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Nombre -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,10">
                                <TextBlock Text="Nombre del Documento *" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding FormNombre, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Fecha EmisiÃ³n -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Fecha de EmisiÃ³n" Style="{StaticResource LabelStyle}"/>
                                <DatePicker SelectedDate="{Binding FormFechaEmision}"
                                            Padding="8" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Fecha Vencimiento -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,10">
                                <TextBlock Text="Fecha de Vencimiento" Style="{StaticResource LabelStyle}"/>
                                <DatePicker SelectedDate="{Binding FormFechaVencimiento}"
                                            Padding="8" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Archivo -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,10"
                                        Visibility="{Binding IsEditing, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                                <TextBlock Text="Archivo *" Style="{StaticResource LabelStyle}"/>
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding FormArchivoNombreOriginal, Mode=OneWay}" 
                                             IsReadOnly="True" Padding="8" Background="{DynamicResource BorderLightBrush}"/>
                                    <Button Grid.Column="1" Content="ðŸ“" 
                                            Command="{Binding SeleccionarArchivoCommand}"
                                            Padding="8,6" Margin="5,0,0,0"
                                            Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource TextInverseBrush}"
                                            BorderThickness="0" Cursor="Hand"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- DescripciÃ³n -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Margin="0,0,0,10">
                                <TextBlock Text="DescripciÃ³n / Notas" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding FormDescripcion, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8" Margin="0,5,0,0" Height="60"
                                         TextWrapping="Wrap" AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                            
                            <!-- Botones -->
                            <StackPanel Grid.Row="3" Grid.ColumnSpan="3" 
                                        Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Cancelar" 
                                        Command="{Binding CancelarFormularioCommand}"
                                        Style="{DynamicResource SecondaryButton}"
                                        Margin="0,0,10,0"/>
                                <Button Content="ðŸ’¾ Guardar" 
                                        Command="{Binding GuardarDocumentoCommand}"
                                        Style="{DynamicResource SuccessButton}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading overlay -->
        <Border Grid.RowSpan="2" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â³" FontSize="40" HorizontalAlignment="Center"/>
                <TextBlock Text="Procesando..." FontSize="16" Foreground="{DynamicResource TextInverseBrush}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
