<UserControl x:Class="SGRRHH.WPF.Views.ActividadesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#C0C0C0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/LegacyTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <!-- ============================================ -->
        <!-- PANTALLA DE BIENVENIDA (Home) -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="[CATALOGO]" FontFamily="Courier New" FontSize="24" FontWeight="Bold"
                           Foreground="#000080" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="CATALOGO DE ACTIVIDADES" FontFamily="Tahoma" FontSize="16" FontWeight="Bold" 
                           Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Seleccione una opcion:" FontFamily="Tahoma" FontSize="10" 
                           Foreground="#404040" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Tarjeta: Nueva Actividad -->
                    <Border Background="White" BorderThickness="2" BorderBrush="#808080"
                            Padding="20,15" Margin="0,0,15,0" Cursor="Hand" Width="160">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NewActividadCommand}"/>
                        </Border.InputBindings>
                        <StackPanel HorizontalAlignment="Center">
                            <Border Background="#008000" Width="50" Height="50" 
                                    HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="[+]" FontFamily="Courier New" FontSize="20" FontWeight="Bold"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Nueva Actividad" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"
                                       Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Crear una nueva" FontFamily="Tahoma" FontSize="8"
                                       Foreground="#808080" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Tarjeta: Ver Actividades -->
                    <Border Background="White" BorderThickness="2" BorderBrush="#808080"
                            Padding="20,15" Cursor="Hand" Width="160">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ShowListCommand}"/>
                        </Border.InputBindings>
                        <StackPanel HorizontalAlignment="Center">
                            <Border Background="#000080" Width="50" Height="50" 
                                    HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="[=]" FontFamily="Courier New" FontSize="20" FontWeight="Bold"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Ver Actividades" FontFamily="Tahoma" FontSize="10" FontWeight="Bold"
                                       Foreground="#000000" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Consultar lista" FontFamily="Tahoma" FontSize="8"
                                       Foreground="#808080" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <Border Grid.Row="1" Padding="10,8" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080">
                <TextBlock HorizontalAlignment="Center" FontFamily="Tahoma" FontSize="9" Foreground="#404040">
                    <Run Text="Fecha: "/>
                    <Run Text="{Binding CurrentDateText, Mode=OneWay}"/>
                </TextBlock>
            </Border>
        </Grid>
        
        <!-- ============================================ -->
        <!-- VISTA DE LISTA -->
        <!-- ============================================ -->
        <Grid Visibility="{Binding IsListViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Command="{Binding ShowHomeCommand}"
                    HorizontalAlignment="Left" Margin="0,0,0,8"
                    Style="{StaticResource LegacyButtonStyle}" 
                    FontFamily="Tahoma" FontSize="9" Padding="10,3">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&lt;-" FontFamily="Courier New" FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="Volver"/>
                </StackPanel>
            </Button>
            
            <Border Grid.Row="1" Background="#000080" Padding="10,6" Margin="0,0,0,8">
                <Grid>
                    <TextBlock Text="LISTA DE ACTIVIDADES" FontFamily="Tahoma" FontSize="12" 
                               FontWeight="Bold" Foreground="White"/>
                    <TextBlock HorizontalAlignment="Right" FontFamily="Tahoma" FontSize="9" Foreground="#C0C0FF">
                        <Run Text="Total: "/>
                        <Run Text="{Binding TotalActividades, Mode=OneWay}"/>
                        <Run Text=" actividad(es)"/>
                    </TextBlock>
                </Grid>
            </Border>
            
            <!-- Filtros -->
            <Border Grid.Row="2" Background="#E0E0E0" BorderThickness="1" BorderBrush="#808080" 
                    Padding="8" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LegacyTextBoxStyle}"
                             FontFamily="Tahoma" FontSize="9" Height="22" Margin="0,0,8,0"/>
                    
                    <ComboBox Grid.Column="1" Width="140" Margin="0,0,8,0"
                              ItemsSource="{Binding Categorias}"
                              SelectedItem="{Binding SelectedCategoria}"
                              FontFamily="Tahoma" FontSize="9" Height="22"/>
                    
                    <Button Grid.Column="2" Content="Buscar" Width="60"
                            Command="{Binding SearchActividadesCommand}"
                            Style="{StaticResource LegacyButtonStyle}"
                            FontFamily="Tahoma" FontSize="9" Padding="0,3"/>
                    
                    <Button Grid.Column="3" Content="X" Width="25" Margin="5,0,0,0"
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource LegacyButtonStyle}"
                            FontFamily="Tahoma" FontSize="9" FontWeight="Bold"
                            ToolTip="Limpiar filtros"/>
                </Grid>
            </Border>
            
            <!-- DataGrid de actividades -->
            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#808080" Background="White">
                <DataGrid ItemsSource="{Binding Actividades}"
                          SelectedItem="{Binding SelectedActividad}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          RowHeaderWidth="0"
                          GridLinesVisibility="All"
                          BorderThickness="0"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#E8E8E8"
                          FontFamily="Tahoma" FontSize="9"
                          ColumnHeaderHeight="22"
                          RowHeight="20"
                          MouseDoubleClick="DataGrid_MouseDoubleClick">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#C0C0C0"/>
                            <Setter Property="Foreground" Value="#000080"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Tahoma"/>
                            <Setter Property="FontSize" Value="9"/>
                            <Setter Property="Padding" Value="4,2"/>
                            <Setter Property="BorderBrush" Value="#808080"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="4,2"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Codigo" Binding="{Binding Codigo}" Width="80"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="120"/>
                        <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" Width="180">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding Descripcion}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Req.Proy" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" FontFamily="Courier New" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="No"/>
                                                <Setter Property="Foreground" Value="#808080"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RequiereProyecto}" Value="True">
                                                        <Setter Property="Text" Value="Si"/>
                                                        <Setter Property="Foreground" Value="#008000"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Ord" Binding="{Binding Orden}" Width="40">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Acciones" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Edit" ToolTip="Editar"
                                                Command="{Binding DataContext.EditActividadCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="8" Padding="6,2" Margin="0,0,3,0"/>
                                        <Button Content="Del" ToolTip="Eliminar"
                                                Command="{Binding DataContext.DeleteActividadCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Style="{StaticResource LegacyButtonStyle}"
                                                FontFamily="Tahoma" FontSize="8" Padding="6,2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <!-- Barra de estado -->
            <Border Grid.Row="4" Background="#E0E0E0" BorderThickness="0,1,0,0" BorderBrush="#808080" 
                    Padding="8,4" Margin="0,8,0,0">
                <TextBlock Text="{Binding TotalActividades, StringFormat='{}{0} actividad(es)'}" 
                           HorizontalAlignment="Right" FontFamily="Tahoma" FontSize="9" Foreground="#404040"/>
            </Border>
        </Grid>
        
        <!-- Loading overlay -->
        <Border Background="#80FFFFFF" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <Border Background="White" BorderThickness="2" BorderBrush="#808080" 
                    Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="[...]" FontFamily="Courier New" FontSize="20" FontWeight="Bold"
                               Foreground="#000080" HorizontalAlignment="Center"/>
                    <TextBlock Text="Cargando..." FontFamily="Tahoma" FontSize="10" 
                               Foreground="#808080" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
