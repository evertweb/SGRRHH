<UserControl x:Class="SGRRHH.WPF.Views.ActividadesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource SurfaceBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        
        <!-- Panel izquierdo: Lista de actividades -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Filtros -->
            <Border Grid.Row="0" Style="{StaticResource FilterPanel}" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SearchTextBox}" Width="Auto" Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" Width="140" Margin="0,0,10,0"
                              ItemsSource="{Binding Categorias}"
                              SelectedItem="{Binding SelectedCategoria}"
                              Style="{StaticResource StandardComboBox}"/>
                    
                    <Button Grid.Column="2" Content="ðŸ” Buscar" Width="90"
                            Command="{Binding SearchActividadesCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                    
                    <Button Grid.Column="3" Content="âœ–" Width="35" Margin="5,0,0,0"
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource DangerOutlineButton}"
                            ToolTip="Limpiar filtros"/>
                </Grid>
            </Border>
            
            <!-- DataGrid de actividades -->
            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Actividades}"
                      SelectedItem="{Binding SelectedActividad}"
                      Style="{StaticResource StandardDataGrid}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderBrush}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CÃ³digo" Binding="{Binding Codigo}" Width="90"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="CategorÃ­a" Binding="{Binding Categoria}" Width="120"/>
                    <DataGridTemplateColumn Header="Req. Proyecto" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="No"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RequiereProyecto}" Value="True">
                                                    <Setter Property="Text" Value="SÃ­"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Orden" Binding="{Binding Orden}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Barra de acciones -->
            <Border Grid.Row="2" Style="{StaticResource StatusBar}" Margin="0,15,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="âž• Nueva" Width="90"
                                Command="{Binding NewActividadCommand}"
                                Style="{StaticResource SuccessButton}" Margin="0,0,10,0"/>
                        <Button Content="âœï¸ Editar" Width="90"
                                Command="{Binding EditActividadCommand}"
                                Style="{StaticResource WarningButton}" Margin="0,0,10,0"/>
                        <Button Content="ðŸ—‘ï¸ Eliminar" Width="90"
                                Command="{Binding DeleteActividadCommand}"
                                Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding TotalActividades, StringFormat={}{0} actividad(es)}" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Panel derecho: Formulario -->
        <Border Grid.Column="1" Style="{StaticResource CardFlat}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- TÃ­tulo -->
                <TextBlock Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource CardTitle}">
                            <Setter Property="Text" Value="âž• Nueva Actividad"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Text" Value="âœï¸ Editar Actividad"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <!-- Campos del formulario -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="CÃ³digo *" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Codigo, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}" Margin="0,5,0,15"/>
                    
                    <TextBlock Text="Nombre *" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}" Margin="0,5,0,15"/>
                    
                    <TextBlock Text="CategorÃ­a" Style="{StaticResource FieldLabel}"/>
                    <ComboBox IsEditable="True"
                              Text="{Binding Categoria, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding Categorias}"
                              Style="{StaticResource StandardComboBox}" Margin="0,5,0,15"/>
                    
                    <TextBlock Text="DescripciÃ³n" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                             Height="60" Margin="0,5,0,15" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalContentAlignment="Top"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Orden" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Orden, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}" Margin="0,5,0,15"
                                     HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Â¿Requiere proyecto?" Style="{StaticResource FieldLabel}"/>
                            <CheckBox IsChecked="{Binding RequiereProyecto}" 
                                      Content="SÃ­" Margin="0,10,0,15" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <Border Style="{StaticResource AlertPanel}" Margin="0,0,0,15">
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource WarningDarkerBrush}">
                            <Run FontWeight="SemiBold">ðŸ’¡ Tip:</Run>
                            <Run Text=" Si la actividad requiere proyecto, el usuario deberÃ¡ seleccionar un proyecto al registrarla en el control diario."/>
                        </TextBlock>
                    </Border>
                </StackPanel>
                
                <!-- Botones -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Width="90"
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button Content="ðŸ’¾ Guardar" Width="100"
                            Command="{Binding SaveActividadCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Loading overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="5"/>
                <TextBlock Text="Cargando..." Foreground="{StaticResource TextInverseBrush}" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
