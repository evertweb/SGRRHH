<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ============================================== -->
    <!-- ESTILOS DE TIPOGRAFÍA - SGRRHH                 -->
    <!-- ============================================== -->
    
    <!-- === TÍTULOS === -->
    <Style x:Key="PageTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
    </Style>
    
    <Style x:Key="SectionTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="CardTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="SubTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>
    
    <!-- === TEXTO DE CONTENIDO === -->
    <Style x:Key="BodyText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="BodyTextSecondary" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>
    
    <Style x:Key="SmallText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
    </Style>
    
    <Style x:Key="CaptionText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
    </Style>
    
    <!-- === NÚMEROS GRANDES (Estadísticas) === -->
    <Style x:Key="StatNumber" TargetType="TextBlock">
        <Setter Property="FontSize" Value="42"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style x:Key="StatNumberBlue" TargetType="TextBlock" BasedOn="{StaticResource StatNumber}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryDarkerBrush}"/>
    </Style>
    
    <Style x:Key="StatNumberGreen" TargetType="TextBlock" BasedOn="{StaticResource StatNumber}">
        <Setter Property="Foreground" Value="{StaticResource SuccessDarkerBrush}"/>
    </Style>
    
    <Style x:Key="StatNumberOrange" TargetType="TextBlock" BasedOn="{StaticResource StatNumber}">
        <Setter Property="Foreground" Value="{StaticResource WarningDarkerBrush}"/>
    </Style>
    
    <Style x:Key="StatNumberRed" TargetType="TextBlock" BasedOn="{StaticResource StatNumber}">
        <Setter Property="Foreground" Value="{StaticResource DangerDeepBrush}"/>
    </Style>
    
    <!-- Números medianos -->
    <Style x:Key="StatNumberMedium" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style x:Key="StatNumberSmall" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <!-- === ETIQUETAS DE ESTADÍSTICAS === -->
    <Style x:Key="StatLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>
    
    <Style x:Key="StatLabelBlue" TargetType="TextBlock" BasedOn="{StaticResource StatLabel}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
    </Style>
    
    <Style x:Key="StatLabelGreen" TargetType="TextBlock" BasedOn="{StaticResource StatLabel}">
        <Setter Property="Foreground" Value="{StaticResource SuccessDarkBrush}"/>
    </Style>
    
    <Style x:Key="StatLabelOrange" TargetType="TextBlock" BasedOn="{StaticResource StatLabel}">
        <Setter Property="Foreground" Value="{StaticResource WarningDarkBrush}"/>
    </Style>
    
    <Style x:Key="StatLabelRed" TargetType="TextBlock" BasedOn="{StaticResource StatLabel}">
        <Setter Property="Foreground" Value="{StaticResource DangerDarkerBrush}"/>
    </Style>
    
    <!-- Subtexto de estadísticas -->
    <Style x:Key="StatSubtext" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>
    
    <Style x:Key="StatSubtextBlue" TargetType="TextBlock" BasedOn="{StaticResource StatSubtext}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryMutedBrush}"/>
    </Style>
    
    <Style x:Key="StatSubtextGreen" TargetType="TextBlock" BasedOn="{StaticResource StatSubtext}">
        <Setter Property="Foreground" Value="{StaticResource SuccessMutedBrush}"/>
    </Style>
    
    <Style x:Key="StatSubtextOrange" TargetType="TextBlock" BasedOn="{StaticResource StatSubtext}">
        <Setter Property="Foreground" Value="{StaticResource WarningMutedBrush}"/>
    </Style>
    
    <Style x:Key="StatSubtextRed" TargetType="TextBlock" BasedOn="{StaticResource StatSubtext}">
        <Setter Property="Foreground" Value="{StaticResource DangerMutedBrush}"/>
    </Style>
    
    <!-- === TEXTO ESPECIAL (Sidebar, Header) === -->
    <Style x:Key="SidebarTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="SidebarSubtitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource SidebarTextBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="HeaderTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SidebarBackgroundBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- === TEXTO PARA CHAT (Tema Oscuro) === -->
    <Style x:Key="ChatTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
    </Style>
    
    <Style x:Key="ChatSubtitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource ChatTextMutedBrush}"/>
    </Style>
    
    <Style x:Key="ChatMessageText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>
    
    <Style x:Key="ChatSenderName" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
    </Style>
    
    <Style x:Key="ChatTimestamp" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource ChatTextMutedBrush}"/>
    </Style>
    
    <!-- === TEXTO DE ENLACES === -->
    <Style x:Key="LinkText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="TextDecorations" Value="Underline"/>
    </Style>
    
    <!-- === TEXTO DE ERROR === -->
    <Style x:Key="ErrorText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
    </Style>
    
    <Style x:Key="SuccessText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
    </Style>
    
</ResourceDictionary>
