<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Importar colores primero -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ============================================== -->
    <!-- BRUSHES - SGRRHH                               -->
    <!-- Basados en Colors.xaml                         -->
    <!-- ============================================== -->
    
    <!-- === BRUSHES PRIMARIOS (Azules) === -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkerBrush" Color="{StaticResource PrimaryDarkerColor}"/>
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{StaticResource PrimaryAccentColor}"/>
    <SolidColorBrush x:Key="PrimaryMutedBrush" Color="{StaticResource PrimaryMutedColor}"/>
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="{StaticResource PrimaryBorderColor}"/>
    
    <!-- === BRUSHES DE ÉXITO (Verdes) === -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="SuccessDarkBrush" Color="{StaticResource SuccessDarkColor}"/>
    <SolidColorBrush x:Key="SuccessDarkerBrush" Color="{StaticResource SuccessDarkerColor}"/>
    <SolidColorBrush x:Key="SuccessMutedBrush" Color="{StaticResource SuccessMutedColor}"/>
    <SolidColorBrush x:Key="SuccessBorderBrush" Color="{StaticResource SuccessBorderColor}"/>
    <SolidColorBrush x:Key="SuccessAccentBrush" Color="{StaticResource SuccessAccentColor}"/>
    
    <!-- === BRUSHES DE ADVERTENCIA (Naranjas) === -->
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
    <SolidColorBrush x:Key="WarningDarkBrush" Color="{StaticResource WarningDarkColor}"/>
    <SolidColorBrush x:Key="WarningDarkerBrush" Color="{StaticResource WarningDarkerColor}"/>
    <SolidColorBrush x:Key="WarningMutedBrush" Color="{StaticResource WarningMutedColor}"/>
    <SolidColorBrush x:Key="WarningBorderBrush" Color="{StaticResource WarningBorderColor}"/>
    <SolidColorBrush x:Key="WarningAccentBrush" Color="{StaticResource WarningAccentColor}"/>
    <SolidColorBrush x:Key="WarningAlertBrush" Color="{StaticResource WarningAlertColor}"/>
    
    <!-- === BRUSHES DE PELIGRO (Rojos) === -->
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="{StaticResource DangerLightColor}"/>
    <SolidColorBrush x:Key="DangerDarkBrush" Color="{StaticResource DangerDarkColor}"/>
    <SolidColorBrush x:Key="DangerDarkerBrush" Color="{StaticResource DangerDarkerColor}"/>
    <SolidColorBrush x:Key="DangerDeepBrush" Color="{StaticResource DangerDeepColor}"/>
    <SolidColorBrush x:Key="DangerMutedBrush" Color="{StaticResource DangerMutedColor}"/>
    <SolidColorBrush x:Key="DangerBorderBrush" Color="{StaticResource DangerBorderColor}"/>
    <SolidColorBrush x:Key="DangerSoftBrush" Color="{StaticResource DangerSoftColor}"/>
    
    <!-- === BRUSHES DEL SIDEBAR === -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarHeaderBrush" Color="{StaticResource SidebarHeaderColor}"/>
    <SolidColorBrush x:Key="SidebarUserBrush" Color="{StaticResource SidebarUserColor}"/>
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHoverColor}"/>
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarTextColor}"/>
    <SolidColorBrush x:Key="SidebarTextMutedBrush" Color="{StaticResource SidebarTextMutedColor}"/>
    <SolidColorBrush x:Key="SidebarDarkBrush" Color="{StaticResource SidebarDarkColor}"/>
    
    <!-- === BRUSHES NEUTROS === -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    <SolidColorBrush x:Key="GrayLightBrush" Color="{StaticResource GrayLightColor}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource GrayColor}"/>
    <SolidColorBrush x:Key="GrayDarkBrush" Color="{StaticResource GrayDarkColor}"/>
    <SolidColorBrush x:Key="GrayDarkerBrush" Color="{StaticResource GrayDarkerColor}"/>
    
    <!-- === BRUSHES DE TEXTO === -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
    <SolidColorBrush x:Key="TextInverseBrush" Color="{StaticResource TextInverseColor}"/>
    
    <!-- === BRUSHES ESPECIALES === -->
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLightColor}"/>
    <SolidColorBrush x:Key="PinkBrush" Color="{StaticResource PinkColor}"/>
    <SolidColorBrush x:Key="PinkLightBrush" Color="{StaticResource PinkLightColor}"/>
    <SolidColorBrush x:Key="PinkDarkBrush" Color="{StaticResource PinkDarkColor}"/>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource OrangeColor}"/>
    <SolidColorBrush x:Key="PurpleBrush" Color="{StaticResource PurpleColor}"/>
    <SolidColorBrush x:Key="PurpleLightBrush" Color="{StaticResource PurpleLightColor}"/>
    <SolidColorBrush x:Key="GrayBlueBrush" Color="{StaticResource GrayBlueColor}"/>
    <SolidColorBrush x:Key="GrayBlueDarkBrush" Color="{StaticResource GrayBlueDarkColor}"/>
    
    <!-- === BRUSHES PARA CHAT (Tema Oscuro) === -->
    <SolidColorBrush x:Key="ChatBackgroundBrush" Color="{StaticResource ChatBackgroundColor}"/>
    <SolidColorBrush x:Key="ChatSurfaceBrush" Color="{StaticResource ChatSurfaceColor}"/>
    <SolidColorBrush x:Key="ChatSurfaceLightBrush" Color="{StaticResource ChatSurfaceLightColor}"/>
    <SolidColorBrush x:Key="ChatSurfaceDarkBrush" Color="{StaticResource ChatSurfaceDarkColor}"/>
    <SolidColorBrush x:Key="ChatBorderBrush" Color="{StaticResource ChatBorderColor}"/>
    <SolidColorBrush x:Key="ChatMessageBgBrush" Color="{StaticResource ChatMessageBgColor}"/>
    <SolidColorBrush x:Key="ChatHoverBrush" Color="{StaticResource ChatHoverColor}"/>
    <SolidColorBrush x:Key="ChatActiveBrush" Color="{StaticResource ChatActiveColor}"/>
    <SolidColorBrush x:Key="ChatAccentBrush" Color="{StaticResource ChatAccentColor}"/>
    <SolidColorBrush x:Key="ChatAccentHoverBrush" Color="{StaticResource ChatAccentHoverColor}"/>
    <SolidColorBrush x:Key="ChatTextBrush" Color="{StaticResource ChatTextColor}"/>
    <SolidColorBrush x:Key="ChatTextMutedBrush" Color="{StaticResource ChatTextMutedColor}"/>
    <SolidColorBrush x:Key="ChatTextDimBrush" Color="{StaticResource ChatTextDimColor}"/>
    <SolidColorBrush x:Key="ChatOnlineBrush" Color="{StaticResource ChatOnlineColor}"/>
    <SolidColorBrush x:Key="ChatErrorBrush" Color="{StaticResource ChatErrorColor}"/>
    
    <!-- === BRUSHES PARA CONFIGURACIÓN === -->
    <SolidColorBrush x:Key="ConfigSidebarBrush" Color="{StaticResource ConfigSidebarColor}"/>
    <SolidColorBrush x:Key="ConfigHoverBrush" Color="{StaticResource ConfigHoverColor}"/>
    <SolidColorBrush x:Key="ConfigTextBrush" Color="{StaticResource ConfigTextColor}"/>
    
    <!-- === ALIAS PARA COMPATIBILIDAD === -->
    <SolidColorBrush x:Key="PageBackground" Color="{StaticResource BorderLightColor}"/>
    
</ResourceDictionary>
