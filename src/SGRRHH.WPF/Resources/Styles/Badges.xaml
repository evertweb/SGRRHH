<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ============================================== -->
    <!-- ESTILOS DE BADGES/ESTADOS - SGRRHH             -->
    <!-- Para mostrar estados como: Pendiente, Aprobado -->
    <!-- ============================================== -->
    
    <!-- === BADGE BASE === -->
    <Style x:Key="Badge" TargetType="Border">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <!-- === BADGES POR COLOR === -->
    <Style x:Key="BadgePrimary" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
    </Style>
    
    <Style x:Key="BadgeSuccess" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
    </Style>
    
    <Style x:Key="BadgeWarning" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
    </Style>
    
    <Style x:Key="BadgeDanger" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
    </Style>
    
    <Style x:Key="BadgeNeutral" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource GrayBlueBrush}"/>
    </Style>
    
    <Style x:Key="BadgePink" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource PinkLightBrush}"/>
    </Style>
    
    <!-- === BADGE DE CONTADOR (Notificaciones) === -->
    <Style x:Key="CounterBadge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="MinWidth" Value="20"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <!-- TextBlock para texto dentro de badges -->
    <Style x:Key="BadgeText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="BadgeTextPrimary" TargetType="TextBlock" BasedOn="{StaticResource BadgeText}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
    </Style>
    
    <Style x:Key="BadgeTextSuccess" TargetType="TextBlock" BasedOn="{StaticResource BadgeText}">
        <Setter Property="Foreground" Value="{StaticResource SuccessDarkBrush}"/>
    </Style>
    
    <Style x:Key="BadgeTextWarning" TargetType="TextBlock" BasedOn="{StaticResource BadgeText}">
        <Setter Property="Foreground" Value="{StaticResource WarningDarkBrush}"/>
    </Style>
    
    <Style x:Key="BadgeTextDanger" TargetType="TextBlock" BasedOn="{StaticResource BadgeText}">
        <Setter Property="Foreground" Value="{StaticResource DangerDarkerBrush}"/>
    </Style>
    
    <Style x:Key="BadgeTextNeutral" TargetType="TextBlock" BasedOn="{StaticResource BadgeText}">
        <Setter Property="Foreground" Value="{StaticResource GrayBlueDarkBrush}"/>
    </Style>
    
    <Style x:Key="BadgeTextPink" TargetType="TextBlock" BasedOn="{StaticResource BadgeText}">
        <Setter Property="Foreground" Value="{StaticResource PinkDarkBrush}"/>
    </Style>
    
    <Style x:Key="CounterBadgeText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <!-- === INDICADORES DE ESTADO ONLINE (Chat) === -->
    <Style x:Key="OnlineIndicator" TargetType="Ellipse">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Fill" Value="{StaticResource ChatOnlineBrush}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="0" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="OfflineIndicator" TargetType="Ellipse">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Fill" Value="{StaticResource ChatTextMutedBrush}"/>
    </Style>
    
    <!-- === AVATAR CIRCULAR === -->
    <Style x:Key="AvatarBorder" TargetType="Border">
        <Setter Property="Width" Value="42"/>
        <Setter Property="Height" Value="42"/>
        <Setter Property="CornerRadius" Value="21"/>
        <Setter Property="Background" Value="{StaticResource ChatAccentBrush}"/>
    </Style>
    
    <Style x:Key="AvatarSmall" TargetType="Border">
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="Background" Value="{StaticResource ChatOnlineBrush}"/>
    </Style>
    
    <Style x:Key="AvatarLarge" TargetType="Border">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Background" Value="{StaticResource ChatActiveBrush}"/>
    </Style>
    
</ResourceDictionary>
