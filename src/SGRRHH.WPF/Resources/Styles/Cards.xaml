<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ============================================== -->
    <!-- ESTILOS DE CARDS/PANELES - SGRRHH              -->
    <!-- ============================================== -->
    
    <!-- === CARD BÁSICA (Fondo blanco con sombra) === -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="0" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Card sin borde -->
    <Style x:Key="CardNoBorder" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- Card sin sombra -->
    <Style x:Key="CardFlat" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    
    <!-- === CARDS DE ESTADÍSTICAS (Dashboard) === -->
    <Style x:Key="StatCardBlue" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource PrimaryDarkColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="StatCardGreen" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SuccessBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource SuccessDarkColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="StatCardOrange" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WarningBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource WarningDarkColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="StatCardRed" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DangerBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource DangerDarkerColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- === PANEL DE FILTROS (Toolbar) === -->
    <Style x:Key="FilterPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    
    <!-- === PANEL DE ALERTA === -->
    <Style x:Key="AlertPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WarningAlertBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WarningBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    
    <Style x:Key="InfoPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>
    
    <Style x:Key="SuccessPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    
    <!-- === PANEL DE CARGA === -->
    <Style x:Key="LoadingPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WarningAlertBrush}"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    
    <!-- === BARRA DE ESTADO (Footer) === -->
    <Style x:Key="StatusBar" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    
    <!-- === SEPARADOR PEQUEÑO DE ESTADÍSTICAS (Tags) === -->
    <Style x:Key="StatTag" TargetType="Border">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="10,5"/>
    </Style>
    
    <Style x:Key="StatTagBlue" TargetType="Border" BasedOn="{StaticResource StatTag}">
        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
    </Style>
    
    <Style x:Key="StatTagGreen" TargetType="Border" BasedOn="{StaticResource StatTag}">
        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
    </Style>
    
    <Style x:Key="StatTagOrange" TargetType="Border" BasedOn="{StaticResource StatTag}">
        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
    </Style>
    
    <!-- === CARD PANEL (Alias para Card) === -->
    <Style x:Key="CardPanel" TargetType="Border" BasedOn="{StaticResource Card}"/>
    
</ResourceDictionary>
