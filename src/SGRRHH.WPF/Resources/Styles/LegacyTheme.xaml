<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- COLORES WINDOWS CLASSIC -->
    <Color x:Key="WinClassicSilver">#C0C0C0</Color>
    <Color x:Key="WinClassicWhite">#FFFFFF</Color>
    <Color x:Key="WinClassicBlack">#000000</Color>
    <Color x:Key="WinClassicGray">#808080</Color>
    <Color x:Key="WinClassicDarkGray">#404040</Color>
    <Color x:Key="WinClassicBlue">#000080</Color>
    
    <!-- COLORES DE ACENTO ADICIONALES -->
    <Color x:Key="WinClassicGreen">#008000</Color>
    <Color x:Key="WinClassicTeal">#008080</Color>
    <Color x:Key="WinClassicOrange">#CC6600</Color>
    <Color x:Key="WinClassicGold">#B8860B</Color>
    <Color x:Key="WinClassicRed">#800000</Color>
    <Color x:Key="WinClassicLightGray">#E0E0E0</Color>
    <Color x:Key="WinClassicButtonHover">#D4D4D4</Color>

    <SolidColorBrush x:Key="ControlBrush" Color="{StaticResource WinClassicSilver}"/>
    <SolidColorBrush x:Key="WindowBrush" Color="{StaticResource WinClassicSilver}"/>
    <SolidColorBrush x:Key="ControlTextBrush" Color="{StaticResource WinClassicBlack}"/>
    <SolidColorBrush x:Key="TitleBarBrush" Color="{StaticResource WinClassicBlue}"/>
    <SolidColorBrush x:Key="TitleTextBrush" Color="{StaticResource WinClassicWhite}"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource WinClassicGray}"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource WinClassicWhite}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WinClassicWhite}"/>
    
    <!-- BRUSHES SEMANTICOS -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource WinClassicGreen}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource WinClassicTeal}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WinClassicOrange}"/>
    <SolidColorBrush x:Key="AlertBrush" Color="{StaticResource WinClassicGold}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource WinClassicRed}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource WinClassicLightGray}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource WinClassicButtonHover}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource WinClassicGray}"/>

    <!-- TIPOGRAFIA -->
    <FontFamily x:Key="SystemFont">Tahoma</FontFamily>
    <System:Double x:Key="BaseFontSize" xmlns:System="clr-namespace:System;assembly=mscorlib">13</System:Double>
    
    <!-- Margin/Padding comunes para formularios -->
    <Thickness x:Key="FormRowMargin">0,0,0,8</Thickness>
    <Thickness x:Key="FormFieldPadding">10</Thickness>
    <Thickness x:Key="SectionHeaderPadding">5,3</Thickness>

    <!-- ESTILOS DE CONTROLES -->

    <!-- BOTON BISCELADO (OUTSET) -->
    <Style x:Key="LegacyButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Borde Exterior: Left/Top=White, Right/Bottom=Black -->
                        <Border x:Name="OuterBorder" BorderThickness="1,1,1,1" BorderBrush="White">
                            <Border x:Name="OuterBorderDark" BorderThickness="0,0,1,1" BorderBrush="Black">
                                <!-- Borde Interior: Left/Top=Light, Right/Bottom=Gray -->
                                <Border x:Name="InnerBorderLight" BorderThickness="1,1,1,1" BorderBrush="#DFDFDF">
                                    <Border x:Name="InnerBorderDark" BorderThickness="0,0,1,1" BorderBrush="#808080">
                                        <Border x:Name="BackgroundBorder" Background="{StaticResource ControlBrush}">
                                            <ContentPresenter x:Name="ContentHost" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                    </Border>
                                </Border>
                            </Border>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Efecto Hover: Fondo más claro -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                        </Trigger>
                        <!-- Efecto de Presionado: Inset -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="Black"/>
                            <Setter TargetName="OuterBorderDark" Property="BorderBrush" Value="#808080"/>
                            <Setter TargetName="InnerBorderLight" Property="BorderBrush" Value="#808080"/>
                            <Setter TargetName="InnerBorderDark" Property="BorderBrush" Value="#DFDFDF"/>
                            <Setter Property="Padding" Value="7,3,5,1"/>
                        </Trigger>
                        <!-- Efecto Deshabilitado -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="BackgroundBorder" Property="Background" Value="{StaticResource ControlBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#DFDFDF"/>
                            <Setter TargetName="OuterBorderDark" Property="BorderBrush" Value="#A0A0A0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CAJA DE TEXTO HUNDIDA (INSET) -->
    <Style x:Key="LegacyTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                   <!-- Borde Exterior: Left/Top=Gray, Right/Bottom=White -->
                    <Border BorderThickness="1,1,1,1" BorderBrush="#808080">
                       <Border BorderThickness="0,0,1,1" BorderBrush="White">
                           <!-- Borde Interior: Left/Top=Black, Right/Bottom=Light -->
                           <Border BorderThickness="1,1,0,0" BorderBrush="Black">
                               <Border BorderThickness="0,0,1,1" BorderBrush="#DFDFDF" Background="{TemplateBinding Background}">
                                    <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                               </Border>
                           </Border>
                       </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- PASSWORD BOX HUNDIDA (INSET) - Copia de TextBox -->
    <Style x:Key="LegacyPasswordStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="BorderThickness" Value="0"/>
         <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border BorderThickness="1,1,1,1" BorderBrush="#808080">
                       <Border BorderThickness="0,0,1,1" BorderBrush="White">
                           <Border BorderThickness="1,1,0,0" BorderBrush="Black">
                               <Border BorderThickness="0,0,1,1" BorderBrush="#DFDFDF" Background="{TemplateBinding Background}">
                                    <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                               </Border>
                           </Border>
                       </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================================== -->
    <!-- ESTILOS ADICIONALES LEGACY - AGREGADOS 19/12/2025 -->
    <!-- ================================================================== -->

    <!-- COMBOBOX ESTILO WINDOWS CLASSIC -->
    <Style x:Key="LegacyComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#808080"/>
    </Style>

    <!-- GROUPBOX ESTILO LEGACY -->
    <Style x:Key="LegacyGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <!-- CHECKBOX ESTILO WINDOWS CLASSIC (cuadrado) -->
    <Style x:Key="LegacyCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="4,0,0,0"/>
    </Style>

    <!-- RADIOBUTTON ESTILO LEGACY -->
    <Style x:Key="LegacyRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="4,0,0,0"/>
    </Style>

    <!-- LABEL ESTILO LEGACY -->
    <Style x:Key="LegacyLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="Padding" Value="0,0,5,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- DATAGRID ESTILO LEGACY (tabla densa con bordes) -->
    <Style x:Key="LegacyDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#C0C0C0"/>
        <Setter Property="VerticalGridLinesBrush" Value="#C0C0C0"/>
        <Setter Property="RowHeight" Value="20"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="AlternatingRowBackground" Value="#F0F0F0"/>
        <Setter Property="RowBackground" Value="White"/>
    </Style>

    <!-- DATAGRID COLUMN HEADER LEGACY (headers con efecto 3D biselado) -->
    <Style x:Key="LegacyDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridColumnHeader">
                    <!-- Borde Exterior 3D Outset: Left/Top=White, Right/Bottom=Black -->
                    <Border BorderThickness="1,1,0,0" BorderBrush="White">
                        <Border BorderThickness="0,0,1,1" BorderBrush="#404040">
                            <!-- Borde Interior suavizado -->
                            <Border BorderThickness="1,1,0,0" BorderBrush="#DFDFDF" Background="{StaticResource ControlBrush}">
                                <Border BorderThickness="0,0,1,1" BorderBrush="#808080" Padding="5,3">
                                    <Grid>
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                          VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Border>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- DATAGRID CELL LEGACY -->
    <Style x:Key="LegacyDataGridCellStyle" TargetType="DataGridCell">
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#000080"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- DATAGRID ROW LEGACY -->
    <Style x:Key="LegacyDataGridRowStyle" TargetType="DataGridRow">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#000080"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#DFDFDF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- LISTBOX ESTILO LEGACY -->
    <Style x:Key="LegacyListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="1"/>
    </Style>

    <!-- MENU HORIZONTAL LEGACY -->
    <Style x:Key="LegacyMenuStyle" TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- MENUITEM LEGACY -->
    <Style x:Key="LegacyMenuItemStyle" TargetType="MenuItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- TABCONTROL LEGACY (tabs cuadradas) -->
    <Style x:Key="LegacyTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <!-- TABITEM LEGACY -->
    <Style x:Key="LegacyTabItemStyle" TargetType="TabItem">
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- PROGRESSBAR LEGACY (estilo Windows Classic con borde 3D) -->
    <Style x:Key="LegacyProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#000080"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="18"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <!-- Borde 3D Inset -->
                    <Border BorderThickness="1,1,0,0" BorderBrush="#808080">
                        <Border BorderThickness="0,0,1,1" BorderBrush="White">
                            <Border BorderThickness="1,1,0,0" BorderBrush="#404040">
                                <Border BorderThickness="0,0,1,1" BorderBrush="#DFDFDF" Background="White">
                                    <Grid x:Name="PART_Track">
                                        <!-- Indicator (progreso azul marino) -->
                                        <Rectangle x:Name="PART_Indicator" 
                                                   HorizontalAlignment="Left" 
                                                   Fill="#000080"/>
                                    </Grid>
                                </Border>
                            </Border>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- PROGRESSBAR INDETERMINATE LEGACY (animación de bloques moviéndose) -->
    <Style x:Key="LegacyProgressBarIndeterminateStyle" TargetType="ProgressBar" BasedOn="{StaticResource LegacyProgressBarStyle}">
        <Setter Property="IsIndeterminate" Value="True"/>
    </Style>

    <!-- LOADING INDICATOR LEGACY (texto ASCII animado) -->
    <Style x:Key="LegacyLoadingTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#000080"/>
        <Setter Property="Text" Value="[...] Cargando"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- DATEPICKER LEGACY -->
    <Style x:Key="LegacyDatePickerStyle" TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <!-- SCROLLBAR THUMB (barra deslizante) LEGACY -->
    <Style x:Key="LegacyScrollBarThumbStyle" TargetType="Thumb">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <!-- Efecto 3D Outset -->
                    <Border BorderThickness="1,1,0,0" BorderBrush="White">
                        <Border BorderThickness="0,0,1,1" BorderBrush="#404040">
                            <Border BorderThickness="1,1,0,0" BorderBrush="#DFDFDF" Background="{StaticResource ControlBrush}">
                                <Border BorderThickness="0,0,1,1" BorderBrush="#808080"/>
                            </Border>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- SCROLLBAR REPEAT BUTTON (flechas) LEGACY -->
    <Style x:Key="LegacyScrollBarButtonStyle" TargetType="RepeatButton">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border x:Name="OuterBorder" BorderThickness="1,1,0,0" BorderBrush="White">
                        <Border x:Name="OuterBorderDark" BorderThickness="0,0,1,1" BorderBrush="#404040">
                            <Border x:Name="InnerBorderLight" BorderThickness="1,1,0,0" BorderBrush="#DFDFDF" Background="{StaticResource ControlBrush}">
                                <Border x:Name="InnerBorderDark" BorderThickness="0,0,1,1" BorderBrush="#808080">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Border>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#404040"/>
                            <Setter TargetName="OuterBorderDark" Property="BorderBrush" Value="White"/>
                            <Setter TargetName="InnerBorderLight" Property="BorderBrush" Value="#808080"/>
                            <Setter TargetName="InnerBorderDark" Property="BorderBrush" Value="#DFDFDF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- SCROLLBAR TRACK AREA -->
    <Style x:Key="LegacyScrollBarPageButtonStyle" TargetType="RepeatButton">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="#C0C0C0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- SCROLLBAR VERTICAL LEGACY (completo) -->
    <Style x:Key="LegacyScrollBarStyle" TargetType="ScrollBar">
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="16"/>
                        </Grid.RowDefinitions>
                        <!-- Botón Arriba -->
                        <RepeatButton Grid.Row="0" Command="ScrollBar.LineUpCommand"
                                      Style="{StaticResource LegacyScrollBarButtonStyle}">
                            <Path Fill="Black" Data="M 0 4 L 4 0 L 8 4 Z" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </RepeatButton>
                        <!-- Track -->
                        <Track Grid.Row="1" Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.PageUpCommand"
                                              Style="{StaticResource LegacyScrollBarPageButtonStyle}"/>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource LegacyScrollBarThumbStyle}"/>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.PageDownCommand"
                                              Style="{StaticResource LegacyScrollBarPageButtonStyle}"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                        <!-- Botón Abajo -->
                        <RepeatButton Grid.Row="2" Command="ScrollBar.LineDownCommand"
                                      Style="{StaticResource LegacyScrollBarButtonStyle}">
                            <Path Fill="Black" Data="M 0 0 L 4 4 L 8 0 Z" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="16"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollBar">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                </Grid.ColumnDefinitions>
                                <!-- Botón Izquierda -->
                                <RepeatButton Grid.Column="0" Command="ScrollBar.LineLeftCommand"
                                              Style="{StaticResource LegacyScrollBarButtonStyle}">
                                    <Path Fill="Black" Data="M 4 0 L 0 4 L 4 8 Z" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </RepeatButton>
                                <!-- Track -->
                                <Track Grid.Column="1" Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="ScrollBar.PageLeftCommand"
                                                      Style="{StaticResource LegacyScrollBarPageButtonStyle}"/>
                                    </Track.DecreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource LegacyScrollBarThumbStyle}"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="ScrollBar.PageRightCommand"
                                                      Style="{StaticResource LegacyScrollBarPageButtonStyle}"/>
                                    </Track.IncreaseRepeatButton>
                                </Track>
                                <!-- Botón Derecha -->
                                <RepeatButton Grid.Column="2" Command="ScrollBar.LineRightCommand"
                                              Style="{StaticResource LegacyScrollBarButtonStyle}">
                                    <Path Fill="Black" Data="M 0 0 L 4 4 L 0 8 Z" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </RepeatButton>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- SCROLLVIEWER LEGACY (usar con ScrollBar explicito) -->
    <Style x:Key="LegacyScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
    </Style>

    <!-- STATUSBAR LEGACY (con paneles 3D) -->
    <Style x:Key="LegacyStatusBarStyle" TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <!-- STATUSBAR ITEM LEGACY (panel hundido) -->
    <Style x:Key="LegacyStatusBarItemStyle" TargetType="StatusBarItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="StatusBarItem">
                    <!-- Borde Inset (hundido) -->
                    <Border BorderThickness="1,1,0,0" BorderBrush="#808080" Margin="1,0">
                        <Border BorderThickness="0,0,1,1" BorderBrush="White" Background="{StaticResource ControlBrush}" Padding="4,1">
                            <ContentPresenter/>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TOOLTIP LEGACY -->
    <Style x:Key="LegacyToolTipStyle" TargetType="ToolTip">
        <Setter Property="Background" Value="#FFFFCC"/>
        <Setter Property="Foreground" Value="{StaticResource ControlTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource SystemFont}"/>
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- BORDE INSET (hundido) REUTILIZABLE -->
    <Style x:Key="LegacyInsetBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- BORDE OUTSET (realzado) REUTILIZABLE -->
    <Style x:Key="LegacyOutsetBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
    </Style>

</ResourceDictionary>
