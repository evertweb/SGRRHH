@* Panel de Resumen de Vacaciones - Equivalente al panel izquierdo de WPF *@
@using SGRRHH.Core.Models

@if (Resumen != null)
{
    <div class="vacation-summary-panel">
        <div class="legacy-fieldset">
            <div class="legacy-fieldset-header">
                <span class="legacy-fieldset-icon">[i]</span> RESUMEN DE VACACIONES
            </div>
            <div class="legacy-fieldset-content">
                <div class="summary-grid">
                    <div class="summary-row">
                        <div class="summary-item">
                            <span class="summary-label">Antigüedad:</span>
                            <span class="summary-value"><strong>@Resumen.AntiguedadAnos años</strong></span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Período:</span>
                            <span class="summary-value"><strong>@Resumen.PeriodoActual</strong></span>
                        </div>
                    </div>

                    <div class="summary-row">
                        <div class="summary-item">
                            <span class="summary-label">Días Ganados:</span>
                            <span class="summary-value summary-positive">@Resumen.DiasGanadosPeriodo</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Días Tomados:</span>
                            <span class="summary-value summary-negative">@Resumen.DiasTomadosPeriodo</span>
                        </div>
                    </div>

                    <div class="summary-row">
                        <div class="summary-item">
                            <span class="summary-label">Disponibles:</span>
                            <span class="summary-value summary-info">@Resumen.DiasDisponiblesPeriodo</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Acumulados:</span>
                            <span class="summary-value summary-accent">@Resumen.DiasAcumuladosAnteriores</span>
                        </div>
                    </div>

                    <div class="summary-total">
                        <span class="total-label">TOTAL DISPONIBLE:</span>
                        <span class="total-value">@Resumen.TotalDiasDisponibles días</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public ResumenVacaciones? Resumen { get; set; }
}
