@page "/login"
@layout EmptyLayout
@using SGRRHH.Core.Interfaces
@inject IFirebaseAuthService AuthService
@inject NavigationManager Navigation
@inject AppStateService AppState

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h1>SGRRHH</h1>
            <p>Sistema de Gestion de Recursos Humanos</p>
        </div>

        <div class="login-form">
            @if (isLoading)
            {
                <div class="loading-overlay">
                    <div class="loader"></div>
                    <p class="loading-text">Cargando...</p>
                </div>
            }
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="login-error">@errorMessage</div>
            }

            <div class="form-group">
                <label>Usuario:</label>
                <div class="input-group">
                    <input type="text" class="form-input" @bind="username" @bind:event="oninput" @onkeydown="HandleKeyDown" @onkeydown:preventDefault="preventEnter" placeholder="Ingrese su usuario" disabled="@isLoading" />
                    <span class="input-suffix">@@sgrrhh.local</span>
                </div>
            </div>

            <div class="form-group">
                <label>Contrasena:</label>
                <input type="password" class="form-input" @bind="password" @bind:event="oninput" @onkeydown="HandleKeyDown" @onkeydown:preventDefault="preventEnter" placeholder="Ingrese su contrasena" disabled="@isLoading" />
            </div>

            <div class="form-actions">
                <button type="button" class="login-button" @onclick="DoLogin" @onclick:preventDefault="true" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span>Ingresando...</span>
                    }
                    else
                    {
                        <span>Ingresar</span>
                    }
                </button>
            </div>
        </div>

        <div class="login-footer">
            <p>Version 1.0.0 - Web</p>
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string? errorMessage;
    private bool isLoading = false;
    private bool preventEnter = false;

    protected override void OnInitialized()
    {
        // If already logged in, redirect to dashboard
        if (AppState.IsAuthenticated)
        {
            Navigation.NavigateTo("/dashboard");
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            preventEnter = true;
            await DoLogin();
            preventEnter = false;
        }
    }

    private async Task DoLogin()
    {
        if (isLoading) return;

        errorMessage = null;

        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Por favor ingrese usuario y contrasena";
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Siempre agregar el dominio (el usuario solo ingresa el nombre)
            string email = username.Contains("@") ? username : $"{username}@sgrrhh.local";
            Console.WriteLine($"[Login] Intentando autenticar con email: {email}");

            var result = await AuthService.AuthenticateWithFirebaseAsync(email, password);

            if (result.Success && result.Usuario != null)
            {
                // Set current user in app state
                AppState.SetAuth(result);

                // Navigate to dashboard
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                errorMessage = result.Message ?? "Usuario o contrasena incorrectos";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error de conexion: {ex.Message}";
            Console.WriteLine($"Login error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
