@page "/test"
@using SGRRHH.Core.Interfaces
@inject ICargoRepository CargoRepo
@inject AppStateService AppState

<h1>Test Page</h1>

<p>Esta es una pagina de prueba.</p>

@if (loaded)
{
    <p>Datos cargados correctamente.</p>
}

@code {
    private bool loaded = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var cargos = await CargoRepo.GetAllAsync();
            loaded = true;
        }
        catch
        {
            loaded = false;
        }
    }
}
