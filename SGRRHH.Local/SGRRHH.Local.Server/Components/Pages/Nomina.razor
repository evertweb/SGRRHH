@page "/nomina"
@using SGRRHH.Local.Domain.Entities
@using SGRRHH.Local.Domain.Enums
@using SGRRHH.Local.Shared.Interfaces
@inject IAuthService AuthService
@inject INominaRepository NominaRepository
@inject INominaService NominaService
@inject IEmpleadoRepository EmpleadoRepository
@inject IKeyboardShortcutService KeyboardShortcutService
@inject NavigationManager Navigation
@inject ILogger<Nomina> Logger
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Nómina - SGRRHH</PageTitle>

<MessageToast @ref="messageToast" />

<div class="nomina-container">
    <div class="nomina-header">
        <h1 class="nomina-title">GESTIÓN DE NÓMINA MENSUAL</h1>
    </div>

    @if (!AuthService.IsAuthenticated)
    {
        <div class="nomina-error-message">ACCESO DENEGADO - DEBE INICIAR SESIÓN</div>
        return;
    }

    <div class="nomina-action-bar">
        <div class="nomina-action-buttons">
            <button class="nomina-btn nomina-btn-success" @onclick="GenerarNominaMasiva" disabled="@isGenerating">
                @(isGenerating ? "GENERANDO..." : "GENERAR NÓMINA MASIVA")
            </button>
            <button class="nomina-btn" @onclick="CargarDatos">ACTUALIZAR (F5)</button>
            <button class="nomina-btn" @onclick="AprobarSeleccionadas" disabled="@(!HayNominasParaAprobar())">
                APROBAR CALCULADAS
            </button>
        </div>
        
        <div class="nomina-filter-section">
            <div class="nomina-filter-group">
                <label class="nomina-filter-label">AÑO:</label>
                <select class="nomina-filter-select" @bind="añoSeleccionado" @bind:after="CargarDatos">
                    @for (int año = DateTime.Now.Year + 1; año >= 2020; año--)
                    {
                        <option value="@año">@año</option>
                    }
                </select>
            </div>
            
            <div class="nomina-filter-group">
                <label class="nomina-filter-label">MES:</label>
                <select class="nomina-filter-select" @bind="mesSeleccionado" @bind:after="CargarDatos">
                    @for (int mes = 1; mes <= 12; mes++)
                    {
                        <option value="@mes">@GetNombreMes(mes)</option>
                    }
                </select>
            </div>
            
            <div class="nomina-filter-group">
                <label class="nomina-filter-label">ESTADO:</label>
                <select class="nomina-filter-select" @bind="estadoFiltro" @bind:after="AplicarFiltros">
                    <option value="">TODOS</option>
                    <option value="@((int)EstadoNomina.Borrador)">BORRADOR</option>
                    <option value="@((int)EstadoNomina.Calculada)">CALCULADA</option>
                    <option value="@((int)EstadoNomina.Aprobada)">APROBADA</option>
                    <option value="@((int)EstadoNomina.Pagada)">PAGADA</option>
                    <option value="@((int)EstadoNomina.Contabilizada)">CONTABILIZADA</option>
                    <option value="@((int)EstadoNomina.Anulada)">ANULADA</option>
                </select>
            </div>
        </div>
    </div>

    @if (resumenCargado)
    {
        <div class="nomina-summary-box">
            <div class="nomina-summary-item">
                <div class="nomina-summary-label">TOTAL DEVENGADO</div>
                <div class="nomina-summary-value positive">@resumenDevengado.ToString("C0")</div>
            </div>
            <div class="nomina-summary-item">
                <div class="nomina-summary-label">TOTAL DEDUCCIONES</div>
                <div class="nomina-summary-value negative">@resumenDeducciones.ToString("C0")</div>
            </div>
            <div class="nomina-summary-item">
                <div class="nomina-summary-label">TOTAL NETO</div>
                <div class="nomina-summary-value">@resumenNeto.ToString("C0")</div>
            </div>
            <div class="nomina-summary-item">
                <div class="nomina-summary-label">APORTES PATRONALES</div>
                <div class="nomina-summary-value">@resumenPatronales.ToString("C0")</div>
            </div>
        </div>
    }

    <div class="nomina-results-info">
        Mostrando @nominasFiltradas.Count nómina(s) de @GetNombreMes(mesSeleccionado) @añoSeleccionado
    </div>

    <table class="nomina-data-table">
        <thead>
            <tr>
                <th>CÓDIGO</th>
                <th>EMPLEADO</th>
                <th>SALARIO BASE</th>
                <th>AUX. TRANSP.</th>
                <th>HORAS EXTRAS</th>
                <th>OTROS DEV.</th>
                <th>TOTAL DEV.</th>
                <th>SALUD</th>
                <th>PENSIÓN</th>
                <th>OTRAS DED.</th>
                <th>TOTAL DED.</th>
                <th>NETO PAGAR</th>
                <th>ESTADO</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @if (isLoading)
            {
                <tr><td colspan="14" class="nomina-loading-message">CARGANDO DATOS...</td></tr>
            }
            else if (!nominasFiltradas.Any())
            {
                <tr><td colspan="14" class="nomina-empty-message">NO HAY NÓMINAS PARA ESTE PERÍODO</td></tr>
            }
            else
            {
                @foreach (var nom in nominasFiltradas.OrderBy(n => n.Empleado?.Codigo ?? ""))
                {
                    <tr class="@(selectedNomina?.Id == nom.Id ? "selected" : "")"
                        @onclick="() => SelectNomina(nom)">
                        <td class="nomina-cell-code">@(nom.Empleado?.Codigo ?? "-")</td>
                        <td>@(nom.Empleado?.NombreCompleto ?? "-")</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.SalarioBase)</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.AuxilioTransporte)</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.HorasExtrasDiurnas + nom.HorasExtrasNocturnas + nom.HorasNocturnas + nom.HorasDominicalesFestivos)</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.Comisiones + nom.Bonificaciones + nom.OtrosDevengos)</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.TotalDevengado)</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.DeduccionSalud)</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.DeduccionPension)</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.RetencionFuente + nom.Prestamos + nom.Embargos + nom.FondoEmpleados + nom.OtrasDeducciones)</td>
                        <td class="nomina-cell-money">@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.TotalDeducciones)</td>
                        <td class="nomina-cell-money"><strong>@NumberFormatHelper.FormatearMonedaSinSimbolo(nom.NetoPagar)</strong></td>
                        <td class="nomina-cell-estado nomina-estado-@GetEstadoClass(nom.Estado)">@nom.Estado.ToString().ToUpper()</td>
                        <td class="nomina-cell-actions">
                            <button class="nomina-btn-table" @onclick="() => VerDetalle(nom)" @onclick:stopPropagation="true">VER</button>
                            @if (nom.Estado == EstadoNomina.Borrador || nom.Estado == EstadoNomina.Calculada)
                            {
                                <button class="nomina-btn-table" @onclick="() => EditarNomina(nom)" @onclick:stopPropagation="true">EDITAR</button>
                            }
                            @if (nom.Estado == EstadoNomina.Calculada)
                            {
                                <button class="nomina-btn-table" @onclick="() => AprobarNomina(nom)" @onclick:stopPropagation="true">APROBAR</button>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="nomina-shortcuts-bar">
    <div class="nomina-shortcut-item">
        <span class="nomina-shortcut-key">F5</span>
        <span>=ACTUALIZAR</span>
    </div>
    <div class="nomina-shortcut-item">
        <span class="nomina-shortcut-key">ESC</span>
        <span>=SALIR</span>
    </div>
</div>

@if (showModal)
{
    <div class="nomina-modal-overlay" @onclick:stopPropagation="true">
        <div class="nomina-modal-box">
            <h3>@(isEditing ? "EDITAR" : "DETALLE") NÓMINA - @(nominaEdit?.Empleado?.NombreCompleto ?? "")</h3>
            
            @if (nominaEdit != null)
            {
                <div class="nomina-form-grid">
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">PERÍODO</label>
                        <input type="text" class="nomina-form-input" value="@nominaEdit.Periodo.ToString("MMMM yyyy")" readonly />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">ESTADO</label>
                        <input type="text" class="nomina-form-input" value="@nominaEdit.Estado.ToString().ToUpper()" readonly />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">FECHA PAGO</label>
                        <input type="date" class="nomina-form-input" @bind="nominaEdit.FechaPago" disabled="@(!isEditing)" />
                    </div>
                </div>

                <div class="nomina-section-title">DEVENGOS</div>
                <div class="nomina-form-grid">
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">SALARIO BASE</label>
                        <InputMoneda @bind-Value="nominaEdit.SalarioBase" Cssclass="nomina-form-input" ReadOnly="@(!isEditing)" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">AUXILIO TRANSPORTE</label>
                        <InputMoneda @bind-Value="nominaEdit.AuxilioTransporte" Cssclass="nomina-form-input" ReadOnly="@(!isEditing)" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">HORAS EXTRAS DIURNAS</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.HorasExtrasDiurnas" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">HORAS EXTRAS NOCTURNAS</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.HorasExtrasNocturnas" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">HORAS NOCTURNAS</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.HorasNocturnas" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">DOMINICALES/FESTIVOS</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.HorasDominicalesFestivos" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">COMISIONES</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.Comisiones" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">BONIFICACIONES</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.Bonificaciones" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">OTROS DEVENGOS</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.OtrosDevengos" readonly="@(!isEditing)" step="1" />
                    </div>
                </div>

                <div class="nomina-section-title">DEDUCCIONES</div>
                <div class="nomina-form-grid">
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">DEDUCCIÓN SALUD (4%)</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.DeduccionSalud" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">DEDUCCIÓN PENSIÓN (4%)</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.DeduccionPension" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">RETENCIÓN EN FUENTE</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.RetencionFuente" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">PRÉSTAMOS</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.Prestamos" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">EMBARGOS</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.Embargos" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">FONDO EMPLEADOS</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.FondoEmpleados" readonly="@(!isEditing)" step="1" />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">OTRAS DEDUCCIONES</label>
                        <input type="number" class="nomina-form-input" @bind="nominaEdit.OtrasDeducciones" readonly="@(!isEditing)" step="1" />
                    </div>
                </div>

                <div class="nomina-section-title">TOTALES</div>
                <div class="nomina-form-grid">
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">TOTAL DEVENGADO</label>
                        <input type="text" class="nomina-form-input" value="@nominaEdit.TotalDevengado.ToString("C0")" readonly />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">TOTAL DEDUCCIONES</label>
                        <input type="text" class="nomina-form-input" value="@nominaEdit.TotalDeducciones.ToString("C0")" readonly />
                    </div>
                    
                    <div class="nomina-form-group">
                        <label class="nomina-form-label">NETO A PAGAR</label>
                        <input type="text" class="nomina-form-input" value="@nominaEdit.NetoPagar.ToString("C0")" readonly style="font-weight: bold;" />
