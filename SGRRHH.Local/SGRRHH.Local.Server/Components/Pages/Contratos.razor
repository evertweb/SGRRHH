@page "/contratos"
@page "/contratos/{EmpleadoIdParam:int?}"
@using SGRRHH.Local.Domain.Entities
@using SGRRHH.Local.Domain.Enums
@using SGRRHH.Local.Domain.DTOs
@using SGRRHH.Local.Shared.Interfaces
@using Microsoft.AspNetCore.Components.Forms
@inject IAuthService AuthService
@inject IContratoRepository ContratoRepository
@inject IEmpleadoRepository EmpleadoRepository
@inject ICargoRepository CargoRepository
@inject ILocalStorageService StorageService
@inject IKeyboardShortcutService KeyboardShortcutService
@inject NavigationManager Navigation
@inject ILogger<Contratos> Logger
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Contratos - SGRRHH</PageTitle>

<div class="contratos-page-container">
    <div class="contratos-page-header">
        <h1 class="contratos-page-title">GESTIÓN DE CONTRATOS</h1>
    </div>

    @if (errorMessage != null)
    {
        <div class="contratos-error-message">
            ERROR: @errorMessage
            <button class="contratos-btn" @onclick="() => errorMessage = null" style="margin-left: 10px;">ACEPTAR</button>
        </div>
    }

    @if (successMessage != null)
    {
        <div class="contratos-success-message">
            @successMessage
        </div>
    }

    @if (contratosPorVencer.Any())
    {
        <div class="contratos-warning-message">
            ADVERTENCIA: @contratosPorVencer.Count CONTRATO(S) POR VENCER EN LOS PRÓXIMOS 30 DÍAS
        </div>
    }

    <div class="contratos-action-bar">
        <div class="contratos-action-buttons">
            <button class="contratos-btn" @onclick="NuevoContrato">NUEVO (F3)</button>
            <button class="contratos-btn" @onclick="CargarContratos">ACTUALIZAR (F5)</button>
            <button class="contratos-btn" @onclick="Buscar">BUSCAR (F2)</button>
        </div>
        
        <div class="contratos-filter-section">
            <div class="contratos-filter-group">
                <label class="contratos-filter-label">BUSCAR EMPLEADO:</label>
                <input type="text" 
                       id="searchInput" 
                       class="contratos-filter-input"
                       @bind="searchTerm" 
                       @bind:event="oninput" 
                       @onkeyup="OnSearchKeyUp" />
            </div>
            
            <div class="contratos-filter-group">
                <label class="contratos-filter-label">ESTADO:</label>
                <select class="contratos-filter-select" @bind="filtroEstado" @bind:after="Filtrar">
                    <option value="">TODOS</option>
                    <option value="@((int)EstadoContrato.Activo)">ACTIVOS</option>
                    <option value="@((int)EstadoContrato.Finalizado)">FINALIZADOS</option>
                    <option value="@((int)EstadoContrato.Renovado)">RENOVADOS</option>
                    <option value="@((int)EstadoContrato.Cancelado)">CANCELADOS</option>
                </select>
            </div>
            
            <div class="contratos-filter-group">
                <label class="contratos-filter-label">TIPO:</label>
                <select class="contratos-filter-select" @bind="filtroTipo" @bind:after="Filtrar">
                    <option value="">TODOS</option>
                    <option value="@((int)TipoContrato.Indefinido)">INDEFINIDO</option>
                    <option value="@((int)TipoContrato.TerminoFijo)">TÉRMINO FIJO</option>
                    <option value="@((int)TipoContrato.ObraOLabor)">OBRA O LABOR</option>
                    <option value="@((int)TipoContrato.PrestacionServicios)">PRESTACIÓN SERVICIOS</option>
                    <option value="@((int)TipoContrato.Aprendizaje)">APRENDIZAJE</option>
                    <option value="@((int)TipoContrato.Ocasional)">OCASIONAL</option>
                    <option value="@((int)TipoContrato.Temporal)">TEMPORAL</option>
                </select>
            </div>
            
            @if (!string.IsNullOrEmpty(searchTerm) || !string.IsNullOrEmpty(filtroEstado) || !string.IsNullOrEmpty(filtroTipo))
            {
                <button class="contratos-btn" @onclick="LimpiarFiltros">LIMPIAR FILTROS</button>
            }
        </div>
    </div>

    <div class="contratos-results-info">
        Mostrando @contratos.Count de @totalContratos registro(s)
    </div>

    <table class="contratos-data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>CÓDIGO EMP.</th>
                <th>CÉDULA</th>
                <th>EMPLEADO</th>
                <th>TIPO CONTRATO</th>
                <th>CARGO</th>
                <th>FECHA INICIO</th>
                <th>FECHA FIN</th>
                <th>SALARIO</th>
                <th>ESTADO</th>
                <th>FECHA CREACIÓN</th>
                <th>FECHA MODIFICACIÓN</th>
                <th>ARCHIVO</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @if (isLoading)
            {
                <tr><td colspan="14" class="contratos-loading-message">CARGANDO DATOS...</td></tr>
            }
            else if (!contratos.Any())
            {
                <tr><td colspan="14" class="contratos-empty-message">NO HAY REGISTROS PARA MOSTRAR</td></tr>
            }
            else
            {
                @foreach (var contrato in contratos)
                {
                    var diasParaVencer = contrato.FechaFin.HasValue ? (contrato.FechaFin.Value - DateTime.Today).Days : 0;
                    var porVencer = contrato.Estado == EstadoContrato.Activo && contrato.FechaFin.HasValue && diasParaVencer > 0 && diasParaVencer <= 30;
                    
                    <tr class="@(selectedContrato?.Id == contrato.Id ? "selected" : "") @(porVencer ? "row-warning" : "")"
                        @onclick="() => SelectContrato(contrato)">
                        <td class="contratos-cell-code">@contrato.Id</td>
                        <td class="contratos-cell-code">@(contrato.Empleado?.Codigo ?? "-")</td>
                        <td>@NumberFormatHelper.FormatearCedula(contrato.Empleado?.Cedula)</td>
                        <td>@(contrato.Empleado?.NombreCompleto ?? "SIN EMPLEADO")</td>
                        <td>@GetTipoContratoDisplay(contrato.TipoContrato).ToUpper()</td>
                        <td>@(contrato.Cargo?.Nombre ?? "-")</td>
                        <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (contrato.FechaFin.HasValue)
                            {
                                @contrato.FechaFin.Value.ToString("dd/MM/yyyy")
                                @if (porVencer)
                                {
                                    <text> (@diasParaVencer DÍAS)</text>
                                }
                            }
                            else
                            {
                                <text>INDEFINIDO</text>
                            }
                        </td>
                        <td>@NumberFormatHelper.FormatearMoneda(contrato.Salario)</td>
                        <td class="contratos-cell-estado contratos-estado-@contrato.Estado.ToString().ToLower()">@contrato.Estado.ToString().ToUpper()</td>
                        <td>@contrato.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(contrato.FechaModificacion?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                        <td>@(string.IsNullOrEmpty(contrato.ArchivoAdjuntoPath) ? "-" : "SÍ")</td>
                        <td class="contratos-cell-actions">
                            <button class="contratos-btn-table" @onclick="() => EditarContrato(contrato)" @onclick:stopPropagation="true">EDITAR</button>
                            @if (!string.IsNullOrEmpty(contrato.ArchivoAdjuntoPath))
                            {
                                <button class="contratos-btn-table" @onclick="() => DescargarAdjunto(contrato)" @onclick:stopPropagation="true">ARCHIVO</button>
                            }
                            <button class="contratos-btn-table" @onclick="() => VerHistorial(contrato)" @onclick:stopPropagation="true">HISTORIAL</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="contratos-shortcuts-bar">
    <div class="contratos-shortcut-item">
        <span class="contratos-shortcut-key">F2</span>
        <span>=BUSCAR</span>
    </div>
    <div class="contratos-shortcut-item">
        <span class="contratos-shortcut-key">F3</span>
        <span>=NUEVO</span>
    </div>
    <div class="contratos-shortcut-item">
        <span class="contratos-shortcut-key">F5</span>
        <span>=ACTUALIZAR</span>
    </div>
    <div class="contratos-shortcut-item">
        <span class="contratos-shortcut-key">TAB</span>
        <span>=NAVEGAR</span>
    </div>
    <div class="contratos-shortcut-item">
        <span class="contratos-shortcut-key">ESC</span>
        <span>=SALIR</span>
    </div>
</div>

<!-- Modal de Contrato (Nuevo/Editar) -->
@if (showModal)
{
    <div class="contratos-modal-overlay" @onclick:stopPropagation="true">
        <div class="contratos-modal-box">
            <div class="contratos-modal-header">
                <h2 class="contratos-modal-title">@(isEditing ? "EDITAR CONTRATO" : "NUEVO CONTRATO")</h2>
            </div>
            
            <div class="contratos-contratos-modal-content">
                <!-- SECCIÓN: INFORMACIÓN DEL EMPLEADO -->
                <div class="contratos-form-section">
                    <div class="contratos-section-title">INFORMACIÓN DEL EMPLEADO</div>
                    
                    <div class="contratos-form-group">
                        <label class="contratos-form-label @(isEditing ? "" : "contratos-form-label-required")">EMPLEADO:</label>
                        <select class="contratos-form-select" @bind="contratoEdit.EmpleadoId" disabled="@isEditing">
                            <option value="0">-- SELECCIONE --</option>
                            @foreach (var emp in empleados)
                            {
                                <option value="@emp.Id">@emp.Codigo - @emp.NombreCompleto</option>
                            }
                        </select>
                        @if (isEditing)
                        {
                            <div class="contratos-form-note">CAMPO NO MODIFICABLE</div>
                        }
                    </div>
                </div>

                <!-- SECCIÓN: DATOS DEL CONTRATO -->
                <div class="contratos-form-section">
                    <div class="contratos-section-title">DATOS DEL CONTRATO</div>
                    
                    <div class="contratos-form-row">
                        <div class="contratos-form-group">
                            <label class="contratos-form-label contratos-form-label-required">TIPO DE CONTRATO:</label>
                            <select class="contratos-form-select" @bind="contratoEdit.TipoContrato">
                                @foreach (var tipo in Enum.GetValues<TipoContrato>())
                                {
                                    <option value="@tipo">@GetTipoContratoDisplay(tipo).ToUpper()</option>
                                }
                            </select>
                        </div>
                        
                        <div class="contratos-form-group">
                            <label class="contratos-form-label contratos-form-label-required">CARGO:</label>
                            <select class="contratos-form-select" @bind="contratoEdit.CargoId">
                                <option value="0">-- SELECCIONE --</option>
                                @foreach (var cargo in cargos)
                                {
                                    <option value="@cargo.Id">@cargo.Nombre</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                    <div class="contratos-form-row">
                        <div class="contratos-form-group">
                            <label class="contratos-form-label contratos-form-label-required">ESTADO:</label>
                            <select class="contratos-form-select" @bind="contratoEdit.Estado">
                                @foreach (var estado in Enum.GetValues<EstadoContrato>())
                                {
                                    <option value="@estado">@estado.ToString().ToUpper()</option>
                                }
                            </select>
                        </div>
                        
                        <div class="contratos-form-group">
                            <label class="contratos-form-label contratos-form-label-required">SALARIO:</label>
                            <InputMoneda @bind-Value="contratoEdit.Salario" CssClass="contratos-form-input" Placeholder="Ej: 1.750.905" />
                        </div>
                    </div>
                </div>

                <!-- SECCIÓN: FECHAS -->
                <div class="contratos-form-section">
                    <div class="contratos-section-title">FECHAS</div>
                    
                    <div class="contratos-form-row">
                        <div class="contratos-form-group">
                            <label class="contratos-form-label contratos-form-label-required">FECHA INICIO:</label>
                            <input type="date" class="contratos-form-input" @bind="contratoEdit.FechaInicio" />
                        </div>
                        
                        <div class="contratos-form-group">
                            <label class="contratos-form-label">FECHA FIN:</label>
                            <input type="date" class="contratos-form-input" @bind="contratoEdit.FechaFin" />
                            <div class="contratos-form-note">DEJAR VACÍO PARA CONTRATOS INDEFINIDOS</div>
                        </div>
                    </div>
                    
                    @if (contratoEdit.FechaFin.HasValue && contratoEdit.FechaFin.Value < contratoEdit.FechaInicio)
                    {
                        <div class="contratos-error-message">
                            ERROR: FECHA FIN NO PUEDE SER ANTERIOR A FECHA INICIO
                        </div>
                    }
                </div>

                <!-- SECCIÓN: ARCHIVO ADJUNTO -->
                <div class="contratos-form-section">
                    <div class="contratos-section-title">DOCUMENTO ADJUNTO</div>
                    
                    <div class="contratos-form-group">
                        <label class="contratos-form-label">ARCHIVO (PDF, DOC, DOCX):</label>
                        <div style="display: flex; gap: 10px; align-items: center;">
                            <InputFile OnChange="OnArchivoSelected" accept=".pdf,.doc,.docx" class="contratos-form-input" style="flex: 1;" />
                            <button type="button" class="contratos-btn" @onclick="AbrirScannerContrato">
                                ESCANEAR
                            </button>
                        </div>
                        @if (documentoEscaneadoBytes != null && !string.IsNullOrEmpty(documentoEscaneadoNombre))
                        {
                            <div style="margin-top: 8px; padding: 8px; border: 1px solid #008000; background: #F0FFF0;">
                                <div style="display: flex; justify-content: space-between; align-items: center;">
                                    <span style="color: #006400; font-size: 11px;">
                                        📄 DOCUMENTO ESCANEADO: @documentoEscaneadoNombre (@FormatFileSize(documentoEscaneadoBytes.Length))
                                    </span>
                                    <button type="button" class="contratos-btn" style="padding: 4px 8px; font-size: 10px;" 
                                            @onclick="LimpiarDocumentoEscaneado">
                                        QUITAR
                                    </button>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(contratoEdit.ArchivoAdjuntoPath))
                        {
                            <div class="contratos-form-note">
                                ARCHIVO ACTUAL: @System.IO.Path.GetFileName(contratoEdit.ArchivoAdjuntoPath)
                            </div>
                        }
                    </div>
                </div>

                <!-- SECCIÓN: OBSERVACIONES -->
                <div class="contratos-form-section">
                    <div class="contratos-section-title">OBSERVACIONES</div>
                    
                    <div class="contratos-form-group">
                        <label class="contratos-form-label">OBSERVACIONES:</label>
                        <textarea class="contratos-form-textarea" @bind="contratoEdit.Observaciones"></textarea>
                    </div>
                </div>
            </div>
            
            <div class="contratos-modal-actions">
                <button class="contratos-btn" @onclick="CerrarModal" disabled="@isSaving">CANCELAR (ESC)</button>
                <button class="contratos-btn" @onclick="GuardarContrato" disabled="@isSaving">@(isSaving ? "GUARDANDO..." : "GUARDAR (F5)")</button>
            </div>
        </div>
    </div>
}

<!-- Modal de Historial de Contratos -->
@if (showHistorialModal)
{
    <div class="contratos-modal-overlay" @onclick:stopPropagation="true">
        <div class="contratos-modal-box" style="width: 1000px;">
            <div class="contratos-modal-header">
                <h2 class="contratos-modal-title">HISTORIAL DE CONTRATOS - @(empleadoSeleccionado?.NombreCompleto?.ToUpper() ?? "")</h2>
            </div>
            
            <div class="contratos-modal-content">
                @if (historialContratos.Any())
                {
                    <table class="contratos-data-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>TIPO</th>
                                <th>CARGO</th>
                                <th>FECHA INICIO</th>
                                <th>FECHA FIN</th>
                                <th>SALARIO</th>
                                <th>ESTADO</th>
                                <th>ACCIONES</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contrato in historialContratos.OrderByDescending(c => c.FechaInicio))
                            {
                                <tr>
                                    <td class="contratos-cell-code">@contrato.Id</td>
                                    <td>@GetTipoContratoDisplay(contrato.TipoContrato).ToUpper()</td>
                                    <td>@(contrato.Cargo?.Nombre ?? "-")</td>
                                    <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                                    <td>@(contrato.FechaFin?.ToString("dd/MM/yyyy") ?? "INDEFINIDO")</td>
                                    <td>@NumberFormatHelper.FormatearMoneda(contrato.Salario)</td>
                                    <td class="contratos-cell-estado contratos-estado-@contrato.Estado.ToString().ToLower()">@contrato.Estado.ToString().ToUpper()</td>
                                    <td class="contratos-cell-actions">
                                        <button class="contratos-btn-table" @onclick="() => EditarContratoFromHistorial(contrato)">
                                            VER/EDITAR
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                    @if (!string.IsNullOrEmpty(historialContratos.OrderByDescending(c => c.FechaInicio).FirstOrDefault()?.Observaciones))
                    {
                        <div class="contratos-form-section" style="margin-top: 15px;">
                            <div class="contratos-section-title">OBSERVACIONES DEL ÚLTIMO CONTRATO</div>
                            <div style="padding: 10px; font-size: 11px;">
                                @historialContratos.OrderByDescending(c => c.FechaInicio).FirstOrDefault()?.Observaciones
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="contratos-empty-message">
                        NO HAY HISTORIAL DE CONTRATOS PARA ESTE EMPLEADO
                    </div>
                }
            </div>
            
            <div class="contratos-modal-actions">
                <button class="contratos-btn" @onclick="() => showHistorialModal = false">CERRAR (ESC)</button>
            </div>
        </div>
    </div>
}

<!-- Modal de confirmación -->
@if (showConfirmModal)
{
    <div class="contratos-modal-overlay" @onclick:stopPropagation="true">
        <div class="contratos-modal-box" style="width: 500px;">
