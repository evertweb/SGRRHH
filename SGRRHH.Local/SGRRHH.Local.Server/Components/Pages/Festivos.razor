        text-transform: uppercase;
        font-weight: bold;
    }

    .btn:hover:not(:disabled) {
        background: #F0F0F0;
    }

    .btn:disabled {
        border-color: #CCCCCC;
        color: #CCCCCC;
        cursor: not-allowed;
    }

    .btn-primary {
        background: #000000;
        color: #FFFFFF;
    }

    .btn-primary:hover:not(:disabled) {
        background: #333333;
    }

    .filter-section {
        border-top: 1px solid #CCCCCC;
        padding-top: 10px;
        display: flex;
