@using SGRRHH.Local.Domain.DTOs

<table class="tabla-seguimiento">
    <thead>
        <tr>
            <th style="width: 100px;">ACTA</th>
            <th>EMPLEADO</th>
            <th>TIPO PERMISO</th>
            <th style="width: 90px;">FECHA</th>
            <th style="width: 150px;">PROGRESO</th>
            <th style="width: 100px;">FECHA LÍMITE</th>
            <th style="width: 80px;">DÍAS REST.</th>
            <th style="width: 120px;">ACCIONES</th>
        </tr>
    </thead>
    <tbody>
        @if (!Permisos.Any())
        {
            <tr>
                <td colspan="8" class="empty-cell">NO HAY PERMISOS EN COMPENSACIÓN</td>
            </tr>
        }
        else
        {
            @foreach (var permiso in Permisos)
            {
                var horasTotal = permiso.HorasCompensar ?? 0;
                var horasComp = permiso.HorasCompensadas;
                var porcentaje = horasTotal > 0 ? (horasComp * 100 / horasTotal) : 0;
                
                <tr>
                    <td class="td-acta">@permiso.NumeroActa</td>
                    <td>@permiso.EmpleadoNombre</td>
                    <td>@permiso.TipoPermiso</td>
                    <td class="td-centro">@permiso.FechaInicio.ToString("dd/MM/yy")</td>
                    <td>
                        <div class="progreso-bar">
                            <div class="progreso-fill" style="width: @porcentaje%"></div>
                            <div class="progreso-text">@horasComp / @horasTotal horas</div>
                        </div>
                    </td>
                    <td class="td-centro">
                        @if (permiso.FechaLimite.HasValue)
                        {
                            @permiso.FechaLimite.Value.ToString("dd/MM/yy")
                        }
                    </td>
                    <td class="td-centro">
                        @if (permiso.DiasRestantes.HasValue)
                        {
                            @if (permiso.EstaVencido)
                            {
                                <span class="badge badge-vencido">VENCIDO</span>
                            }
                            else if (permiso.VencePronto)
                            {
                                <span class="badge badge-urgente">@permiso.DiasRestantes d</span>
                            }
                            else
                            {
                                <span>@permiso.DiasRestantes d</span>
                            }
                        }
                    </td>
                    <td class="td-centro">
                        <button class="btn btn-sm" @onclick="() => OnVerDetalle.InvokeAsync(permiso.Id)">VER</button>
                        <button class="btn btn-sm btn-primary" @onclick="() => OnRegistrarHoras.InvokeAsync(permiso)">+H</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Permisos.Any())
{
    <div style="font-size: 11px; color: #666;">
        Total: @Permisos.Count permiso(s) en compensación | 
        Horas pendientes: @Permisos.Sum(p => (p.HorasCompensar ?? 0) - p.HorasCompensadas)
    </div>
}

@code {
    [Parameter]
    public List<PermisoConSeguimiento> Permisos { get; set; } = new();
    
    [Parameter]
    public EventCallback<int> OnVerDetalle { get; set; }
    
    [Parameter]
    public EventCallback<PermisoConSeguimiento> OnRegistrarHoras { get; set; }
}
