@page "/login"
@page "/"
@layout EmptyLayout
@using SGRRHH.Local.Shared.Interfaces
@using SGRRHH.Local.Domain.Enums
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <div class="system-title">SGRRHH LOCAL</div>
            <div class="system-subtitle">SISTEMA DE GESTION DE RECURSOS HUMANOS</div>
            <div class="system-version">VERSION 1.0.0</div>
        </div>
        
        @if (isCheckingToken)
        {
            <div class="loading-block">
                <span class="loading-spinner"></span> Verificando dispositivo...
            </div>
        }
        else
        {
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-block">
                    ERROR: @errorMessage
                </div>
            }
            
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="success-block">
                    @successMessage
                </div>
            }
            
            <div class="login-form">
                <div class="form-field">
                    <label class="field-label">USUARIO:</label>
                    <input type="text" 
                           class="field-input"
                           @bind="username" 
                           @bind:event="oninput"
                           @onkeydown="HandleKeyDown"
                           disabled="@isLoading"
                           autofocus />
                </div>
                
                <div class="form-field">
                    <label class="field-label">CONTRASE칌A:</label>
                    <input type="password" 
                           class="field-input"
                           @bind="password" 
                           @bind:event="oninput"
                           @onkeydown="HandleKeyDown"
                           disabled="@isLoading" />
                </div>
                
                <div class="form-field-checkbox">
                    <label class="checkbox-container">
                        <input type="checkbox" @bind="recordarDispositivo" disabled="@isLoading" />
                        <span class="checkbox-label">游댏 RECORDAR ESTE DISPOSITIVO</span>
                    </label>
                    <div class="checkbox-hint">
                        (No volver치s a ingresar contrase침a desde este equipo)
                    </div>
                </div>
                
                @if (recordarDispositivo)
                {
                    <div class="form-field">
                        <label class="field-label">NOMBRE DEL DISPOSITIVO:</label>
                        <input type="text" 
                               class="field-input"
                               @bind="nombreDispositivo" 
                               @bind:event="oninput"
                               placeholder="Ej: PC Oficina, Laptop Campo..."
                               disabled="@isLoading" />
                    </div>
                }
                
                <div class="form-actions">
                    <button class="btn-login" @onclick="DoLogin" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="loading-spinner"></span>
                        }
                        INICIAR SESION
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private const string SESSION_KEY = "sgrrhh_session_user_id";
    private const string DEVICE_TOKEN_KEY = "sgrrhh_device_token";
    
    private string username = "";
    private string password = "";
    private string nombreDispositivo = "";
    private bool recordarDispositivo = false;
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;
    private bool isCheckingToken;
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Si ya est치 autenticado, redirigir
            if (AuthService.IsAuthenticated)
            {
                Navigation.NavigateTo(GetDefaultPageByRole());
                return;
            }
            
            // Intentar login autom치tico con token de dispositivo
            await TryAutoLoginWithDeviceToken();
        }
    }
    
    private async Task TryAutoLoginWithDeviceToken()
    {
        try
        {
            isCheckingToken = true;
            StateHasChanged();
            
            var deviceToken = await JSRuntime.InvokeAsync<string?>("getLocalStorage", DEVICE_TOKEN_KEY);
            
            if (!string.IsNullOrWhiteSpace(deviceToken))
            {
                var result = await AuthService.LoginConTokenDispositivoAsync(deviceToken);
                
                if (result.IsSuccess)
                {
                    // Tambi칠n guardar el userId para compatibilidad
                    await SaveSessionAsync();
                    Navigation.NavigateTo(GetDefaultPageByRole());
                    return;
                }
                else
                {
                    // Token inv치lido o expirado, limpiar
                    await JSRuntime.InvokeVoidAsync("removeLocalStorage", DEVICE_TOKEN_KEY);
                }
            }
        }
        catch (Exception)
        {
            // Ignorar errores de localStorage
        }
        finally
        {
            isCheckingToken = false;
            StateHasChanged();
        }
    }
    
    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLoading)
        {
            await DoLogin();
        }
        else if (e.Key == "Escape")
        {
            ClearForm();
        }
    }
    
    private void ClearForm()
    {
        username = "";
        password = "";
        nombreDispositivo = "";
        recordarDispositivo = false;
        errorMessage = null;
        successMessage = null;
        StateHasChanged();
    }
    
    private async Task DoLogin()
    {
        if (isLoading) return;
        
        errorMessage = null;
        successMessage = null;
        
        if (string.IsNullOrWhiteSpace(username))
        {
            errorMessage = "El campo USUARIO es obligatorio.";
            return;
        }
        
        if (string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "El campo CONTRASE칌A es obligatorio.";
            return;
        }
        
        if (recordarDispositivo && string.IsNullOrWhiteSpace(nombreDispositivo))
        {
            errorMessage = "Ingrese un nombre para identificar este dispositivo.";
            return;
        }
        
        isLoading = true;
        StateHasChanged();
        
        try
        {
            var result = await AuthService.LoginAsync(username, password);
            
            if (result.IsSuccess)
            {
                // Guardar sesi칩n est치ndar
                await SaveSessionAsync();
                
                // Si marc칩 recordar dispositivo, autorizar y guardar token
                if (recordarDispositivo)
                {
                    var userAgent = await JSRuntime.InvokeAsync<string>("eval", "navigator.userAgent");
                    var tokenResult = await AuthService.AutorizarDispositivoAsync(
                        nombreDispositivo.Trim(),
                        userAgent,
                        null, // IP se puede obtener del servidor si se requiere
                        null  // Sin expiraci칩n
                    );
                    
                    if (tokenResult.IsSuccess && tokenResult.Value != null)
                    {
                        await JSRuntime.InvokeVoidAsync("setLocalStorage", DEVICE_TOKEN_KEY, tokenResult.Value);
                    }
                }
                
                Navigation.NavigateTo(GetDefaultPageByRole());
            }
            else
            {
                errorMessage = result.Error;
            }
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    
    private async Task SaveSessionAsync()
    {
        try
        {
            if (AuthService.CurrentUserId.HasValue)
            {
                await JSRuntime.InvokeVoidAsync("setLocalStorage", SESSION_KEY, AuthService.CurrentUserId.Value.ToString());
            }
        }
        catch
        {
            // Ignorar errores de localStorage
        }
    }
    
    private string GetDefaultPageByRole()
    {
        // Todos los usuarios van a la p치gina Home despu칠s del login
        return "/home";
    }
}
