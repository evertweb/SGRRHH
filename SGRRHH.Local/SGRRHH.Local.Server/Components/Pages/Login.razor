@page "/login"
@page "/"
@layout EmptyLayout
@using SGRRHH.Local.Shared.Interfaces
@using SGRRHH.Local.Domain.Enums
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <div class="system-title">SGRRHH LOCAL</div>
            <div class="system-subtitle">SISTEMA DE GESTION DE RECURSOS HUMANOS</div>
            <div class="system-version">VERSION 1.0.0</div>
        </div>
        
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-block">
                ERROR: @errorMessage
            </div>
        }
        
        <div class="login-form">
            <div class="form-field">
                <label class="field-label">USUARIO:</label>
                <input type="text" 
                       class="field-input"
                       @bind="username" 
                       @bind:event="oninput"
                       @onkeydown="HandleKeyDown"
                       disabled="@isLoading"
                       autofocus />
            </div>
            
            <div class="form-field">
                <label class="field-label">CONTRASEÑA:</label>
                <input type="password" 
                       class="field-input"
                       @bind="password" 
                       @bind:event="oninput"
                       @onkeydown="HandleKeyDown"
                       disabled="@isLoading" />
            </div>
            
            <div class="form-actions">
                <button class="btn-login" @onclick="DoLogin" disabled="@isLoading">
                    INICIAR SESION
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private const string SESSION_KEY = "sgrrhh_session_user_id";
    private string username = "";
    private string password = "";
    private string? errorMessage;
    private bool isLoading;
    
    protected override void OnInitialized()
    {
        if (AuthService.IsAuthenticated)
        {
            Navigation.NavigateTo(GetDefaultPageByRole());
        }
    }
    
    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLoading)
        {
            await DoLogin();
        }
        else if (e.Key == "Escape")
        {
            ClearForm();
        }
    }
    
    private void ClearForm()
    {
        username = "";
        password = "";
        errorMessage = null;
        StateHasChanged();
    }
    
    private async Task DoLogin()
    {
        if (isLoading) return;
        
        errorMessage = null;
        
        if (string.IsNullOrWhiteSpace(username))
        {
            errorMessage = "El campo USUARIO es obligatorio.";
            return;
        }
        
        if (string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "El campo CONTRASEÑA es obligatorio.";
            return;
        }
        
        isLoading = true;
        StateHasChanged();
        
        try
        {
            var result = await AuthService.LoginAsync(username, password);
            
            if (result.IsSuccess)
            {
                // Guardar sesión en localStorage para persistir entre recargas
                await SaveSessionAsync();
                Navigation.NavigateTo(GetDefaultPageByRole());
            }
            else
            {
                errorMessage = result.Error;
            }
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    
    private async Task SaveSessionAsync()
    {
        try
        {
            if (AuthService.CurrentUserId.HasValue)
            {
                await JSRuntime.InvokeVoidAsync("setLocalStorage", SESSION_KEY, AuthService.CurrentUserId.Value.ToString());
            }
        }
        catch
        {
            // Ignorar errores de localStorage
        }
    }
    
    private string GetDefaultPageByRole()
    {
        // Todos los usuarios van a la página Home después del login
        return "/home";
    }
}
