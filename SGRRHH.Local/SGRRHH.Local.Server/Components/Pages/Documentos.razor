@page "/documentos"
@page "/documentos/{EmpleadoIdParam:int}"
@using SGRRHH.Local.Domain.Entities
@using SGRRHH.Local.Domain.Enums
@using SGRRHH.Local.Domain.DTOs
@using SGRRHH.Local.Shared.Interfaces
@using SGRRHH.Local.Server.Components.Shared
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@inject IDocumentoEmpleadoRepository DocumentoRepo
@inject IEmpleadoRepository EmpleadoRepo
@inject ILocalStorageService StorageService
@inject IAuthService AuthService
@inject IKeyboardShortcutService KeyboardShortcutService
@inject IJSRuntime JS
@inject ILogger<Documentos> Logger
@implements IDisposable

<PageTitle>Documentos - SGRRHH</PageTitle>

<div class="page-header">
    <div class="page-title">DOCUMENTOS</div>
    <div class="page-info">
        <span>USUARIO: @(AuthService.CurrentUser?.NombreCompleto ?? "N/A")</span>
        <span>ROL: @(AuthService.IsAdmin ? "ADMINISTRADOR" : "CONSULTA")</span>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="error-message">
        <div class="error-title">ERROR</div>
        <div class="error-content">@errorMessage</div>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="success-message">
        <div class="success-content">@successMessage</div>
    </div>
}

<div class="control-bar">
    <div class="control-group">
        <label class="control-label">EMPLEADO:</label>
        <select @bind="selectedEmpleadoId" @bind:after="LoadDocumentos" class="control-input">
            <option value="0">SELECCIONAR EMPLEADO</option>
            @foreach (var emp in empleados)
            {
                <option value="@emp.Id">@emp.Codigo - @emp.NombreCompleto</option>
            }
        </select>
    </div>
    
    <div class="control-actions">
        <button @onclick="LoadDocumentos" disabled="@isLoading" class="btn-action">
            @(isLoading ? "CARGANDO..." : "ACTUALIZAR")
        </button>
        
        @if (selectedEmpleadoId > 0 && AuthService.IsAdmin)
        {
            <button @onclick="ShowScannerModal" class="btn-action">ESCANEAR</button>
            <button @onclick="ShowUploadModal" class="btn-action">SUBIR DOCUMENTO</button>
        }
    </div>
</div>

@if (selectedEmpleadoId == 0)
{
    <div class="status-message">
        <div>SISTEMA DE GESTION DE DOCUMENTOS</div>
        <div>Seleccione un empleado para ver documentos registrados</div>
    </div>
}
else if (isLoading)
{
    <div class="status-message">
        <div>CARGANDO REGISTROS...</div>
    </div>
}
else if (!documentos.Any())
{
    <div class="status-message">
        <div>SIN DOCUMENTOS REGISTRADOS</div>
        <div>No existen documentos para el empleado seleccionado</div>
        @if (AuthService.IsAdmin)
        {
            <button @onclick="ShowScannerModal" class="btn-action">ESCANEAR</button>
            <button @onclick="ShowUploadModal" class="btn-action">SUBIR DOCUMENTO</button>
        }
    </div>
}
else
{
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>TIPO</th>
                <th>NOMBRE</th>
                <th>DESCRIPCION</th>
                <th>ARCHIVO ORIGINAL</th>
                <th>TAMAÑO</th>
                <th>FECHA EMISION</th>
                <th>FECHA VENCIMIENTO</th>
                <th>ESTADO</th>
                <th>SUBIDO POR</th>
                <th>FECHA CREACION</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in documentos)
            {
                <tr class="@(selectedDocumento?.Id == doc.Id ? "row-selected" : "") @(!doc.EstaVigente ? "row-warning" : "")"
                    @onclick="() => SelectDocumento(doc)">
                    <td>@doc.Id</td>
                    <td>@GetTipoNombre(doc.TipoDocumento)</td>
                    <td>@doc.Nombre</td>
                    <td>@(doc.Descripcion ?? "-")</td>
                    <td>@doc.NombreArchivoOriginal</td>
                    <td>@FormatFileSize(doc.TamanoArchivo)</td>
                    <td>@(doc.FechaEmision?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>@(doc.FechaVencimiento?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>
                        @if (doc.EstaVigente)
                        {
                            <span>VIGENTE</span>
                        }
                        else
                        {
                            <span class="text-error">VENCIDO</span>
                        }
                    </td>
                    <td>@(doc.SubidoPorNombre ?? "-")</td>
                    <td>@doc.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="actions-cell">
                        @if (!string.IsNullOrEmpty(doc.ArchivoPath))
                        {
                            <button @onclick="() => PrevisualizarDocumento(doc)" @onclick:stopPropagation="true" class="btn-small">VER</button>
                            <button @onclick="() => DescargarDocumento(doc)" @onclick:stopPropagation="true" class="btn-small">DESCARGAR</button>
                        }
                        @if (AuthService.IsAdmin)
                        {
                            <button @onclick="() => ConfirmarEliminar(doc)" @onclick:stopPropagation="true" class="btn-small btn-danger">ELIMINAR</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="table-footer">
        <div>TOTAL REGISTROS: @documentos.Count()</div>
        @if (selectedDocumento != null)
        {
            <div>SELECCIONADO: @selectedDocumento.Nombre (ID: @selectedDocumento.Id)</div>
        }
    </div>
}

@if (showUploadModal)
{
    <div class="modal-backdrop">
        <div class="modal-container">
            <div class="modal-title">SUBIR DOCUMENTO</div>
            
            <div class="form-container">
                <div class="form-field">
                    <label class="field-label">TIPO DE DOCUMENTO:</label>
                    <select @bind="uploadTipo" class="field-input">
                        @foreach (TipoDocumentoEmpleado tipo in Enum.GetValues<TipoDocumentoEmpleado>())
                        {
                            <option value="@tipo">@GetTipoNombre(tipo)</option>
                        }
                    </select>
                </div>

                <div class="form-field">
                    <label class="field-label">NOMBRE DEL DOCUMENTO:</label>
                    <input type="text" @bind="uploadNombre" class="field-input" />
                </div>

                <div class="form-field">
                    <label class="field-label">DESCRIPCION (OPCIONAL):</label>
                    <input type="text" @bind="uploadDescripcion" class="field-input" />
                </div>

                <div class="form-row">
                    <div class="form-field">
                        <label class="field-label">FECHA DE EMISION:</label>
                        <input type="date" @bind="uploadFechaEmision" class="field-input" />
                    </div>

                    <div class="form-field">
                        <label class="field-label">FECHA DE VENCIMIENTO:</label>
                        <input type="date" @bind="uploadFechaVencimiento" class="field-input" />
                    </div>
                </div>

                <div class="form-field">
                    <label class="field-label">ARCHIVO (PDF, WORD, IMAGENES - MAX 10MB):</label>
                    <InputFile OnChange="OnFileSelected" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" class="field-input" />
                    @if (!string.IsNullOrEmpty(selectedFileName))
                    {
                        <div class="field-info">
                            ARCHIVO: @selectedFileName | TAMAÑO: @FormatFileSize(selectedFileBytes?.Length ?? 0)
                        </div>
                    }
                </div>
            </div>

            <div class="modal-actions">
                <button @onclick="CloseUploadModal" class="btn-action">CANCELAR [ESC]</button>
                <button @onclick="UploadDocument" disabled="@isUploading" class="btn-action">
                    @(isUploading ? "SUBIENDO..." : "GUARDAR [F5]")
                </button>
            </div>
        </div>
    </div>
}

@if (showConfirmModal)
{
    <div class="modal-backdrop">
        <div class="modal-container modal-confirm">
            <div class="modal-title">CONFIRMAR ELIMINACION</div>
            
            <div class="confirm-content">
                <div>Se eliminara el documento:</div>
                <div class="confirm-detail">@documentoAEliminar?.Nombre</div>
                <div class="confirm-warning">Esta accion no puede deshacerse.</div>
            </div>

            <div class="modal-actions">
                <button @onclick="CancelarEliminar" class="btn-action">CANCELAR</button>
                <button @onclick="EliminarDocumento" class="btn-action btn-danger">ELIMINAR</button>
            </div>
        </div>
    </div>
}

@if (showPreviewModal && previewDocumento != null)
{
    <div class="modal-backdrop" @onclick="CerrarPreview">
        <div class="modal-preview" @onclick:stopPropagation="true">
            <div class="modal-title" style="display: flex; justify-content: space-between; align-items: center;">
                <span>@previewDocumento.Nombre</span>
                <button @onclick="CerrarPreview" class="btn-action">CERRAR (ESC)</button>
            </div>
            
            <div class="preview-body">
                @if (previewBytes != null)
                {
                    @if (IsImageMime(previewDocumento.TipoMime))
                    {
                        <img src="data:@previewDocumento.TipoMime;base64,@Convert.ToBase64String(previewBytes)" 
                             alt="Vista previa" style="max-width: 100%; max-height: 70vh; object-fit: contain;" />
                    }
                    else if (previewDocumento.TipoMime == "application/pdf")
                    {
                        <iframe src="data:application/pdf;base64,@Convert.ToBase64String(previewBytes)" 
                                style="width: 100%; height: 70vh; border: none;"></iframe>
                    }
                    else
                    {
                        <div class="no-preview">
                            <p>TIPO DE ARCHIVO: @previewDocumento.TipoMime</p>
                            <p>NO SE PUEDE PREVISUALIZAR ESTE TIPO DE ARCHIVO</p>
                            <button @onclick="() => DescargarDocumento(previewDocumento)" class="btn-action">DESCARGAR ARCHIVO</button>
                        </div>
                    }
                }
                else
                {
                    <div class="no-preview">CARGANDO ARCHIVO...</div>
                }
            </div>
            
            <div class="modal-actions">
                <span style="font-size: 11px;">Tamaño: @FormatFileSize(previewDocumento.TamanoArchivo)</span>
                <div>
                    <button @onclick="() => DescargarDocumento(previewDocumento)" class="btn-action">DESCARGAR</button>
                    <button @onclick="CerrarPreview" class="btn-action">CERRAR</button>
                </div>
            </div>
        </div>
    </div>
}

@* Modal de Escáner *@
<ScannerModal @bind-IsVisible="showScannerModal"
              OnScanComplete="OnScanComplete"
              AllowMultiplePages="false" />

@code {
    [Parameter] public int EmpleadoIdParam { get; set; }

    private const string PageId = "documentos";

    private List<Empleado> empleados = new();
    private List<DocumentoEmpleado> documentos = new();
    private int selectedEmpleadoId = 0;
    private DocumentoEmpleado? selectedDocumento;
    private bool isLoading = false;
    private string? successMessage;
    private string? errorMessage;

    // Upload Modal State
    private bool showUploadModal = false;
    private bool isUploading = false;
    private TipoDocumentoEmpleado uploadTipo = TipoDocumentoEmpleado.Otro;
    private string uploadNombre = "";
    private string uploadDescripcion = "";
    private DateTime? uploadFechaEmision;
    private DateTime? uploadFechaVencimiento;
    private string selectedFileName = "";
    private byte[]? selectedFileBytes;
    private string? selectedFileMime;

    // Confirmación de eliminación
    private bool showConfirmModal = false;
    private DocumentoEmpleado? documentoAEliminar;

    // Previsualización de documentos
    private bool showPreviewModal = false;
    private DocumentoEmpleado? previewDocumento;
    private byte[]? previewBytes;

    // Scanner Modal
    private bool showScannerModal = false;

    protected override async Task OnInitializedAsync()
    {
        // Registrar atajos de teclado para esta página
        KeyboardShortcutService.RegisterPageShortcuts(PageId, new List<KeyboardShortcutDto>
        {
            new() { Key = "F3", KeyDisplay = "F3", Description = "Subir Documento", Action = () => { if (selectedEmpleadoId > 0 && AuthService.IsAdmin) ShowUploadModal(); return Task.CompletedTask; }, Priority = 10 },
            new() { Key = "F5", KeyDisplay = "F5", Description = "Actualizar", Action = LoadDocumentos, Priority = 10 },
            new() { Key = "Escape", KeyDisplay = "ESC", Description = "Cerrar", Action = () => { if (showPreviewModal) CerrarPreview(); else if (showUploadModal) CloseUploadModal(); else if (showConfirmModal) CancelarEliminar(); return Task.CompletedTask; }, Priority = 10 }
        });

        try
        {
            empleados = (await EmpleadoRepo.GetAllActiveAsync()).ToList();
            if (EmpleadoIdParam > 0)
            {
                selectedEmpleadoId = EmpleadoIdParam;
                await LoadDocumentos();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error cargando empleados");
            errorMessage = ErrorTranslationService.Translate(ex);
        }
    }

    public void Dispose()
    {
        KeyboardShortcutService.ClearPageShortcuts(PageId);
    }

    private async Task LoadDocumentos()
    {
        if (selectedEmpleadoId == 0)
        {
            documentos.Clear();
            selectedDocumento = null;
            return;
        }

        isLoading = true;
        errorMessage = null;
        StateHasChanged();
        
        try
        {
            documentos = (await DocumentoRepo.GetByEmpleadoIdAsync(selectedEmpleadoId))
                .OrderByDescending(d => d.FechaCreacion)
                .ToList();
            selectedDocumento = null;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error cargando documentos del empleado {EmpleadoId}", selectedEmpleadoId);
            errorMessage = ErrorTranslationService.Translate(ex);
            documentos.Clear();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SelectDocumento(DocumentoEmpleado doc)
    {
        selectedDocumento = doc;
    }

    private string GetTipoNombre(TipoDocumentoEmpleado tipo) => tipo switch
    {
        TipoDocumentoEmpleado.Cedula => "Cédula",
        TipoDocumentoEmpleado.HojaVida => "Hoja de Vida",
        TipoDocumentoEmpleado.CertificadoEstudios => "Certificado Estudios",
        TipoDocumentoEmpleado.CertificadoLaboral => "Certificado Laboral",
        TipoDocumentoEmpleado.ExamenMedicoIngreso => "Examen Médico Ingreso",
        TipoDocumentoEmpleado.ExamenMedicoPeriodico => "Examen Médico Periódico",
        TipoDocumentoEmpleado.ExamenMedicoEgreso => "Examen Médico Egreso",
        TipoDocumentoEmpleado.AfiliacionEPS => "Afiliación EPS",
        TipoDocumentoEmpleado.AfiliacionAFP => "Afiliación AFP",
        TipoDocumentoEmpleado.AfiliacionARL => "Afiliación ARL",
        TipoDocumentoEmpleado.AfiliacionCajaCompensacion => "Caja Compensación",
        TipoDocumentoEmpleado.ReferenciasPersonales => "Referencias Personales",
        TipoDocumentoEmpleado.ReferenciasLaborales => "Referencias Laborales",
        TipoDocumentoEmpleado.Antecedentes => "Antecedentes",
        TipoDocumentoEmpleado.LicenciaConduccion => "Licencia Conducción",
        TipoDocumentoEmpleado.LibretaMilitar => "Libreta Militar",
        TipoDocumentoEmpleado.RUT => "RUT",
        TipoDocumentoEmpleado.CertificadoBancario => "Certificado Bancario",
        TipoDocumentoEmpleado.ActaEntregaDotacion => "Entrega Dotación",
        TipoDocumentoEmpleado.Capacitacion => "Capacitación",
        TipoDocumentoEmpleado.ContratoFirmado => "Contrato Firmado",
        TipoDocumentoEmpleado.Foto => "Foto",
        _ => "Otro"
    };

    private void ShowUploadModal()
    {
        uploadTipo = TipoDocumentoEmpleado.Otro;
        uploadNombre = "";
        uploadDescripcion = "";
        uploadFechaEmision = DateTime.Today;
        uploadFechaVencimiento = null;
        selectedFileName = "";
        selectedFileBytes = null;
        selectedFileMime = null;
        showUploadModal = true;
    }

    private void CloseUploadModal()
    {
        showUploadModal = false;
    }

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try
            {
                selectedFileName = file.Name;
                selectedFileMime = file.ContentType;

                // Read file bytes (limit to 10MB)
                using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
                using var ms = new MemoryStream();
                await stream.CopyToAsync(ms);
                selectedFileBytes = ms.ToArray();

                // Auto-fill name if empty
                if (string.IsNullOrEmpty(uploadNombre))
                {
                    uploadNombre = Path.GetFileNameWithoutExtension(file.Name);
                }
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error seleccionando archivo");
                errorMessage = ErrorTranslationService.Translate(ex);
                selectedFileName = "";
                selectedFileBytes = null;
            }
        }
    }

    private async Task UploadDocument()
    {
        // Validaciones estrictas
        if (string.IsNullOrWhiteSpace(uploadNombre))
        {
            errorMessage = "ERROR: Campo NOMBRE DEL DOCUMENTO es obligatorio";
            return;
        }
        
        if (selectedFileBytes == null || selectedFileBytes.Length == 0)
        {
            errorMessage = "ERROR: Debe seleccionar un archivo";
            return;
        }

        if (selectedFileBytes.Length > 10 * 1024 * 1024)
        {
            errorMessage = "ERROR: El archivo excede el tamaño máximo de 10MB";
            return;
        }

        if (uploadFechaVencimiento.HasValue && uploadFechaEmision.HasValue && uploadFechaVencimiento < uploadFechaEmision)
        {
            errorMessage = "ERROR: FECHA DE VENCIMIENTO no puede ser anterior a FECHA DE EMISION";
            return;
        }

        isUploading = true;
        errorMessage = null;
        StateHasChanged();
        
        try
        {
            var tipoDocumentoStr = GetTipoNombre(uploadTipo);
            var storageResult = await StorageService.SaveDocumentoEmpleadoAsync(
                selectedEmpleadoId,
                tipoDocumentoStr,
                selectedFileBytes,
                selectedFileName
            );

            if (!storageResult.IsSuccess)
            {
                errorMessage = $"ERROR: Fallo al guardar archivo - {storageResult.ErrorMessage}";
                return;
            }

            var documento = new DocumentoEmpleado
            {
                EmpleadoId = selectedEmpleadoId,
                TipoDocumento = uploadTipo,
                Nombre = uploadNombre,
                Descripcion = uploadDescripcion,
                NombreArchivoOriginal = selectedFileName,
                TipoMime = selectedFileMime ?? "application/octet-stream",
                TamanoArchivo = selectedFileBytes.Length,
                FechaEmision = uploadFechaEmision,
                FechaVencimiento = uploadFechaVencimiento,
                SubidoPorNombre = AuthService.CurrentUser?.NombreCompleto,
                SubidoPorUsuarioId = AuthService.CurrentUser?.Id,
                ArchivoPath = storageResult.Value,
                Activo = true,
                FechaCreacion = DateTime.Now
            };

            await DocumentoRepo.AddAsync(documento);
            
            Logger.LogInformation("Documento subido: {Nombre} para empleado {EmpleadoId}", uploadNombre, selectedEmpleadoId);
            
            successMessage = $"Registro guardado correctamente. Documento ID: {documento.Id}";
            showUploadModal = false;
            await LoadDocumentos();
            await ClearSuccessMessage();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error subiendo documento");
            errorMessage = ErrorTranslationService.Translate(ex);
        }
        finally
        {
            isUploading = false;
            StateHasChanged();
        }
    }

    private async Task DescargarDocumento(DocumentoEmpleado doc)
    {
        if (string.IsNullOrEmpty(doc.ArchivoPath))
        {
            errorMessage = "ERROR: Documento sin archivo asociado";
            return;
        }

        try
        {
            var bytes = await StorageService.GetFileAsync(doc.ArchivoPath);
            if (bytes == null || bytes.Length == 0)
            {
                errorMessage = "ERROR: No se pudo leer el archivo del documento";
                return;
            }

            var fileName = doc.NombreArchivoOriginal;
            var mimeType = doc.TipoMime;
            
            await JS.InvokeVoidAsync("downloadFile", fileName, mimeType, bytes);
            
            Logger.LogInformation("Documento descargado: {Nombre} (ID: {Id})", doc.Nombre, doc.Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error descargando documento {Id}", doc.Id);
            errorMessage = ErrorTranslationService.Translate(ex);
        }
    }

    private async Task PrevisualizarDocumento(DocumentoEmpleado doc)
    {
        if (string.IsNullOrEmpty(doc.ArchivoPath))
        {
            errorMessage = "ERROR: Documento sin archivo asociado";
            return;
        }

        try
        {
            previewDocumento = doc;
            previewBytes = null;
            showPreviewModal = true;
            StateHasChanged();

            var bytes = await StorageService.GetFileAsync(doc.ArchivoPath);
            if (bytes == null || bytes.Length == 0)
            {
                errorMessage = "ERROR: No se pudo leer el archivo del documento";
                CerrarPreview();
                return;
            }

            previewBytes = bytes;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error previsualizando documento {Id}", doc.Id);
            errorMessage = ErrorTranslationService.Translate(ex);
            CerrarPreview();
        }
    }

    private void CerrarPreview()
    {
        showPreviewModal = false;
        previewDocumento = null;
        previewBytes = null;
    }

    private bool IsImageMime(string? mime)
    {
        if (string.IsNullOrEmpty(mime)) return false;
        return mime.StartsWith("image/", StringComparison.OrdinalIgnoreCase);
    }

    private void ConfirmarEliminar(DocumentoEmpleado doc)
    {
        documentoAEliminar = doc;
        showConfirmModal = true;
    }

    private void CancelarEliminar()
    {
        documentoAEliminar = null;
        showConfirmModal = false;
    }

    private async Task EliminarDocumento()
    {
        if (documentoAEliminar == null) return;

        try
        {
            if (!string.IsNullOrEmpty(documentoAEliminar.ArchivoPath))
            {
                await StorageService.DeleteDocumentoEmpleadoAsync(documentoAEliminar.Id);
            }

            await DocumentoRepo.DeleteAsync(documentoAEliminar.Id);
            
            Logger.LogInformation("Documento eliminado: {Nombre} (ID: {Id})", documentoAEliminar.Nombre, documentoAEliminar.Id);
            
            successMessage = $"Operacion completada. Documento ID {documentoAEliminar.Id} eliminado";
            showConfirmModal = false;
            documentoAEliminar = null;
            
            await LoadDocumentos();
            await ClearSuccessMessage();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error eliminando documento {Id}", documentoAEliminar.Id);
            errorMessage = ErrorTranslationService.Translate(ex);
            showConfirmModal = false;
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private async Task ClearSuccessMessage()
    {
        await Task.Delay(4000);
        successMessage = null;
        StateHasChanged();
    }

    // ========================================
    // SCANNER METHODS
    // ========================================
    
    private void ShowScannerModal()
    {
        showScannerModal = true;
    }

    private async Task OnScanComplete(List<ScannedPageDto> scannedPages)
    {
        if (scannedPages == null || scannedPages.Count == 0)
        {
            return;
        }

        try
        {
            var scannedPage = scannedPages[0];
            
            // Pre-llenar el modal de subida con la imagen escaneada
            selectedFileBytes = scannedPage.ImageBytes;
            selectedFileMime = scannedPage.MimeType;
            selectedFileName = $"Escaneado_{DateTime.Now:yyyyMMdd_HHmmss}.jpg";
            
            // Configurar valores por defecto
            uploadTipo = TipoDocumentoEmpleado.Otro;
            uploadNombre = $"Documento escaneado {DateTime.Now:dd/MM/yyyy HH:mm}";
            uploadDescripcion = $"Escaneado el {DateTime.Now:dd/MM/yyyy} a las {DateTime.Now:HH:mm}";
            uploadFechaEmision = DateTime.Today;
            uploadFechaVencimiento = null;
            
            // Cerrar escáner y abrir modal de subida
            showScannerModal = false;
            showUploadModal = true;
            
            successMessage = $"Documento escaneado correctamente ({FormatFileSize(scannedPage.ImageBytes.Length)}). Complete los datos para guardarlo.";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error procesando documento escaneado");
            errorMessage = $"Error al procesar documento escaneado: {ex.Message}";
        }
    }
}
