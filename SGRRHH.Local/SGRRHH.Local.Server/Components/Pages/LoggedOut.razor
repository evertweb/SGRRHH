@page "/logged-out"
@layout EmptyLayout
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <div class="system-title">SGRRHH LOCAL</div>
            <div class="system-subtitle">SISTEMA DE GESTION DE RECURSOS HUMANOS</div>
        </div>
        
        <div class="logout-message">
            <div class="logout-icon">üîí</div>
            <div class="logout-text">SESION CERRADA CORRECTAMENTE</div>
        </div>
        
        <div class="form-actions" style="margin-top: 2rem;">
            <button class="btn-login" @onclick="GoToLogin">
                INICIAR SESION
            </button>
        </div>
        
        <div class="logout-footer">
            <span class="logout-hint">Presione el bot√≥n para iniciar sesi√≥n nuevamente</span>
        </div>
    </div>
</div>

<style>
    .logout-message {
        text-align: center;
        padding: 2rem 1rem;
        border: 1px solid var(--color-border);
        margin: 1rem 0;
    }
    
    .logout-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    
    .logout-text {
        font-family: var(--font-family);
        font-size: 1.1rem;
        color: var(--color-success, #006600);
    }
    
    .logout-footer {
        text-align: center;
        margin-top: 1rem;
    }
    
    .logout-hint {
        font-size: 0.85rem;
        color: var(--color-text-muted, #888);
    }
</style>

@code {
    private const string SESSION_KEY = "sgrrhh_session_user_id";
    private const string LOGOUT_FLAG_KEY = "sgrrhh_logged_out";
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Limpiar la sesi√≥n del localStorage al llegar aqu√≠
            try
            {
                await JSRuntime.InvokeVoidAsync("removeLocalStorage", SESSION_KEY);
                // Marcar que el usuario hizo logout expl√≠cito
                await JSRuntime.InvokeVoidAsync("setLocalStorage", LOGOUT_FLAG_KEY, "true");
            }
            catch
            {
                // Ignorar errores de localStorage
            }
        }
    }
    
    private async Task GoToLogin()
    {
        // Quitar el flag de logout para permitir auto-login en el futuro
        try
        {
            await JSRuntime.InvokeVoidAsync("removeLocalStorage", LOGOUT_FLAG_KEY);
        }
        catch
        {
            // Ignorar
        }
        
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}
