    .badge-vencida { background: #ffebee; border-color: #f44336; color: #c62828; }
    .badge-vence-pronto { background: #fff8e1; border-color: #ffc107; color: #ff6f00; }
    
    /* === BOTONES DE ACCI√ìN === */
    
    .btn-accion {
        font-family: 'Courier New', monospace;
        font-size: 10px;
        padding: 4px 8px;
        border: 1px solid black;
        background: white;
        cursor: pointer;
        margin-right: 4px;
    }
    
    .btn-accion:hover {
        background: #f0f0f0;
    }
    
    .btn-accion.primary {
        background: #0066cc;
        color: white;
        border-color: #0066cc;
    }
    
    .btn-accion.primary:hover {
        background: #0052a3;
    }
    
    .btn-accion.success {
        background: green;
        color: white;
        border-color: green;
    }
    
    .btn-accion.success:hover {
        background: #006600;
    }
    
    /* === LOADING === */
    
    .loading {
        text-align: center;
        padding: 40px;
        font-size: 14px;
        color: #666;
    }
    
    /* === MENSAJE VAC√çO === */
    
    .mensaje-vacio {
        text-align: center;
        padding: 40px;
        color: #666;
        font-size: 12px;
    }
    
    /* === MODAL === */
    
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }
    
    .modal-container {
        background: white;
        border: 3px solid black;
        width: 90%;
        max-width: 800px;
