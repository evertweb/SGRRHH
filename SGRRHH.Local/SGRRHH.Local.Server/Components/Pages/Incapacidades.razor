        overflow-y: auto;
    }
    
    .modal-header {
        background: black;
        color: white;
        padding: 12px 15px;
        font-weight: bold;
        font-size: 14px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .modal-header button {
        background: transparent;
        border: none;
        color: white;
        font-size: 18px;
        cursor: pointer;
    }
    
    .modal-body {
        padding: 20px;
    }
    
    .modal-footer {
        padding: 15px 20px;
        border-top: 1px solid #ccc;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }
    
    /* === FORMULARIO === */
    
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 15px;
    }
    
    .form-row.single {
        grid-template-columns: 1fr;
    }
    
    .form-group {
        margin-bottom: 15px;
    }
    
    .form-group label {
        display: block;
        font-size: 11px;
        font-weight: bold;
        margin-bottom: 5px;
        text-transform: uppercase;
    }
    
    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 8px;
        font-family: 'Courier New', monospace;
        font-size: 12px;
        border: 1px solid black;
    }
    
    .form-group textarea {
        min-height: 80px;
        resize: vertical;
    }
    
    .form-group.error input,
    .form-group.error select {
        border-color: red;
        background: #fff0f0;
    }
    
    .error-message {
        font-size: 10px;
        color: red;
        margin-top: 4px;
    }
    
    .btn-submit {
        font-family: 'Courier New', monospace;
        font-size: 12px;
        padding: 10px 20px;
        background: black;
        color: white;
        border: 2px solid black;
        cursor: pointer;
    }
    
    .btn-submit:hover {
        background: #333;
    }
    
    .btn-cancel {
        font-family: 'Courier New', monospace;
        font-size: 12px;
        padding: 10px 20px;
        background: white;
        color: black;
        border: 2px solid black;
        cursor: pointer;
    }
    
    .btn-cancel:hover {
        background: #f0f0f0;
    }
    
    /* === DETALLE === */
    
    .detalle-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }
    
    .detalle-section {
        border: 1px solid #ccc;
        padding: 15px;
    }
    
    .detalle-section h4 {
        font-size: 12px;
        margin: 0 0 10px 0;
        padding-bottom: 5px;
        border-bottom: 1px solid #ccc;
    }
    
    .detalle-row {
        display: flex;
        font-size: 11px;
        margin-bottom: 5px;
    }
    
    .detalle-row .label {
        font-weight: bold;
        width: 140px;
        flex-shrink: 0;
    }
    
    .detalle-row .value {
        flex: 1;
    }
    
    .timeline {
        margin-top: 15px;
        border-left: 2px solid #ccc;
        padding-left: 15px;
    }
    
    .timeline-item {
        position: relative;
        padding-bottom: 15px;
    }
    
    .timeline-item::before {
        content: '';
        position: absolute;
        left: -21px;
        top: 3px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: white;
        border: 2px solid #666;
    }
    
    .timeline-item.registro::before { border-color: #2196f3; }
    .timeline-item.transcripcion::before { border-color: #ff9800; }
    .timeline-item.cobro::before { border-color: #4caf50; }
    
    .timeline-fecha {
        font-size: 10px;
        color: #666;
    }
    
    .timeline-accion {
        font-size: 11px;
        font-weight: bold;
    }
    
    .timeline-desc {
        font-size: 10px;
        color: #333;
    }
</style>

<div class="incapacidades-container">
    <!-- HEADER -->
    <div class="incapacidades-header">
        <h1 class="incapacidades-title">GESTI√ìN DE INCAPACIDADES M√âDICAS</h1>
        <div style="display: flex; gap: 10px;">
            <button class="btn-nuevo" style="background: #0066cc;" @onclick="GenerarReporteCobro">üìä REPORTE COBRO</button>
            <button class="btn-nuevo" @onclick="AbrirModalNueva">+ NUEVA INCAPACIDAD</button>
        </div>
    </div>
    
    <!-- DASHBOARD -->
    <div class="dashboard-grid">
        <div class="stat-card activa">
            <h3>üè• ACTIVAS</h3>
            <div class="stat-number">@estadisticas.TotalActivas</div>
        </div>
        
        <div class="stat-card warning">
            <h3>üìã PEND. TRANSCRIBIR</h3>
            <div class="stat-number">@estadisticas.TotalPendientesTranscribir</div>
        </div>
        
        <div class="stat-card info">
            <h3>üí∞ PEND. COBRO</h3>
            <div class="stat-number">@estadisticas.TotalPendientesCobro</div>
            <div class="stat-amount">$@estadisticas.TotalPorCobrar.ToString("N0")</div>
        </div>
        
        <div class="stat-card success">
            <h3>‚úÖ COBRADO MES</h3>
            <div class="stat-number">$@estadisticas.TotalCobradoMes.ToString("N0")</div>
            <div class="stat-amount">@estadisticas.TotalDiasIncapacidadMes d√≠as</div>
        </div>
    </div>
    
    <!-- TABS -->
    <div class="incapacidades-tabs">
        <button class="@(tabActivo == "activas" ? "active" : "")" @onclick='() => CambiarTab("activas")'>
            ACTIVAS (@estadisticas.TotalActivas)
        </button>
        <button class="@(tabActivo == "transcripcion" ? "active" : "")" @onclick='() => CambiarTab("transcripcion")'>
            PEND. TRANSCRIPCI√ìN (@estadisticas.TotalPendientesTranscribir)
        </button>
        <button class="@(tabActivo == "cobro" ? "active" : "")" @onclick='() => CambiarTab("cobro")'>
            PEND. COBRO (@estadisticas.TotalPendientesCobro)
        </button>
        <button class="@(tabActivo == "historial" ? "active" : "")" @onclick='() => CambiarTab("historial")'>
            HISTORIAL
        </button>
    </div>
    
    <!-- CONTENIDO -->
    <div class="incapacidades-content">
        @if (cargando)
        {
            <div class="loading">Cargando incapacidades...</div>
        }
        else if (!incapacidadesFiltradas.Any())
        {
            <div class="mensaje-vacio">No hay incapacidades en esta categor√≠a</div>
        }
        else
        {
            <table class="tabla-incapacidades">
                <thead>
                    <tr>
                        <th>N√öMERO</th>
                        <th>EMPLEADO</th>
                        <th>TIPO</th>
                        <th>FECHAS</th>
                        <th class="td-centro">D√çAS</th>
                        <th>DIAGN√ìSTICO</th>
                        <th>ESTADO</th>
                        <th class="td-centro">VALOR</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var inc in incapacidadesFiltradas)
                    {
                        <tr @onclick="() => VerDetalle(inc.Id)">
                            <td class="td-numero">
                                @inc.NumeroIncapacidad
                                @if (inc.EsProrroga)
                                {
                                    <span class="badge badge-prorroga">PR√ìRROGA</span>
                                }
                            </td>
                            <td class="td-empleado" title="@inc.EmpleadoNombre">@inc.EmpleadoNombre</td>
                            <td>
                                <span class="badge @GetBadgeTipo(inc.Tipo)">@inc.TipoNombre</span>
                            </td>
                            <td>
                                @inc.FechaInicio.ToString("dd/MM/yy") - @inc.FechaFin.ToString("dd/MM/yy")
                                @if (inc.EstaVencida)
                                {
                                    <span class="badge badge-vencida">VENCIDA</span>
                                }
                                else if (inc.VencePronto)
                                {
                                    <span class="badge badge-vence-pronto">@inc.DiasRestantes d</span>
                                }
                            </td>
                            <td class="td-centro">@inc.TotalDias</td>
                            <td class="td-diagnostico" title="@inc.DiagnosticoDescripcion">@inc.DiagnosticoDescripcion</td>
                            <td>
                                <span class="badge @GetBadgeEstado(inc.Estado)">@inc.EstadoNombre</span>
                                @if (inc.Transcrita && !inc.Cobrada)
                                {
                                    <span class="badge badge-estado-transcrita">TRANSCRITA</span>
                                }
                            </td>
                            <td class="td-monto">
                                @if (inc.ValorPorCobrar.HasValue)
                                {
                                    @:$@inc.ValorPorCobrar.Value.ToString("N0")
                                }
                            </td>
                            <td @onclick:stopPropagation="true">
                                @if (!inc.Transcrita && inc.Estado != EstadoIncapacidad.Cancelada)
                                {
                                    <button class="btn-accion primary" @onclick="() => AbrirModalTranscripcion(inc)">
                                        TRANSCRIBIR
                                    </button>
                                }
                                @if (inc.Transcrita && !inc.Cobrada && inc.Estado != EstadoIncapacidad.Cancelada)
                                {
                                    <button class="btn-accion success" @onclick="() => AbrirModalCobro(inc)">
                                        COBRO
                                    </button>
                                }
                                @if (inc.Estado == EstadoIncapacidad.Activa && !inc.EstaVencida)
                                {
                                    <button class="btn-accion" @onclick="() => AbrirModalProrroga(inc)">
                                        PR√ìRROGA
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

