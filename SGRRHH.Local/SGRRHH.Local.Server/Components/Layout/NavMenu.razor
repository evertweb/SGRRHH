@using SGRRHH.Local.Shared.Interfaces
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SGRRHH Local</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @if (AuthService.IsAuthenticated && AuthService.CurrentUser != null)
        {
            <div class="user-info">
                <p class="user-name">👤 @AuthService.CurrentUser.NombreCompleto</p>
                <p class="user-role">@AuthService.CurrentUser.Rol</p>
            </div>
            
            <!-- GESTIÓN DE PERSONAL -->
            <div class="nav-section">PERSONAL</div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="empleados">
                    <span class="nav-icon">👥</span> Empleados
                </NavLink>
            </div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="contratos">
                    <span class="nav-icon">📄</span> Contratos
                </NavLink>
            </div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="documentos">
                    <span class="nav-icon">📁</span> Documentos
                </NavLink>
            </div>

            <!-- SOLICITUDES -->
            <div class="nav-section">SOLICITUDES</div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="permisos">
                    <span class="nav-icon">🗓️</span> Permisos
                </NavLink>
            </div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="vacaciones">
                    <span class="nav-icon">🏖️</span> Vacaciones
                </NavLink>
            </div>
            
            <!-- CONTROL DE TIEMPO -->
            <div class="nav-section">CONTROL DIARIO</div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="control-diario">
                    <span class="nav-icon">⏱️</span> Registro Diario
                </NavLink>
            </div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="control-diario-wizard">
                    <span class="nav-icon">✨</span> Wizard Rápido
                </NavLink>
            </div>
            
            <!-- REPORTES -->
            <div class="nav-section">INFORMES</div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="reportes">
                    <span class="nav-icon">📊</span> Reportes
                </NavLink>
            </div>
            
            @if (AuthService.IsAdmin || AuthService.IsAprobador)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="auditoria">
                        <span class="nav-icon">🔍</span> Auditoría
                    </NavLink>
                </div>
            }
            
            <!-- ADMINISTRACIÓN (Solo Admin) -->
            @if (AuthService.IsAdmin)
            {
                <div class="nav-section">ADMINISTRACIÓN</div>
                
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="catalogos">
                        <span class="nav-icon">📚</span> Catálogos
                    </NavLink>
                </div>
                
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="usuarios">
                        <span class="nav-icon">👤</span> Usuarios
                    </NavLink>
                </div>
                
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="configuracion">
                        <span class="nav-icon">⚙️</span> Configuración
                    </NavLink>
                </div>
            }
            
            <hr />
            <div class="nav-item px-3">
                <button class="btn-logout" @onclick="HandleLogout">
                    <span class="nav-icon">🚪</span> Cerrar Sesión
                </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Iniciar Sesión
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}

<style>
.user-info {
    padding: 16px;
    background-color: rgba(255, 255, 255, 0.1);
    margin-bottom: 8px;
}

.user-name {
    margin: 0;
    font-weight: bold;
    font-size: 14px;
    color: #FFFFFF;
}

.user-role {
    margin: 4px 0 0 0;
    font-size: 12px;
    color: #CCCCCC;
}

.nav-section {
    padding: 12px 16px 4px 16px;
    font-size: 10px;
    font-weight: bold;
    color: #888888;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 8px;
}

.nav-icon {
    margin-right: 8px;
    font-size: 14px;
}

.btn-logout {
    width: 100%;
    text-align: left;
    background: none;
    border: none;
    color: #FFFFFF;
    padding: 8px 16px;
    cursor: pointer;
    font-size: 14px;
}

.btn-logout:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

hr {
    border-color: rgba(255, 255, 255, 0.2);
    margin: 8px 0;
}
</style>


