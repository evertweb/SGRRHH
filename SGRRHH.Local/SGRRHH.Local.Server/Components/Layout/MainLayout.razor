@inherits LayoutComponentBase
@using SGRRHH.Local.Domain.Enums
@inject IAuthService AuthService
@inject ISessionService SessionService
@inject INotificationService NotificationService
@inject IKeyboardShortcutService KeyboardShortcutService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

@if (!AuthService.IsAuthenticated)
{
    <RedirectToLogin />
}
else
{
    <!-- Toast Messages Component -->
    <MessageToast @ref="messageToast" />
    
    <!-- Session Expiring Warning -->
    @if (showSessionWarning)
    {
        <div class="session-warning-bar">
            <span>⚠ Su sesión expirará en @sessionRemainingMinutes minuto(s). </span>
            <button @onclick="ExtendSession">EXTENDER SESIÓN</button>
        </div>
    }

    <div class="main-container">
        <!-- Header del Sistema -->
        <header class="system-header">
            <span class="title">SGRRHH LOCAL v1.0</span>
            <span class="info" >
                @if (AuthService.IsAprobador)
                {
                    <NotificationBell />
                }
                <span>
                    Usuario: @AuthService.CurrentUser?.NombreCompleto 
                    (@GetRolDisplay()) | 
                    @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </span>
            </span>
        </header>

        <!-- Menú de Navegación con Dropdowns -->
        <nav class="nav-menu">
            <!-- HOME -->
            <NavLink href="/home" class="nav-dropdown-toggle" style="text-decoration:none;">INICIO</NavLink>
            
            <!-- PERSONAL -->
            <div class="nav-dropdown @(activeDropdown == "personal" ? "open" : "")">
                <button type="button" class="nav-dropdown-toggle" @onclick="TogglePersonal" @onclick:stopPropagation="true">PERSONAL ▼</button>
                <div class="nav-dropdown-content">
                    <a href="/empleados">EMPLEADOS</a>
                    <a href="/contratos">CONTRATOS</a>
                    <a href="/documentos">DOCUMENTOS</a>
                </div>
            </div>
            
            <!-- SOLICITUDES -->
            <div class="nav-dropdown @(activeDropdown == "solicitudes" ? "open" : "")">
                <button type="button" class="nav-dropdown-toggle" @onclick="ToggleSolicitudes" @onclick:stopPropagation="true">SOLICITUDES ▼</button>
                <div class="nav-dropdown-content">
                    <a href="/permisos">PERMISOS</a>
                    <a href="/vacaciones">VACACIONES</a>
                    <a href="/incapacidades">INCAPACIDADES</a>
                    <hr class="dropdown-divider" />
                    <a href="/seguimiento-permisos">SEGUIMIENTO</a>
                </div>
            </div>
            
            <!-- NÓMINA -->
            <div class="nav-dropdown @(activeDropdown == "nomina" ? "open" : "")">
                <button type="button" class="nav-dropdown-toggle" @onclick="ToggleNomina" @onclick:stopPropagation="true">NÓMINA ▼</button>
                <div class="nav-dropdown-content">
                    <a href="/nomina">NÓMINA</a>
                    <a href="/prestaciones">PRESTACIONES</a>
                </div>
            </div>
            
            <!-- CONTROL -->
            <div class="nav-dropdown @(activeDropdown == "control" ? "open" : "")">
                <button type="button" class="nav-dropdown-toggle" @onclick="ToggleControl" @onclick:stopPropagation="true">CONTROL ▼</button>
                <div class="nav-dropdown-content">
                    <a href="/control-diario">CONTROL DIARIO</a>
                    <a href="/control-diario-wizard">WIZARD</a>
                    <hr class="dropdown-divider" />
                    <a href="/dashboard-productividad">PRODUCTIVIDAD</a>
                    <a href="/reportes">REPORTES</a>
                    <a href="/auditoria">AUDITORÍA</a>
                </div>
            </div>
            
            <!-- ADMIN -->
            <div class="nav-dropdown nav-dropdown-admin @(activeDropdown == "admin" ? "open" : "")">
                <button type="button" class="nav-dropdown-toggle" @onclick="ToggleAdmin" @onclick:stopPropagation="true">ADMIN ▼</button>
                <div class="nav-dropdown-content">
                    <a href="/catalogos">CATÁLOGOS</a>
                    <a href="/festivos">FESTIVOS</a>
                    <a href="/usuarios">USUARIOS</a>
                    <hr class="dropdown-divider" />
                    <a href="/configuracion">CONFIG</a>
                    <a href="/configuracion-legal">LEGAL</a>
                </div>
            </div>
            
            <span class="nav-spacer"></span>
            <button class="btn btn-logout" @onclick="Logout">
                SALIR
            </button>
        </nav>

        <!-- Breadcrumb -->
        <div class="breadcrumb">
            Ruta: @GetBreadcrumb()
        </div>

        <!-- Área de Trabajo -->
        <main class="work-area">
            @Body
        </main>
        
        <!-- Barra de atajos de teclado -->
        <!-- Barra de atajos de teclado dinámica -->
        <div class="keyboard-shortcut-bar">
            @if (_shortcuts.Any())
            {
                @foreach (var shortcut in _shortcuts.Where(s => s.ShowInBar).Take(8))
                {
                    <span class="shortcut-item"><kbd>@shortcut.KeyDisplay</kbd> @shortcut.Description</span>
                }
            }
            else
            {
                <span class="shortcut-item"><kbd>F2</kbd> Buscar</span>
                <span class="shortcut-item"><kbd>F3</kbd> Nuevo</span>
                <span class="shortcut-item"><kbd>F5</kbd> Actualizar</span>
                <span class="shortcut-item"><kbd>ESC</kbd> Cerrar</span>
            }
            <span class="shortcut-item shortcut-indicator">
                <kbd>TAB</kbd> Siguiente
            </span>
        </div>
    </div>
}

<div id="blazor-error-ui">
    Error no controlado.
    <a href="" class="reload">Recargar</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private MessageToast? messageToast;
    private bool showSessionWarning = false;
    private int sessionRemainingMinutes = 5;
    private DotNetObjectReference<MainLayout>? _dotNetRef;
    private Timer? _notificationTimer;
    private string? activeDropdown = null;
    private List<KeyboardShortcutDto> _shortcuts = new();
    private bool _keyboardInitialized = false;
    
    private void TogglePersonal() => ToggleDropdown("personal");
    private void ToggleSolicitudes() => ToggleDropdown("solicitudes");
    private void ToggleNomina() => ToggleDropdown("nomina");
    private void ToggleControl() => ToggleDropdown("control");
    private void ToggleAdmin() => ToggleDropdown("admin");
    
    private void ToggleDropdown(string dropdown)
    {
        if (activeDropdown == dropdown)
        {
            activeDropdown = null;
        }
        else
        {
            activeDropdown = dropdown;
        }
    }
    
    private void CloseAllDropdowns()
    {
        activeDropdown = null;
    }
    
    protected override async Task OnInitializedAsync()
    {
        AuthService.OnAuthStateChanged += OnAuthChanged;
        SessionService.OnSessionExpiring += OnSessionExpiring;
        SessionService.OnSessionExpired += OnSessionExpired;
        Navigation.LocationChanged += OnLocationChanged;
        KeyboardShortcutService.OnShortcutsChanged += OnShortcutsChanged;
        
        // Iniciar verificación de notificaciones cada 2 minutos
        _notificationTimer = new Timer(async _ =>
        {
            await NotificationService.CheckForNewNotificationsAsync();
            await InvokeAsync(StateHasChanged);
        }, null, TimeSpan.FromSeconds(30), TimeSpan.FromMinutes(2));
        
        // Cargar atajos iniciales
        _shortcuts = KeyboardShortcutService.CurrentShortcuts;
    }
    
    private void OnShortcutsChanged(object? sender, EventArgs e)
    {
        _shortcuts = KeyboardShortcutService.CurrentShortcuts;
        InvokeAsync(StateHasChanged);
    }
    
    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        activeDropdown = null;
        InvokeAsync(StateHasChanged);
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && AuthService.IsAuthenticated)
        {
            // Configurar registro de actividad de sesión
            _dotNetRef = DotNetObjectReference.Create(this);
            await JSRuntime.InvokeVoidAsync("setupSessionActivity", _dotNetRef);
            
            // Inicializar el KeyboardHandler global
            await InitializeKeyboardHandler();
        }
    }
    
    private async Task InitializeKeyboardHandler()
    {
        if (_keyboardInitialized) return;
        
        try
        {
            await JSRuntime.InvokeVoidAsync("KeyboardHandler.initialize", _dotNetRef);
            _keyboardInitialized = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error inicializando KeyboardHandler: {ex.Message}");
        }
    }
    
    /// <summary>
    /// Método invocado desde JavaScript cuando se presiona una tecla
    /// </summary>
    [JSInvokable]
    public async Task OnKeyPressed(KeyboardEventData e)
    {
        try
        {
            await KeyboardShortcutService.ExecuteShortcutAsync(e.Key, e.CtrlKey, e.AltKey, e.ShiftKey);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error ejecutando shortcut: {ex.Message}");
        }
    }
    
    /// <summary>
    /// DTO para eventos de teclado desde JavaScript
    /// </summary>
    public class KeyboardEventData
    {
        public string Key { get; set; } = string.Empty;
        public string Code { get; set; } = string.Empty;
        public bool CtrlKey { get; set; }
        public bool AltKey { get; set; }
        public bool ShiftKey { get; set; }
    }

    private void OnAuthChanged(object? sender, Usuario? user)
    {
        if (user == null)
        {
            Navigation.NavigateTo("/login");
        }
        InvokeAsync(StateHasChanged);
    }
    
    private void OnSessionExpiring(object? sender, EventArgs e)
    {
        showSessionWarning = true;
        sessionRemainingMinutes = SessionService.SessionTimeRemainingSeconds / 60;
        InvokeAsync(StateHasChanged);
    }
    
    private void OnSessionExpired(object? sender, EventArgs e)
    {
        InvokeAsync(async () =>
        {
            messageToast?.ShowWarning("Su sesión ha expirado por inactividad");
            await Task.Delay(2000);
            await AuthService.LogoutAsync();
            Navigation.NavigateTo("/logged-out", forceLoad: true);
        });
    }
    
    private async Task ExtendSession()
    {
        await SessionService.ExtendSessionAsync();
        showSessionWarning = false;
        messageToast?.ShowSuccess("Sesión extendida");
        StateHasChanged();
    }
    
    [JSInvokable]
    public void RegisterActivity()
    {
        SessionService.RegisterActivity();
    }

    private string GetRolDisplay()
    {
        // Sistema de roles temporalmente deshabilitado - todos son Admin
        return "Admin";
    }

    private string GetBreadcrumb()
    {
        var uri = new Uri(Navigation.Uri);
        var path = uri.AbsolutePath.Trim('/');

        if (string.IsNullOrEmpty(path)) 
            return GetDefaultPageName();

        var segments = path.Split('/');
        var breadcrumb = GetDefaultPageName() + " > " + string.Join(" > ", segments.Select(s => s.ToUpper()));
        
        return breadcrumb;
    }
    
    private string GetDefaultPageName()
    {
        // Sistema de roles temporalmente deshabilitado
        return "INICIO";
    }

    private async Task Logout()
    {
        // Limpiar sesión de localStorage
        await ClearSessionAsync();
        await SessionService.EndSessionAsync();
        await AuthService.LogoutAsync();
        // Navegar a página de logout (no a login para evitar auto-login)
        Navigation.NavigateTo("/logged-out", forceLoad: true);
    }
    
    private async Task ClearSessionAsync()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("removeLocalStorage", "sgrrhh_session_user_id");
        }
        catch
        {
            // Ignorar errores de localStorage
        }
    }

    public async ValueTask DisposeAsync()
    {
        AuthService.OnAuthStateChanged -= OnAuthChanged;
        SessionService.OnSessionExpiring -= OnSessionExpiring;
        SessionService.OnSessionExpired -= OnSessionExpired;
        Navigation.LocationChanged -= OnLocationChanged;
        KeyboardShortcutService.OnShortcutsChanged -= OnShortcutsChanged;
        _notificationTimer?.Dispose();
        
        if (_dotNetRef != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("removeSessionActivity");
                await JSRuntime.InvokeVoidAsync("KeyboardHandler.dispose");
            }
            catch { }
            _dotNetRef.Dispose();
        }
    }
}