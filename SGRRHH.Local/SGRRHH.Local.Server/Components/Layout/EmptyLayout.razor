@inherits LayoutComponentBase

<div class="empty-layout">
    @Body
</div>

<!-- Barra de atajos de teclado en login -->
<div class="keyboard-shortcut-bar">
    <span class="shortcut-item"><kbd>TAB</kbd> Siguiente campo</span>
    <span class="shortcut-item"><kbd>ENTER</kbd> Iniciar sesi√≥n</span>
    <span class="shortcut-item"><kbd>ESC</kbd> Limpiar</span>
</div>

<style>
.empty-layout {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-header);
    padding-bottom: 60px; /* Espacio para la barra de atajos */
}

.login-container {
    width: 100%;
    max-width: 480px;
    padding: var(--spacing-lg);
}

.login-box {
    background-color: var(--color-bg);
    border: 2px solid var(--color-text);
    padding: var(--spacing-xxl);
}

.login-box h2 {
    margin: 0 0 var(--spacing-sm) 0;
    font-size: var(--font-size-xxl);
    text-align: center;
    font-weight: bold;
    font-family: var(--font-family);
}

.login-box h3 {
    margin: 0 0 var(--spacing-xl) 0;
    font-size: var(--font-size-base);
    font-weight: normal;
    text-align: center;
    color: #666666;
    font-family: var(--font-family);
}

.login-box .form-group {
    margin-bottom: var(--spacing-lg);
}

.login-box .form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: bold;
    font-size: var(--font-size-base);
    font-family: var(--font-family);
}

.login-box .form-group input {
    width: 100%;
    padding: var(--spacing-sm);
    border: 1px solid var(--color-border);
    font-size: var(--font-size-base);
    font-family: var(--font-family);
    box-sizing: border-box;
}

.login-box .form-group input:focus {
    outline: none;
    border: 2px solid var(--color-text);
    box-shadow: none;
}

.login-box button {
    width: 100%;
    padding: var(--spacing-md);
    background-color: var(--color-btn-primary);
    color: var(--color-bg);
    border: 1px solid var(--color-text);
    font-size: var(--font-size-base);
    font-weight: bold;
    font-family: var(--font-family);
    cursor: pointer;
}

.login-box button:hover:not(:disabled) {
    background-color: var(--color-btn-primary-hover);
}

.login-box button:disabled {
    background-color: var(--color-btn-disabled);
    color: #A0A0A0;
    cursor: not-allowed;
}

.login-footer {
    margin-top: var(--spacing-xl);
    text-align: center;
    color: #808080;
    font-size: var(--font-size-sm);
    font-family: var(--font-family);
}
</style>
