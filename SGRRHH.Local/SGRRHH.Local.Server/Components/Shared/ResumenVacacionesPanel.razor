@* Panel de Resumen de Vacaciones - Componente Reutilizable *@
@using SGRRHH.Local.Domain.DTOs

@if (Resumen != null)
{
    <div class="vacation-summary-panel">
        <div >
            <div >
                <span >[i]</span> RESUMEN DE VACACIONES
            </div>
            <div >
                <div >
                    <div >
                        <div >
                            <span >Antigüedad:</span>
                            <span >@Resumen.AntiguedadAnios años</span>
                        </div>
                        <div >
                            <span >Período:</span>
                            <span >@Resumen.PeriodoActual</span>
                        </div>
                    </div>
                    
                    <div >
                        <div >
                            <span >Días Ganados:</span>
                            <span >@Resumen.DiasGanadosPeriodo</span>
                        </div>
                        <div >
                            <span >Días Tomados:</span>
                            <span >@Resumen.DiasTomadosPeriodo</span>
                        </div>
                    </div>
                </div>
                
                <div >
                    <div >
                        <span >Disponibles:</span>
                        <span >@Resumen.DiasDisponiblesPeriodo</span>
                    </div>
                    <div >
                        <span >Acumulados:</span>
                        <span >@Resumen.DiasAcumuladosAnteriores</span>
                    </div>
                </div>
                
                <div >
                    <span >TOTAL DISPONIBLE:</span>
                    <span >@Resumen.TotalDiasDisponibles días</span>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public ResumenVacaciones? Resumen { get; set; }
}
