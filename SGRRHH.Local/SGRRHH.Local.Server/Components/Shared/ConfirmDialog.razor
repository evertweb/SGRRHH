@if (IsVisible)
{
    <div class="confirm-backdrop" @onclick="OnBackdropClick" @onkeydown="HandleKeyPress" tabindex="-1">
        <div class="confirm-dialog @TipoClase" @onclick:stopPropagation="true">
            <div class="confirm-mensaje">
                @if (!string.IsNullOrEmpty(Mensaje))
                {
                    <pre>@Mensaje</pre>
                }
                @if (ChildContent != null)
                {
                    @ChildContent
                }
            </div>
            
            <div class="confirm-acciones">
                <button class="confirm-btn confirm-btn-si" @onclick="Confirmar" disabled="@IsProcessing" autofocus>
                    @if (IsProcessing)
                    {
                        <span>PROCESANDO</span>
                    }
                    else
                    {
                        <span>@TextoConfirmar</span>
                    }
                </button>
                <button class="confirm-btn confirm-btn-no" @onclick="Cancelar" disabled="@IsProcessing">
                    @TextoCancelar
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public string Mensaje { get; set; } = "CONFIRMAR OPERACION";
    [Parameter] public string TextoConfirmar { get; set; } = "SI";
    [Parameter] public string TextoCancelar { get; set; } = "NO";
    [Parameter] public string Tipo { get; set; } = "info";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    
    private bool IsProcessing { get; set; }

    private string TipoClase => Tipo.ToLower() switch
    {
        "warning" => "confirm-tipo-warning",
        "danger" => "confirm-tipo-danger",
        "success" => "confirm-tipo-success",
        _ => "confirm-tipo-info"
    };

    private async Task Confirmar()
    {
        if (IsProcessing) return;
        
        IsProcessing = true;
        StateHasChanged();
        
        try
        {
            await OnConfirm.InvokeAsync();
            await Cerrar();
        }
        finally
        {
            IsProcessing = false;
        }
    }

    private async Task Cancelar()
    {
        if (IsProcessing) return;
        
        await OnCancel.InvokeAsync();
        await Cerrar();
    }

    private async Task OnBackdropClick()
    {
        if (!IsProcessing)
        {
            await Cancelar();
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (IsProcessing) return;

        if (e.Key == "Escape")
        {
            await Cancelar();
        }
        else if (e.Key == "Enter")
        {
            await Confirmar();
        }
    }

    private async Task Cerrar()
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(false);
    }
}


