@code {
    [Parameter] public string Estado { get; set; } = string.Empty;
    [Parameter] public string Size { get; set; } = "normal"; // small, normal, large

    private string GetBadgeStyle()
    {
        var estado = Estado.ToLower();
        
        // Mapeo de estados con colores hospitalarios estrictos
        var backgroundColor = estado switch
        {
            // Estados negativos/error: ROJO
            "inactivo" or "retirado" or "rechazado" or "suspendido" 
            or "cancelado" or "vencido" => "#cc0000",
            
            // Estados de advertencia/pendiente: AMARILLO
            "pendiente" or "pendienteaprobacion" or "porvencer" => "#ffcc00",
            
            // Estados positivos/confirmación: VERDE
            "activo" or "aprobado" or "finalizado" or "completado" or "vigente" => "#009900",
            
            // Estados neutrales/informativos: GRIS
            _ => "#666666"
        };

        var textColor = (estado == "pendiente" || estado == "pendienteaprobacion" || estado == "porvencer") 
            ? "#000000" // Texto negro en amarillo
            : "#ffffff"; // Texto blanco en otros colores

        var fontSize = Size == "small" ? "10px" : Size == "large" ? "14px" : "12px";
        var padding = Size == "small" ? "2px 6px" : Size == "large" ? "6px 12px" : "4px 8px";

        return $"display: inline-block; font-family: 'Courier New', monospace; font-size: {fontSize}; "
             + $"padding: {padding}; background-color: {backgroundColor}; color: {textColor}; "
             + $"border: 1px solid #000000; font-weight: bold; letter-spacing: 1px;";
    }

    private string GetEstadoText()
    {
        // Formatear el texto del estado en MAYÚSCULAS
        return Estado switch
        {
            "PendienteAprobacion" or "pendienteaprobacion" => "PENDIENTE",
            "EnVacaciones" or "envacaciones" => "EN VACACIONES",
            "EnCurso" or "encurso" => "EN CURSO",
            "PorVencer" or "porvencer" => "POR VENCER",
            _ => Estado.ToUpper()
        };
    }
}

<span style="@GetBadgeStyle()">@GetEstadoText()</span>


