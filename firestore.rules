rules_version = '2';

// Reglas de seguridad para Firestore - SGRRHH
// Solo usuarios autenticados con documento en la colección 'users' pueden acceder

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar: verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función auxiliar: verificar si el usuario existe en la colección users
    function userExists() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // Función auxiliar: obtener el rol del usuario
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol;
    }
    
    // Función auxiliar: verificar si es administrador
    function isAdmin() {
      return userExists() && getRole() == 'Administrador';
    }
    
    // Función auxiliar: verificar si es aprobador (ingeniera)
    function isAprobador() {
      return userExists() && getRole() == 'Aprobador';
    }
    
    // Función auxiliar: verificar si es operador (secretaria)
    function isOperador() {
      return userExists() && getRole() == 'Operador';
    }
    
    // Función auxiliar: verificar si tiene acceso (cualquier rol válido)
    function hasAccess() {
      return isAdmin() || isAprobador() || isOperador();
    }
    
    // ============================================
    // COLECCIÓN: users (usuarios del sistema)
    // ============================================
    match /users/{userId} {
      // CRÍTICO: Permitir lectura del PROPIO documento sin verificar rol
      // Esto permite el login inicial
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Permitir lectura si es admin (para ver otros usuarios)
      allow read: if isAdmin();
      
      // Solo administradores pueden crear/modificar/eliminar usuarios
      allow create, update, delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: empleados
    // ============================================
    match /empleados/{empleadoId} {
      allow read: if hasAccess();
      allow create, update: if isAdmin() || isOperador();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: departamentos
    // ============================================
    match /departamentos/{deptId} {
      allow read: if hasAccess();
      allow create, update, delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: cargos
    // ============================================
    match /cargos/{cargoId} {
      allow read: if hasAccess();
      allow create, update, delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: proyectos
    // ============================================
    match /proyectos/{proyectoId} {
      allow read: if hasAccess();
      allow create, update, delete: if isAdmin() || isAprobador();
    }
    
    // ============================================
    // COLECCIÓN: actividades
    // ============================================
    match /actividades/{actividadId} {
      allow read: if hasAccess();
      allow create, update, delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: tipos-permiso
    // ============================================
    match /tipos-permiso/{tipoId} {
      allow read: if hasAccess();
      allow create, update, delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: permisos
    // ============================================
    match /permisos/{permisoId} {
      allow read: if hasAccess();
      allow create: if hasAccess();
      allow update: if isAdmin() || isAprobador() || isOperador();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: vacaciones
    // ============================================
    match /vacaciones/{vacacionId} {
      allow read: if hasAccess();
      allow create, update: if isAdmin() || isOperador();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: contratos
    // ============================================
    match /contratos/{contratoId} {
      allow read: if hasAccess();
      allow create, update: if isAdmin() || isOperador();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: registros-diarios (control diario)
    // ============================================
    match /registros-diarios/{registroId} {
      allow read: if hasAccess();
      allow create, update: if hasAccess();
      allow delete: if isAdmin();
      
      match /detalles/{detalleId} {
        allow read: if hasAccess();
        allow create, update: if hasAccess();
        allow delete: if isAdmin();
      }
    }
    
    // ============================================
    // COLECCIÓN: config (configuración del sistema)
    // ============================================
    match /config/{configId} {
      allow read: if hasAccess();
      allow create, update, delete: if isAdmin();
    }
    
    // ============================================
    // COLECCIÓN: audit-logs
    // ============================================
    match /audit-logs/{logId} {
      allow read: if isAdmin();
      allow create: if hasAccess();
      allow update, delete: if false;
    }
    
    // ============================================
    // COLECCIÓN: _connection_test
    // ============================================
    match /_connection_test/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // Colecciones de chat y presencia
    // ============================================
    match /chat_messages/{msgId} {
      allow read, write: if isAuthenticated();
    }
    
    match /user_presence/{odcId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // COLECCIÓN: documentosEmpleado
    // ============================================
    match /documentosEmpleado/{docId} {
      allow read: if hasAccess();
      allow create, update: if isAdmin() || isOperador();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // DENEGAR TODO LO DEMÁS
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
